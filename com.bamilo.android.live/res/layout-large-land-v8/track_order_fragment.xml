<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingBottom="@dimen/rounded_margin_mid"
        android:paddingLeft="@dimen/rounded_margin_mid"
        android:paddingRight="@dimen/rounded_margin_small" >

        <include
            layout="@layout/track_order_status"
            android:visibility="gone" />
    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingBottom="@dimen/rounded_margin_mid"
        android:paddingLeft="@dimen/rounded_margin_small"
        android:paddingRight="@dimen/rounded_margin_mid" >

        <include layout="@layout/track_order_form" />
    </ScrollView>

</LinearLayout>