<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/product_seller_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:visibility="visible" >

    <LinearLayout
        android:id="@+id/seller_name_n_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2" >

        <!-- SELLER RATING -->

        <RelativeLayout
            android:id="@+id/product_detail_product_seller_rating_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/rounded_margin_mid"
            android:layout_marginRight="@dimen/rounded_margin_mid"
            android:layout_marginTop="15dp"
            android:layout_weight="1"
            android:background="@drawable/selector_clickableitem_highlight"
            android:visibility="visible" >

            <!-- android:background="@drawable/selector_clickableitem_highlight" -->

            <RatingBar
                android:id="@+id/product_detail_product_seller_rating"
                style="@style/starRatingBarSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/product_detail_product_seller_rating_count"
                android:isIndicator="true" />

            <com.mobile.components.customfontviews.TextView
                android:id="@+id/product_detail_product_seller_rating_count"
                style="@style/text_subtitle"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/margin_mid"
                android:ellipsize="end"
                android:text="0 Reviews"
                android:textColor="@color/grey_light" />
        </RelativeLayout>

        <!-- SELLER NAME -->

        <RelativeLayout
            android:id="@+id/seller_name_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="15dp"
            android:layout_toRightOf="@+id/product_detail_product_seller_rating_container"
            android:layout_weight="1" >

            <!-- android:background="@drawable/selector_listitem_highlight" -->

            <com.mobile.components.customfontviews.TextView
                android:id="@+id/product_detail_seller_sold_by"
                style="@style/text_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="@dimen/rounded_margin_mid"
                android:gravity="right|center_vertical"
                android:maxLines="2"
                android:text="@string/product_sold_by"
                android:visibility="visible" />

            <com.mobile.components.customfontviews.TextView
                android:id="@+id/product_detail_seller_name"
                style="@style/text_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/rounded_margin_mid"
                android:layout_toLeftOf="@+id/product_detail_seller_sold_by"
                android:gravity="right|center_vertical"
                android:text="Jumia"
                android:textColor="@color/orange_basic"
                android:visibility="visible" />
        </RelativeLayout>
    </LinearLayout>
    <!-- SELLER DELIVERY TIME -->

    <RelativeLayout
        android:id="@+id/delivery_time_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/seller_name_n_rate"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp" >

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/product_detail_seller_delivery"
            style="@style/text_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="@dimen/rounded_margin_mid"
            android:background="@drawable/selector_listitem_highlight"
            android:gravity="right|top"
            android:maxLines="2"
            android:text="@string/product_delivery_time"
            android:visibility="visible" />

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/product_detail_seller_delivery_time"
            style="@style/text_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/rounded_margin_mid"
            android:layout_toLeftOf="@+id/product_detail_seller_delivery"
            android:background="@drawable/selector_listitem_highlight"
            android:gravity="right|top"
            android:maxLines="2"
            android:visibility="visible" />
    </RelativeLayout>

</RelativeLayout>