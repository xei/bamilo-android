<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/rounded_box"
    android:layout_marginBottom="0dp"
    android:layout_marginTop="@dimen/rounded_margin_small"
    android:orientation="vertical" >

    <!-- PRICE -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/product_detail_item_title_height"
        android:layout_marginBottom="@dimen/rounded_margin_mid"
        android:layout_marginLeft="@dimen/rounded_margin_mid"
        android:layout_marginRight="@dimen/rounded_margin_mid"
        android:layout_marginTop="@dimen/rounded_margin_mid"
        android:gravity="right|center"
        android:orientation="horizontal" >

        <pt.rocket.components.customfontviews.TextView
            android:id="@+id/product_price_special"
            style="@style/text_header"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_mid"
            android:fontFamily="roboto_bold"
            android:textColor="@color/red_basic" />

        <pt.rocket.components.customfontviews.TextView
            android:id="@+id/product_price_normal"
            style="@style/text_header"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/product_price_special"
            android:textColor="@color/grey_middlelight" />
    </RelativeLayout>

    <View style="@style/divider_horizontal" />

    <!-- VARIATION CHOOSE -->

    <RelativeLayout
        android:id="@+id/product_detail_product_variant_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/product_detail_item_title_height"
        android:layout_margin="@dimen/rounded_margin_mid"
        android:gravity="right|center_vertical"
        android:orientation="horizontal" >

        <pt.rocket.components.customfontviews.Button
            android:id="@+id/product_detail_product_variant_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_mid"
            android:layout_toLeftOf="@+id/product_detail_product_variant_text"
            android:background="@drawable/spinnerbutton_background_holo_light"
            android:ellipsize="end"
            android:minWidth="66dp"
            android:singleLine="true"
            android:text="@string/product_variant_placeholder"
            android:textColor="@color/grey_middle"
            android:textSize="@dimen/text_header" />

        <pt.rocket.components.customfontviews.TextView
            android:id="@+id/product_detail_product_variant_text"
            style="@style/text_header"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/size_label" />
    </RelativeLayout>

    <View style="@style/divider_horizontal" />

    <!-- RATING -->

    <RelativeLayout
        android:id="@+id/product_detail_product_rating_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/product_detail_item_title_height"
        android:layout_margin="@dimen/rounded_margin_mid"
        android:background="@drawable/selector_clickableitem_highlight"
        android:paddingBottom="@dimen/margin_mid"
        android:paddingTop="@dimen/margin_mid" >

        <RatingBar
            android:id="@+id/product_detail_product_rating"
            style="@style/starRatingBarBig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:isIndicator="true" />

        <pt.rocket.components.customfontviews.TextView
            android:id="@+id/product_detail_product_rating_count"
            style="@style/text_header"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/margin_mid"
            android:layout_toLeftOf="@+id/product_detail_product_rating"
            android:textColor="@color/grey_light" />

        <RelativeLayout
            android:id="@+id/product_detail_loading_rating"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:visibility="gone" >

            <include layout="@layout/loading_bar_simple" />
        </RelativeLayout>
    </RelativeLayout>

    <View style="@style/divider_horizontal" />

    <!-- SPECICATIONS -->

    <pt.rocket.components.customfontviews.TextView
        android:id="@+id/product_detail_specifications"
        style="@style/text_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/product_detail_item_title_height"
        android:layout_marginBottom="@dimen/rounded_margin_mid"
        android:layout_marginLeft="@dimen/rounded_margin_mid"
        android:layout_marginRight="@dimen/rounded_margin_mid"
        android:layout_marginTop="@dimen/rounded_margin_mid"
        android:background="@drawable/selector_listitem_highlight"
        android:gravity="right|center_vertical"
        android:maxLines="2"
        android:minHeight="@dimen/product_detail_item_title_height"
        android:text="@string/product_specifications" />

    <!-- OTHER SELLERS -->

    <RelativeLayout
        android:id="@+id/product_detail_product_offers_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_listitem_highlight"
        android:paddingBottom="15dp"
        android:visibility="visible" >

        <View
            android:id="@+id/seller_divider"
            style="@style/divider_horizontal"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="@dimen/margin_mid" />

        <pt.rocket.components.customfontviews.TextView
            android:id="@+id/offers_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/seller_divider"
            android:layout_marginRight="7dp"
            android:text="@string/other_sellers"
            android:textColor="@color/grey_middle"
            android:textSize="@dimen/text_title" />

        <pt.rocket.components.customfontviews.TextView
            android:id="@+id/offers_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/seller_divider"
            android:layout_toLeftOf="@+id/offers_label"
            android:text=" (0)"
            android:textColor="@color/grey_middle"
            android:textSize="@dimen/text_title" />

        <pt.rocket.components.customfontviews.TextView
            android:id="@+id/from_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/offers_label"
            android:layout_marginRight="7dp"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:text="@string/from"
            android:textColor="@color/grey_middlelight"
            android:textSize="@dimen/text_subtitle" />

        <pt.rocket.components.customfontviews.TextView
            android:id="@+id/from_value"
            style="@style/text_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/offers_label"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/from_label"
            android:ellipsize="end"
            android:gravity="right"
            android:text="RM 900000000"
            android:textColor="@color/red_middle"
            android:textSize="@dimen/text_subtitle" />

        <ImageView
            android:id="@+id/offers_arrow"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/arrow_side"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>