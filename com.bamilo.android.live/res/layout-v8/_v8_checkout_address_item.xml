<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <!-- ITEM -->

    <LinearLayout
        android:id="@+id/checkout_address_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_20px" >

        <RelativeLayout
            android:id="@+id/checkout_address_item_btn_container"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_10px"
            android:orientation="vertical" >

            <!-- SELECTION RADIOBUTTON -->

            <com.mobile.components.customfontviews.RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_60px"
                android:button="@drawable/btn_radio_holo_orange" />

            <!-- EDIT BUTTON -->

            <ImageView
                android:id="@+id/checkout_address_item_btn_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="@dimen/margin_20px"
                android:src="@drawable/selector_btn_edit" />
        </RelativeLayout>

        <!-- DELETE BUTTON -->

        <ImageView
            android:id="@+id/checkout_address_item_btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="@dimen/margin_20px"
            android:layout_marginLeft="@dimen/margin_60px"
            android:src="@drawable/selector_btn_remove_item"
            android:visibility="invisible" />

        <!-- VALUES -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_100px"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:minHeight="@dimen/checkout_address_item_min_height"
            android:orientation="vertical" >

            <com.mobile.components.customfontviews.TextView
                android:id="@+id/checkout_address_item_name"
                style="@style/text_form"
                android:layout_gravity="right"
                android:gravity="right|center_vertical" />

            <com.mobile.components.customfontviews.TextView
                android:id="@+id/checkout_address_item_street"
                style="@style/text_form"
                android:layout_gravity="right"
                android:gravity="right|center_vertical" />

            <com.mobile.components.customfontviews.TextView
                android:id="@+id/checkout_address_item_region"
                style="@style/text_form"
                android:layout_gravity="right"
                android:gravity="right|center_vertical" />

            <com.mobile.components.customfontviews.TextView
                android:id="@+id/checkout_address_item_postcode"
                style="@style/text_form"
                android:layout_gravity="right"
                android:gravity="right|center_vertical" />

            <com.mobile.components.customfontviews.TextView
                android:id="@+id/checkout_address_item_phone"
                style="@style/text_form"
                android:layout_gravity="right"
                android:gravity="right|center_vertical" />
        </LinearLayout>
    </LinearLayout>

    <!-- DIVIDER -->

    <View
        android:id="@+id/checkout_address_item_divider"
        style="@style/divider_horizontal"
        android:layout_below="@id/checkout_address_container"
        android:visibility="gone" />

</RelativeLayout>