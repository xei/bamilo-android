<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/rounded_margin_mid"
        android:orientation="vertical" >

        <RelativeLayout
            style="@style/rounded_box"
            android:layout_marginBottom="0dp" >

            <pt.rocket.components.customfontviews.TextView
                android:id="@+id/shoppingcart_title"
                style="@style/rounded_box_title_grey"
                android:text="@string/shoppingcart_items" />

            <pt.rocket.components.customfontviews.TextView
                style="@style/text_normal"
                android:layout_alignBaseline="@+id/shoppingcart_title"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/rounded_margin_mid"
                android:text="@string/shoppingcart_quantity"
                android:textColor="@color/grey_middlelight" />

            <LinearLayout
                android:id="@+id/shoppingcart_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/shoppingcart_title"
                android:orientation="vertical" >
            </LinearLayout>

            <View
                style="@style/divider_horizontal_orange"
                android:layout_below="@id/shoppingcart_title" />
        </RelativeLayout>

        <include layout="@layout/voucher_insert_layout" />

        <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/rounded_margin_small"
            android:layout_marginLeft="@dimen/rounded_margin_mid"
            android:layout_marginRight="@dimen/rounded_margin_mid"
            android:layout_marginTop="@dimen/rounded_margin_small"
            layout="@layout/shopping_basket_subtotal_element" />

        <LinearLayout
            android:id="@+id/shopping_basket_buttons_container"
            style="@style/button_container"
            android:layout_height="@dimen/button_double_container_height"
            android:orientation="vertical" >

            <pt.rocket.components.customfontviews.Button
                android:id="@+id/checkout_button"
                style="@style/button_orange_bottom"
                android:text="@string/checkout_button_text" />

            <pt.rocket.components.customfontviews.Button
                android:id="@+id/checkout_call_to_order"
                style="@style/button_grey_bottom"
                android:layout_marginTop="0dp"
                android:text="@string/call_to_order"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>