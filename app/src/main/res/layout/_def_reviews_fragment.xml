<?xml version="1.0" encoding="utf-8"?>
<com.bamilo.android.framework.components.ScrollViewReachable xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/reviews_scrollview_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- HEADER -->

        <com.bamilo.android.appmodule.modernbamilo.customview.XeiTextView
            android:id="@+id/rating_header"
            style="@style/HeaderStyle" />

        <!-- RATINGS SECTION -->

        <include
            android:id="@+id/rating_board"
            layout="@layout/ratings_board" />

        <!-- USERS SECTION -->

        <com.bamilo.android.appmodule.modernbamilo.customview.XeiTextView
            android:id="@+id/reviews_header"
            style="@style/HeaderStyle" />

        <!-- REVIEWS CONTAINER -->

        <android.support.v7.widget.LinearLayoutCompat
            android:id="@+id/reviews_group"
            style="@style/ViewGroupCompat.Vertical.MiddleDivider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</com.bamilo.android.framework.components.ScrollViewReachable>
