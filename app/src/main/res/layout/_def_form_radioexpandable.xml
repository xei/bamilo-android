<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
    >

    <!-- DIVIDER -->

    <View
        android:id="@+id/radio_divider"
        style="@style/DividerHorizontal.Black_400" />

    <!-- RADIO BUTTON -->

    <com.bamilo.android.framework.components.customfontviews.RadioButton
        android:id="@+id/radio_shipping"
        style="@style/FormRadioButton"
        />

    <!-- EXTRA CONTAINER -->

    <LinearLayout
        android:id="@+id/radio_extras_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:focusableInTouchMode="true"
        android:visibility="gone"
        tools:visibility="visible">

        <com.bamilo.android.appmodule.modernbamilo.customview.XeiTextView
            android:id="@+id/radio_expandable_text"
            style="@style/TextBase.Body.Black_800"
            tools:text="You have 7 days to drop off your item at a Jumia Return Station."
            android:layout_marginLeft="@dimen/margin_padding_xl"
            android:layout_marginRight="@dimen/margin_padding_xl"
            android:singleLine="false"
            android:inputType="textMultiLine"
            android:visibility="gone"
            tools:visibility="visible"
            />

        <com.bamilo.android.appmodule.modernbamilo.customview.XeiTextView
            android:id="@+id/sub_text"
            style="@style/TextBase.Body.Black"
            tools:text="You have 7 days to drop off your item at a Jumia Return Station."
            android:background="@drawable/_gen_background_border_yellow"
            android:layout_marginTop="@dimen/margin_padding_m"
            android:layout_marginLeft="@dimen/margin_padding_xl"
            android:layout_marginRight="@dimen/margin_padding_xl"
            android:paddingLeft="@dimen/margin_padding_xl"
            android:paddingRight="@dimen/margin_padding_xl"
            android:paddingTop="@dimen/margin_padding_s"
            android:paddingBottom="@dimen/margin_padding_s"
            android:singleLine="false"
            android:visibility="gone"
            tools:visibility="visible"
            />

    </LinearLayout>

</LinearLayout>