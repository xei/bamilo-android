<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/buy_bar_height"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/pdv_button_share"
        style="@style/Button_BuyBar_Black"
        android:src="@drawable/ic_share" />

    <ImageButton
        android:id="@+id/pdv_button_call"
        style="@style/Button_BuyBar_Black"
        android:src="@drawable/ic_call" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.bamilo.android.appmodule.modernbamilo.customview.XeiTextView
            android:id="@+id/pdv_button_buy"
            style="@style/Button_1.Shop"
            android:text="@string/buy_now_button" />

        <com.bamilo.android.appmodule.modernbamilo.customview.XeiTextView
            android:id="@+id/pdv_button_add_to_save"
            style="@style/Button_1.Secondary.Text_Orange.Border_300"
            android:visibility="gone"
            tools:text="@string/save_for_later" />

    </RelativeLayout>


</LinearLayout>