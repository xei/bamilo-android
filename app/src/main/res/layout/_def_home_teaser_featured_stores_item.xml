<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:gravity="center_vertical"
    android:padding="@dimen/margin_padding_s"
    android:background="@drawable/selector_card_default_white"
    >

    <FrameLayout
        android:id="@+id/home_teaser_stores_image"
        android:layout_width="@dimen/dimen_mat_45px"
        android:layout_height="@dimen/dimen_mat_45px"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:gravity="center">

        <include layout="@layout/home_teaser_image_loadable" />

    </FrameLayout>

    <com.bamilo.android.appmodule.modernbamilo.customview.XeiTextView
        android:id="@+id/home_teaser_stores_text_title"
        style="@style/TextBase.Title.Black"
        android:layout_toLeftOf="@id/home_teaser_stores_image"
        android:layout_toStartOf="@id/home_teaser_stores_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <com.bamilo.android.appmodule.modernbamilo.customview.XeiTextView
        android:id="@+id/home_teaser_stores_text_sub"
        style="@style/TextBase.Body.Black_800"
        android:layout_below="@id/home_teaser_stores_text_title"
        android:layout_toLeftOf="@id/home_teaser_stores_image"
        android:layout_toStartOf="@id/home_teaser_stores_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

</RelativeLayout>