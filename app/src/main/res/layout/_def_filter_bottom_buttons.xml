<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            style="@style/DialogFilterSearch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/dialog_filter_check_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:padding="@dimen/dimen_5dp"
                android:paddingTop="10dp" />

            <com.bamilo.android.appmodule.modernbamilo.customview.XeiTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:text="@string/filter_toggle_text"
                android:textColor="@color/black" />
        </LinearLayout>

        <com.bamilo.android.appmodule.modernbamilo.customview.XeiTextView
            android:id="@+id/dialog_filter_button_cancel"
            style="@style/DialogFilterButtonCancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/filter_clear_button_text" />

    </LinearLayout>

    <com.bamilo.android.appmodule.modernbamilo.customview.XeiTextView
        android:id="@+id/dialog_filter_button_done"
        style="@style/DialogFilterButtonSubmit"
        android:layout_width="match_parent"
        android:background="@color/button_secondary_color" />

</LinearLayout>
