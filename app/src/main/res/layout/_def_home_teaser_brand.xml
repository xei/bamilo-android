<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.bamilo.android.appmodule.modernbamilo.customview.XeiTextView
        style="@style/HeaderTeaserStyle"
        android:text="@string/shops_of_the_week" />

    <com.bamilo.android.framework.components.recycler.HorizontalListView
        android:id="@+id/home_teaser_brand_horizontal_list"
        style="@style/HorizontalListStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_brand_teaser_item_height"
        android:background="@android:color/white"
        android:paddingBottom="1dp"
        android:paddingTop="1dp" />

</LinearLayout>