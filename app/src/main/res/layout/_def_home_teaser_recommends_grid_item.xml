<?xml version="1.0" encoding="utf-8"?><!-- A CardView that contains a TextView -->
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_240dp"
    android:layout_margin="2dp"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="0dp"
    card_view:cardPreventCornerOverlap="true"
    card_view:contentPadding="@dimen/margin_padding_xs">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin_padding_xs"
        android:layout_marginTop="@dimen/margin_padding_l"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="@dimen/dimen_98dp"
            android:layout_height="@dimen/dimen_123dp"
            android:layout_gravity="center_horizontal">

            <include layout="@layout/home_teaser_image_loadable" />

        </FrameLayout>

        <com.bamilo.android.appmodule.modernbamilo.customview.XeiTextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:ellipsize="end"
            android:fontFamily="@string/bamilo_regular_font"
            android:gravity="right|center_vertical"
            android:singleLine="true"
            android:textColor="@color/recommendation_black"
            android:textSize="12sp"
            tools:text="Product Name" />

        <com.bamilo.android.appmodule.modernbamilo.customview.XeiTextView
            android:id="@+id/brand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:ellipsize="end"
            android:fontFamily="@string/bamilo_regular_font"
            android:gravity="right|center_vertical"
            android:singleLine="true"
            android:textColor="@color/recommendation_grey"
            android:textSize="10sp"
            tools:text="Brand" />

        <com.bamilo.android.appmodule.modernbamilo.customview.XeiTextView
            android:id="@+id/old_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:ellipsize="end"
            android:fontFamily="@string/bamilo_regular_font"
            android:gravity="right|center_vertical"
            android:singleLine="true"
            android:textColor="@color/recommendation_grey"
            android:textSize="10sp"
            tools:text="19000 ریال" />

        <com.bamilo.android.appmodule.modernbamilo.customview.XeiTextView
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:ellipsize="end"
            android:fontFamily="@string/bamilo_regular_font"
            android:gravity="right|center_vertical"
            android:singleLine="true"
            android:textColor="@color/recommendation_black"
            android:textSize="12sp"
            tools:text="18000 ریال" />


    </LinearLayout>

</android.support.v7.widget.CardView>
