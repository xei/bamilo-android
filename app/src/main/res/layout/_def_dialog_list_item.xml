<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_list_item_highlight"
    android:paddingBottom="@dimen/margin_mid"
    android:paddingEnd="@dimen/dialog_list_margin_horizontal"
    android:paddingLeft="@dimen/dialog_list_margin_horizontal"
    android:paddingRight="@dimen/dialog_list_margin_horizontal"
    android:paddingStart="@dimen/dialog_list_margin_horizontal"
    android:paddingTop="@dimen/margin_mid">

    <com.bamilo.android.appmodule.modernbamilo.customview.XeiTextView
        android:id="@+id/item_text"
        style="@style/TextBase.Display_2.Black_800"
        android:layout_centerInParent="true"
        android:gravity="center" />

    <com.bamilo.android.appmodule.modernbamilo.customview.XeiTextView
        android:id="@+id/item_text_unavailable"
        style="@style/TextBase.Display_2.Black_400"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:visibility="gone" />

    <CheckBox
        android:id="@+id/dialog_item_checkbox"
        android:layout_width="@dimen/dimen_20dp"
        android:layout_height="@dimen/dimen_20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@null"
        android:button="@drawable/btn_check_size"
        android:clickable="false"
        android:focusable="false" />

</RelativeLayout>