<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:minHeight="@dimen/dimen_113_33dp"
    android:orientation="horizontal"
    >

    <com.bamilo.android.framework.components.customfontviews.RadioButton
        android:id="@+id/pickup_station_radio_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:theme="@style/RadioButtonTheme"
        />

    <ImageView
        android:id="@+id/pickup_station_image"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:adjustViewBounds="true"
        android:contentDescription="@string/checkout_label"
        android:scaleType="fitCenter" />

    <LinearLayout
        android:id="@+id/pickup_station_details_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center|left|start"
        android:orientation="vertical">

        <com.bamilo.android.appmodule.modernbamilo.customview.XeiTextView
            android:id="@+id/pickup_station_city"
            style="@style/TextBase.Caption"
            android:singleLine="false"
            android:textColor="@color/black" />

        <com.bamilo.android.appmodule.modernbamilo.customview.XeiTextView
            android:id="@+id/pickup_station_address"
            style="@style/TextBase.Caption"
            android:singleLine="false"
            android:textColor="@color/black" />

        <com.bamilo.android.appmodule.modernbamilo.customview.XeiTextView
            android:id="@+id/pickup_station_opening_hours"
            style="@style/TextBase.Caption"
            android:singleLine="false"
            android:textColor="@color/black" />

        <com.bamilo.android.appmodule.modernbamilo.customview.XeiTextView
            android:id="@+id/pickup_station_shipping_fee"
            style="@style/TextBase.Caption"
            android:singleLine="false"
            android:textColor="@color/black"
            android:visibility="gone" />

        <com.bamilo.android.appmodule.modernbamilo.customview.XeiTextView
            android:id="@+id/pickup_station_shipping_fee_info"
            style="@style/TextBase.Caption"
            android:singleLine="false"
            android:textColor="@color/black"
            android:visibility="gone" />

    </LinearLayout>

</LinearLayout>