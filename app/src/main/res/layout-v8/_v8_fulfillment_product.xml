<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="right" >

    <com.bamilo.android.appmodule.modernbamilo.customview.XeiTextView
        android:id="@+id/fulfillment_product_qty"
        android:fontFamily = "regular_light"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_middle" />

    <com.bamilo.android.appmodule.modernbamilo.customview.XeiTextView
        android:id="@+id/fulfillment_product_name"
        style="@style/TextBase.Body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey_middledark"
        android:layout_marginBottom="20dp"/>
</LinearLayout>