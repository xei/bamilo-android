<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_48dp">

    <com.bamilo.android.appmodule.modernbamilo.customview.XeiTextView
        android:id="@+id/option_name"
        style="@style/TextBase.List.Black"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_padding_xl"
        android:layout_marginRight="@dimen/margin_padding_xl"
        android:text="Title"
        />

    <com.bamilo.android.appmodule.modernbamilo.customview.XeiTextView
        android:id="@+id/app_version_label"
        style="@style/TextBase.List.Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="@dimen/margin_padding_s"
        android:layout_marginLeft="@dimen/margin_padding_xl"
        />

    <com.bamilo.android.appmodule.modernbamilo.customview.XeiTextView
        android:id="@+id/update_label"
        style="@style/TextBase.Body.Black_800"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/app_version_label"
        android:layout_marginLeft="@dimen/margin_padding_xl"
        />

</RelativeLayout>