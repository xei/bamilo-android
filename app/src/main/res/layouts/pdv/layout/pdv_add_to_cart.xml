<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/addToCart_linearLayout_parent"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="@dimen/dimen_8dp"
        android:layout_marginLeft="@dimen/dimen_8dp"
        android:layout_marginRight="@dimen/dimen_8dp"
        android:baselineAligned="false"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/addToCart_linearLayout_addToBasket"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/add_to_basket_background"
            android:gravity="center">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:srcCompat="@drawable/ic_cart_add"/>

            <com.bamilo.android.appmodule.modernbamilo.customview.XeiTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_8dp"
                android:layout_marginRight="@dimen/dimen_8dp"
                android:layout_gravity="center"
                android:text="@string/add_to_shopping_cart"
                android:textSize="14sp"
                app:locale="fa_IR"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/addToCart_linearLayout_buyNow"
            android:layout_width="@dimen/dimen_0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/buy_now_btn_background"
            android:gravity="center">

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                app:srcCompat="@drawable/ic_buy_now"/>

            <com.bamilo.android.appmodule.modernbamilo.customview.XeiTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_8dp"
                android:layout_marginRight="@dimen/dimen_8dp"
                android:layout_gravity="center"
                android:text="@string/buy_it_now"
                android:textSize="14sp"
                app:locale="fa_IR"/>

        </LinearLayout>

    </LinearLayout>
</layout>