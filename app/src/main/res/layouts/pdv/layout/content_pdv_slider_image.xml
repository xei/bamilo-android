<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.AppCompatImageView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pdvSlider_appImageView_Image"
        android:layout_width="match_parent"
        app:srcCompat="@drawable/no_image_slider"
        android:layout_height="match_parent"/>

    <ProgressBar
        android:id="@+id/pdvSlider_progressBar"
        android:layout_width="@dimen/progress_bar_dim"
        android:layout_height="@dimen/progress_bar_dim"
        android:layout_centerInParent="true"/>

</RelativeLayout>