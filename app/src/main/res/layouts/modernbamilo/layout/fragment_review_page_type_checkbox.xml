<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">

    <com.bamilo.android.appmodule.modernbamilo.customview.XeiTextView
        android:id="@+id/fragmentReviewPageTypeCheckbox_xeiTextView_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:padding="8dp"
        android:textSize="18dp"
        android:textColor="@color/userReview_typeCheckbox_title_textColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:locale="auto"
        android:text="میزان رضایت شما از تجربه خرید آنلاین خود در بامیلو جقدر است؟"/>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentReviewPageTypeCheckbox_xeiTextView_title">

        <LinearLayout
            android:id="@+id/fragmentReviewPageTypeCheckbox_linearLayout_optionsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center" >

            <ImageView
                android:id="@+id/fragmentReviewPageTypeCheckbox_imageView_productImage"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:visibility="gone" />

        </LinearLayout>

    </ScrollView>
</android.support.constraint.ConstraintLayout>