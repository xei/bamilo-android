<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteY="81dp">

    <com.bamilo.android.appmodule.modernbamilo.customview.XeiTextView
        android:id="@+id/fragmentReviewPageTypeNps_xeiTextView_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="right|center_vertical"
        android:padding="8dp"
        android:textSize="18sp"
        android:textColor="@color/userReview_typeCheckbox_title_textColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:locale="auto"
        android:text="میزان رضایت شما از تجربه خرید آنلاین خود در بامیلو جقدر است؟"/>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentReviewPageTypeNps_xeiTextView_title">

        <LinearLayout
            android:id="@+id/fragmentReviewPageTypeNps_linearLayout_optionsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            
            <ImageView
                android:id="@+id/fragmentReviewPageTypeNps_imageView_productImage"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:visibility="gone" />

            <com.bamilo.android.appmodule.modernbamilo.userreview.optionview.NpsNumberPicker
                android:id="@+id/fragmentReview_PageTypeNps_NpsNumberPicker_npsOptions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                app:np_width="180dp"
                app:np_height="64dp"
                app:np_dividerColor="@color/colorAccent"
                app:np_order="descending"
                app:np_orientation="horizontal"
                app:np_textSize="25sp"
                app:np_selectedTextSize="40sp"
                app:np_textColor="@color/colorPrimary"
                app:np_selectedTextColor="@color/colorPrimary"
                app:np_fadingEdgeEnabled="true"
                app:np_wrapSelectorWheel="true" />

            <ImageView
                android:id="@+id/fragmentReviewPageTypeNps_imageView_NpsImage"
                android:layout_width="200dp"
                android:layout_height="200dp" />
            
        </LinearLayout>

    </ScrollView>
</android.support.constraint.ConstraintLayout>