<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_btn_orange" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:layoutDirection="ltr"
        android:orientation="horizontal"
        tools:ignore="UnusedAttribute,UselessParent">

        <com.bamilo.android.appmodule.modernbamilo.customview.XeiTextView
            android:id="@+id/layoutActionBtnBamilo_xeiTextView_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:visibility="gone"
            app:locale="fa_IR"
            app:style="bold"
            tools:text="افزودن به سبد خرید"
            tools:visibility="visible" />

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/layoutActionBtnBamilo_imageView_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:visibility="gone"
            tools:src="@drawable/btn_cart"
            tools:visibility="visible" />

    </LinearLayout>

</RelativeLayout>