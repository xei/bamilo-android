<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.bamilo.android.appmodule.modernbamilo.customview.XeiTextView
            android:id="@+id/updateDialog_textView_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:gravity="center"
            android:textColor="@color/primary_text_color"
            android:textSize="16sp"
            tools:text="اپلیکیشن بامیلو بروزرسانی شد!"/>

        <com.bamilo.android.appmodule.modernbamilo.customview.XeiTextView
            android:id="@+id/updateDialog_textView_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_gravity="right"
            android:gravity="center_vertical"
            android:text=" شسیشسیشسیشسی شوپسیادش سنمتیاشس نتا ●"
            android:textColor="@color/primary_text_color"
            android:visibility="gone"
            tools:visibility="visible"/>

        <com.bamilo.android.appmodule.modernbamilo.customview.XeiButton
            android:id="@+id/updateDialog_button_cancel"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:layout_marginLeft="@dimen/dimen_12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/round_corner_white_4"
            android:textColor="@color/secondary_text_color"
            android:textSize="17sp"
            tools:text="بی خیال"/>

        <com.bamilo.android.appmodule.modernbamilo.customview.XeiButton
            android:id="@+id/updateDialog_button_update"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:layout_margin="8dp"
            android:background="@drawable/round_corner_primary"
            android:textColor="@color/white"
            android:textSize="17sp"
            tools:text="بروز رسانی"/>

    </LinearLayout>
</layout>