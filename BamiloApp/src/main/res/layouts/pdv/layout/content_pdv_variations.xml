<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="2dp"
    app:elevation="@dimen/dimen_8dp"
    tools:layout_marginLeft="@dimen/dimen_8dp"
    tools:layout_marginRight="@dimen/dimen_8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/pdvVariations_textView_colorTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginRight="@dimen/dimen_12dp"
            android:textColor="@color/secondary_text_color"
            android:textSize="11sp"
            tools:ignore="SmallSp"
            tools:text="انتخاب رنگ"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/pdvVariations_recyclerView_colors"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_64dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="@dimen/dimen_12dp"
            android:layout_marginRight="@dimen/dimen_12dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginRight="12dp"
            android:orientation="horizontal">

            <com.mobile.components.customfontviews.TextView
                android:id="@+id/pdvVariations_textView_sizeTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary_text_color"
                android:textSize="11sp"
                tools:ignore="SmallSp"
                tools:text="انتخاب سایز"/>

            <com.mobile.components.customfontviews.TextView
                android:id="@+id/pdvVariations_textView_sizeHelp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_8dp"
                android:textColor="#25a8ed"
                android:textSize="13sp"
                tools:text="راهنمای سایز"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/pdvVariations_recyclerView_size"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_1dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:layout_marginRight="@dimen/dimen_8dp"
            android:background="@color/grey_dividerlight"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginBottom="@dimen/dimen_4dp"
            android:orientation="horizontal">

            <com.mobile.components.customfontviews.TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@string/bamilo_font"
                android:textSize="14sp"
                android:text="@string/product_description"
                android:textColor="#25a8ed"/>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dimen_12dp"
                android:layout_marginBottom="@dimen/dimen_12dp"
                android:background="@color/grey_dividerlight"/>

            <com.mobile.components.customfontviews.TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:fontFamily="@string/bamilo_font"
                android:textSize="14sp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="@string/specifications"
                android:textColor="#25a8ed"/>

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>