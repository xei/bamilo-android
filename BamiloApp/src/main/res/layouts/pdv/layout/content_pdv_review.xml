<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="168dp"
    android:layout_marginLeft="@dimen/dimen_4dp"
    android:layout_marginRight="@dimen/dimen_4dp"
    android:background="@drawable/round_gray_4">

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/pdvReview_textView_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginLeft="@dimen/dimen_8dp"
        android:layout_marginRight="8dp"
        android:ellipsize="end"
        android:gravity="right|center_vertical"
        android:textColor="@color/primary_text_color"
        app:fontFamily="@string/bamilo_bold_font"
        app:layout_constraintLeft_toLeftOf="@+id/pdvReview_guideline_centerVertical"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="حاج کاظم خریدار"/>

    <com.bamilo.modernbamilo.customview.XeiTextView
        android:id="@+id/pdvReview_xeiTextView_authorName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginRight="@dimen/dimen_8dp"
        android:textColor="@color/secondary_text_color"
        android:textSize="12sp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pdvReview_textView_title"
        tools:text="حمیدرضا حسین‌خانی"/>

    <View
        android:id="@+id/pdvReview_view_divider"
        android:layout_width="1dp"
        android:layout_height="16dp"
        android:layout_marginRight="4dp"
        android:background="@color/secondary_text_color"
        app:layout_constraintBottom_toBottomOf="@+id/pdvReview_xeiTextView_authorName"
        app:layout_constraintRight_toLeftOf="@+id/pdvReview_xeiTextView_authorName"
        app:layout_constraintTop_toTopOf="@+id/pdvReview_xeiTextView_authorName"/>

    <com.bamilo.modernbamilo.customview.XeiTextView
        android:id="@+id/pdvReview_textView_date"
        android:layout_width="wrap_content"
        android:layout_height="16dp"
        android:layout_marginRight="4dp"
        android:gravity="center_vertical"
        android:textColor="@color/secondary_text_color"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/pdvReview_xeiTextView_authorName"
        app:layout_constraintRight_toLeftOf="@+id/pdvReview_view_divider"
        tools:text="۹۷/۰۵/۲۳"/>

    <RatingBar
        android:id="@+id/pdvReview_ratingBar"
        style="@style/StarBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginLeft="@dimen/dimen_8dp"
        android:layout_marginRight="8dp"
        android:rating="4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.bamilo.modernbamilo.customview.XeiTextView
        android:id="@+id/pdvReview_xeiTextView_hasUserBeenBought"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:text="@string/comment_comment_hasUseBeenBoughtLabel"
        android:textColor="@color/commentsList_comment_hasUserBeenBought"
        android:textSize="12sp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pdvReview_ratingBar"
        tools:visibility="visible"/>

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/pdvReview_imageView_hasUserBeenBought"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="4dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/pdvReview_xeiTextView_hasUserBeenBought"
        app:layout_constraintLeft_toRightOf="@+id/pdvReview_xeiTextView_hasUserBeenBought"
        app:layout_constraintTop_toTopOf="@+id/pdvReview_xeiTextView_hasUserBeenBought"
        app:srcCompat="@drawable/ic_hasbeenbought"
        tools:visibility="visible"/>

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/pdvReview_textView_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="@dimen/dimen_12dp"
        android:layout_marginRight="@dimen/dimen_12dp"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.05"
        android:maxLines="4"
        android:textColor="@color/primary_text_color"
        android:textSize="12sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pdvReview_xeiTextView_authorName"
        tools:text="آقا بسیار محصول عالی بود، خیلی تشکر داریم داریم هم بنده هم منزل انشاله خداوند برکتتان دهد، دست دیزاینر های بسیار خوبتان هم درد نکند انشالله، خداوند آنان را نیز خیر دنیا و آخرت بدهد، چون ظاهر قبلی بسیار بسیار بد و "/>

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/pdvReview_textView_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:background="#f5f5f5"
        android:text="@string/more_3dot"
        android:textColor="@color/blue_link"
        android:textSize="@dimen/dimen_12sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/pdvReview_textView_comment"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:visibility="visible"/>

    <View
        android:id="@+id/pdvReview_view_moreButtonGradient"
        android:layout_width="30dp"
        android:layout_height="17dp"
        android:background="@drawable/more_dots_gradient_background"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/pdvReview_textView_more"
        app:layout_constraintLeft_toRightOf="@+id/pdvReview_textView_more"
        app:layout_constraintTop_toTopOf="@+id/pdvReview_textView_more"
        tools:visibility="visible"/>

    <android.support.constraint.Guideline
        android:id="@+id/pdvReview_guideline_centerVertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5"/>

</android.support.constraint.ConstraintLayout>
