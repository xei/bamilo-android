<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginLeft="@dimen/dimen_4dp"
    android:layout_marginRight="@dimen/dimen_4dp"
    android:background="@drawable/round_gray_4">

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/pdvReview_textView_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginRight="@dimen/dimen_12dp"
        android:fontFamily="@string/bamilo_bold_font"
        android:textColor="@color/primary_text_color"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="حاج کاظم خریدار"/>

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/pdvReview_textView_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_15dp"
        android:layout_marginLeft="@dimen/dimen_12dp"
        android:textColor="@color/secondary_text_color"
        android:textSize="@dimen/dimen_10sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="دیروز"/>

    <RatingBar
        android:id="@+id/pdvReview_ratingBar"
        style="@style/StarBar.Small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginRight="11dp"
        android:rating="4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pdvReview_textView_title"/>

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/pdvReview_textView_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="@dimen/dimen_12dp"
        android:layout_marginRight="@dimen/dimen_12dp"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.58"
        android:maxLines="4"
        android:textColor="@color/primary_text_color"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pdvReview_ratingBar"
        app:layout_constraintVertical_bias="0.0"
        tools:text="آقا بسیار محصول عالی بود، خیلی تشکر داریم داریم هم بنده هم منزل انشاله خداوند برکتتان دهد، دست دیزاینر های بسیار خوبتان هم درد نکند انشالله، خداوند آنان را نیز خیر دنیا و آخرت بدهد، چون ظاهر قبلی بسیار بسیار بد و "/>

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/pdvReview_textView_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:background="#f5f5f5"
        android:text="@string/more_3dot"
        android:textColor="#FF00ADE6"
        android:textSize="@dimen/dimen_12sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/pdvReview_textView_comment"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:visibility="visible"/>

    <View
        android:id="@+id/pdvReview_view_moreButtonGradient"
        android:layout_width="30dp"
        android:layout_height="17dp"
        android:background="@drawable/more_dots_gradient_background"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/pdvReview_textView_more"
        app:layout_constraintLeft_toRightOf="@+id/pdvReview_textView_more"
        app:layout_constraintTop_toTopOf="@+id/pdvReview_textView_more"
        tools:visibility="visible"/>

</android.support.constraint.ConstraintLayout>
