<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_8dp"
    android:layout_marginLeft="@dimen/dimen_8dp"
    android:layout_marginRight="@dimen/dimen_8dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/pdvDescription_textView_shortDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:layout_marginRight="@dimen/dimen_8dp"
            android:ellipsize="end"
            android:gravity="right"
            android:lineSpacingMultiplier="1.91"
            android:maxLines="4"
            android:textColor="@color/primary_text_color"
            android:textSize="11sp"
            tools:ignore="SmallSp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:layout_marginRight="@dimen/dimen_8dp"
            android:background="#FFD8D8D8"/>

        <LinearLayout
            android:id="@+id/pdvDescription_linearLayout_showFullDescription"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_48dp"
            android:background="?attr/selectableItemBackground">

            <com.mobile.components.customfontviews.TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:lineSpacingMultiplier="1.91"
                android:text="@string/show_full_description"
                android:textColor="#FF25A8ED"
                android:textSize="12sp"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
