<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="@dimen/dimen_8dp"
    android:layout_marginStart="@dimen/dimen_8dp"
    android:layout_marginEnd="@dimen/dimen_8dp"
    android:layout_marginLeft="@dimen/dimen_8dp"
    android:layout_marginRight="@dimen/dimen_8dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.bamilo.modernbamilo.customview.XeiTextView
            android:id="@+id/pdvPrimaryInfo_textView_title"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="@dimen/dimen_4dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/primary_text_color"
            android:textSize="12sp"
            app:fontFamily="@string/bamilo_bold_font"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:style="bold"
            tools:text="گوشی موبایل هواوی مدل آنر ۶سی ۶۴ گیگابایت رنگ آبی شش اینج چهار گیگ رم"/>

        <LinearLayout
            android:id="@+id/pdvPrimaryInfo_linearLayout_brandLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingStart="@dimen/dimen_10dp"
            android:paddingEnd="@dimen/dimen_10dp"
            android:paddingLeft="@dimen/dimen_10dp"
            android:paddingRight="@dimen/dimen_10dp"
            android:gravity="right"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            tools:targetApi="jelly_bean_mr1">

            <com.mobile.components.customfontviews.TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/brand_label"
                android:textColor="@color/secondary_text_color"
                android:textSize="11sp"
                app:fontFamily="@string/bamilo_bold_font"
                tools:ignore="SmallSp"/>

            <com.mobile.components.customfontviews.TextView
                android:id="@+id/pdvPrimaryInfo_textView_brand"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/dimen_4dp"
                android:textColor="@color/blue_link"
                android:textSize="11sp"
                app:fontFamily="@string/bamilo_bold_font"
                tools:ignore="SmallSp"
                tools:text="هوآوی Huawei"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/pdvPrimaryInfo_linearLayout_ratingLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingLeft="@dimen/dimen_10dp"
            android:paddingRight="@dimen/dimen_10dp"
            android:gravity="start|center_vertical"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            tools:targetApi="jelly_bean_mr1">

            <RatingBar
                android:id="@+id/pdvPrimaryInfo_ratingBar"
                style="@style/StarBar.Indicator"
                android:layout_width="wrap_content"
                android:stepSize="0.1"
                android:layout_height="wrap_content"
                android:rating="3.7"/>

            <com.mobile.components.customfontviews.TextView
                android:id="@+id/score_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="@string/score"
                android:textColor="@color/secondary_text_color"
                android:textSize="12sp"
                tools:ignore="SmallSp"/>

            <com.mobile.components.customfontviews.TextView
                android:id="@+id/pdvPrimaryInfo_textView_averageScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:textColor="@color/primary"
                android:textSize="12sp"
                app:fontFamily="@string/bamilo_bold_font"
                tools:ignore="SmallSp"
                tools:text="3.5"/>

            <TextView
                android:id="@+id/textView19"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:layout_marginRight="@dimen/dimen_4dp"
                android:text="@string/open_bracket"
                android:textColor="@color/gray"
                app:fontFamily="@string/bamilo_font"
                tools:text="("/>

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/appCompatImageView2"
                android:layout_width="@dimen/dimen_16dp"
                android:layout_height="@dimen/dimen_16dp"
                android:layout_marginRight="2dp"
                app:fontFamily="@string/bamilo_font"
                app:srcCompat="@drawable/ic_person_gray"/>

            <com.mobile.components.customfontviews.TextView
                android:id="@+id/pdvPrimaryInfo_textView_scoreCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:textColor="@color/gray"
                android:textSize="@dimen/dimen_12sp"
                app:fontFamily="@string/bamilo_font"
                tools:text="16"/>

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:text="@string/close_bracket"
                android:textColor="@color/gray"
                app:fontFamily="@string/bamilo_font"
                tools:text=")"/>

        </LinearLayout>

        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="@color/grey_dividerlight"/>

        <LinearLayout
            android:id="@+id/pdvPrimaryInfo_linearLayout_priceLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:paddingLeft="@dimen/dimen_10dp"
            android:paddingRight="@dimen/dimen_10dp"
            android:gravity="center_vertical"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            android:visibility="visible"
            tools:targetApi="jelly_bean_mr1">

            <com.mobile.components.customfontviews.TextView
                android:id="@+id/pdvPrimaryInfo_textView_currentPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/accent"
                android:textSize="24sp"
                app:fontFamily="@string/bamilo_bold_font"
                tools:text="۱،۴۰۵،۵۰۰"/>

            <com.mobile.components.customfontviews.TextView
                android:id="@+id/pdvPrimaryInfo_textView_currency"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/dimen_8dp"
                android:layout_marginLeft="@dimen/dimen_8dp"
                android:layout_marginRight="@dimen/dimen_8dp"
                android:gravity="right"
                android:text="@string/rial"
                android:textAlignment="gravity"
                android:textColor="@color/primary_text_color"
                android:textSize="12sp"/>

            <RelativeLayout
                android:id="@+id/pdvPrimaryInfo_relativeLayout_discountPercentageRoot"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:background="@drawable/discount_percentage_round_background">

                <com.mobile.components.customfontviews.TextView
                    android:id="@+id/pdvPrimaryInfo_textView_discountPercentage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="@dimen/dimen_4dp"
                    android:paddingRight="@dimen/dimen_4dp"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    app:fontFamily="@string/bamilo_bold_font"
                    tools:text="33%"/>

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/pdvPrimaryInfo_linearLayout_discountLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dimen_8dp"
            android:paddingLeft="@dimen/dimen_10dp"
            android:paddingRight="@dimen/dimen_10dp"
            android:gravity="center_vertical"
            android:layoutDirection="rtl"
            android:orientation="horizontal"
            android:visibility="visible"
            tools:targetApi="jelly_bean_mr1">

            <com.mobile.components.customfontviews.TextView
                android:id="@+id/pdvPrimaryInfo_textView_oldPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right"
                android:textAlignment="gravity"
                android:textColor="@color/secondary_text_color"
                android:textSize="11sp"
                tools:ignore="SmallSp"
                tools:text="۱،۷۴۹،۰۰۰"/>

            <com.mobile.components.customfontviews.TextView
                android:id="@+id/pdvPrimaryInfo_textView_discountBenefit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/secondary_text_color"
                android:textSize="11sp"
                tools:ignore="SmallSp"
                tools:text="سود شما: ۱/۴۳۰ میلیون ریال"/>

        </LinearLayout>

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/pdvPrimaryInfo_textView_outOfStock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="@dimen/dimen_16dp"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="@string/product_no_exist"
            android:textColor="@color/primary_text_color"
            android:textSize="14sp"
            android:visibility="gone"
            app:fontFamily="@string/bamilo_bold_font"/>

    </LinearLayout>

</android.support.v7.widget.CardView>
