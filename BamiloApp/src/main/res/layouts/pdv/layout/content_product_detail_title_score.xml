<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:layout_marginLeft="@dimen/dimen_8dp"
    tools:layout_marginRight="@dimen/dimen_8dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="8dp"
    tools:layout_height="177dp">

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/textView13"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:text=" پولو شرت کلاسیک اصل مدل
آخر 2012 فنی سالم"
            android:textColor="#434343"
            android:textSize="12sp"
            app:fontFamily="@string/bamilo_bold_font"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <RatingBar
            android:id="@+id/pdv_rating_bar"
            style="@style/StarBar.Indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="@dimen/dimen_16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="@dimen/dimen_16dp"
            android:rating="4"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView13"/>

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/score_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:text="@string/score"
            android:textColor="#757575"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/pdv_rating_bar"
            app:layout_constraintStart_toEndOf="@+id/pdv_rating_bar"
            tools:ignore="SmallSp"/>

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="۳.۵"
            android:textColor="#1a365e"
            android:textSize="12sp"
            app:fontFamily="@string/bamilo_bold_font"
            app:layout_constraintBottom_toBottomOf="@+id/pdv_rating_bar"
            app:layout_constraintStart_toEndOf="@+id/score_text"
            tools:ignore="SmallSp"/>

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="۳.۵"
            android:textColor="#1a365e"
            android:textSize="12sp"
            app:fontFamily="@string/bamilo_bold_font"
            app:layout_constraintBottom_toBottomOf="@+id/pdv_rating_bar"
            app:layout_constraintStart_toEndOf="@+id/score_text"
            tools:ignore="SmallSp"/>

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/textView20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="۱۶"
            android:textColor="#d8d8d8"
            android:textSize="@dimen/dimen_12sp"
            app:fontFamily="@string/bamilo_font"
            app:layout_constraintBottom_toBottomOf="@+id/appCompatImageView2"
            app:layout_constraintStart_toEndOf="@+id/appCompatImageView2"
            app:layout_constraintTop_toTopOf="@+id/appCompatImageView2"/>

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2dp"
            android:text=")"
            android:textColor="#d8d8d8"
            app:fontFamily="@string/bamilo_font"
            app:layout_constraintBottom_toBottomOf="@+id/textView19"
            app:layout_constraintStart_toEndOf="@+id/textView20"
            app:layout_constraintTop_toTopOf="@+id/textView19"/>

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="@dimen/dimen_4dp"
            android:text="("
            android:textColor="#d8d8d8"
            app:fontFamily="@string/bamilo_font"
            app:layout_constraintBottom_toBottomOf="@+id/textView17"
            app:layout_constraintStart_toEndOf="@+id/textView17"
            app:layout_constraintTop_toTopOf="@+id/textView17"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/appCompatImageView2"
            android:layout_width="@dimen/dimen_16dp"
            android:layout_height="@dimen/dimen_16dp"
            android:layout_marginRight="2dp"
            app:fontFamily="@string/bamilo_font"
            app:layout_constraintBottom_toBottomOf="@+id/textView19"
            app:layout_constraintStart_toEndOf="@+id/textView19"
            app:layout_constraintTop_toTopOf="@+id/textView19"
            app:srcCompat="@drawable/ic_person_gray"/>

        <View
            android:id="@+id/view2"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:background="#d8d8d8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pdv_rating_bar"/>

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/contentPDV_cost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginRight="@dimen/dimen_8dp"
            android:text="۱،۷۴۰،۰۰۰ ریال"
            android:textColor="#757575"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contentPDV_discount"
            tools:ignore="SmallSp"/>

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/contentPDV_discount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginRight="@dimen/dimen_8dp"
            android:text="۱،۴۰۵،۵۰۰"
            android:textColor="#fe6b0c"
            android:textSize="24sp"
            app:fontFamily="@string/bamilo_bold_font"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view2"/>

        <RelativeLayout
            android:id="@+id/contentPDV_discountPercentage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:background="@drawable/discount_percentage_round_background"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view2">

            <com.mobile.components.customfontviews.TextView
                android:id="@+id/zxcasdqwer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="2dp"
                android:paddingLeft="@dimen/dimen_4dp"
                android:paddingRight="@dimen/dimen_4dp"
                android:fontFamily="@string/bamilo_bold_font"
                android:gravity="center"
                android:singleLine="true"
                android:text="%۷۸.۵"
                android:textColor="#f7931d"
                android:textSize="14sp"/>

        </RelativeLayout>

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/contentPDV_discountBenefit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:text="سود شما : ۱/۴۳۰ میلیون ریال"
            android:textColor="#757575"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contentPDV_discountPercentage"
            tools:ignore="SmallSp"/>

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/contentPDV_currency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="@string/rial"
            android:textColor="#434343"
            android:textSize="12sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/contentPDV_discount"
            app:layout_constraintStart_toEndOf="@+id/contentPDV_discount"/>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>
