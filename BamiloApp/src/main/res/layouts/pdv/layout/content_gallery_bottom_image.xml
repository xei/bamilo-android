<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pdvGalleryBottomImage_relativeView_rootLayout"
    android:layout_width="@dimen/dimen_56dp"
    android:layout_height="@dimen/dimen_56dp"
    android:layout_marginTop="@dimen/dimen_4dp"
    android:padding="@dimen/dimen_2dp"
    android:background="@drawable/round_stroke_orange_4">

    <android.support.v7.widget.AppCompatImageView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pdvGalleryBottomImage_appImageView_Image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"/>

    <ProgressBar
        android:id="@+id/pdvGalleryBottomImage_progressBar"
        android:layout_width="@dimen/progress_bar_dim"
        android:layout_height="@dimen/progress_bar_dim"
        android:layout_centerInParent="true"/>

</RelativeLayout>
