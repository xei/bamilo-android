<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:id="@+id/addToCart_linearLayout_parent"
    android:background="@color/colorAccent"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="@dimen/dimen_24dp"
        android:layout_height="@dimen/dimen_24dp"
        android:layout_marginRight="12dp"
        app:srcCompat="@drawable/ic_cart_white"/>

    <com.mobile.components.customfontviews.TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/dimen_8dp"
        android:fontFamily="@string/bamilo_bold_font"
        android:text="@string/add_to_shopping_cart"
        android:textColor="@color/white"
        android:textSize="14sp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="16dp"
        android:gravity="left">

        <com.mobile.components.customfontviews.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/remain_"
            android:textColor="@color/white"
            android:textSize="11sp"
            tools:ignore="SmallSp"/>

        <com.mobile.components.customfontviews.TextView
            android:layout_width="wrap_content"
            android:layout_marginRight="@dimen/dimen_4dp"
            android:paddingRight="@dimen/dimen_8dp"
            android:paddingLeft="@dimen/dimen_8dp"
            android:paddingTop="@dimen/dimen_1dp"
            android:paddingBottom="@dimen/dimen_1dp"
            android:layout_height="wrap_content"
            android:background="@drawable/round_white_12dp"
            android:text="۴ عدد"
            android:textColor="@color/colorAccent"
            android:textSize="12sp"/>

    </LinearLayout>

</LinearLayout>