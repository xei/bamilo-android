<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_8dp"
    app:cardCornerRadius="2dp"
    app:cardElevation="2dp"
    tools:layout_width="168dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimen_8dp"
        android:layout_marginBottom="@dimen/dimen_8dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="93dp"
            android:layout_height="112dp"
            android:layout_gravity="center_horizontal">

            <include
                layout="@layout/home_teaser_image_loadable"
                android:layout_width="93dp"
                android:layout_height="112dp"/>

        </FrameLayout>

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/recommendation_textView_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="@dimen/dimen_4dp"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:layout_marginRight="@dimen/dimen_8dp"
            android:paddingTop="@dimen/dimen_2dp"
            android:paddingBottom="@dimen/dimen_2dp"
            android:ellipsize="end"
            android:gravity="right|center_vertical"
            android:maxLines="2"
            android:textAlignment="gravity"
            android:textColor="#FF717171"
            android:textSize="12sp"
            tools:text="Product Name"/>

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/recommendation_textView_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:paddingTop="@dimen/dimen_2dp"
            android:paddingBottom="@dimen/dimen_2dp"
            android:fontFamily="@string/bamilo_bold_font"
            android:gravity="right|center_vertical"
            android:singleLine="true"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            tools:text="18000 ریال"/>

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/recommendation_textView_oldPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_8dp"
            android:layout_marginRight="@dimen/dimen_8dp"
            android:paddingTop="@dimen/dimen_2dp"
            android:paddingBottom="@dimen/dimen_2dp"
            android:gravity="right|center_vertical"
            android:singleLine="true"
            android:textColor="@color/secondary_text_color"
            android:textSize="12sp"
            tools:text="19000 ریال"/>

    </LinearLayout>

</android.support.v7.widget.CardView>
