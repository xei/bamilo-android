<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/margin_16dp"
        android:paddingRight="@dimen/margin_16dp"
        android:paddingTop="@dimen/dimen_16dp">

        <com.mobile.components.customfontviews.EditText
            android:id="@+id/login_email"
            style="@style/BlueFormTextField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/email_address"
            android:inputType="textPersonName"
            android:text="" />

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/login_text_error_message"
            style="@style/FormTextErrorField17"
            android:visibility="gone" />

        <com.mobile.components.customfontviews.EditText
            android:id="@+id/login_password"
            style="@style/BlueFormTextField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:textSize="12sp" />

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/password_text_error_message"
            style="@style/FormTextErrorField17"
            android:visibility="gone" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_20dp" />

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/login_email_button_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fgt_pass"
            android:textColor="@color/link_color"
            android:textSize="12sp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_20dp" />

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/login_button_continue"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:background="@color/button_primary_color"
            android:text="@string/login_label"
            android:textColor="@color/white" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_20dp" />

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/continue_without_log_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/continue_without_log_in"
            android:textAlignment="center"
            android:textColor="@color/blue_3"
            android:textSize="12sp"
            android:visibility="gone"
            app:met_primaryColor="@color/transparent" />

    </LinearLayout>
</ScrollView>