<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:orientation="vertical">

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/fragment_root_error_label"
        style="@style/TextBase.Display_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_48dp"
        android:layout_marginBottom="@dimen/dimen_28dp"
        android:gravity="center"
        android:singleLine="false"
        android:text="@string/error_no_connection"
        android:textColor="@color/black_900" />

    <ImageView
        android:id="@+id/fragment_root_error_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="60dp" />


    <com.mobile.components.customfontviews.TextView
        android:id="@+id/fragment_root_error_details_label"
        style="@style/TextBase.Body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_90px"
        android:layout_marginRight="@dimen/margin_90px"
        android:ellipsize="middle"
        android:gravity="center"
        android:singleLine="false"
        android:text="@string/internet_no_connection_details_label"
        android:textColor="@color/black_800"
        android:visibility="gone"
        tools:visibility="visible" />

</LinearLayout>