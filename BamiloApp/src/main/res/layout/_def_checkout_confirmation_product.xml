<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:minHeight="@dimen/dimen_100dp"
    android:paddingTop="@dimen/dimen_10dp"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_16dp">


        <ImageView
            android:src="@drawable/img_maintenance_bag"
            android:layout_height="81dp"
            android:id="@+id/checkout_product_image"
            android:padding="5dp"
            android:layout_width="65dp"
            android:layout_margin="0dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            style="@style/myImageView"
            />

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/checkout_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/checkout_product_image"
            android:layout_margin="0dp"
            android:layout_toEndOf="@+id/checkout_product_image"
            android:layout_toRightOf="@+id/checkout_product_image"
            android:gravity="right"
            android:textColor="@color/black_73"
            tools:text="product name product name product name product name" />

        <com.mobile.components.customfontviews.TextView
            android:text="brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkout_product"
            android:layout_toRightOf="@+id/checkout_product_image"
            android:layout_toEndOf="@+id/checkout_product_image"
            android:layout_marginEnd="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="@dimen/dimen_5dp"
            android:id="@+id/checkout_brand"
            android:textColor="#929292"/>

        <com.mobile.components.customfontviews.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/checkout_count"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/checkout_price"
            android:textColor="#737373"
            android:layout_marginEnd="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="@dimen/dimen_1_5dp"
            android:layout_marginBottom="@dimen/dimen_0dp"
            android:paddingRight="@dimen/dimen_16dp"
            android:paddingLeft="@dimen/dimen_16dp" />

        <com.mobile.components.customfontviews.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="5dp"
            android:id="@+id/checkout_count"
            android:textColor="#737373"
            android:layout_below="@+id/checkout_product"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingRight="@dimen/dimen_16dp" />
</RelativeLayout>
