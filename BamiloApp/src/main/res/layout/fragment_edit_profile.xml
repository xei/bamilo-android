<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilFirstName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="24dp"
            android:theme="@style/RegistrationFormEditTextTheme">

            <EditText
                android:id="@+id/etFirstName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:hint="@string/first_name"
                android:inputType="textPersonName"
                android:textSize="14sp"
                android:theme="@style/RegistrationFormEditTextTheme" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilLastName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:theme="@style/RegistrationFormEditTextTheme">

            <EditText
                android:id="@+id/etLastName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:hint="@string/last_name"
                android:inputType="textPersonName"
                android:textSize="14sp"
                android:theme="@style/RegistrationFormEditTextTheme" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:theme="@style/RegistrationFormEditTextTheme">

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:hint="@string/email_address"
                android:inputType="textEmailAddress"
                android:textSize="14sp"
                android:theme="@style/RegistrationFormEditTextTheme" />
        </android.support.design.widget.TextInputLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp">

            <TextView
                android:id="@+id/tvBirthdayTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="16dp"
                android:paddingRight="4dp"
                android:text="@string/profile_user_birthday"
                android:textColor="@color/gray_5"
                android:textSize="12sp"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvYearTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="16dp"
                android:paddingRight="4dp"
                android:text="@string/profile_bd_year"
                android:textColor="@color/gray_5"
                android:textSize="10sp"
                app:layout_constraintLeft_toLeftOf="@+id/spinnerYear"
                app:layout_constraintRight_toRightOf="@+id/spinnerYear"
                app:layout_constraintTop_toBottomOf="@+id/tvBirthdayTitle" />

            <Spinner
                android:id="@+id/spinnerYear"
                style="@style/FormButtonSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:minWidth="72dp"
                app:layout_constraintRight_toLeftOf="@+id/spinnerMonth"
                app:layout_constraintTop_toBottomOf="@+id/tvYearTitle" />


            <TextView
                android:id="@+id/tvMonthTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="16dp"
                android:paddingRight="4dp"
                android:text="@string/profile_bd_month"
                android:textColor="@color/gray_5"
                android:textSize="10sp"
                app:layout_constraintLeft_toLeftOf="@+id/spinnerMonth"
                app:layout_constraintRight_toRightOf="@+id/spinnerMonth"
                app:layout_constraintTop_toBottomOf="@+id/tvBirthdayTitle" />

            <Spinner
                android:id="@+id/spinnerMonth"
                style="@style/FormButtonSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:minWidth="48dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvMonthTitle" />


            <TextView
                android:id="@+id/tvDayTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="16dp"
                android:paddingRight="4dp"
                android:text="@string/profile_bd_day"
                android:textColor="@color/gray_5"
                android:textSize="10sp"
                app:layout_constraintLeft_toLeftOf="@+id/spinnerDay"
                app:layout_constraintRight_toRightOf="@+id/spinnerDay"
                app:layout_constraintTop_toBottomOf="@+id/tvBirthdayTitle" />

            <Spinner
                android:id="@+id/spinnerDay"
                style="@style/FormButtonSpinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:minWidth="48dp"
                app:layout_constraintLeft_toRightOf="@+id/spinnerMonth"
                app:layout_constraintTop_toBottomOf="@+id/tvDayTitle" />
        </android.support.constraint.ConstraintLayout>


        <android.support.design.widget.TextInputLayout
            android:id="@+id/tilPhoneNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="8dp"
            android:theme="@style/RegistrationFormEditTextTheme">

            <EditText
                android:id="@+id/etPhoneNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:hint="@string/mobile_number"
                android:inputType="phone"
                android:maxLength="11"
                android:textSize="14sp"
                android:theme="@style/RegistrationFormEditTextTheme" />
        </android.support.design.widget.TextInputLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp">

            <TextView
                android:id="@+id/tvCardNumberTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="16dp"
                android:paddingRight="4dp"
                android:text="@string/profile_user_card_number"
                android:textColor="@color/gray_5"
                android:textSize="12sp" />

            <br.com.sapereaude.maskedEditText.MaskedEditText
                android:id="@+id/metCardNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvCardNumberTitle"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:gravity="right"
                android:hint="################"
                android:inputType="number"
                android:layoutDirection="ltr"
                android:padding="0dp"
                android:paddingRight="4dp"
                android:textColor="@color/gray_2"
                android:textDirection="ltr"
                android:textSize="14sp"
                android:theme="@style/RegistrationFormEditTextTheme"
                app:allowed_chars="1234567890"
                app:keep_hint="true"
                app:mask="#### - #### - #### - ####" />
        </RelativeLayout>


    </LinearLayout>

</android.support.v4.widget.NestedScrollView>