<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/toast_exit_layout_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/toast"
    android:orientation="vertical"
    android:padding="20dp" >

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/toast_exit_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fontFamily="@string/bamilo_regular_font"
        android:gravity="center"
        android:text="@string/exit_press_back_again"
        android:textColor="@color/grey_dark"
        android:textSize="@dimen/text_m" />

</LinearLayout>