<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="?attr/actionBarSize"
    android:layout_height="?attr/actionBarSize">

    <ImageView
        android:id="@+id/action_cart_image"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:clickable="true"
        android:src="@drawable/cart_action_selector" />

    <!--Used dip for text size to prevent text resize when user changes
        display preferences from system settings-->
    <com.mobile.components.customfontviews.TextView
        android:id="@+id/action_cart_count"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignRight="@id/action_cart_image"
        android:layout_alignTop="@id/action_cart_image"
        android:layout_marginTop="12dp"
        android:layout_marginRight="4dp"
        android:background="@drawable/drawer_cart_badge"
        android:ellipsize="end"
        android:gravity="center"
        android:padding="0dp"
        android:singleLine="true"
        android:textColor="@color/white"
        android:textSize="10dp"
        android:visibility="visible" />

</RelativeLayout>