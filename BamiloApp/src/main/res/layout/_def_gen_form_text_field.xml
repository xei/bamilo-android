<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp">

    <!-- ICON -->



    <!-- PREFIX TEXT -->

    <com.mobile.components.absspinner.IcsSpinner
        android:id="@+id/text_field_spinner_prefix"
        style="@style/TextBase.List.Black"
        android:layout_width="@dimen/dimen_100dp"
        android:layout_height="@dimen/dimen_48dp"
        android:layout_marginEnd="@dimen/margin_padding_xl"
        android:layout_marginRight="@dimen/margin_padding_xl"
        android:layout_marginTop="@dimen/margin_padding_xs"
        android:background="@drawable/spinner_background"
        android:clickable="true"
        android:spinnerMode="dropdown"
        android:visibility="gone" />

    <!-- EDIT TEXT -->
    <com.mobile.components.customfontviews.EditText
        android:id="@+id/text_field"
        style="@style/BlueFormTextField"
        android:layout_toLeftOf="@+id/text_field_spinner_suffix"
        android:layout_toStartOf="@+id/text_field_spinner_suffix"
        android:layout_toRightOf="@id/text_field_spinner_prefix"
        android:layout_toEndOf="@id/text_field_spinner_prefix" />


    <!-- PASSWORD EYE -->

    <com.mobile.components.customfontviews.CheckBox
        android:id="@+id/text_field_password_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/text_field"
        android:layout_alignRight="@id/text_field"
        android:layout_centerVertical="true"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:button="@drawable/_gen_selector_password_eye"
        android:visibility="gone" />

    <!-- MANDATORY -->

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/text_field_mandatory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingEnd="5dp"
        android:paddingRight="5dp"
        android:text="*"
        android:textColor="@color/color_accent"
        android:textSize="18sp" />

    <!-- SUFFIX TEXT -->

    <com.mobile.components.absspinner.IcsSpinner
        android:id="@id/text_field_spinner_suffix"
        style="@style/FormFieldStyle"
        android:layout_width="100dp"
        android:layout_height="48dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/spinner_background"
        android:clickable="true"
        android:spinnerMode="dropdown"
        android:visibility="gone" />

</RelativeLayout>
