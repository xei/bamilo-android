<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:fillViewport="true"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <com.mobile.components.customfontviews.EditText
            style="@style/Register_Edittext"
            android:hint="@string/national_id"
            android:id="@+id/national_id"
            android:inputType="number" />

        <com.mobile.components.customfontviews.TextView
            style="@style/FormTextErrorField"
            android:fontFamily="@string/bamilo_font"
            android:gravity="start|left"
            android:id="@+id/national_id_error_message"
            android:visibility="gone" />

        <com.mobile.components.customfontviews.EditText
            style="@style/Register_Edittext"
            android:hint="@string/first_name"
            android:id="@+id/first_name"
            android:inputType="text" />

        <com.mobile.components.customfontviews.TextView
            style="@style/FormTextErrorField"
            android:fontFamily="@string/bamilo_font"
            android:gravity="start|left"
            android:id="@+id/first_name_error_message"
            android:visibility="gone" />

        <com.mobile.components.customfontviews.EditText
            style="@style/Register_Edittext"
            android:hint="@string/last_name"
            android:id="@+id/last_name"
            android:inputType="text" />

        <com.mobile.components.customfontviews.TextView
            style="@style/FormTextErrorField"
            android:fontFamily="@string/bamilo_font"
            android:gravity="start|left"
            android:id="@+id/last_name_error_message"
            android:visibility="gone" />

        <com.mobile.components.customfontviews.EditText
            style="@style/Register_Edittext"
            android:hint="@string/email"
            android:id="@+id/email"
            android:inputType="textEmailAddress" />

        <com.mobile.components.customfontviews.TextView
            style="@style/FormTextErrorField"
            android:fontFamily="@string/bamilo_font"
            android:gravity="start|left"
            android:id="@+id/email_error_message"
            android:visibility="gone" />

        <com.mobile.components.customfontviews.EditText
            style="@style/Register_Edittext"
            android:gravity="right"
            android:hint="@string/new_password"
            android:id="@+id/password"
            android:inputType="textPassword" />

        <com.mobile.components.customfontviews.TextView
            style="@style/FormTextErrorField"
            android:fontFamily="@string/bamilo_font"
            android:gravity="start|left"
            android:id="@+id/password_error_message"
            android:visibility="gone" />

        <com.mobile.components.customfontviews.EditText
            style="@style/Register_Edittext"
            android:hint="@string/phone"
            android:id="@+id/phone"
            android:inputType="phone" />

        <com.mobile.components.customfontviews.TextView
            style="@style/FormTextErrorField"
            android:fontFamily="@string/bamilo_font"
            android:gravity="start|left"
            android:id="@+id/phone_error_message"
            android:visibility="gone" />

        <com.mobile.components.customfontviews.TextView
            style="@style/Widget.AppCompat.Button.Colored"
            android:background="#4990e2"
            android:id="@+id/register_button_create"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_10dp"
            android:layout_width="match_parent"
            android:text="@string/register_label" />

    </LinearLayout>

</ScrollView>