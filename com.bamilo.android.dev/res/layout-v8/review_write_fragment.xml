<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <include
            android:id="@+id/product_info_container"
            layout="@layout/product_details_fragment_header" />

        <!-- SHADOW -->

        <View
            android:id="@+id/shadow"
            style="@style/shadow"
            android:layout_below="@id/product_info_container"
            android:visibility="gone" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/shadow"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/product_rating_container"
                style="@style/rounded_box"
                android:layout_marginBottom="0dp"
                android:layout_marginTop="@dimen/rounded_margin_small"
                android:orientation="vertical"
                android:padding="@dimen/rounded_margin_mid"
                android:visibility="visible" >

                <pt.rocket.components.customfontviews.TextView
                    style="@style/text_normal"
                    android:id="@+id/write_title"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_100px"
                    android:layout_marginRight="@dimen/margin_100px"
                    android:ellipsize="none"
                    android:gravity="center_vertical|center_horizontal"
                    android:singleLine="false"
                    android:text="@string/rating_question" />

                <LinearLayout
                    android:id="@+id/form_rating_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical" >
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/form_review_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    android:visibility="gone" >
                </LinearLayout>
            </LinearLayout>

            <LinearLayout style="@style/button_container" >

                <pt.rocket.components.customfontviews.Button
                    android:id="@+id/send_review"
                    style="@style/button_orange_bottom"
                    android:layout_marginLeft="@dimen/rounded_margin_mid"
                    android:layout_marginRight="@dimen/rounded_margin_mid"
                    android:text="@string/writereview_send" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</ScrollView>