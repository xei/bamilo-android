<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center" >

    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        layout="@layout/image_loadable"
        android:adjustViewBounds="false"
        android:scaleType="fitCenter" />

    <ImageView
        android:id="@+id/item_image_is_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|right"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        android:src="@drawable/selector_is_new" />

    <pt.rocket.components.customfontviews.TextView
        android:id="@+id/item_percentage"
        style="@style/discount_percentage"
        android:layout_gravity="bottom|left"
        android:layout_marginBottom="@dimen/product_list_item_image_margin"
        android:visibility="gone" />

</FrameLayout>