<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingBottom="@dimen/login_margin_small"
    android:paddingLeft="@dimen/rounded_margin_double_mid"
    android:paddingRight="@dimen/rounded_margin_double_mid"
    android:paddingTop="@dimen/login_margin_small" >

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/product_detail_name"
        style="@style/text_header"
        android:layout_width="match_parent"
        android:gravity="right|center_vertical"
        android:maxLines="2"
        android:singleLine="false"
        android:text="Product" />

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/product_price_special"
        style="@style/text_header"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/product_detail_name"
        android:layout_marginLeft="@dimen/margin_mid"
        android:fontFamily="roboto_bold"
        android:text="Discount Price"
        android:textColor="@color/red_middle" />

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/product_price_normal"
        style="@style/text_header"
        android:layout_alignBaseline="@+id/product_price_special"
        android:layout_below="@+id/product_detail_name"
        android:layout_toLeftOf="@+id/product_price_special"
        android:text="Normal Price"
        android:textColor="@color/grey_middlelight" />

    <!-- RATING -->

    <RelativeLayout
        android:id="@+id/seller_reviews_rating_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/product_price_special"
        android:layout_centerVertical="true"
        android:layout_marginTop="7dp"
        android:gravity="right|center_vertical"
        android:visibility="gone" >

        <RatingBar
            android:id="@+id/seller_reviews_item_rating"
            style="@style/starRatingBarSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:numStars="5"
            android:rating="1" />

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/seller_reviews_item_reviews"
            style="@style/text_subtitle"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="4dp"
            android:layout_toLeftOf="@+id/seller_reviews_item_rating"
            android:gravity="right|center_vertical"
            android:includeFontPadding="false"
            android:text="Reviews"
            android:textColor="@color/grey_light" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/product_ratings_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_price_special"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >
    </LinearLayout>

</RelativeLayout>