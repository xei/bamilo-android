<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- MIDDLE POINT TO DIVIDE THE SCREEN -->

    <View
        android:id="@+id/center_point"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true" />

    <!-- LEFT CONTAINER -->

    <pt.rocket.utils.ScrollViewWithHorizontal
        android:id="@+id/home_page_single_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignLeft="@id/center_point"
        android:scrollbars="none" >

        <!-- MAIN_ONE_SLIDE, STATIC_BANNER AND CAMPAIGNS_LIST -->

        <LinearLayout
            android:id="@+id/home_page_left_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </pt.rocket.utils.ScrollViewWithHorizontal>

    <!-- RIGHT SCROLABLE CONTAINER -->

    <pt.rocket.utils.ScrollViewWithHorizontal
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignRight="@id/center_point"
        android:layout_alignParentLeft="true"
        android:scrollbars="none" >

        <LinearLayout
            android:id="@+id/home_page_right_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- POPULAR CATEGORIES AND BRAND LIST -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="1dp"
                android:paddingRight="@dimen/teaser_margin" >

                <FrameLayout
                    android:id="@+id/home_page_right_container_categories"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="gone" />

                <FrameLayout
                    android:id="@+id/home_page_right_container_brands"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:visibility="gone" />
            </LinearLayout>

            <!-- OTHERS: TOP SELLERS AND TOP BRANDS -->

        </LinearLayout>
    </pt.rocket.utils.ScrollViewWithHorizontal>

</RelativeLayout>