<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/rounded_box"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <pt.rocket.components.customfontviews.TextView
        android:id="@+id/checkout_login_toogle"
        style="@style/rounded_box_title_grey"
        android:layout_height="@dimen/checkout_box_title_height"
        android:drawableRight="@drawable/selector_dropdown_indicator"
        android:text="@string/login_label" />

    <LinearLayout
        android:id="@+id/checkout_login_form_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible" >

        <View style="@style/divider_horizontal_orange" />

        <!-- CONTENT -->

        <LinearLayout
            android:layout_width="@dimen/login_container_width"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical" >

            <!-- FORM -->

            <LinearLayout
                android:id="@+id/checkout_login_form_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/rounded_margin_mid"
                android:layout_marginRight="@dimen/rounded_margin_mid"
                android:layout_marginTop="@dimen/login_margin_small"
                android:orientation="vertical" >
            </LinearLayout>

            <!-- REMEMBER EMAIL -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/form_item_height"
                android:layout_marginBottom="@dimen/login_margin_medium"
                android:layout_marginLeft="@dimen/rounded_margin_mid"
                android:layout_marginRight="@dimen/rounded_margin_mid"
                android:layout_marginTop="@dimen/login_margin_medium" >

                <include layout="@layout/login_remember_checkbox" />
            </LinearLayout>

            <!-- LOGIN -->

            <pt.rocket.components.customfontviews.Button
                android:id="@+id/checkout_login_form_button_enter"
                style="@style/button_orange_bottom"
                android:contentDescription="@string/login_button_description"
                android:text="@string/login_label" />

            <!-- FORGOT -->

            <pt.rocket.components.customfontviews.TextView
                android:id="@+id/checkout_login_form_button_password"
                style="@style/text_normal"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/rounded_margin_mid"
                android:layout_marginTop="@dimen/login_margin_small"
                android:gravity="center"
                android:text="@string/fgt_pass"
                android:textColor="@drawable/selector_link_blue" />

            <!-- DIVIDER -->

            <RelativeLayout
                android:id="@+id/checkout_login_form_divider_facebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/rounded_margin_mid"
                android:visibility="gone" >

                <View
                    style="@style/divider_horizontal"
                    android:layout_height="0.75dp"
                    android:layout_centerInParent="true"
                    android:background="@color/grey_divider_light_text" />

                <pt.rocket.components.customfontviews.TextView
                    style="@style/text_header"
                    android:layout_centerInParent="true"
                    android:background="@android:color/white"
                    android:paddingLeft="@dimen/login_margin_small"
                    android:paddingRight="@dimen/login_margin_small"
                    android:text="@string/or_text"
                    android:textColor="@color/grey_divider_light_text" />
            </RelativeLayout>

            <!-- FACEBOOK -->

            <pt.rocket.components.customfontviews.FacebookTextView
                xmlns:fb="http://schemas.android.com/apk/res-auto"
                android:id="@+id/checkout_login_form_button_facebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="@dimen/button_big_height"
                android:layout_margin="@dimen/rounded_margin_mid"
                android:background="@drawable/com_facebook_button_blue"
                android:drawableLeft="@drawable/com_facebook_inverse_icon"
                android:fontFamily="roboto_bold"
                android:gravity="center"
                android:paddingLeft="12dp"
                android:paddingRight="16dp"
                android:text="@string/facebook_login_button_text"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                fb:login_text="@string/facebook_login_button_text"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>