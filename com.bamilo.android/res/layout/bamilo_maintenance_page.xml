<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fallback_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_maintenance"
    android:clickable="true" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/margin_60px"
        android:contentDescription="@string/app_name"
        android:src="@drawable/img_maintenance_logo" />

    <ImageView
        android:id="@+id/fallback_country_map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/img_maintenance_bag" />

    <pt.rocket.components.customfontviews.Button
        android:id="@+id/fallback_retry"
        style="@style/button_grey_bottom"
        android:layout_below="@+id/fallback_country_map"
        android:layout_centerInParent="true"
        android:layout_marginTop="-10dp"
        android:contentDescription="@string/try_again"
        android:text="@string/try_again" />

    <pt.rocket.components.customfontviews.TextView
        android:id="@+id/fallback_bottom_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@id/fallback_retry"
        android:gravity="center_horizontal"
        android:text="@string/bamilo_not_available"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_title" />

    <!-- Added Unused id's for proguard -->

    <View
        android:id="@+id/fallback_options_container"
        android:visibility="gone" />

    <View
        android:id="@+id/fallback_title_container"
        android:visibility="gone" />

    <View
        android:id="@+id/fallback_change_country"
        android:visibility="gone" />

    <View
        android:id="@+id/fallback_best"
        android:visibility="gone" />

    <View
        android:id="@+id/fallback_country"
        android:visibility="gone" />

    <View
        android:id="@+id/fallback_options_bottom"
        android:visibility="gone" />

    <View
        android:id="@+id/fallback_country_double"
        android:visibility="gone" />

    <View
        android:id="@+id/fallback_country_top"
        android:visibility="gone" />

    <View
        android:id="@+id/fallback_country_bottom"
        android:visibility="gone" />

    <View
        android:id="@+id/fallback_country_bottom_text"
        android:visibility="gone" />

    <View
        android:id="@+id/fallback_country_bottom_text2"
        android:visibility="gone" />

    <View
        android:id="@+id/fallback_choice"
        android:visibility="gone" />

    <View
        android:id="@+id/fallback_doorstep"
        android:visibility="gone" />

</RelativeLayout>