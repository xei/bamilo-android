<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/rounded_box"
    android:layout_marginBottom="0dp"
    android:layout_marginRight="0dp"
    android:layout_marginTop="@dimen/rounded_margin_small"
    android:orientation="vertical" >

    <!-- TITLE -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_box_height"
        android:layout_margin="@dimen/rounded_margin_mid" >

        <pt.rocket.components.customfontviews.TextView
            style="@style/rounded_box_title_grey"
            android:layout_height="wrap_content"
            android:layout_margin="0dp"
            android:gravity="right|center_vertical"
            android:text="@string/billing_billing_label" />

        <ImageView
            android:id="@+id/checkout_my_order_billing_address_btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/rounded_margin_mid"
            android:src="@drawable/selector_btn_edit" />
    </RelativeLayout>

    <View style="@style/divider_horizontal_orange" />

    <!-- ADDRESS -->

    <LinearLayout
        android:id="@+id/checkout_my_order_billing_address_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" />

    <!-- SAME ADDRESS -->

    <pt.rocket.components.customfontviews.TextView
        android:id="@+id/checkout_my_order_billing_address_is_same"
        style="@style/text_normal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_40px"
        android:layout_marginLeft="@dimen/rounded_margin_mid"
        android:layout_marginRight="@dimen/rounded_margin_mid"
        android:layout_marginTop="@dimen/margin_40px"
        android:gravity="right|center_vertical"
        android:layout_gravity="right"
        android:text="@string/my_order_is_same" />

</LinearLayout>