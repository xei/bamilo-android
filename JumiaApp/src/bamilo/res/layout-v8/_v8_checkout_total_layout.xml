<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:id="@+id/checkout_button_container"
    style="@style/button_container"
    android:layout_alignParentBottom="true"
    android:orientation="horizontal"
    android:padding="@dimen/dimen_30px"
    android:paddingBottom="0dp">

    <com.mobile.components.customfontviews.Button
        android:id="@+id/checkout_button_enter"
        style="@style/button_orange_bottom"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="0dp"
        android:text="@string/next_button" />

    <ViewStub
        android:id="@+id/total_view_stub"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:visibility="gone"
        android:layout="@layout/cart_total"
        android:layout_marginLeft="@dimen/dimen_10px"
        android:layout_marginRight="@dimen/dimen_48px"/>
</LinearLayout>