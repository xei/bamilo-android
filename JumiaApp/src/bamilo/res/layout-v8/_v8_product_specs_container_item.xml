<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_20px"
    android:layout_marginRight="@dimen/margin_20px"
    android:layout_marginTop="@dimen/margin_30px"
    android:layout_marginBottom="@dimen/margin_30px"
    android:layout_width="match_parent">

    <View
        android:id="@+id/item_center"
        android:layout_width="0.1dp"
        android:background="@android:color/transparent"
        android:layout_centerInParent="true"
        android:layout_height="0.1dp" />

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/specs_item_key"
        style="@style/text_normal"
        android:layout_width="match_parent"
        android:layout_toRightOf="@id/item_center"
        android:gravity="right|center_vertical"
        android:text="key" />

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/specs_item_value"
        style="@style/text_normal"
        android:layout_width="match_parent"
        android:layout_toLeftOf="@id/item_center"
        android:gravity="right|center_vertical"
        android:singleLine="false"
        android:text="vafghfghfgh  sdgdf dfgdfgdgggggggggsfsdf dfgdfg dfgd dfg dfg lue" />

</RelativeLayout>