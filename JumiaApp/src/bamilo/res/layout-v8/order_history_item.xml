<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/order_history_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:id="@+id/order_header"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_140px"
        android:background="@drawable/selector_listitem_rounded_margin_highlight"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/order_check"
            android:layout_width="@dimen/margin_70px"
            android:layout_height="@dimen/margin_70px"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:background="@drawable/history_checkmark" />

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/order_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginRight="8dp"
            android:layout_marginTop="3dp"
            android:layout_toLeftOf="@id/order_check"
            android:fontFamily="roboto_regular"
            android:gravity="center_vertical"
            android:textColor="@color/grey_middle"
            android:textSize="@dimen/text_xs" />

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/order_date"
            android:layout_marginRight="8dp"
            android:layout_toLeftOf="@id/order_check"
            android:fontFamily="roboto_regular"
            android:gravity="center_vertical"
            android:textColor="@color/grey_middle"
            android:textSize="@dimen/text_m" />

        <ImageView
            android:id="@+id/order_arrow"
            android:layout_width="@dimen/margin_70px"
            android:layout_height="@dimen/margin_70px"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:background="@drawable/selector_order_arrow" />

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/order_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toLeftOf="@id/order_number"
            android:layout_toRightOf="@id/order_arrow"
            android:ellipsize="end"
            android:fontFamily="roboto_regular"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:textColor="@color/grey_middle"
            android:textSize="@dimen/text_m" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/order_more_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_header"
        android:background="@android:color/white"
        android:clickable="false"
        android:duplicateParentState="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:orientation="vertical"
        android:visibility="visible" >

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/grey_middle" />

        <LinearLayout
            android:id="@+id/order_list_date_cont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="8dp"
            android:gravity="right"
            android:orientation="horizontal" >

            <com.mobile.components.customfontviews.TextView
                android:id="@+id/order_list_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:layout_marginTop="13dp"
                android:fontFamily="roboto_regular"
                android:gravity="center_vertical"
                android:textColor="@color/grey_middle"
                android:textSize="@dimen/text_s" />

            <com.mobile.components.customfontviews.TextView
                android:id="@+id/order_list_date_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:fontFamily="roboto_bold"
                android:gravity="center_vertical"
                android:text="@string/my_order_date_label"
                android:textColor="@color/grey_middle"
                android:textSize="@dimen/text_s"
                android:textStyle="bold" />
        </LinearLayout>

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/order_list_payment_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="roboto_regular"
            android:text="@string/payment_method"
            android:textColor="@color/grey_middle"
            android:textSize="@dimen/text_s"
            android:layout_marginRight="8dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="right"
            android:gravity="center_vertical"/>

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/order_list_products_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="13dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="25dp"
            android:fontFamily="roboto_bold"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="@string/order_track_products"
            android:textColor="@color/grey_middle"
            android:textSize="@dimen/text_s"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/order_product_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_more_info"
        android:orientation="vertical"
        android:visibility="gone" />

    <View
        android:id="@+id/order_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_below="@id/order_product_list"
        android:background="@color/grey_middle" />

</RelativeLayout>