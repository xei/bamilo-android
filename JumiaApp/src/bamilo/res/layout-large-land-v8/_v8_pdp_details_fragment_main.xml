<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >

    <!-- MIDDLE POINT TO DIVIDE THE SCREEN -->

    <View
        android:id="@+id/center_point"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true" />

    <!-- Left Container -->

    <com.mobile.utils.ScrollViewWithHorizontal
        android:id="@+id/left_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignLeft="@id/center_point"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="7dp"
        android:layout_marginBottom="10dp"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <!-- TITLE -->

            <include layout="@layout/pdp_product_title" android:id="@+id/TitleSection" />

            <!-- IMAGE CONTAINER -->

            <include layout="@layout/_def_pdp_details_fragment_image" android:id="@+id/imageGallery"/>
            <!-- PRODUCT IMAGES LIST -->

            <include layout="@layout/pdv_product_images2" />
            
        </LinearLayout>
    </com.mobile.utils.ScrollViewWithHorizontal>


    <!-- Right Container -->

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@id/center_point"
        android:layout_marginLeft="9dp" >


        <com.mobile.utils.ScrollViewWithHorizontal
            android:id="@+id/right_scrooler"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/shop_buttons"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:id="@+id/pdp_info"
                android:orientation="vertical" >

                <!-- PRICE -->

                <include layout="@layout/pdp_price_tag"   />

                <!-- SEPARATOR -->

                <TextView
                    android:id="@+id/sep1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/line_separator"

                    />

                <!-- RATING -->

                <include layout="@layout/pdp_rating" android:id="@+id/RatingSection"   />
                />

                <!-- SPECIFICATIONS: OPTIONAL -->

                <include layout="@layout/pdp_details"  android:id="@+id/SpecificationsSection"   />

                <!--SEE OTHER VARIATIONS: OPTIONAL -->
                <include layout="@layout/single_line_list"  android:id="@+id/OtherVariationsSection" />

                <!-- SELLER: OPTIONAL -->
                <include layout="@layout/pdp_seller_info"  android:id="@+id/SellerSection" />

                <!-- DESCRIPTION: OPTIONAL -->

                <include layout="@layout/pdp_details"  android:id="@+id/DescriptionSection"   />

                <!-- YOU MAY ALSO LIKE -->

                <!-- test old component -->

                <include layout="@layout/pdp_related_prods" android:id="@+id/RelatedSection"  />


                </LinearLayout>


                <!-- BUNDLE PRODUCTS -->
            <!--
                <include
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/product_detail_stars_container"
                    android:layout_marginBottom="0dp"
                    android:layout_marginRight="@dimen/rounded_margin_small"
                    android:layout_marginTop="@dimen/rounded_margin_small"
                    layout="@layout/product_details_fragment_bundle" />



                <include
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/rounded_margin_small"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="@dimen/rounded_margin_small"
                    layout="@layout/product_details_fragment_related" />
            </LinearLayout>
            -->
        </com.mobile.utils.ScrollViewWithHorizontal>

        <!-- BUTTONS -->
        <include
            android:id="@+id/pdp_buy_bar"
            android:layout_below="@id/right_scrooler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            layout="@layout/buy_bar" />
    </RelativeLayout>

</RelativeLayout>