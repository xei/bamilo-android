<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:orientation="vertical">

    <!-- TABS -->

    <com.mobile.components.androidslidingtabstrip.SlidingTabLayout
        android:id="@+id/my_orders_pager_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_tabs"
        app:stsBottomBorderThickness="0dp"
        app:stsIndicatorColor="@color/orange_tab_bar"
        app:stsIndicatorThickness="@dimen/sliding_tab_inidicator_thickness" />

    <!-- CONTENT -->

    <android.support.v4.view.ViewPager
        android:id="@+id/my_orders_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>