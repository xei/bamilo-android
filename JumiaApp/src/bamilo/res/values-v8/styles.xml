<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="rounded_box_title_grey">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/title_box_height</item>
        <item name="android:textColor">@color/grey_middledark</item>
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:layout_marginBottom">@dimen/rounded_margin_mid</item>
        <item name="android:layout_marginLeft">@dimen/rounded_margin_mid</item>
        <item name="android:layout_marginRight">@dimen/rounded_margin_mid</item>
        <item name="android:layout_marginTop">@dimen/rounded_margin_mid</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="dialog_list_itemtext">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey_middle</item>
        <item name="android:textSize">@dimen/text_m</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="rounded_box">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/rounded_margin_mid</item>
        <item name="android:layout_marginBottom">@dimen/rounded_margin_mid</item>
        <item name="android:layout_marginLeft">@dimen/rounded_margin_mid</item>
        <item name="android:layout_marginRight">@dimen/rounded_margin_mid</item>
        <item name="android:background">@drawable/background_content</item>
    </style>

    <!-- ################# CHECKOUT ################# -->

    <style name="checkout_about_you_title" parent="rounded_box_title_grey">
        <item name="android:layout_height">@dimen/checkout_box_title_height</item>
        <item name="android:drawableLeft">@drawable/selector_dropdown_indicator</item>
    </style>

    <!-- ################# ACTION BAR ################# -->

	<!-- Style used to set for LTR or RTL -->
	<style name="text_actionbar_cart_layout_direction" >
	    <item name="android:paddingRight">4dp</item>
    </style>

</resources>