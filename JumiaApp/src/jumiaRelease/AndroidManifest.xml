<?xml version="1.0" encoding="UTF-8"?><!-- ATTENTION: Auto increment of version code via build.xml -->
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- ############# AD4Push: MESSAGE (Receive) ############# -->
    <permission
        android:name="com.jumia.android.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.jumia.android.permission.C2D_MESSAGE" />

    <permission
        android:name="com.jumia.android.permission.A4S_SEND"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.jumia.android.permission.A4S_SEND" />

    <!-- ############# Location: LocationHelper and AD4Push ############# -->
    <uses-permission
        android:name="android.permission.ACCESS_FINE_LOCATION"
        android:required="false" />

    <!-- ######################################## -->
    <!-- ############# Application ############## -->
    <!-- ######################################## -->

    <application
        android:name="com.mobile.app.JumiaApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Jumia">

        <!-- ############# AD4Push: Push Notifications ############# -->

        <receiver
            android:name="com.ad4screen.sdk.GCMHandler"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />
                <!-- WARNING: No use value from strings.xml, attribute is not a string value -->
                <category android:name="com.jumia.android" />
            </intent-filter>
        </receiver>

        <receiver
            android:name="com.mobile.utils.receivers.PushNotificationReceiver"
            android:permission="com.jumia.android.permission.A4S_SEND">
            <intent-filter>
                <action android:name="com.ad4screen.sdk.intent.action.DISPLAYED"/>
                <action android:name="com.ad4screen.sdk.intent.action.CLICKED"/>

                <category android:name="com.ad4screen.sdk.intent.category.PUSH_NOTIFICATIONS"/>
                <!--<category android:name="com.ad4screen.sdk.intent.category.INAPP_NOTIFICATIONS" />-->
                <!--<category android:name="com.ad4screen.sdk.intent.category.INBOX_NOTIFICATIONS" />-->
            </intent-filter>
        </receiver>

    </application>

</manifest>