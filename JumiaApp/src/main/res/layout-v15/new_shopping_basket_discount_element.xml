<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="36dp"
    android:background="@color/white"
    >

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/discount_label"
        android:textColor="@color/cart_discount"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimen_16dp"
        android:textSize="@dimen/cart_price_font_size"
        android:text="@string/cart_total_quantity"/>

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/discount_amount"
        android:textColor="@color/cart_discount"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/dimen_32dp"
        android:textSize="@dimen/cart_price_font_size"
        />

</RelativeLayout>