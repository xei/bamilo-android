<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- screen divider -->
    <View
        android:id="@+id/divider_screen"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:visibility="invisible" />

    <!-- MY ORDERS LISTVIEW SECTION -->

    <!-- empty orders screen -->
    <RelativeLayout
        android:id="@+id/empty_orders_layout"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/divider_screen"
        android:layout_toStartOf="@id/divider_screen"
        android:background="@color/black_400">


        <ImageView
            android:id="@+id/empty_orders_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/img_warning"/>

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/empty_orders_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_700"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/empty_orders_image"
            android:gravity="center_vertical"
            android:text="No Orders Found"/>
        <com.mobile.components.customfontviews.Button
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="START SHOPPING"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/empty_orders_label"
            android:background="@color/color_accent"
            />
    </RelativeLayout>

    <!-- orders list view (Left)-->

    <!-- header title -->
    <com.mobile.components.customfontviews.TextView
        style="@style/HeaderStyle"
        android:layout_below="@id/empty_orders_layout"
        android:layout_toLeftOf="@id/divider_screen"
        android:layout_toStartOf="@id/divider_screen"
        android:text="@string/my_order_history_label"
        android:layout_alignParentTop="true"
        android:id="@+id/header_title"
        />

       <ListView
            android:id="@+id/orders_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@color/black_300"
            android:dividerHeight="1dp"
            android:layout_below="@id/header_title"
           android:layout_toLeftOf="@id/divider_screen"
           android:layout_toStartOf="@id/divider_screen"
           android:background="@color/white" />

        <View
            style="@style/HorizontalListDivider"
            android:layout_below="@id/orders_list"
            />

    <!-- Order details (right view ) -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/empty_orders_layout"
        android:layout_toRightOf="@id/divider_screen"
        android:layout_toEndOf="@id/divider_screen"
        android:id="@+id/myOrderStatusFragment">


    </FrameLayout>





</RelativeLayout>


