<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:baselineAligned="false">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="@dimen/checkout_main_container" >

        <!-- CONTENT -->

        <ScrollView
            android:id="@+id/checkout_addresses_one_scroll"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/checkout_addresses_button_container"
            android:layout_alignParentTop="true" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <!-- TOP ADDRESSES -->

                <include layout="@layout/checkout_my_addresses_top" />

                <!-- BOTTOM ADDRESSES -->

                <include layout="@layout/checkout_my_addresses_bottom" />
            </LinearLayout>
        </ScrollView>

        <!-- NEXT BUTTON -->

        <LinearLayout
            android:id="@id/checkout_addresses_button_container"
            style="@style/button_container"
            android:layout_alignParentBottom="true" >

            <com.mobile.components.customfontviews.Button
                android:id="@+id/checkout_button_enter"
                style="@style/button_orange_landscape"
                android:layout_width="@dimen/inner_container_width"
                android:text="@string/next_button" />
        </LinearLayout>
    </RelativeLayout>

    <!-- ORDER SUMMARY -->

    <FrameLayout
        android:id="@+id/order_summary_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="@dimen/checkout_order_summary" />

</LinearLayout>