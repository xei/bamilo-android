<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- TEXT STYLES -->

    <!-- new title styles for redesign 2013/03 -->
    <style name="activity_sectionheader_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:layout_marginTop">@dimen/margin_huge</item>
    </style>

    <style name="activity_sectionheader_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/orange_1</item>
        <item name="android:textSize">@dimen/text_s</item>
        <item name="android:layout_marginLeft">@dimen/margin_huge</item>
        <item name="android:layout_marginStart">@dimen/margin_huge</item>
        <item name="android:layout_marginRight">@dimen/margin_huge</item>
        <item name="android:layout_marginEnd">@dimen/margin_huge</item>
        <item name="android:layout_marginTop">@dimen/margin_large</item>
    </style>

    <style name="activity_sectionheader_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:background">@color/black_300</item>
        <item name="android:layout_marginTop">@dimen/margin_large</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
    </style>

    <!-- Products List -->

    <style name="list_row_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_listitem_rounded_margin_highlight</item>
    </style>

    <style name="grid_row_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/margin_padding_l</item>
        <item name="android:background">@drawable/selector_grid_item_highlight</item>
    </style>

    <style name="list_row_rounded_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_listitem_rounded</item>
    </style>

    <!-- DIALOGS -->

    <style name="dialog_header">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_header</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="dialog_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey_middle</item>
        <item name="android:textSize">@dimen/text_m</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="dialog_container_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:paddingBottom">@dimen/distance_item_small</item>
        <item name="android:paddingTop">@dimen/distance_item_small</item>
        <item name="android:paddingLeft">@dimen/margin_veryhuge</item>
        <item name="android:paddingRight">@dimen/margin_veryhuge</item>
        <item name="android:paddingStart">@dimen/margin_veryhuge</item>
        <item name="android:paddingEnd">@dimen/margin_veryhuge</item>
    </style>

    <style name="dialog_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">49</item>
        <item name="android:background">@drawable/button_dialog_background_selector</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grey_middle</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="form_checkbox_style" parent="form_style">
        <item name="android:layout_marginLeft">@dimen/form_check_padding</item>
        <item name="android:layout_marginRight">@dimen/form_check_padding</item>
        <item name="android:layout_marginStart">@dimen/form_check_padding</item>
        <item name="android:layout_marginEnd">@dimen/form_check_padding</item>
        <item name="android:layout_gravity">left|start|center_vertical</item>
        <item name="android:gravity">left|start|center_vertical</item>
    </style>

    <style name="form_radiobutton_style" parent="form_style">
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:layout_marginRight">@dimen/dimen_32dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_32dp</item>
        <item name="android:drawablePadding">@dimen/dimen_6dp</item>
        <item name="android:paddingLeft">@dimen/dimen_6dp</item>
        <item name="android:paddingStart">@dimen/dimen_6dp</item>
    </style>

    <!-- RATING STAR BAR -->

    <style name="StarBar" parent="@style/Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/layer_star_big</item>
        <item name="android:indeterminateDrawable">@drawable/layer_star_big</item>
        <item name="android:minHeight">22dp</item>
        <item name="android:maxHeight">22dp</item>
        <item name="android:numStars">5</item>
    </style>

    <style name="StarBar.Indicator" >
        <item name="android:isIndicator">true</item>
    </style>

    <style name="StarBar.Small">
        <item name="android:progressDrawable">@drawable/layer_star_small</item>
        <item name="android:indeterminateDrawable">@drawable/layer_star_small</item>
        <item name="android:minHeight">15dp</item>
        <item name="android:maxHeight">15dp</item>
    </style>

    <style name="StarBar.Small.Indicator" >
        <item name="android:isIndicator">true</item>
    </style>

    <style name="StarBar.Big"/>

    <style name="StarBar.Big.Indicator" >
        <item name="android:isIndicator">true</item>
    </style>

    <!-- NEW -->

    <style name="rounded_box">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/rounded_margin_mid</item>
        <item name="android:layout_marginBottom">@dimen/rounded_margin_mid</item>
        <item name="android:layout_marginLeft">@dimen/rounded_margin_mid</item>
        <item name="android:layout_marginRight">@dimen/rounded_margin_mid</item>
        <item name="android:layout_marginStart">@dimen/rounded_margin_mid</item>
        <item name="android:layout_marginEnd">@dimen/rounded_margin_mid</item>
        <item name="android:background">@drawable/background_content</item>
    </style>

    <style name="rounded_box_title_grey">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/title_box_height</item>
        <item name="android:textColor">@color/grey_middledark</item>
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:gravity">left|start|center</item>
        <item name="android:layout_marginBottom">@dimen/rounded_margin_mid</item>
        <item name="android:layout_marginLeft">@dimen/rounded_margin_mid</item>
        <item name="android:layout_marginRight">@dimen/rounded_margin_mid</item>
        <item name="android:layout_marginStart">@dimen/rounded_margin_mid</item>
        <item name="android:layout_marginEnd">@dimen/rounded_margin_mid</item>
        <item name="android:layout_marginTop">@dimen/rounded_margin_mid</item>
        <item name="android:fontFamily">roboto_regular</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- BUTTON FOR BOTTOM CONTAINER -->
    <style name="_parent_button_bottom_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_big_height</item>
        <item name="android:layout_marginBottom">@dimen/rounded_margin_mid</item>
        <item name="android:layout_marginLeft">@dimen/rounded_margin_mid</item>
        <item name="android:layout_marginRight">@dimen/rounded_margin_mid</item>
        <item name="android:layout_marginTop">@dimen/rounded_margin_mid</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:maxLines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:singleLine">true</item>
        <item name="android:fontFamily">roboto_bold</item>
        <item name="android:textColor">@color/grey_dark</item>
        <item name="android:textSize">@dimen/text_button</item>
        <item name="android:text">@dimen/text_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_grey_bottom" parent="_parent_button_bottom_container">
        <item name="android:background">@color/black_700</item>
    </style>

    <style name="button_orange_bottom" parent="_parent_button_bottom_container">
        <item name="android:background">@color/color_accent</item>
    </style>

    <style name="button_fallback_retry">
        <item name="android:background">@drawable/_gen_selector_button_grey</item>
    </style>

    <!-- BUTTON CONTAINER HAS ALWAYS A BOTTOM PADDING -->
    <style name="button_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_container_height</item>
        <item name="android:background">@color/window_background_color</item>
        <item name="android:gravity">top|center</item>
        <item name="android:paddingBottom">@dimen/rounded_margin_mid</item>
    </style>

    <!-- TEXT STYLES -->

    <style name="text_regular">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">roboto_regular</item>
        <item name="android:textColor">@color/grey_middle</item>
    </style>

    <style name="_base_text" parent="text_regular">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">left|center_vertical|start</item>
    </style>

    <style name="text_subtitle" parent="_base_text">
        <item name="android:textSize">@dimen/text_subtitle</item>
    </style>

    <style name="text_normal" parent="_base_text">
        <item name="android:textSize">@dimen/text_title</item>
    </style>

    <style name="text_title" parent="_base_text">
        <item name="android:fontFamily">roboto_bold</item>
        <item name="android:textSize">@dimen/text_title</item>
    </style>

    <style name="text_form" parent="_base_text">
        <item name="android:textSize">@dimen/text_form</item>
    </style>

    <style name="text_header" parent="_base_text">
        <item name="android:textSize">@dimen/text_header</item>
    </style>

    <style name="text_header_light" parent="text_header">
        <item name="android:fontFamily">roboto_light</item>
    </style>

    <style name="text_price" parent="_base_text">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:fontFamily">roboto_bold</item>
        <item name="android:textColor">@color/red_basic</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <!-- ################# ACTION BAR ################# -->

    <style name="Widget" />

    <!-- CUSTOM SPINNER STYLE -->
    <style name="Widget.Custom.Spinner.Style" parent="Widget">
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:dropDownSelector">@drawable/custom_list_selector_holo_dark</item>
        <item name="android:popupBackground">@drawable/custom_menu_dropdown_panel_holo_light</item>
        <item name="android:dropDownVerticalOffset">0dip</item>
        <item name="android:dropDownHorizontalOffset">0dip</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:gravity">left|center_vertical|start</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:clickable">true</item>
    </style>

    <!-- BASE STYLE -->
    <style name="checkbox_base" parent="Widget">
        <item name="android:layout_gravity">left|start|top</item>
        <item name="android:layoutDirection">locale</item>
    </style>

    <!-- BASE BUTTONS STYLES -->

    <style name="ButtonFlat" parent="Button_Link.Blue_1">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/dimen_36dp</item>
        <item name="android:minWidth">@dimen/dimen_88dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_padding_xxs</item>
        <item name="android:layout_marginRight">@dimen/margin_padding_xxs</item>
        <item name="android:paddingLeft">@dimen/margin_padding_xs</item>
        <item name="android:paddingRight">@dimen/margin_padding_xs</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/selector_card_view</item>
    </style>

    <!-- CLICKABLE VIEW -->
    <style name="ClickableStyle">
        <item name="android:clickable">true</item>
        <item name="android:foreground">@drawable/selector_card_view</item>
    </style>

    <!-- HEADERS TEASER -->
    <style name="HeaderTeaserStyle" parent="HeaderStyle">
        <item name="android:background">@null</item>
    </style>

    <!-- SMALL TEASER -->
    <style name="SmallTeaserStyle" parent="CardViewFlatStyle">
        <item name="android:layout_width">@dimen/home_small_teaser_item_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/dimen_3dp</item>
        <item name="android:layout_marginStart">@dimen/dimen_3dp</item>
    </style>

    <!-- PRODUCT TEASER -->
    <style name="ProductTeaserStyle" parent="CardViewFlatStyle">
        <item name="android:layout_width">@dimen/dimen_134dp</item>
        <item name="android:layout_height">@dimen/dimen_210dp</item>
    </style>

    <!-- FLAT CARD VIEW -->
    <style name="CardViewFlatStyle" parent="ClickableStyle">
        <item name="cardCornerRadius">0dp</item>
        <item name="cardElevation">0dp</item>
        <item name="contentPadding">@dimen/margin_padding_xs</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardBackgroundColor">@android:color/white</item>
    </style>

    <!-- HORIZONTAL LIST -->

    <style name="HorizontalListStyle" >
        <item name="android:fadingEdge">horizontal</item>
        <item name="android:fadingEdgeLength">@dimen/home_horizontal_fade</item>
        <item name="android:requiresFadingEdge">horizontal</item>
        <item name="android:scrollbars">none</item>
    </style>

    <!-- PDV -->

    <style name="PDVWishListButtonStyle" parent="WishListButtonStyle">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="PDVGlobalSellerButtonStyle" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">@null</item>
        <item name="android:src">@drawable/ic_overseas_corner</item>
    </style>

    <style name="TextBase.Body.ShopFirstDrawRight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:drawablePadding">@dimen/dimen_10dp</item>
    </style>

    <!-- MATERIAL BOTTOM SHEET -->

    <style name="Theme_Custom_Dialog_Bottom_Sheet" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowAnimationStyle">@style/BottomSheetAnimation.Window</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="BottomSheetAnimation.Window" parent="@android:style/Animation.Activity">
        <item name="android:windowEnterAnimation">@anim/abc_slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/abc_slide_out_bottom</item>
    </style>

    <style name="ShopFirstStyle">
        <item name="android:src">@drawable/ic_shop_first_alias</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dimen_4dp</item>
    </style>

</resources>