<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="NewApi">

    <!-- ################# GENERIC COMPONENTS STYLES ################# -->

    <!-- FORM -->

    <style name="FormFieldStyle" parent="TextBase.List.Black">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="FormFieldStyle.Black_700">
        <item name="android:textColor">@color/black_700</item>
    </style>

    <!-- SPINNER -->

    <style name="FormButtonSpinner" parent="TextBase.List.Black">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/spinner_background</item>
    </style>

    <style name="FormButtonSpinner.DropDown">
        <item name="android:spinnerMode">dropdown</item>
    </style>

    <!-- SWITCH BUTTON -->

    <style name="FormSwitchButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">left|start|center</item>
        <item name="android:paddingLeft">@dimen/margin_padding_xl</item>
        <item name="android:paddingRight">@dimen/margin_padding_xl</item>
        <item name="android:paddingStart">@dimen/margin_padding_xl</item>
        <item name="android:paddingEnd">@dimen/margin_padding_xl</item>
        <item name="android:background">@null</item>
        <item name="android:theme">@style/Widget.Custom.Switch</item>
        <item name="theme">@style/Widget.Custom.Switch</item>
    </style>

    <!-- TEXT FIELD -->

    <style name="FormTextField" parent="TextBase.List.Black">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/_gen_selector_text_field</item>
        <item name="android:textColorHint">@color/black_700</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:paddingLeft">@dimen/form_padding</item>
        <item name="android:paddingRight">@dimen/form_padding</item>
        <item name="android:textCursorDrawable" targetApi="12">@null</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:fontFamily">roboto_regular</item>
        <item name="met_floatingLabel">highlight</item>
        <item name="met_underlineColor">@color/black_700</item>
        <item name="met_primaryColor">@color/color_accent</item>
        <item name="met_floatingLabelSidePadding">@dimen/form_padding</item>
    </style>

    <!-- TextField error message -->
    <style name="FormTextErrorField" parent="TextBase.Body">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/red_basic</item>
        <item name="android:paddingLeft">@dimen/form_padding</item>
        <item name="android:paddingStart">@dimen/form_padding</item>
        <item name="android:fontFamily">roboto_regular</item>
        <item name="android:drawableLeft">@drawable/indicator_input_error</item>
        <item name="android:drawableStart">@drawable/indicator_input_error</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <!-- CHECK BOX -->

    <style name="FormCheckBox" parent="SingleLineStyle" />

    <style name="FormCheckBox.Right">
        <item name="android:paddingLeft">@dimen/margin_padding_xxl</item>
        <item name="android:paddingStart">@dimen/margin_padding_xxl</item>
        <item name="android:paddingRight">@dimen/margin_padding_xxl</item>
        <item name="android:paddingEnd">@dimen/margin_padding_xxl</item>
        <item name="android:button">@null</item>
        <item name="android:drawableLeft">@null</item>
        <item name="android:drawableStart">@null</item>
        <item name="android:drawableRight">@drawable/_gen_selector_check_box</item>
        <item name="android:drawableEnd">@drawable/_gen_selector_check_box</item>
    </style>

    <style name="FormCheckBox.Central">
        <item name="android:button">@null</item>
        <item name="android:drawableLeft">@null</item>
        <item name="android:drawableStart">@null</item>
        <item name="android:drawableRight">@drawable/_gen_selector_check_box</item>
        <item name="android:drawableEnd">@drawable/_gen_selector_check_box</item>
    </style>

    <style name="FormCheckBox.Left">
        <item name="android:paddingLeft">@dimen/margin_padding_xxl</item>
        <item name="android:paddingStart">@dimen/margin_padding_xxl</item>
        <item name="android:paddingRight">@dimen/margin_padding_xxl</item>
        <item name="android:paddingEnd">@dimen/margin_padding_xxl</item>
        <item name="android:button">@null</item>
        <item name="android:drawableLeft">@drawable/_gen_selector_check_box</item>
        <item name="android:drawableStart">@drawable/_gen_selector_check_box</item>
        <item name="android:drawableRight">@null</item>
        <item name="android:drawableEnd">@null</item>
    </style>

    <style name="FormFieldCheckBoxStyle" parent="FormFieldStyle">
        <item name="android:layout_marginLeft">@dimen/form_check_padding</item>
        <item name="android:layout_marginRight">@dimen/form_check_padding</item>
        <item name="android:layout_marginStart">@dimen/form_check_padding</item>
        <item name="android:layout_marginEnd">@dimen/form_check_padding</item>
        <item name="android:layout_gravity">left|start|center_vertical</item>
        <item name="android:gravity">left|start|center_vertical</item>
    </style>

    <!-- RADIO BUTTON -->

    <style name="FormRadioButton" parent="SingleLineStyle">
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">@dimen/margin_padding_xl</item>
        <item name="android:paddingStart">@dimen/margin_padding_xl</item>
        <item name="android:theme">@style/RadioButtonTheme</item>
    </style>

    <style name="FormRadioButton.Right">
        <item name="android:paddingLeft">@dimen/margin_padding_xxl</item>
        <item name="android:paddingStart">@dimen/margin_padding_xxl</item>
        <item name="android:paddingRight">@dimen/margin_padding_xxl</item>
        <item name="android:paddingEnd">@dimen/margin_padding_xxl</item>
        <item name="android:button">@null</item>
        <item name="android:drawableLeft">@null</item>
        <item name="android:drawableStart">@null</item>
        <item name="android:drawableRight">@drawable/_gen_selector_radio_button</item>
        <item name="android:drawableEnd">@drawable/_gen_selector_radio_button</item>
        <item name="android:maxLines">2</item>
        <item name="android:singleLine">false</item>
        <item name="android:theme">@style/RadioButtonTheme</item>
    </style>

    <style name="FormFieldRadioButtonStyle" parent="FormFieldStyle">
        <item name="android:layout_gravity">top</item>
        <item name="android:layout_marginRight">@dimen/dimen_32dp</item>
        <item name="android:layout_marginEnd">@dimen/dimen_32dp</item>
        <item name="android:drawablePadding">@dimen/dimen_6dp</item>
        <item name="android:paddingLeft">@dimen/dimen_6dp</item>
        <item name="android:paddingStart">@dimen/dimen_6dp</item>
        <item name="android:theme">@style/RadioButtonTheme</item>
    </style>

    <!-- TODO : ADD HERE GENERIC COMPONENTS STYLES ↑ ↑ ↑ ↑ ↑ ↑ ↑ ↑ ↑ -->

</resources>