<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ################# GENERIC COMPONENTS STYLES ################# -->

    <!-- Header -->
    <style name="HeaderStyle" parent="@style/TextHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:gravity">left|start|bottom</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:background">@color/black_300</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Single line item -->
    <style name="SingleLineStyle" parent="@style/TextList_2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Sub list item -->
    <style name="SubListItemStyle" parent="@style/TextCaption">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Multi line -->
    <style name="MultiLineStyle" parent="@style/TextCaption">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="WishListButtonStyle" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">@dimen/rounded_margin_mid</item>
        <item name="android:src">@drawable/selector_favorite</item>
    </style>

    <!-- PDV -->

    <style name="PdvPriceTagStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">left|start|center_vertical</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="PdvBadgeStyle" parent="@style/TextBadge">
        <item name="android:background">@drawable/selector_badge_price</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_accent</item>
    </style>

    <style name="PDVSlideShowStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">342dp</item>
    </style>

    <!-- TODO : ADD HERE GENERIC COMPONENTS STYLES -->


</resources>