<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="NewApi">

    <!-- ################# GENERIC COMPONENTS STYLES ################# -->

    <!-- Header -->
    <style name="HeaderStyle" parent="@style/TextBase.HeadLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingLeft">@dimen/margin_padding_xl</item>
        <item name="android:paddingRight">@dimen/margin_padding_xl</item>
        <item name="android:background">@color/black_300</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="HeaderStyle.Center">
        <item name="android:gravity">center</item>
    </style>

    <!-- Single line item -->
    <style name="SingleLineStyle" parent="@style/TextBase.Display_3.Black">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingLeft">@dimen/margin_padding_xxl</item>
        <item name="android:paddingStart">@dimen/margin_padding_xxl</item>
    </style>

    <!-- Multi line -->
    <style name="MultiLineStyle" parent="@style/TextBase.Body.Black_800">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/margin_padding_xl</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="MultiLineStyle.Space_XS">
        <item name="android:lineSpacingExtra">@dimen/margin_padding_xs</item>
    </style>

    <style name="WishListButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">@dimen/rounded_margin_mid</item>
        <item name="android:src">@drawable/selector_favorite</item>
    </style>

    <!-- PDV -->

    <style name="PdvPriceTagStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">left|start|center_vertical</item>
        <item name="android:paddingLeft">@dimen/margin_padding_xl</item>
        <item name="android:paddingRight">@dimen/margin_padding_xl</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="PdvBadgeStyle" parent="@style/TextBase.Badge">
        <item name="android:background">@drawable/_gen_background_border_accent</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingRight">@dimen/margin_padding_xs</item>
        <item name="android:paddingLeft">@dimen/margin_padding_xs</item>
        <item name="android:textColor">@color/orange_1</item>
    </style>

    <style name="PdvSlideShowPreview">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">312dp</item>
    </style>

    <style name="PdvSlideShowStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">312dp</item>
    </style>

    <style name="PdvSlideShowStyle.Full">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="PdvSlideIndicatorStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_padding_xs</item>
        <item name="android:layout_marginRight">@dimen/margin_padding_xs</item>
        <item name="android:background">@drawable/selector_item_rectangle_highlight</item>
        <item name="android:padding">1dp</item>
    </style>

    <style name="PdvWishListButtonStyle" parent="WishListButtonStyle">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginRight">@dimen/margin_padding_l</item>
        <item name="android:layout_marginEnd">@dimen/margin_padding_l</item>
    </style>

    <style name="PdvGlobalSellerButtonStyle">
        <item name="android:layout_width">65dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:background">@null</item>
        <item name="android:src">@drawable/ic_overseas_corner</item>
    </style>

    <style name="TextBase.Body.ShopFirstDrawRight">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:drawablePadding">@dimen/dimen_10dp</item>
    </style>


    <style name="PdvOutOfStockText" parent="TextBase.Title.Black">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:background">@drawable/_gen_background_white_border_black_400</item>
        <item name="android:paddingLeft">@dimen/margin_padding_xxl</item>
        <item name="android:paddingRight">@dimen/margin_padding_xxl</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- NEW ARRIVAL BADGE -->
    <style name="NewArrivalBadge" parent="@style/TextBase.Badge">
        <item name="android:paddingRight">@dimen/margin_padding_xs</item>
        <item name="android:paddingLeft">@dimen/margin_padding_xs</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:background">@color/black_700</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <!-- RATING BAR -->

    <style name="RatingBoardStyle" parent="ViewGroupCompat.Horizontal.MiddleDivider">
        <item name="android:minHeight">26dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginRight">@dimen/margin_padding_s</item>
        <item name="android:progressDrawable">@drawable/ratings_progress</item>
    </style>

    <style name="RatingBarStyle" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:layout_width">110dp</item>
        <item name="android:layout_height">4dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_padding_s</item>
        <item name="android:layout_marginRight">@dimen/margin_padding_s</item>
        <item name="android:progressDrawable">@drawable/ratings_progress</item>
    </style>

    <style name="RatingBarTextStyle" parent="TextBase.Caption.Black_800">
        <item name="android:minWidth">@dimen/dimen_25dp</item>
    </style>

    <!-- TODO : ADD HERE GENERIC COMPONENTS STYLES ↑ ↑ ↑ ↑ ↑ ↑ ↑ ↑ ↑ -->

</resources>