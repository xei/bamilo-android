<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="NewApi">

    <!-- ################# GENERIC COMPONENTS STYLES ################# -->

    <!-- Header -->
    <style name="HeaderStyle" parent="@style/TextBase.HeadLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:paddingLeft">@dimen/margin_padding_xl</item>
        <item name="android:paddingRight">@dimen/margin_padding_xl</item>
        <item name="android:background">@color/black_300</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TextField" parent="TextBase.Display_3">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">@drawable/_gen_selector_text_field</item>
        <item name="android:textColorHint">@color/black_700</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:cursorVisible">true</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:paddingLeft">@dimen/form_padding</item>
        <item name="android:paddingStart">@dimen/form_padding</item>
        <item name="android:textCursorDrawable" targetApi="12">@null</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:fontFamily">roboto_regular</item>
    </style>

    <!-- TextField error message -->
    <style name="TextErrorField" parent="TextBase.Body">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/red_basic</item>
        <item name="android:paddingLeft">@dimen/form_padding</item>
        <item name="android:paddingStart">@dimen/form_padding</item>
        <item name="android:fontFamily">roboto_regular</item>
        <item name="android:drawableLeft">@drawable/indicator_input_error</item>
        <item name="android:drawableStart">@drawable/indicator_input_error</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <!-- Multi line -->
    <style name="MultiLineStyle" parent="@style/TextBase.Caption">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="WishListButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:clickable">true</item>
        <item name="android:padding">@dimen/rounded_margin_mid</item>
        <item name="android:src">@drawable/selector_favorite</item>
    </style>

    <!-- PDV -->

    <style name="PdvPriceTagStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">left|start|center_vertical</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="PdvBadgeStyle" parent="@style/TextBase.Badge">
        <item name="android:background">@drawable/selector_badge_price</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_accent</item>
    </style>

    <style name="PDVSlideShowStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">342dp</item>
    </style>

    <!-- FORM -->

    <style name="form_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="FormButtonSpinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:textSize">16sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">left|start|center_vertical</item>
    </style>

    <style name="FormButtonSpinner.DropDown">
        <item name="android:spinnerMode">dropdown</item>
    </style>

    <!-- NEW ARRIVAL BADGE -->
    <style name="NewArrivalBadge">
        <item name="android:padding">@dimen/dimen_4dp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:background">@color/black_700</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_8sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- Progress bar -->
    <style name="ProgressBarStyle" parent="@android:style/Widget.ProgressBar.Horizontal">
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginRight">3dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:progress">15</item>
        <item name="android:progressDrawable">@drawable/ratings_progress</item>
    </style>

    <!-- SWITCH BUTTON -->
    <style name="SwitchStyle" parent="@style/TextBase.Title_1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">left|start|center</item>
        <item name="android:paddingLeft">18dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingStart">18dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- CHECK BOX -->

    <style name="FormCheckBox" parent="SingleLineList"/>

    <style name="FormCheckBox.Right">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:button">@null</item>
        <item name="android:drawableLeft">@null</item>
        <item name="android:drawableStart">@null</item>
        <item name="android:drawableRight">@drawable/_gen_selector_check_box</item>
        <item name="android:drawableEnd">@drawable/_gen_selector_check_box</item>
    </style>

    <!-- RADIO BUTTON -->

    <style name="FormRadioButton" parent="SingleLineList">
        <item name="android:background">@null</item>
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingStart">16dp</item>
    </style>

    <style name="FormRadioButton.Right">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:button">@null</item>
        <item name="android:drawableLeft">@null</item>
        <item name="android:drawableStart">@null</item>
        <item name="android:drawableRight">@drawable/_gen_selector_radio_button</item>
        <item name="android:drawableEnd">@drawable/_gen_selector_radio_button</item>
        <item name="android:maxLines">2</item>
        <item name="android:singleLine">false</item>
    </style>

    <!-- TODO : ADD HERE GENERIC COMPONENTS STYLES ↑ ↑ ↑ ↑ ↑ ↑ ↑ ↑ ↑ -->

</resources>