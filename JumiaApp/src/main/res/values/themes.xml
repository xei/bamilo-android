    <!-- ####################################################################### -->

    <!-- Jumia -->
    <style name="Theme.Jumia" parent="Theme.AppCompat.Light">
        <!-- #### Custom Material Color Palette -->
        <!-- Color for the app bar -->
        <item name="colorPrimary">@color/grey_tab_background</item>
        <!-- Color for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/grey_dark</item>
        <!-- Color for UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/color_accent</item>
        <!-- Color for UI controls like checkboxes and text fields -->
        <item name="android:navigationBarColor">@color/grey_dark</item>
        <!-- Color for app background -->
        <item name="android:windowBackground">@color/background_color</item>
        <!-- #### Text -->
        <item name="android:textColorPrimary">@color/grey_middle</item>
        <item name="android:textColorSecondary">@color/grey_middle</item>
        <item name="android:textColorTertiary">@color/grey_middle</item>
        <item name="android:editTextColor">@color/grey_middle</item>
        <item name="editTextColor">@color/grey_middle</item>
        <!-- #### Action Bar -->
        <item name="android:actionBarTheme">@style/Widget.Jumia.ActionBar</item>
        <item name="actionBarTheme">@style/Widget.Jumia.ActionBar</item>
        <item name="android:actionButtonStyle">@style/Widget.Jumia.ActionButton</item>
        <item name="actionButtonStyle">@style/Widget.Jumia.ActionButton</item>
        <!-- #### Check Box View -->
        <!--
        <item name="android:checkboxStyle">@style/Widget.Jumia.CheckBox</item>
        <item name="android:listChoiceIndicatorSingle">@drawable/selector_btn_check_holo_orange</item>
        <item name="android:listChoiceIndicatorMultiple">@drawable/selector_btn_check_holo_orange</item>
        -->

        <item name="android:checkboxStyle">@style/Widget.Jumia.PDV.CheckBox</item>
        <item name="android:listChoiceIndicatorSingle">@drawable/selector_btn_check_holo_green</item>
        <item name="android:listChoiceIndicatorMultiple">@drawable/selector_btn_check_holo_green</item>

        <!-- #### List View -->
        <item name="android:listViewStyle">@style/Widget.Jumia.ListView</item>
        <!-- #### Custom Spinner View -->
        <item name="actionCustomSpinnerDropDownStyle">@style/Widget.Jumia.Spinner.Style</item>
        <!-- #### View Page Indicator -->
        <item name="vpiCirclePageIndicatorStyle">@style/Widget.JumiaCirclePageIndicator</item>
        <!-- #### Button View -->
        <item name="android:buttonStyle">@style/Widget.Jumia.Button</item>
        <item name="buttonStyle">@style/Widget.Jumia.Button</item>
    </style>

    <!-- Theme for ActionBar from support library compatibility -->
    <style name="Widget.Jumia.ActionBar" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Apply the color filter for AB -->
        <item name="android:colorControlNormal">@color/grey_middledark</item>
        <item name="colorControlNormal">@color/grey_middledark</item>
        <!-- Apply the ArrawStyle for AB -->
        <item name="drawerArrowStyle">@style/Widget.Jumia.DrawerArrowStyle</item>
        <!-- To apply the color filter over indicator in Android v5.0.1 -->
        <item name="homeAsUpIndicator">@drawable/abc_ic_ab_back_mtrl_am_alpha</item>
        <!-- Apply the search view style -->
        <item name="android:searchViewStyle">@style/Widget.Jumia.SearchView</item>
        <item name="searchViewStyle">@style/Widget.Jumia.SearchView</item>
    </style>

    <!-- Style for DrawerArrow from support library compatibility -->
    <style name="Widget.Jumia.DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/grey_middledark</item>
    </style>

    <!-- Style for ActionBar Buttons from support library compatibility -->
    <style name="Widget.Jumia.ActionButton" parent="@style/Base.Widget.AppCompat.ActionButton">
        <item name="android:layout_marginTop">4dip</item>
        <item name="android:layout_marginBottom">4dip</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingRight">8dip</item>
        <!-- API v11: is used the abc_item_background_holo_light.xml file -->
    </style>

    <!-- Search view from support library compatibility -->
    <style name="Widget.Jumia.SearchView" parent="Widget.AppCompat.SearchView.ActionBar">
        <item name="queryBackground">@drawable/selector_textfield_orange</item>
        <item name="closeIcon">@drawable/btn_clearsearchfield</item>
        <item name="searchIcon">@drawable/selector_search_edit_icon</item>
        <item name="collapseIcon">?attr/homeAsUpIndicator</item>
    </style>

    <!--<item name="queryHint">@string/action_label_search_hint</item>-->

    <!-- Check Box -->

    <style name="Widget.Jumia.CheckBox" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/selector_btn_check_holo_orange</item>
    </style>

    <!-- Check Box -->

    <style name="Widget.Jumia.PDV.CheckBox" parent="android:Widget.CompoundButton.CheckBox">
        <item name="android:button">@drawable/selector_btn_check_holo_green</item>
    </style>


    <!-- List View -->
    <style name="Widget.Jumia.ListView" parent="android:Widget.ListView.White">
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:divider">@color/grey_light</item>
    </style>

    <!-- Button View -->
    <style name="Widget.Jumia.Button" parent="Widget.AppCompat.Button">
    </style>

    <!-- Base Dialog -->
    <style name="Theme.Jumia.Dialog" parent="@android:style/Theme.Dialog">
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowActionBar" tools:targetApi="honeycomb">false</item>
        <item name="android:windowActionModeOverlay" tools:targetApi="honeycomb">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="listPreferredItemPaddingLeft">16dip</item>
        <item name="listPreferredItemPaddingRight">16dip</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowBackground">@color/transparent</item>
    </style>

    <style name="Theme.Jumia.Dialog.NoTitle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@drawable/dialog_shadow</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
    </style>

    <style name="Theme.Jumia.Dialog.NoTitle.DatePicker">
        <item name="android:windowFrame">@null</item>
    </style>

    <!-- Progress dialog -->
    <style name="Theme.Jumia.Dialog.Progress" parent="@android:style/Theme.Material.Dialog.NoActionBar">
        <item name="android:windowBackground">@drawable/dialog_shadow</item>
        <item name="android:windowMinWidthMajor" tools:targetApi="honeycomb">@null</item>
        <item name="android:windowMinWidthMinor" tools:targetApi="honeycomb">@null</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- Circle page indicator from attr:CirclePageIndicator -->
    <style name="Widget.JumiaCirclePageIndicator" parent="Widget">
        <item name="fillColor">@color/color_accent</item>
        <item name="pageColor">@color/grey_middlelight</item>
        <item name="snap">true</item>
        <item name="extraSpacing">2dp</item>
        <item name="radius">2.5dp</item>
    </style>

</resources>