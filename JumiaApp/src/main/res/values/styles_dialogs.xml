<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ################# DIALOG HEADERS ################# -->

    <style name="DialogHeaderStyle" parent="HeaderStyle.Center"/>

    <!-- ################# DIALOG BUTTON CONTAINERS ################# -->

    <style name="DialogFormButtonsContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dimen_48dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_padding_xxl</item>
        <item name="android:layout_marginTop">@dimen/margin_padding_xxl</item>
        <item name="android:paddingLeft">@dimen/margin_padding_xl</item>
        <item name="android:paddingRight">@dimen/margin_padding_xl</item>
    </style>

    <style name="DialogFilterButtonsContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
    </style>

    <!-- ################# DIALOG BUTTONS ################# -->

    <style name="DialogFormButtonSubmit" parent="@style/Button_1.Shop.Wrap">
        <item name="android:text">@string/submit_label</item>
    </style>

    <style name="DialogFormButtonCancel" parent="@style/Button_1.Secondary.Text_Black_800.Border_400.Wrap">
        <item name="android:text">@string/cancel_label</item>
    </style>

    <style name="DialogFilterButtonSubmit" parent="@style/Button_1.Shop">
        <item name="android:text">@string/apply_label</item>
    </style>

    <style name="DialogFilterButtonCancel" parent="@style/Button_1.Secondary.Text_Black_800.Border_400">
        <item name="android:text">@string/clear_all_lowercase_label</item>
    </style>

    <style name="DialogButtonSize" parent="@style/Button_1.Secondary.Text_Black_800.Border_400">
        <item name="android:text">@string/size_guide_label</item>
    </style>

</resources>
