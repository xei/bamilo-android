<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="NewApi">

    <!-- ################# BUTTONS BASE STYLES ################# -->

    <style name="ButtonBase" parent="TextBase.Button_1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingLeft">@dimen/margin_padding_l</item>
        <item name="android:paddingRight">@dimen/margin_padding_l</item>
    </style>

    <style name="Button_1" parent="ButtonBase" />

    <style name="Button_2" parent="ButtonBase">
        <item name="android:layout_height">36dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Button_Link" parent="ButtonBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_padding_xxs</item>
        <item name="android:textColor">@drawable/_gen_selector_text_link</item>
    </style>

    <style name="Button_Action" parent="ButtonBase">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
    </style>

    <!-- ################# BUTTON 1 STYLES ################# -->

    <style name="Button_1.Shop">
        <item name="android:background">@drawable/_gen_selector_button_action</item>
    </style>

    <style name="Button_1.Shop.Wrap">
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="Button_1.Secondary" />

    <style name="Button_1.Secondary.Text_Orange">
        <item name="android:textColor">@color/color_accent</item>
    </style>

    <style name="Button_1.Secondary.Text_Black_800">
        <item name="android:textColor">@drawable/_gen_selector_text_secondary</item>
    </style>

    <style name="Button_1.Secondary.Text_Black_800.Border_400">
        <item name="android:background">@drawable/_gen_background_border_black_400</item>
    </style>

    <style name="Button_1.Secondary.Text_Black_800.Border_400.Wrap">
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="Button_1.Secondary.Text_Orange.Border_300">
        <item name="android:background">@drawable/_gen_background_border_black_300</item>
    </style>

    <!-- ################# BUTTON 2 STYLES ################# -->

    <style name="Button_2.Shop">
        <item name="android:background">@drawable/_gen_selector_button_action</item>
    </style>

    <style name="Button_2.Secondary">
        <item name="android:textColor">@color/black_800</item>
        <item name="android:background">@null</item>
    </style>

    <!-- ################# BUTTON LINK STYLES ################# -->

    <style name="Button_Link.Blue_1" />

    <style name="Button_Link.Blue_1.Right">
        <item name="android:gravity">right|end</item>
    </style>

    <style name="Button_Link.Shop">
        <item name="android:textColor">@drawable/_gen_selector_text_action</item>
    </style>

    <style name="Button_Link.Secondary">
        <item name="android:textColor">@drawable/_gen_selector_text_secondary</item>
    </style>

    <!-- ################# FACEBOOK BUTTON STYLE ################# -->

    <style name="Button_Link.Facebook">
        <!--http://stackoverflow.com/questions/29740325/set-login-logout-text-for-button-in-facebook-android-sdk-4-0?answertab=active#tab-top-->
        <item name="android:drawableLeft">@drawable/facebook_icon</item>
        <item name="android:drawableStart">@drawable/facebook_icon</item>
        <item name="android:paddingTop">@dimen/dimen_15dp</item>
        <item name="android:paddingBottom">@dimen/dimen_15dp</item>
        <item name="android:drawablePadding">@dimen/margin_padding_s</item>
        <item name="android:maxLines">1</item>
        <item name="android:text">@string/com_facebook_loginview_log_in_button_long</item>
        <item name="android:background">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:singleLine">false</item>
    </style>

    <!-- ################# BUTTON ACTION ################# -->

    <style name="Button_Action.EditItem">
        <item name="android:src">@drawable/selector_btn_edit</item>
    </style>

    <!-- ################# OTHER BUTTON STYLES ################# -->

    <style name="Button_BuyBar_Black">
        <item name="android:layout_width">@dimen/dimen_64dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@color/black_900</item>
    </style>

    <style name="Button_Link.NewAddress" parent="@style/Button_Link.Blue_1">
        <item name="android:layout_height">@dimen/dimen_36dp</item>
        <item name="android:text">@string/address_add_new_label</item>
    </style>

    <style name="Button_Link.RemoveItem" parent="@style/Button_Link.Blue_1">
        <item name="android:layout_margin">0dp</item>
        <item name="android:paddingBottom">@dimen/margin_padding_l</item>
        <item name="android:paddingTop">@dimen/margin_padding_l</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:text">@string/remove_label</item>
    </style>

    <style name="Button_Link.SectionItem" parent="@style/TextBase.Body.Blue_1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_padding_xl</item>
        <item name="android:layout_marginRight">@dimen/margin_padding_xl</item>
    </style>

    <!-- TODO : ADD HERE MORE STYLES -->

</resources>