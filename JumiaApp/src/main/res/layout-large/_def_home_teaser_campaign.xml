<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/TeaserWhiteContainerStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/dimen_mat_4px"
    android:paddingRight="@dimen/dimen_mat_4px">

    <android.support.v7.widget.CardView
        android:id="@+id/home_teaser_campaign_container"
        style="@style/CardViewFloatStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_campaign_teaser_height"
        android:layout_marginLeft="@dimen/home_margin"
        android:layout_marginRight="@dimen/home_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <com.mobile.components.customfontviews.TextView
                    android:id="@+id/home_teaser_campaign_title"
                    style="@style/TextSubHead"
                    android:layout_marginBottom="@dimen/dimen_mat_8px"
                    android:gravity="center" />

                <com.mobile.components.customfontviews.TextView
                    android:id="@+id/home_teaser_campaign_timer"
                    style="@style/TextTimer"
                    android:layout_marginBottom="@dimen/dimen_mat_8px"
                    android:gravity="center" />

                <com.mobile.components.customfontviews.TextView
                    android:id="@+id/home_teaser_campaign_subtitle"
                    style="@style/TextCaption"
                    android:gravity="center" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/home_teaser_campaign_image_container"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1">

                <include layout="@layout/_def_home_teaser_image_loadable" />

            </FrameLayout>


            <com.mobile.components.customfontviews.TextView
                android:id="@+id/home_teaser_campaign_more"
                style="@style/ButtonFlat"
                android:layout_width="@dimen/dimen_mat_170px"
                android:text="@string/see_more_offers" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>





