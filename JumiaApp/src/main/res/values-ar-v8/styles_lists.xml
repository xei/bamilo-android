<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="NewApi">

    <!-- Single line item -->
    <style name="SingleLineList" parent="@style/TextBase.List">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingLeft">@dimen/margin_padding_xl</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Single line with icon item -->
    <style name="SingleLineList.WithIcon">
        <item name="android:paddingRight">@dimen/margin_padding_l</item>
        <item name="android:gravity">right|center_vertical</item>
    </style>

    <style name="SingleLineListIconStartRTL">
        <item name="android:layout_width">@dimen/dimen_22dp</item>
        <item name="android:layout_height">@dimen/dimen_22dp</item>
        <item name="android:layout_marginRight">@dimen/margin_padding_xl</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>
    <style name="SingleLineListIconEndRTL">
        <item name="android:layout_width">@dimen/dimen_22dp</item>
        <item name="android:layout_height">@dimen/dimen_22dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/margin_padding_xl</item>
    </style>

    <style name="SingleLineListCheckBoxRTL">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">@dimen/margin_padding_xl</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:button">@null</item>
        <item name="android:drawableLeft">@drawable/_gen_selector_check_box</item>
        <item name="android:gravity">center</item>
    </style>

    <!-- TODO : ADD HERE MORE STYLES -->

</resources>