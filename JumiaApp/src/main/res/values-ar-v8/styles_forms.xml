<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools" tools:ignore="NewApi">

    <!-- ################# GENERIC FORM COMPONENTS STYLES ################# -->

    <!-- SPINNER -->

    <style name="FormButtonSpinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@drawable/spinner_background</item>
        <item name="android:textSize">16sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">right|center_vertical</item>
    </style>

    <!-- CHECK BOX -->

    <style name="FormCheckBox.Right">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:button">@null</item>
        <item name="android:drawableLeft">@drawable/_gen_selector_check_box</item>
        <item name="android:drawableRight">@null</item>
        <item name="android:drawableEnd">@null</item>
    </style>

    <!-- RADIO BUTTON -->

    <style name="FormRadioButton" parent="SingleLineList">
        <item name="android:background">@null</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:button">@null</item>
        <item name="android:drawableRight">@drawable/_gen_selector_radio_button</item>
    </style>

    <style name="FormRadioButton.Right">
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:button">@null</item>
        <item name="android:drawableLeft">@drawable/_gen_selector_radio_button</item>
        <item name="android:drawableRight">@null</item>
        <item name="android:maxLines">2</item>
        <item name="android:singleLine">false</item>
    </style>

    <style name="FormFieldRadioButtonStyleRTL" parent="FormFieldStyle">
        <item name="android:layout_gravity">top</item>
        <item name="android:layout_marginLeft">@dimen/dimen_32dp</item>
        <item name="android:drawablePadding">@dimen/dimen_6dp</item>
        <item name="android:paddingLeft">@dimen/dimen_6dp</item>
    </style>

    <!-- TODO : ADD HERE GENERIC COMPONENTS STYLES ↑ ↑ ↑ ↑ ↑ ↑ ↑ ↑ ↑ -->

</resources>