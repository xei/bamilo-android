<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="rounded_box_title_grey">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/title_box_height</item>
        <item name="android:textColor">@color/grey_middledark</item>
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:layout_marginBottom">@dimen/rounded_margin_mid</item>
        <item name="android:layout_marginLeft">@dimen/rounded_margin_mid</item>
        <item name="android:layout_marginRight">@dimen/rounded_margin_mid</item>
        <item name="android:layout_marginTop">@dimen/rounded_margin_mid</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="rounded_box">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/rounded_margin_mid</item>
        <item name="android:layout_marginBottom">@dimen/rounded_margin_mid</item>
        <item name="android:layout_marginLeft">@dimen/rounded_margin_mid</item>
        <item name="android:layout_marginRight">@dimen/rounded_margin_mid</item>
        <item name="android:background">@drawable/background_content</item>
    </style>

    <!-- ################# CHECKOUT ################# -->

    <style name="checkout_about_you_title" parent="rounded_box_title_grey">
        <item name="android:layout_height">@dimen/checkout_box_title_height</item>
        <item name="android:drawableLeft">@drawable/selector_dropdown_indicator</item>
    </style>

    <!-- ################# ACTION BAR ################# -->

	<!-- Style used to set for LTR or RTL -->
	<style name="text_actionbar_cart_layout_direction" >
	    <item name="android:paddingRight">4dp</item>
    </style>

    <!-- ################# MATERIAL ################# -->

    <!-- SMALL TEASER -->
    <style name="SmallTeaserStyle" parent="CardViewFlatStyle">
        <item name="android:layout_width">@dimen/home_small_teaser_item_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginRight">@dimen/dimen_3dp</item>
    </style>

    <!-- PRODUCT TEASER -->
    <style name="ProductTeaserStyle" parent="CardViewFlatStyle">
        <item name="android:layout_width">@dimen/dimen_134dp</item>
        <item name="android:layout_height">@dimen/dimen_210dp</item>
    </style>

    <!-- PDV -->

    <style name="PDVWishListButtonStyle" parent="WishListButtonStyle">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginLeft">10dp</item>
    </style>

    <style name="PDVGlobalSellerButtonStyle" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:background">@null</item>
        <item name="android:src">@drawable/ic_overseas_corner</item>
    </style>

    <!-- MY ACCOUNT -->

    <style name="HeaderMyAccountStyle" parent="HeaderStyle">
        <item name="android:paddingRight">@dimen/my_account_gen_dimen</item>
    </style>

    <style name="_v8_form_radiobutton_style" parent="form_style">
        <item name="android:layout_gravity">top</item>
        <item name="android:layout_marginLeft">@dimen/dimen_32dp</item>
        <item name="android:drawablePadding">@dimen/dimen_6dp</item>
        <item name="android:paddingLeft">@dimen/dimen_20dp</item>
    </style>
</resources>