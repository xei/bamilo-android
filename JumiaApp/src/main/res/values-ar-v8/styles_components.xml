<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ################# GENERIC COMPONENTS STYLES ################# -->

    <!-- Sub list item -->
    <style name="SubListItemStyle" parent="@style/TextBase.Caption">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Multi line -->
    <style name="MultiLineStyle" parent="@style/TextBase.Body.Black_800">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/margin_padding_xl</item>
        <item name="android:singleLine">false</item>
        <item name="android:gravity">right</item>
    </style>

    <!-- PDV -->

    <style name="PdvPriceTagStyle" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">right|center_vertical</item>
        <item name="android:paddingLeft">@dimen/margin_padding_xl</item>
        <item name="android:paddingRight">@dimen/margin_padding_xl</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="PdvWishListButtonStyle" parent="WishListButtonStyle">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginLeft">@dimen/margin_padding_l</item>
    </style>

    <!-- TODO : ADD HERE GENERIC COMPONENTS STYLES ↑ ↑ ↑ ↑ ↑ ↑ ↑ ↑ ↑ -->


</resources>