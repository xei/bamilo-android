<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:minHeight="26dp"
        android:orientation="horizontal">

        <!-- RATINGS BOARD FOR SPECIFICATIONS -->
        <!-- LEFT SIDE -->

        <!-- right SIDE -->
        <LinearLayout
            android:id="@+id/specs_item_key"
            android:layout_width="@dimen/ratings_average_with"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="vertical">

            <com.mobile.components.customfontviews.TextView
                android:id="@+id/averageRating"
                style="@style/TextCaption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/average_rating"
                android:textColor="@color/black"
                />


            <com.mobile.components.customfontviews.TextView
                android:id="@+id/averageValue"
                style="@style/TextDisplay_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="46/5"
                android:textColor="@color/black_800"

                />


            <com.mobile.components.customfontviews.TextView
                android:id="@+id/badgeValue"
                style="@style/TextBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black_800"

                />


        </LinearLayout>

        <View
            android:id="@+id/item_center"
            android:layout_width="1dp"
            android:layout_height="100dp"
            android:layout_toLeftOf="@id/specs_item_key"
            android:background="@color/black_300"
            android:minHeight="26dp"


            />

        <!-- Left SIDE -->

        <RelativeLayout
            android:id="@+id/progressBoard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:layout_toLeftOf="@id/item_center">

            <!-- 5 -->
            <RelativeLayout
                android:id="@+id/progressBoard5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.mobile.components.customfontviews.TextView
                    android:id="@+id/five"
                    style="@style/TextBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:text="5"
                    android:textColor="@color/black" />

                <ProgressBar
                    android:id="@+id/progressBarFive"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="90dp"
                    android:layout_height="3dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_toLeftOf="@id/five"
                    android:layout_centerVertical="true"
                    android:progress="15"
                    android:progressDrawable="@drawable/ratings_progress"
                    />

                <com.mobile.components.customfontviews.TextView
                    android:id="@+id/fiveValue"
                    style="@style/TextBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/progressBarFive"
                    android:text="(0)"
                    android:textColor="@color/black" />


            </RelativeLayout>

            <!-- 4 -->
            <RelativeLayout
                android:id="@+id/progressBoard4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/progressBoard5">
                <com.mobile.components.customfontviews.TextView
                    android:id="@+id/four"
                    style="@style/TextBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:text="4"
                    android:textColor="@color/black" />

                <ProgressBar
                    android:id="@+id/progressBarFour"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="90dp"
                    android:layout_height="3dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_toLeftOf="@id/four"
                    android:layout_centerVertical="true"
                    android:progress="15"
                    android:progressDrawable="@drawable/ratings_progress"
                    />

                <com.mobile.components.customfontviews.TextView
                    android:id="@+id/fourValue"
                    style="@style/TextBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/progressBarFour"
                    android:text="(0)"
                    android:textColor="@color/black" />

            </RelativeLayout>


            <!-- 3 -->
            <RelativeLayout
                android:id="@+id/progressBoard3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/progressBoard4">
                <com.mobile.components.customfontviews.TextView
                    android:id="@+id/three"
                    style="@style/TextBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:text="3"
                    android:textColor="@color/black" />

                <ProgressBar
                    android:id="@+id/progressBarThree"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="90dp"
                    android:layout_height="3dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_toLeftOf="@id/three"
                    android:layout_centerVertical="true"
                    android:progress="15"
                    android:progressDrawable="@drawable/ratings_progress"
                    />

                <com.mobile.components.customfontviews.TextView
                    android:id="@+id/threeValue"
                    style="@style/TextBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/progressBarThree"
                    android:text="(0)"
                    android:textColor="@color/black" />


            </RelativeLayout>


            <!-- 2 -->
            <RelativeLayout
                android:id="@+id/progressBoard2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/progressBoard3">

                <com.mobile.components.customfontviews.TextView
                    android:id="@+id/two"
                    style="@style/TextBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:text="2"
                    android:textColor="@color/black" />

                <ProgressBar
                    android:id="@+id/progressBarTwo"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="90dp"
                    android:layout_height="3dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_toLeftOf="@id/two"
                    android:layout_centerVertical="true"
                    android:progress="15"
                    android:progressDrawable="@drawable/ratings_progress"
                    />

                <com.mobile.components.customfontviews.TextView
                    android:id="@+id/twoValue"
                    style="@style/TextBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/progressBarTwo"
                    android:text="(0)"
                    android:textColor="@color/black" />

            </RelativeLayout>


            <!-- 1 -->
            <RelativeLayout
                android:id="@+id/progressBoard1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/progressBoard2">
                <com.mobile.components.customfontviews.TextView
                    android:id="@+id/one"
                    style="@style/TextBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:text="1"
                    android:textColor="@color/black" />

                <ProgressBar
                    android:id="@+id/progressBarOne"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="90dp"
                    android:layout_height="3dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_toLeftOf="@id/one"
                    android:layout_centerVertical="true"
                    android:progress="15"
                    android:progressDrawable="@drawable/ratings_progress"
                    />

                <com.mobile.components.customfontviews.TextView
                    android:id="@+id/oneValue"
                    style="@style/TextBadge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@id/progressBarOne"
                    android:text="(0)"
                    android:textColor="@color/black" />


            </RelativeLayout>


        </RelativeLayout>


    </RelativeLayout>

    <!-- BOTTOM PART -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top"
        android:paddingBottom="20dp">

        <!-- MIDDLE POINT TO DIVIDE THE SCREEN -->

        <View
            android:id="@+id/center_point"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/center_point"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="vertical"

            >

            <com.mobile.components.customfontviews.TextView
                android:id="@+id/info"
                style="@style/TextCaption"
                color="@color/black_800"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/average_rating_used_prod"


                />

            <com.mobile.components.customfontviews.TextView
                android:id="@+id/info2"
                style="@style/TextCaption"
                color="@color/black_800"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/average_rate_now"


                />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/lWriteReview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignRight="@id/center_point"
            android:clickable="true"
            android:gravity="center">

            <!-- buttom write -->
            <com.mobile.components.customfontviews.TextView
                android:id="@+id/btWriteReview"
                style="@style/TextList_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/write_comment"
                android:textColor="@color/color_accent" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>








