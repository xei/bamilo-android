<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:minHeight="48dp"
    android:background="@color/grey_dividerlight"
    android:paddingLeft="@dimen/dimen_48px"
    android:paddingStart="@dimen/margin_large"
    android:gravity="center_vertical|right"
    android:orientation="horizontal"
    >

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/dialog_item_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="roboto_regular"
        android:gravity="right|center_vertical"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:singleLine="true"
        android:visibility="gone"
        />

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/dialog_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="roboto_regular"
        android:gravity="right|center_vertical"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_marginLeft="2dp" />
</LinearLayout>