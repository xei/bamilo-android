<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/catalog_list_item_height">
    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:id="@+id/delivered_status"
        layout="@layout/_v8_delivered"
        android:layout_marginBottom="@dimen/margin_60px"
        android:layout_marginLeft="@dimen/margin_60px"
        />

    <include
        layout="@layout/gen_product_list"
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/delivered_status"
        android:layout_alignParentBottom="true"
        />

    <View
        android:id="@+id/divider"
        style="@style/HorizontalListDivider"
        android:layout_alignParentBottom="true" />

</RelativeLayout>