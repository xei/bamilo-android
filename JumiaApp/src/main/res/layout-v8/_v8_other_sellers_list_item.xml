<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/offers_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- RIGHT SIDE BUTTON -->

    <com.mobile.components.customfontviews.Button
        android:id="@+id/offer_addcart"
        android:layout_width="120dp"
        android:layout_height="@dimen/dimen_144px"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_16dp"
        android:background="@color/color_accent"
        android:text="@string/buy_now_button"
        android:textColor="@color/white"
        android:textStyle="bold" />

    <!-- OTHER SELLERS ITEM -->
    <!-- LEFT SIDE -->
    <LinearLayout
        android:id="@+id/left_side_seller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/offer_addcart"
        android:gravity="center"
        android:orientation="vertical">

        <!-- PRICE -->
        <LinearLayout
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/dimen_12dp"
            android:paddingBottom="@dimen/dimen_20dp"
            android:paddingRight="@dimen/dimen_16dp">

            <com.mobile.components.customfontviews.TextView
                android:id="@+id/offer_price_normal"
                style="@style/TextBody_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black" />

            <com.mobile.components.customfontviews.TextView
                android:id="@+id/offer_price"
                style="@style/TextBody_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:visibility="gone" />

        </LinearLayout>

        <!-- SELLER INFO SECTION -->

        <include
            layout="@layout/_v8_other_sellers_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/price" />

    </LinearLayout>

</RelativeLayout>
