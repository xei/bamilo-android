<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/home_teaser_newsletter_container"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_800"
        android:padding="@dimen/dimen_16dp">

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/home_teaser_newsletter_title"
            style="@style/TextBase.HeadLine"
            android:text="@string/sign_up_to_our_newsletter"
            android:textColor="@color/white"/>

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/home_teaser_newsletter_description"
            style="@style/TextBase.Caption"
            android:layout_below="@id/home_teaser_newsletter_title"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:lines="2"
            android:singleLine="false"
            android:text="@string/sign_up_to_our_newsletter_body"
            android:textColor="@color/white"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/home_teaser_newsletter_description"
            android:layout_marginTop="@dimen/dimen_12dp">

            <com.mobile.components.customfontviews.Button
                android:id="@+id/send_newsletter"
                style="@style/Button_Link.Shop"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="@dimen/margin_padding_l"
                android:layout_marginLeft="@dimen/margin_padding_l"
                android:layout_marginRight="@dimen/margin_padding_l"
                android:gravity="bottom"
                android:text="@string/submit_label"/>

            <RelativeLayout
                android:id="@+id/home_teaser_newsletter_form_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/send_newsletter"
                android:gravity="right"
                />

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>