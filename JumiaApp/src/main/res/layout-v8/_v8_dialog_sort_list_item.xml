<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_list_item_highlight"
    android:paddingBottom="@dimen/margin_mid"
    android:paddingLeft="@dimen/dialog_list_margin_horizontal"
    android:paddingRight="@dimen/dialog_list_margin_horizontal"
    android:paddingTop="@dimen/margin_mid" >

    <CheckBox
        android:id="@+id/dialog_item_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:button="@drawable/btn_check_orange"
        android:clickable="false"
        android:focusable="false" />

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/item_text"
            android:textColor="@color/grey_middle"
            android:textSize="@dimen/text_l"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:text="ListItem text" />


</RelativeLayout>