<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <!-- TITLE -->

    <!-- TITLE -->
    <com.mobile.components.customfontviews.TextView
        style="@style/HeaderStyle"
        android:text="@string/address_shipping_label" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/checkout_my_order_shipping_address_btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dimen_20dp"
            android:layout_marginTop="@dimen/dimen_20dp"
            android:src="@drawable/selector_btn_edit"
            android:paddingRight="10dp"/>

        <!-- ADDRESS -->

        <LinearLayout
            android:id="@+id/checkout_my_order_shipping_address_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </RelativeLayout>



</LinearLayout>