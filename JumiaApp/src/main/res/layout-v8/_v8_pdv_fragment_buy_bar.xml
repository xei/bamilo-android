<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/buy_bar_height"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/black_700">

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/pdv_button_buy"
            style="@style/Button_1.Shop"
            android:text="@string/buy_now_button" />

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/pdv_button_add_to_save"
            style="@style/Button_1.Neutral.Text_Orange"
            android:visibility="gone" />

    </RelativeLayout>

    <ImageButton
        android:id="@+id/pdv_button_call"
        style="@style/Button_BuyBar_Black"
        android:src="@drawable/ic_call" />

    <ImageButton
        android:id="@+id/pdv_button_share"
        style="@style/Button_BuyBar_Black"
        android:src="@drawable/ic_share" />

</LinearLayout>