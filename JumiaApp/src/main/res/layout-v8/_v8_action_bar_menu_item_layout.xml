<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/myprofile_item_size"
    android:background="@drawable/selector_myprofile_highlight"
    android:gravity="right|center_vertical"
    android:orientation="horizontal">

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/menu_item_title"
        style="@style/text_header"
        android:gravity="center_vertical"
        android:text="Menu item" />

    <ImageView
        android:id="@+id/menu_item_icon"
        android:layout_width="@dimen/myprofile_item_icon_size"
        android:layout_height="@dimen/myprofile_item_icon_size"
        android:layout_margin="10dp"
        android:adjustViewBounds="true"
        android:gravity="center"
        android:src="@drawable/ico_dropdown_favourites" />

</LinearLayout>