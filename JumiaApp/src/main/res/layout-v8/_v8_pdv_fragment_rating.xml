<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ratingContainer"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_item_height"
    android:gravity="center_vertical|right"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/layout_padding"
    android:paddingRight="@dimen/layout_padding">

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/pdv_rating_bar_count"
        style="@style/TextInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_mid"
        android:text="sada"/>

    <RatingBar
        android:id="@+id/pdv_rating_bar"
        style="@style/starRatingBarBig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="20dp"
        android:isIndicator="true"
        android:visibility="visible" />

    <RatingBar
        android:id="@+id/pdv_rating_bar_fashion"
        style="@style/starRatingBarFashionBig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="20dp"
        android:isIndicator="true"
        android:visibility="gone" />

</LinearLayout>