<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <!-- NAME -->

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/item_name"
        style="@style/TextBase.Body"
        android:layout_marginLeft="@dimen/login_margin_medium"
        android:layout_marginTop="@dimen/item_margin_top"
        android:maxLines="2"
        android:singleLine="false"
        android:textColor="@color/black"
        tools:text="Name" />

    <!-- SHOP FIRST IMAGE -->
    <ImageView
        android:id="@+id/item_shop_first"
        style="@style/ShopFirstStyle"
        android:layout_alignParentRight="true"
        android:layout_below="@id/item_name" />

    <!-- PRICE -->
    <RelativeLayout
        android:id="@+id/price_quantity_wrapper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_shop_first">

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/item_regprice"
            style="@style/TextBase.Caption"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dimen_20dp"
            android:text="Price"
            android:textColor="@color/black_800"
            android:textSize="@dimen/text_s" />


        <com.mobile.components.customfontviews.TextView
            android:id="@+id/changequantity_label"
            style="@style/TextBase.Caption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/shoppingcart_quantity"
            android:textColor="@color/black_700"
            android:textSize="@dimen/text_s"
            android:visibility="visible" />

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/changequantity_button"
            style="@style/FormButtonSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/changequantity_label"
            android:text="@string/shoppingcart_quantity"
            android:textColor="@color/black"
            android:textSize="@dimen/text_s"
            android:visibility="visible" />

    </RelativeLayout>
    <!-- Divider -->
    <View
        android:id="@+id/delete_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/price_quantity_wrapper"
        android:background="@color/black_700" />

    <!-- DELETE BUTTON -->

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/button_delete"
        style="@style/Button_Link.RemoveItem"
        android:layout_alignParentRight="true"
        android:layout_below="@id/delete_divider" />

</RelativeLayout>