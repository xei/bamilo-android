<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/voucher_container"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="0dp"
              android:layout_marginTop="@dimen/rounded_margin_small"
              android:orientation="vertical">

    <!-- TITLE -->

    <com.mobile.components.customfontviews.TextView
        style="@style/HeaderStyle"
        android:text="@string/my_order_coupon_label" />

    <!-- CONTAINER -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/checkout_voucher_box_height"
        android:layout_marginLeft="@dimen/dimen_60px"
        android:layout_marginRight="@dimen/dimen_60px"
        android:orientation="horizontal"
        android:weightSum="1"
        >

        <!-- RIGHT BUTTON -->

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/voucher_btn"
            style="@style/AigButton.WhiteWithBlack_800"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="right|center_vertical"
            android:layout_weight="0.35"
            android:ellipsize="marquee"
            android:gravity="right|center_vertical"
            android:singleLine="true"
            android:text="@string/voucher_use"
            />

        <!-- EDIT TEXT -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.65"
            android:focusableInTouchMode="true"
            android:gravity="right|center_vertical"
            android:orientation="vertical">

            <com.mobile.components.customfontviews.EditText
                android:id="@+id/voucher_name"
                style="@style/TextField"
                android:hint="@string/voucher_message_hint"
                android:textDirection="locale" />

            <com.mobile.components.customfontviews.TextView
                android:id="@+id/voucher_error_message"
                style="@style/TextField"
                android:layout_width="match_parent"
                android:layout_marginRight="@dimen/rounded_margin_mid"
                android:text="@string/voucher_error_message"
                android:textColor="@color/red_middle"
                android:visibility="gone" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>