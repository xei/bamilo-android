<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:id="@+id/component_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_48dp"
    android:gravity="right|center_vertical"
    android:layoutDirection="ltr"
    tools:divider="@drawable/_gen_divider_horizontal_black_300"
    tools:showDividers="end"
    android:background="@drawable/selector_myprofile_highlight"
    >

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/tx_single_line_text"
        style="@style/SingleLineList.WithIcon"
        android:layout_toLeftOf="@+id/icon_start"
        />
    <ImageView
        android:id="@+id/icon_start"
        style="@style/SingleLineListIconStartRTL"
        android:visibility="invisible"
        />


</android.support.v7.widget.LinearLayoutCompat>