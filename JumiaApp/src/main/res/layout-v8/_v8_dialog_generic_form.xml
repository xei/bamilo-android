<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <!--FORM-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/form_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

    </ScrollView>

    <!--BUTTON-->

    <RelativeLayout
        android:id="@+id/form_button_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_normal"
        android:layout_marginTop="20dp"
        android:paddingLeft="16dp"
        android:paddingRight="6dp">

        <com.mobile.components.customfontviews.Button
            android:id="@+id/button_accept"
            style="@style/Button_Text.Shop"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:text="@string/submit_label" />

        <com.mobile.components.customfontviews.Button
            android:id="@+id/button_cancel"
            style="@style/Button_Text.Neutral"
            android:layout_margin="@dimen/margin_padding_xxs"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:text="@string/cancel_label" />

    </RelativeLayout>

</LinearLayout>
