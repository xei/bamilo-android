<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <!-- TITLE -->
    <com.mobile.components.customfontviews.TextView
        style="@style/HeaderStyle"
        android:text="@string/address_billing_label" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/checkout_my_order_billing_address_btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/dimen_60px"
            android:layout_marginTop="@dimen/dimen_60px"
            android:src="@drawable/selector_btn_edit"
            android:paddingRight="10dp"/>


        <!-- ADDRESS -->

        <LinearLayout
            android:id="@+id/checkout_my_order_billing_address_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <!-- SAME ADDRESS -->

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/checkout_my_order_billing_address_is_same"
            style="@style/SubListItemStyle"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/dimen_60px"
            android:gravity="right|center_vertical"
            android:text="@string/my_order_is_same" />

    </RelativeLayout>

</LinearLayout>