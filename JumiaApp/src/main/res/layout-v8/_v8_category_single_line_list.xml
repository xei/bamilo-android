<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height_normal"
    android:background="@color/white"
    android:minHeight="@dimen/item_height_normal"
    android:orientation="vertical"
    android:paddingRight="@dimen/margin_30px">

    <ImageView
        android:id="@+id/category_single_icon"
        android:layout_width="@dimen/margin_50px"
        android:layout_height="@dimen/margin_50px"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_30px"
        android:layout_marginLeft="@dimen/margin_30px"
        android:visibility="visible" />

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/category_single_text"
        style="@style/TextDisplay_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_110px"
        android:layout_toLeftOf="@id/category_single_icon"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/category_single_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_marginLeft="@dimen/margin_60px"
        android:background="@drawable/selector_category_button" />

</RelativeLayout>
