<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="vertical">

    <include layout="@layout/_def_my_account_language_item" />

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/app_version_label"
        style="@style/TextCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/my_account_gen_dimen"
        android:paddingTop="@dimen/rounded_margin_mid"
        android:textColor="@color/black" />

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/update_label"
        style="@style/TextCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/app_version_label"
        android:layout_marginLeft="@dimen/my_account_gen_dimen"
        android:textColor="@color/black_800" />
</RelativeLayout>