<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/option_name"
        style="@style/TextCaption"
        android:text="Title"
        android:layout_marginLeft="@dimen/my_account_gen_dimen"
        android:layout_marginRight="@dimen/my_account_gen_dimen"
        android:paddingTop="16dp"
        android:paddingBottom="16dp"
        android:layout_centerVertical="true"
        android:textColor="@color/black" />

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/app_version_label"
        style="@style/TextCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/my_account_gen_dimen"
        android:textColor="@color/black" />

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/update_label"
        style="@style/TextCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/app_version_label"
        android:layout_marginLeft="@dimen/my_account_gen_dimen"
        android:textColor="@color/black_800" />

    <View
        style="@style/divider_horizontal"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>