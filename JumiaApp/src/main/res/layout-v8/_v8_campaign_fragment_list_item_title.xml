<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/campaign_title_height"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/margin_large"
    android:paddingRight="@dimen/campaign_title_margin_left" >

    <!-- NAME -->

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/campaign_item_name"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/margin_large"
        android:layout_weight="1"
        android:background="@drawable/selector_list_item_highlight"
        android:ellipsize="end"
        android:fontFamily="roboto_regular"
        android:gravity="center"
        android:lines="2"
        android:maxLines="2"
        android:text=""
        android:textColor="@color/grey_middle"
        android:textSize="@dimen/text_l" />

    <!-- STOCK OFF -->

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/campaign_item_stock_off"
        android:layout_width="@dimen/campaign_discount_flag_width"
        android:layout_height="match_parent"
        android:background="@drawable/campaign_promobadge"
        android:fontFamily="roboto_bold"
        android:gravity="center"
        android:lines="2"
        android:maxLines="2"
        android:paddingBottom="@dimen/margin_small"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_s" />

</LinearLayout>