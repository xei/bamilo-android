<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_teaser_stores_card"
    style="@style/CardViewFlatStyle"
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_featured_stores_teaser_item_height">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center">

        <FrameLayout
            android:id="@+id/home_teaser_stores_image"
            android:layout_width="@dimen/dimen_mat_45px"
            android:layout_height="@dimen/dimen_mat_45px"
            android:layout_alignParentLeft="true"
            android:gravity="center">

            <include layout="@layout/home_teaser_image_loadable" />

        </FrameLayout>

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/home_teaser_stores_text_title"
            style="@style/TextBody"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/home_teaser_stores_image" />

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/home_teaser_stores_text_sub"
            style="@style/TextCaption"
            android:layout_alignParentRight="true"
            android:layout_below="@id/home_teaser_stores_text_title"
            android:layout_toRightOf="@id/home_teaser_stores_image" />

    </RelativeLayout>

</android.support.v7.widget.CardView>