<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/checkout_total_bar"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="horizontal"
    android:weightSum="5">

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/checkout_button_enter"
        style="@style/AigButton.Active"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:text="@string/next_button" />

    <com.mobile.components.customfontviews.AutoResizeTextView
        android:id="@+id/checkout_total_label"
        style="@style/TextDisplay_3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:ellipsize="none"
        android:singleLine="false"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/order_summary_total_label" />

</LinearLayout>