<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/voucher_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dp"
    android:layout_marginTop="@dimen/rounded_margin_small"
    android:orientation="vertical">

    <!-- TITLE -->

    <com.mobile.components.customfontviews.TextView
        style="@style/HeaderStyle"
        android:text="@string/my_order_coupon_label" />

    <!-- CONTAINER -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dimen_20dp"
        android:layout_marginLeft="@dimen/dimen_20dp"
        android:layout_marginRight="@dimen/dimen_20dp"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <!-- EDIT TEXT -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.65"
            android:focusableInTouchMode="true"
            android:gravity="left|start|center_vertical"
            android:orientation="vertical">

            <com.mobile.components.customfontviews.EditText
                android:id="@+id/voucher_name"
                style="@style/FormTextField"
                android:hint="@string/voucher_message_hint"
                android:textDirection="locale"
                />


        </LinearLayout>

        <!-- RIGHT BUTTON -->

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/voucher_btn"
            style="@style/Button_Link.Blue_1"
            android:layout_margin="@dimen/margin_padding_xxs"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|start|center_vertical"
            android:layout_weight="0.35"
            android:ellipsize="marquee"
            android:gravity="left|start|center_vertical"
            android:singleLine="false"
            android:text="@string/use_label" />

    </LinearLayout>

</LinearLayout>