<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/voucher_container"
    style="@style/rounded_box"
    android:layout_marginBottom="0dp"
    android:layout_marginTop="@dimen/rounded_margin_small"
    android:orientation="vertical">

    <!-- TITLE -->

    <com.mobile.components.customfontviews.TextView
        style="@style/rounded_box_title_grey"
        android:text="@string/my_order_coupon_label" />

    <!-- DIVIDER -->

    <View style="@style/divider_horizontal_orange" />

    <!-- CONTAINER -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/checkout_voucher_box_height"
        android:layout_gravity="center_horizontal">

        <!-- RIGHT BUTTON -->

        <com.mobile.components.customfontviews.Button
            android:id="@+id/voucher_btn"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/button_big_height"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/rounded_margin_mid"
            android:layout_marginLeft="@dimen/login_margin_medium"
            android:layout_marginRight="@dimen/rounded_margin_mid"
            android:layout_marginStart="@dimen/login_margin_medium"
            android:background="@drawable/btn_grey"
            android:ellipsize="marquee"
            android:gravity="center"
            android:paddingEnd="@dimen/margin_30px"
            android:paddingLeft="@dimen/margin_30px"
            android:paddingRight="@dimen/margin_30px"
            android:paddingStart="@dimen/margin_30px"
            android:singleLine="true"
            android:text="@string/voucher_use"
            android:textColor="@color/grey_dark"
            android:textSize="@dimen/text_title" />

        <!-- EDIT TEXT -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/voucher_btn"
            android:layout_toStartOf="@id/voucher_btn"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <com.mobile.components.customfontviews.EditText
                android:id="@+id/voucher_name"
                style="@style/TextField"
                android:layout_marginEnd="@dimen/rounded_margin_mid"
                android:layout_marginLeft="@dimen/rounded_margin_mid"
                android:layout_marginRight="@dimen/rounded_margin_mid"
                android:layout_marginStart="@dimen/rounded_margin_mid"
                android:layout_marginTop="@dimen/login_margin_medium"
                android:hint="@string/voucher_message_hint"
                android:textDirection="locale" />

            <com.mobile.components.customfontviews.TextView
                android:id="@+id/voucher_error_message"
                style="@style/text_normal"
                android:layout_width="match_parent"
                android:layout_marginLeft="@dimen/rounded_margin_mid"
                android:layout_marginStart="@dimen/rounded_margin_mid"
                android:text="@string/voucher_error_message"
                android:textColor="@color/red_middle"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>