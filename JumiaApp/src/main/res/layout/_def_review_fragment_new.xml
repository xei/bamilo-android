        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="locale"
        android:orientation="vertical"
        >

        <!-- RATINGS SECTION -->

        <include layout="@layout/header"  android:id="@+id/ratingsHeader" />

        <include layout="@layout/_def_ratings_board"  android:id="@+id/ratingsBoard" />

        <!-- USERS SECTION -->

        <include layout="@layout/header"  android:id="@+id/usersHeader" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reviews_scrollview_container"
        >

        <LinearLayout
            android:id="@+id/linear_reviews"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible"
            />

    </ScrollView>

