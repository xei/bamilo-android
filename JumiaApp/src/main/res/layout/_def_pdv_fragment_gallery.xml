    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layoutDirection="ltr"
    android:paddingBottom="@dimen/margin_padding_xl"
    android:paddingTop="@dimen/margin_padding_xl"
    android:scrollbars="none"
    tools:ignore="UnusedAttribute">

    <LinearLayout
        android:id="@+id/pdv_thumbnail_indicator_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_padding_m"
        android:paddingRight="@dimen/margin_padding_m" />

</HorizontalScrollView>