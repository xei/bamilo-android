<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp">

    <ImageView
        android:id="@+id/text_field_icon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:src="@drawable/btn_eyeopen"
        android:contentDescription="@string/app_name"
        android:visibility="gone"/>

    <com.mobile.components.customfontviews.EditText
        android:id="@+id/text_field"
        style="@style/TextField"
        android:layout_toRightOf="@id/text_field_icon"
        android:paddingEnd="50dp"
        android:paddingRight="50dp" />

    <com.mobile.components.customfontviews.CheckBox
        android:id="@+id/text_field_password_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/text_field"
        android:layout_alignRight="@id/text_field"
        android:layout_centerVertical="true"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:button="@drawable/_gen_selector_password_eye"
        android:visibility="gone" />

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/text_field_mandatory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingEnd="5dp"
        android:paddingRight="5dp"
        android:text="*"
        android:textColor="@color/accent"
        android:textSize="18sp" />

</RelativeLayout>
