<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- TABS -->

    <com.mobile.components.androidslidingtabstrip.SlidingTabLayout
        android:id="@+id/product_info_pager_tab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/tabBar"
        android:layout_gravity="left|start"
        android:gravity="left|start"
        app:stsBottomBorderThickness="0dp"
        app:stsDividerThickness="0dp"
        app:stsDividerColor="@color/white"
        app:stsIndicatorColor="@color/color_accent"
        app:stsIndicatorThickness="0.5dp"
        android:layoutDirection="ltr"/>

    <!-- CONTENT -->

    <com.mobile.components.viewpager.RtlViewPager
        android:id="@+id/product_info_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white"
        />

</LinearLayout>