<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- TABS -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tabBar">

        <com.mobile.components.androidslidingtabstrip.SlidingTabLayout
            android:id="@+id/product_info_pager_tab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|start"
            android:background="@color/tabBar"
            android:gravity="left|start"
            android:layoutDirection="ltr"
            app:stsBottomBorderThickness="0dp"
            app:stsDividerColor="@color/white"
            app:stsDividerThickness="0dp"
            app:stsIndicatorColor="@color/color_accent"
            app:stsIndicatorThickness="1dp" />

    </RelativeLayout>

    <!-- CONTENT -->

    <com.mobile.components.viewpager.RtlViewPager
        android:id="@+id/product_info_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/white" />

</LinearLayout>