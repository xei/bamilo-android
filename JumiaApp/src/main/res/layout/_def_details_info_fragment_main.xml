<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- TABS -->

    <com.mobile.components.androidslidingtabstrip.SlidingTabLayout
        android:id="@+id/product_info_pager_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/tabBar"
        app:stsBottomBorderThickness="0dp"
        app:stsIndicatorColor="@color/orange_tab_bar"
        app:stsIndicatorThickness="@dimen/sliding_tab_inidicator_thickness"
        android:layoutDirection="ltr"/>

    <!-- CONTENT -->

    <com.mobile.components.viewpager.RtlViewPager
        android:id="@+id/product_info_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>