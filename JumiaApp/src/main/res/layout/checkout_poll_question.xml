<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/margin_mid"
    android:paddingRight="@dimen/margin_mid"
    android:background="@android:color/white" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- TITLE -->

            <com.mobile.components.customfontviews.TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_huge"
                android:fontFamily="roboto_regular"
                android:gravity="left"
                android:text="@string/poll_question_label"
                android:textColor="@color/orange_ffa200"
                android:textSize="@dimen/text_l" />

            <View
                style="@style/divider_horizontal"
                android:layout_width="wrap_content" />

            <!-- FORM -->

            <LinearLayout
                android:id="@+id/checkout_poll_form_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_midhuge"
                android:layout_marginTop="@dimen/margin_midhuge"
                android:orientation="vertical" >
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- NEXT BUTTON -->

    <com.mobile.components.customfontviews.Button
        android:id="@+id/checkout_poll_button_enter"
        style="@style/button_orange_style"
        android:layout_alignParentBottom="true"
        android:fontFamily="roboto_regular"
        android:text="@string/next_button"
        android:layout_width="@dimen/inner_container_width" />

</RelativeLayout>
