<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/buy_bar_height"
    android:orientation="horizontal">

    <ImageButton
        android:id="@+id/pdv_button_share"
        android:layout_width="@dimen/buy_bar_image_item_width"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/black_900"
        android:paddingLeft="@dimen/layout_padding"
        android:paddingRight="@dimen/layout_padding"
        android:src="@drawable/ic_share" />

    <ImageButton
        android:id="@+id/pdv_button_call"
        android:layout_width="@dimen/buy_bar_image_item_width"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/black_900"
        android:paddingLeft="@dimen/layout_padding"
        android:paddingRight="@dimen/layout_padding"
        android:src="@drawable/ic_call" />

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/pdv_button_buy"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/color_accent"
        android:clickable="true"
        android:gravity="center"
        android:paddingLeft="@dimen/layout_marginLeft"
        android:paddingRight="@dimen/layout_marginLeft"
        android:text="@string/buy_now_button"
        android:textColor="@color/white" />

</LinearLayout>