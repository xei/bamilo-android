<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/list_row_rounded_style"
    android:layout_height="@dimen/catalog_list_item_height"
    android:layout_marginEnd="@dimen/margin_mid"
    android:layout_marginLeft="@dimen/margin_mid"
    android:layout_marginRight="@dimen/margin_mid"
    android:layout_marginStart="@dimen/margin_mid"
    android:layout_marginTop="@dimen/margin_small">

    <RelativeLayout
        android:id="@+id/offer_item_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/offer_button_container"
        android:layout_toStartOf="@+id/offer_button_container"
        android:paddingLeft="@dimen/margin_mid"
        android:paddingStart="@dimen/margin_mid"
        android:paddingTop="@dimen/catalog_item_vertical_padding" >

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/offer_price"
            style="@style/text_price"
            android:layout_width="match_parent"
            android:gravity="left|start"
            android:layout_alignParentTop="true"
            tools:text="RM 9000" />

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/offer_owner_name"
            style="@style/text_title"
            android:layout_width="match_parent"
            android:layout_below="@+id/offer_price"
            android:layout_marginTop="@dimen/margin_mid"
            android:gravity="left|start"
            tools:text="BRAND" />

        <RelativeLayout
            android:id="@+id/offer_rating_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/item_name"
            android:layout_alignStart="@id/item_name"
            android:layout_below="@+id/offer_owner_name"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/margin_mid"
            android:gravity="start|left|center_vertical" >

            <RatingBar
                android:id="@+id/item_rating"
                style="@style/StarBar.Small.Indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                tools:rating="3.5" />

            <com.mobile.components.customfontviews.TextView
                android:id="@+id/item_reviews"
                style="@style/text_subtitle"
                android:layout_width="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_toEndOf="@+id/item_rating"
                android:layout_toRightOf="@+id/item_rating"
                android:gravity="start|left|center_vertical"
                android:includeFontPadding="false"
                tools:text="Reviews"
                android:textColor="@color/grey_light" />
        </RelativeLayout>

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/offer_item_delivery"
            style="@style/text_normal"
            android:layout_width="match_parent"
            android:layout_below="@+id/offer_rating_container"
            android:layout_marginTop="@dimen/margin_mid"
            android:ellipsize="end"
            android:gravity="left|center_vertical|start"
            tools:text="Delivery Within:14 -18 days" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/offer_button_container"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" >

        <com.mobile.components.customfontviews.Button
            android:id="@+id/offer_addcart"
            style="@style/button_orange_bottom"
            android:layout_width="105dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/margin_huge"
            android:layout_marginLeft="@dimen/margin_mid"
            android:layout_marginRight="@dimen/margin_huge"
            android:layout_marginStart="@dimen/margin_huge"
            android:contentDescription="@string/productdetail_addcart_description"
            android:text="@string/add_to_shopping_cart"
            android:textSize="@dimen/text_subtitle"
            android:focusable="false"
            android:focusableInTouchMode="false"/>
    </RelativeLayout>

</RelativeLayout>