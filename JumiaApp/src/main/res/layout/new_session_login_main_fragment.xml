<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/margin_16dp"
        android:paddingRight="@dimen/margin_16dp"
        android:orientation="vertical">

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_50dp" />
    <com.mobile.components.customfontviews.EditText
        style="@style/BlueFormTextField"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text=""
        android:hint="@string/email_address"
        android:ems="10"
        android:layoutDirection="rtl"
        android:id="@+id/login_email" />
    <com.mobile.components.customfontviews.TextView
        android:fontFamily="@string/bamilo_font"
        android:id="@+id/login_text_error_message"
        android:visibility="gone"
        android:textAlignment="textStart"
        style="@style/FormTextErrorField"/>
    <com.mobile.components.customfontviews.EditText
        android:layout_width="match_parent"
        style="@style/BlueFormTextField"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:hint="@string/password"
        android:id="@+id/login_password"
        android:textSize="12sp" />
    <com.mobile.components.customfontviews.TextView
        android:id="@+id/password_text_error_message"
        android:fontFamily="@string/bamilo_font"
        android:visibility="gone"
        android:textAlignment="textStart"
        style="@style/FormTextErrorField"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_20dp" />

    <com.mobile.components.customfontviews.TextView
        android:text="@string/fgt_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:id="@+id/login_email_button_password"
        android:textColor="#1E375F" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_20dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_button_continue"
        style="@style/Widget.AppCompat.Button.Colored"
        android:background="#1E375F"
        android:text="@string/login_label" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_20dp" />

    <com.mobile.components.customfontviews.TextView
        android:text="@string/continue_without_log_in"
        android:layout_width="match_parent"
        android:textSize="12sp"
        android:layout_height="wrap_content"
        android:id="@+id/continue_without_log_in"
        android:textColor="#1E375F"
        android:visibility="gone"
        app:met_primaryColor="@color/transparent"
        android:textAlignment="center" />

</LinearLayout>
    </ScrollView>