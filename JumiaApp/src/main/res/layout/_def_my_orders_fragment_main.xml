<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.mobile.components.customfontviews.TextView
        style="@style/HeaderStyle"
        android:text="@string/my_order_history_label" />

    <ListView
        android:id="@+id/orders_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/black_400"
        android:dividerHeight="1dp"
        android:listSelector="@drawable/_gen_selector_group_selected" />

    <View style="@style/DividerHorizontal.Black_400" />

</LinearLayout>