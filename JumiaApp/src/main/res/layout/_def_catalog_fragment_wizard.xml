<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    android:background="#90000000">

    <LinearLayout
        android:id="@+id/catalog_wizard_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:clickable="true"
        android:focusable="true"
        android:paddingBottom="15dp">

        <LinearLayout
            android:id="@+id/indicators_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center_horizontal"
            android:visibility="gone"
            android:orientation="horizontal"/>

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/catalog_wizard_button_ok"
            style="@style/button_orange_style"
            android:layout_width="@dimen/tips_button_width"
            android:layout_height="@dimen/tips_button_height"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:text="@string/got_it"
            android:textColor="#fff"
            android:textSize="@dimen/text_l"
            android:textStyle="bold" />
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/catalog_wizard_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/catalog_wizard_indicator" />

</RelativeLayout>