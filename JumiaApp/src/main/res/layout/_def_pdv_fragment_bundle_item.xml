<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/im"
        android:layout_width="@dimen/teaser_product_item_width"
        android:layout_height="102dp"
        android:orientation="vertical">

        <include
            android:id="@+id/item_image_loadable"
            layout="@layout/image_loadable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true" />

        <com.mobile.components.customfontviews.CheckBox
            android:id="@+id/item_check"
            style="@style/form_checkbox_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:checked="true" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="@dimen/teaser_product_item_width"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/item_brand"
            style="@style/Caption"
            color="@color/black_800"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1" />

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/item_title"
            style="@style/TextHeader"
            color="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:text="Title" />

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/item_price"
            style="@style/Caption"
            color="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Price" />


    </LinearLayout>


</LinearLayout>