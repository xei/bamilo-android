<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dp"
    android:orientation="vertical" >

    <!-- TITLE -->

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/checkout_addresses_other_title"
        style="@style/HeaderStyle"
        android:text="@string/billing_others_label" />

    <com.mobile.utils.GenericRadioGroup
        android:id="@+id/checkout_addresses_other_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/black_300"/>
    <!-- ADD NEW ADDRESS -->

    <LinearLayout
        android:layout_width="@dimen/inner_container_width"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/rounded_margin_mid"
        android:orientation="vertical" >

        <include
            android:id="@+id/checkout_addresses_other_add"
            layout="@layout/checkout_my_addresses_add_new"
            />

    </LinearLayout>

</LinearLayout>