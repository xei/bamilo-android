<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- HEADER TITLE -->

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/pdv_specs_title"
        style="@style/HeaderStyle"
        android:text="@string/seller_info" />

    <!--CONTENT -->
    <com.mobile.components.customfontviews.TextView
        android:id="@+id/pdv_seller_name"
        style="@style/TextBody_1"
        android:layout_marginLeft="@dimen/layout_padding"
        android:layout_marginStart="@dimen/layout_padding"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/item_margin_top"
        android:textStyle="bold"/>

    <!-- RATING -->

    <LinearLayout
        android:id="@+id/seller_rating_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_padding"
        android:layout_marginStart="@dimen/layout_padding"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/item_margin_top">

        <RatingBar
            android:id="@+id/pdv_seller_rating_bar"
            style="@style/starRatingBarSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:layout_gravity="center_vertical"/>

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/pdv_seller_rating_bar_count"
            style="@style/TextCaption"
            color="@color/black_800"
            android:layout_marginLeft="@dimen/margin_mid"
            android:layout_marginStart="@dimen/margin_mid" />

    </LinearLayout>

    <!-- DELIVERY TIME -->

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/pdv_seller_delivery_info"
        style="@style/TextHeader"
        android:layout_marginLeft="@dimen/layout_padding"
        android:layout_marginStart="@dimen/layout_padding"
        android:paddingBottom="16dp"
        android:textColor="@color/black"
        android:visibility="gone" />

    <!-- DELIVERY TIME: OVERSEAS -->

    <RelativeLayout
        android:id="@+id/pdv_seller_overseas_delivery_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_padding"
        android:layout_marginStart="@dimen/layout_padding"
        android:orientation="horizontal"
        android:paddingBottom="16dp"
        android:visibility="gone">

        <!-- TITLE -->

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/pdv_seller_overseas_delivery_title"
            style="@style/TextHeader"
            android:drawableLeft="@drawable/ic_overseas"
            android:drawableStart="@drawable/ic_overseas"
            android:drawablePadding="16dp"
            android:textColor="@color/black" />

        <!-- TEXT BLACK -->

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/pdv_seller_overseas_delivery_text_black"
            style="@style/TextCaption"
            android:layout_below="@id/pdv_seller_overseas_delivery_title"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:singleLine="false"
            android:textColor="@color/black"
            android:visibility="gone"/>

        <!-- TEXT ORANGE -->

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/pdv_seller_overseas_delivery_text_orange"
            style="@style/TextCaption"
            android:layout_below="@id/pdv_seller_overseas_delivery_text_black"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:singleLine="false"
            android:textColor="@color/color_accent"
            android:visibility="gone"/>

        <!-- LINK -->

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/pdv_seller_overseas_delivery_link"
            style="@style/TextCaption"
            android:layout_below="@id/pdv_seller_overseas_delivery_text_orange"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:clickable="true"
            android:singleLine="false"
            android:paddingTop="16dp"
            android:textColor="@color/color_accent"
            android:visibility="visible"/>

    </RelativeLayout>

    <!-- WARRANTY: OPTIONAL -->

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/pdv_seller_warranty"
        style="@style/TextHeader"
        android:layout_marginLeft="@dimen/layout_padding"
        android:layout_marginStart="@dimen/layout_padding"
        android:layout_marginTop="16dp"
        android:drawableLeft="@drawable/ic_warranty"
        android:drawableStart="@drawable/ic_warranty"
        android:drawablePadding="16dp"
        android:textColor="@color/black"
        android:visibility="gone" />

    <!-- OTHER SELLERS BUTTON: optional -->

    <View
        android:id="@+id/separator"
        style="@style/divider_horizontal"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:visibility="gone" />

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/pdv_seller_button_others"
        style="@style/SubListItemStyle"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:visibility="gone"/>

</LinearLayout>