<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_centerVertical="true"
    android:background="@android:color/transparent">

    <ImageView
        android:id="@+id/tab_home_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:src="@drawable/ic_payment" />

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/tab_home_text"
        style="@style/TextBase.Caption.White"
        android:layout_width="wrap_content"
        android:layout_below="@id/tab_home_image"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/checkout_header_step_4" />
</RelativeLayout>