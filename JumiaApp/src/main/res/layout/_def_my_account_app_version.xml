<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="48dp">

    <include layout="@layout/_def_my_account_language_item"/>

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/app_version_label"
        style="@style/TextCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="@color/black"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/my_account_gen_dimen"
        android:layout_marginRight="@dimen/my_account_gen_dimen" />

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/update_label"
        style="@style/TextCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/app_version_label"
        android:textColor="@color/black_800"
        android:layout_marginEnd="@dimen/my_account_gen_dimen"
        android:layout_marginRight="@dimen/my_account_gen_dimen"/>
</RelativeLayout>