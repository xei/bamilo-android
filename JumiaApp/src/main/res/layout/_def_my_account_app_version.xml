<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_48dp">

    <ImageView
        android:id="@+id/app_version_icon"
        android:layout_width="@dimen/dimen_28dp"
        android:layout_height="@dimen/dimen_43dp"
        android:layout_centerVertical="true"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentLeft="false"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"  />

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/option_name"
        style="@style/TextBase.List.Black"
        android:layout_centerVertical="true"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:text="Title"
        />

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/app_version_label"
        style="@style/TextBase.List.Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/margin_padding_s"
        android:layout_marginEnd="@dimen/margin_padding_xl"
        android:layout_marginRight="@dimen/margin_padding_xl"
        />

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/update_label"
        style="@style/TextBase.Body.Black_800"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/app_version_label"
        android:layout_marginEnd="@dimen/margin_padding_xl"
        android:layout_marginRight="@dimen/margin_padding_xl"
        />

</RelativeLayout>