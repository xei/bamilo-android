<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include
        layout="@layout/my_account_language_item"/>

    <ImageView
        android:id="@+id/flag"
        android:layout_width="@dimen/item_height_normal"
        android:layout_height="@dimen/item_height_normal"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/margin_huge"
        android:layout_marginEnd="@dimen/margin_huge"
        android:padding="@dimen/margin_mid"
        android:src="@mipmap/ic_launcher"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

</RelativeLayout>