<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- CONTENT -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/checkout_edit_button_enter"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- FORM -->

            <include layout="@layout/checkout_edit_address_form" />
        </LinearLayout>
    </ScrollView>

    <!-- BUTTON -->

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/checkout_edit_button_enter"
        style="@style/AigButton.Active"
        android:layout_alignParentBottom="true"
        android:text="@string/save_changes_label" />


</RelativeLayout>