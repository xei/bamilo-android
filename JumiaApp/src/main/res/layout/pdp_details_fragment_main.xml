<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    >

    <!-- BUTTON -->

    <include
        android:id="@+id/pdp_buy_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/buy_bar" />

    <!-- SCROLL CONTAINER -->

    <com.mobile.utils.ScrollViewWithHorizontal
        android:id="@+id/product_detail_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/pdp_buy_bar"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/pdp_info"
            android:orientation="vertical"
            >


                <!-- IMAGE CONTAINER -->


                <include layout="@layout/pdp_details_fragment_image"   android:id="@+id/imageGallery" />


                <!-- PRODUCT IMAGES LIST -->


                <include layout="@layout/pdv_product_images" android:id="@+id/productImages" />



            <!-- SEPARATOR -->

            <View android:layout_width="match_parent"  android:layout_height="wrap_content"  android:background="@drawable/divider" />


            <!-- PRICE -->

            <include layout="@layout/pdp_price_tag"  />

            <!-- SEPARATOR -->

            <View android:layout_height="wrap_content"  android:layout_width="match_parent" android:background="@drawable/divider" />


            <!-- RATING -->

            <include layout="@layout/pdp_rating" android:id="@+id/RatingSection"   />


            <!-- SPECIFICATIONS: OPTIONAL:  -->
            <include layout="@layout/pdp_details"  android:id="@+id/SpecificationsSection"        />

            <!--SIZE: OPTIONAL -->

            <include layout="@layout/single_line_list"  android:id="@+id/SizeSection" />


            <!--SEE OTHER VARIATIONS: OPTIONAL -->

            <include layout="@layout/single_line_list"  android:id="@+id/OtherVariationsSection" />

            <!-- SELLER: OPTIONAL -->

            <include layout="@layout/pdp_seller_info"  android:id="@+id/SellerSection" />


            <!-- DESCRIPTION: OPTIONAL -->

            <include layout="@layout/pdp_details"  android:id="@+id/DescriptionSection"   />


            <!-- COMBOS: OPTIONAL -->

            <include layout="@layout/pdp_combos"  android:id="@+id/CombosSection"   />


            <!-- YOU MAY ALSO LIKE -->

            <include layout="@layout/pdp_related_prods"  android:id="@+id/RelatedSection" />



        </LinearLayout>
    </com.mobile.utils.ScrollViewWithHorizontal>


</RelativeLayout>