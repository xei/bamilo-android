<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/subcategories_icon"
        android:layout_width="@dimen/dimen_40dp"
        android:layout_height="@dimen/dimen_40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/subcateories_text"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_toEndOf="@+id/subcategories_icon"
        android:layout_toRightOf="@+id/subcategories_icon"
        android:gravity="center_vertical"
        android:textColor="@drawable/_gen_selector_text_secondary"
        android:textSize="@dimen/text_16sp"
        android:text="@string/sub_categories"/>

    <View
        android:id="@+id/divider"
        android:layout_alignParentBottom="true"
        style="@style/DividerHorizontal.Black_400" />

</RelativeLayout>