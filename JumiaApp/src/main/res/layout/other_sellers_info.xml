<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/sellers_info"
    android:paddingLeft="@dimen/layout_padding"
    android:paddingRight="@dimen/layout_padding"
    >

    <!-- SELLER INFO -->

    <!--SELLER NAME -->
    <com.mobile.components.customfontviews.TextView
        android:id="@+id/offer_owner_name"
        style="@style/TextBody_1"
        color="@color/black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name"

        />

    <!-- SMALL RATING -->

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal" android:layout_width="match_parent"
        android:id="@+id/ratingContainer"
        android:layout_height="wrap_content"
        android:gravity="center"


        >

        <!-- changeFashion: choose the right rating bar considering vertical type -->
        <RatingBar
            android:id="@+id/item_rating"
            style="@style/starRatingBarSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:visibility="gone"
            />


        <RatingBar
            android:id="@+id/item_rating_fashion"
            style="@style/starRatingBarFashionSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:visibility="gone"
            />

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/item_reviews"
            style="@style/Caption"
            color="@color/black_800"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_mid"
            android:layout_marginStart="@dimen/margin_mid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <!-- DELIVERY TIME SECTION -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"  android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:id="@+id/deliverSection"
        >
        <com.mobile.components.customfontviews.TextView
            style="@style/Caption"
            color="@color/black"
            android:layout_centerVertical="true"
            android:text="Delivery time:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txDeliver"
            />

        <com.mobile.components.customfontviews.TextView
            style="@style/Caption"
            color="@color/black"
            android:layout_centerVertical="true"
            android:text="3 - 8 days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/offer_item_delivery"

            />

    </LinearLayout>

</LinearLayout>