<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/home_teaser_stores_card"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    style="@style/JumiaCardViewStyle">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center">

        <ImageView
            android:id="@+id/home_teaser_stores_image"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:contentDescription="@string/app_name"
            android:src="@drawable/no_image_small" />

        <TextView
            android:id="@+id/home_teaser_stores_text_title"
            style="@style/TextBody_1"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/home_teaser_stores_image"
            android:background="@null" />

        <TextView
            android:id="@+id/home_teaser_stores_text_sub"
            style="@style/TextCaption"
            android:layout_below="@id/home_teaser_stores_text_title"
            android:layout_toLeftOf="@id/home_teaser_stores_image"
            android:layout_alignParentLeft="true" />

    </RelativeLayout>

</android.support.v7.widget.CardView>