        />

    <!-- CONTAINER -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black_300">

        <include
            android:id="@+id/ComboSection"
            layout="@layout/_def_pdv_fragment_combo_item" />
    </LinearLayout>


</LinearLayout>