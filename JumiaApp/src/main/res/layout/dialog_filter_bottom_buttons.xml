<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:layout_gravity="center"
    android:background="@color/grey_dividerlight"
    android:gravity="center"
    android:layoutDirection="locale"
    android:orientation="horizontal"
    android:paddingTop="0.75dp" >

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/dialog_filter_button_cancel"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/black"
        android:fontFamily="roboto_regular"
        android:gravity="center"
        android:text="@string/clear_all_lowercase_label"
        android:textColor="@color/white"
        android:textSize="@dimen/list_1_2" />

    <View android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/black_400"/>

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/dialog_filter_button_done"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/black"
        android:fontFamily="roboto_regular"
        android:drawableLeft="@drawable/ic_selector_filters_inactive"
        android:gravity="center"
        android:text="@string/apply_label"
        android:textColor="@color/white"
        android:textSize="@dimen/list_1_2"/>

</LinearLayout>