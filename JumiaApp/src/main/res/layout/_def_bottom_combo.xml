<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/line_separator" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/buy_bar_height"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/txLabelTotal"
            style="@style/TextList_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_padding"
            android:layout_marginStart="@dimen/layout_padding"
            android:text="@string/total_price_bottom"
            android:textColor="@color/black" />

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/txTotalComboPrice"
            style="@style/TextList_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="@dimen/layout_padding"
            android:text="RS 524"
            android:textColor="@color/orange_f68b1e" />

    </LinearLayout>

    <com.mobile.components.customfontviews.Button
        android:id="@+id/btBuyCombo"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/orange_f68b1e"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="@string/buy_combo"
        android:textColor="@color/white" />

</LinearLayout>