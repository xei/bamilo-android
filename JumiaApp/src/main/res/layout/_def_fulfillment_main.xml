<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/rounded_box"
    android:layout_marginLeft="@dimen/margin_mid">

    <!-- TITLE -->

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/fulfillment_title"
        style="@style/rounded_box_title_grey" />

    <!-- DIVIDER -->

    <View
        android:id="@+id/fulfillment_divider"
        style="@style/divider_horizontal"
        android:layout_below="@id/fulfillment_title"
        android:layout_marginBottom="20dp"/>

    <LinearLayout
        android:id="@+id/fulfillment_products_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/fulfillment_divider"/>

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/fulfillment_who"
        style="@style/Body3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/grey_middledark"
        android:layout_below="@id/fulfillment_products_layout"/>

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/fulfillment_shipping_time"
        android:fontFamily = "regular_light"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="@color/grey_middle"
        android:layout_below="@id/fulfillment_who"/>


</RelativeLayout>