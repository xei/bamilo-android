<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/item_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height"
    android:paddingTop="@dimen/pi_layout_padding"
    android:paddingBottom="@dimen/pi_layout_padding"
    android:paddingLeft="@dimen/pi_layout_padding"
    android:clickable="true"
    >

    <!-- PRODUCT ITEM LIST -->
    <!-- CAN BE USED IN CATALOG AND VARIATIONS PAGE -->

    <!-- IMAGE -->
    <include
        android:id="@+id/item_image_loadable"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/item_height"
        android:layout_marginLeft="@dimen/pi_layout_margin"
        layout="@layout/image_loadable"
        android:layout_alignParentLeft="true"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/item_image_loadable"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/pi_layout_margin"

        >

        <!-- BRAND -->
        <com.mobile.components.customfontviews.TextView
            android:id="@+id/item_brand"
            style="@style/TextCaption"
            color="@color/black_800"
            android:lines="1"
            android:text="Brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <!-- TITLE -->
        <com.mobile.components.customfontviews.TextView
            android:id="@+id/item_title"
            style="@style/TextList_1"
            color="@color/black"
            android:lines="1"
            android:text="Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <!-- PRICE (VARIATIONS) -->

        <include layout="@layout/pdp_small_price_tag"   />

        <!-- RATING (CATALOG) -->

    </LinearLayout>


</RelativeLayout>