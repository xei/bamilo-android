<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/dialog_catalog_filter_width"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <!-- MAIN CONTAINER -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@android:color/white" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingBottom="@dimen/margin_huge"
            android:paddingEnd="@dimen/margin_large"
            android:paddingLeft="@dimen/margin_large"
            android:paddingRight="@dimen/margin_large"
            android:paddingStart="@dimen/margin_large"
            android:paddingTop="@dimen/margin_huge"
            tools:context="com.mobile.view.BaseActivity" >

            <!-- RANGE VALUES -->

            <com.mobile.components.customfontviews.TextView
                android:id="@+id/dialog_filter_range_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="roboto_regular"
                android:gravity="center"
                android:textColor="@color/grey_dark"
                android:textSize="@dimen/text_xl" />

            <!-- RANGE BAR -->

            <FrameLayout
                android:id="@+id/dialog_filter_range_bar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_midhuge" />

            <!-- CHECK DISCOUNT -->

            <com.mobile.components.customfontviews.CheckBox
                android:id="@+id/dialog_filter_check_discount"
                style="@style/checkbox_base"          
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_midhuge"
                android:fontFamily="roboto_regular"
                android:text="@string/string_with_discount_only"
                android:textColor="@color/grey_middle"
                android:textSize="@dimen/text_l" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>