<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/order_status_address_item_title"
        style="@style/TextInfo_2"
        android:text="@string/shipping"
        android:textColor="@color/black_700" />

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/order_status_address_item_name"
        style="@style/TextHeader"
        android:textColor="@color/black" />

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/order_status_address_item_street"
        style="@style/TextCaption"
        android:textColor="@color/black" />

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/order_status_address_item_region"
        style="@style/TextCaption"
        android:textColor="@color/black" />

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/order_status_address_item_postcode"
        style="@style/TextCaption"
        android:textColor="@color/black"
        android:visibility="gone"/>

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/order_status_address_item_phone"
        style="@style/TextCaption"
        android:textColor="@color/black" />

</LinearLayout>