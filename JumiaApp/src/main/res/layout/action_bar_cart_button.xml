<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:background="@android:color/transparent"
    android:layout_centerInParent="true">

    <ImageView
        android:id="@+id/action_cart_image"
        style="?attr/actionButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:src="@drawable/btn_cart" />


    <com.mobile.components.customfontviews.TextView
        android:id="@+id/action_cart_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:singleLine="true"
        android:layout_alignTop="@id/action_cart_image"
        android:layout_alignRight="@id/action_cart_image"
        android:textSize="10sp"
        android:paddingRight="3.5dp"
        android:text="8"
        android:textColor="@color/white"
        android:visibility="visible" />


</RelativeLayout>