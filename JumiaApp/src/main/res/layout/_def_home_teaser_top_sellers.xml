<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_mat_8px"
    android:orientation="vertical"
    android:paddingLeft="@dimen/home_margin"
    android:paddingRight="@dimen/home_margin">

    <TextView
        style="@style/HeaderTeaser"
        android:text="@string/top_sellers" />

    <com.mobile.components.recycler.HorizontalListView
        android:id="@+id/home_teaser_top_sellers_horizontal_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/home_top_sellers_teaser_item_height"
        android:scrollbars="none"
        android:requiresFadingEdge="horizontal"
        android:fadingEdge="horizontal"
        android:fadingEdgeLength="@dimen/home_horizontal_fade"/>

</LinearLayout>
