<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/PdvPriceTagStyle" >

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/pdv_text_special_price"
        style="@style/TextDisplay_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true" />

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/pdv_text_price"
        style="@style/TextDisplay_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_marginLeft"
        android:layout_marginStart="@dimen/layout_marginLeft"
        android:layout_toRightOf="@id/pdv_text_special_price"
        android:layout_toEndOf="@id/pdv_text_special_price"
        android:layout_centerVertical="true" />

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/pdv_text_discount"
        style="@style/PdvBadgeStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_marginLeft"
        android:layout_marginStart="@dimen/layout_marginLeft"
        android:layout_toRightOf="@id/pdv_text_price"
        android:layout_toEndOf="@id/pdv_text_price"
        android:layout_centerVertical="true" />

</RelativeLayout>