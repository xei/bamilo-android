<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:layout_marginRight="@dimen/my_account_gen_dimen"
    android:layout_marginEnd="@dimen/my_account_gen_dimen"
    android:gravity="center_vertical" >

    <View
        style="@style/divider_horizontal" />

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/option_name"
        style="@style/TextCaption"
        android:text="Title"
        android:textColor="@color/black"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/my_account_gen_dimen"
        android:layout_marginRight="@dimen/my_account_gen_dimen"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"/>

    <com.mobile.components.customfontviews.CheckBox
        android:id="@+id/notification_checkbox"
        style="@style/form_checkbox_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="@dimen/my_account_gen_dimen"
        android:layout_marginRight="@dimen/my_account_gen_dimen"
        android:gravity="right|end|center_vertical"
        android:layout_gravity="right|end|center_vertical"
        android:layout_centerVertical="true"
        android:drawablePadding="@dimen/form_check_padding" />

</RelativeLayout>