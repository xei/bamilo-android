<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/order_item_container"
    style="@style/SingleLineGroupStyle"
    android:background="@drawable/_gen_selector_group_selected"
    android:orientation="vertical"
    tools:layout_width="match_parent"
    android:layout_height="70dp">

    <!-- PRICE -->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:background="@color/black_400"
        android:layout_height="30dp">

        <com.mobile.components.customfontviews.TextView
            android:text="order_item_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/order_item_number"
            android:layout_weight="1"
            android:textColor="@color/black_900"
            android:textStyle="normal|bold" />

        <com.mobile.components.customfontviews.TextView
            android:text="order_item_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/order_item_date"
            android:layout_weight="1"
            android:textColor="@color/black_900"
            android:textStyle="normal|bold" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.mobile.components.customfontviews.TextView
            android:text="order_item_price"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/order_item_price"
            android:textColor="@color/black_900" />

        <com.mobile.components.customfontviews.TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@+id/order_item_price"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/textView7"
            android:textColor="@color/black_900" />
    </RelativeLayout>

</LinearLayout>