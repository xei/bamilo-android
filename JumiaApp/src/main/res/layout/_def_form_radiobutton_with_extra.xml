<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/black">

    <!-- DIVIDER -->

    <View
        android:id="@+id/radio_divider"
        style="@style/divider_horizontal" />

    <LinearLayout
        android:id="@+id/radio_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.mobile.components.customfontviews.RadioButton
            android:id="@+id/radio_shipping"
            style="@style/form_style"
            android:layout_height="@dimen/checkout_shipping_item_height"
            android:layout_marginEnd="@dimen/form_radiobutton_shipping_margin"
            android:layout_marginRight="@dimen/form_radiobutton_shipping_margin"
            android:background="@null"
            android:button="@null"
            android:drawableEnd="@drawable/btn_radio_holo_orange"
            android:drawableRight="@drawable/btn_radio_holo_orange" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/extras"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/form_radiobutton_shipping_margin"
        android:visibility="visible"
        android:background="@color/red_basic">

        <!--PAYMENT-->

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/payment_text"
            style="@style/MultiLineStyle"
            android:visibility="gone" />

        <!--SHIPPING INFO-->

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/shipping_time_label_and_value"
            style="@style/TextCaption"
            android:visibility="gone" />

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/shipping_fee_label_and_value"
            style="@style/TextCaption"
            android:visibility="gone" />

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/shipping_fee_info"
            style="@style/TextInfo_2"
            android:fontFamily="roboto_light"
            android:text="@string/shipping_fee_info"
            android:visibility="gone" />

        <!--SHIPPING PUS-->

        <com.mobile.components.absspinner.IcsSpinner
            android:id="@android:id/custom"
            style="@style/form_style"
            android:layout_height="@dimen/checkout_shipping_item_height"
            android:background="@drawable/spinner_background_holo_orange"
            android:clickable="true"
            android:spinnerMode="dropdown"
            android:visibility="gone" />

        <com.mobile.utils.PickUpStationListView
            android:id="@+id/pickup_stations_list_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@color/grey_light"
            android:dividerHeight="0.75dp"
            android:paddingLeft="@dimen/dimen_50px"
            android:paddingRight="@dimen/dimen_50px"
            android:visibility="gone" />

        <!--
            https://code.google.com/p/android/issues/detail?id=2254
            FIXED only showing 2 lines
            by setting android:ellipsize="none" after being set up as end by style="@style/text_normal"
        -->
    </LinearLayout>

</LinearLayout>