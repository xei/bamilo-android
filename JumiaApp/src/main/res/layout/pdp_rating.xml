<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:id="@+id/ratingContainer"
    android:layout_height="48dp"
    android:paddingLeft="20dp"
    android:gravity="center"

    >
    <RatingBar
        android:id="@+id/product_detail_product_rating"
        style="@style/starRatingBarBig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:isIndicator="true" />

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/product_detail_product_rating_count"
        style="@style/Info"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_mid"
        android:layout_marginStart="@dimen/margin_mid"
        android:layout_toEndOf="@+id/product_detail_product_rating"
        android:layout_toRightOf="@+id/product_detail_product_rating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>