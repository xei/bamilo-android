<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/email_notifications_title"
        style="@style/HeaderStyle"
        android:layout_alignParentTop="true"
        android:text="@string/newsletters_label"
        android:textStyle="bold" />

    <ScrollView
        android:id="@+id/email_notifications_scroll"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_above="@+id/email_notifications_save"
        android:layout_below="@+id/email_notifications_title"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <!-- NEWSLETTERS -->

            <LinearLayout
                android:id="@+id/myaccount_newsletter_list"
                android:layout_width="@dimen/inner_container_width"
                android:layout_height="wrap_content"
                android:layout_below="@id/text"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/rounded_margin_small" />


        </LinearLayout>

    </ScrollView>

    <!-- BUTTONS -->
            <com.mobile.components.customfontviews.TextView
                android:id="@+id/email_notifications_save"
                style="@style/AigButton.Active"
                android:layout_alignParentBottom="true"
                android:contentDescription="@string/myaccount_save_description"
                android:text="@string/save_label" />



</RelativeLayout>