<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="34dp"
    android:orientation="horizontal"
    android:gravity="center"
    android:shadowColor="@color/black_shadow"
    android:shadowDx="2"
    android:shadowDy="2"
    android:shadowRadius="2"
    android:background="@drawable/titlebar_noaccess">

    <ImageView
        android:id="@+id/warning_image"
        android:layout_width="40dp"
        android:layout_height="25dp"
        android:layout_centerInParent="true"
        android:src="@drawable/img_warning"
        android:layout_centerVertical="true"
        />

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/warning_text"
        style="@style/white_text_16sp_normal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="0dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/stale_warning"
        android:layout_centerInParent="true"
        android:layout_toEndOf="@id/warning_image"
        android:layout_toRightOf="@id/warning_image"/>
</RelativeLayout>
