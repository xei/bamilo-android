<?xml version="1.0" encoding="utf-8"?><!-- A CardView that contains a TextView -->
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ProductTeaserStyle"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dimen_10dp"
        android:layout_marginBottom="@dimen/dimen_10dp"
        android:orientation="vertical"
        >

        <FrameLayout
            android:layout_width="@dimen/dimen_98dp"
            android:layout_height="@dimen/dimen_123dp"
            android:layout_gravity="center_horizontal"
            >

            <include layout="@layout/home_teaser_image_loadable" />

        </FrameLayout>

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/brand"
            android:textColor="@color/black_800"
            style="@style/TextBody" />

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/name"
            android:textColor="@color/black"
            style="@style/TextTitle" />

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/price"
            android:textColor="@color/black"
            style="@style/TextBody" />

    </LinearLayout>

</android.support.v7.widget.CardView>
