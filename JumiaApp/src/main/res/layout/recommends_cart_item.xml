<?xml version="1.0" encoding="utf-8"?><!-- A CardView that contains a TextView -->
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    style="@style/ProductTeaserStyle"
    android:layout_height="@dimen/dimen_200dp"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="0dp"
    android:layout_margin="2dp"
    card_view:contentPadding="@dimen/margin_padding_xs"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardBackgroundColor="@color/white"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin_padding_xs"
        android:layout_marginTop="@dimen/margin_padding_l"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="@dimen/dimen_98dp"
            android:layout_height="@dimen/dimen_123dp"
            android:layout_gravity="center_horizontal">

            <include layout="@layout/home_teaser_image_loadable" />

        </FrameLayout>

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/bamilo_regular_font"
            android:gravity="left|start|center_vertical"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:textSize="11sp"
            android:textColor="@color/recommendation_cart_grey"
            />


            <com.mobile.components.customfontviews.TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@string/bamilo_regular_font"
                android:gravity="left|start|center_vertical"
                android:ellipsize="end"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                android:textSize="12sp"
                android:textColor="@color/recommendation_cart_black" />


        <com.mobile.components.customfontviews.TextView
            android:id="@+id/brand"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/bamilo_regular_font"
            android:gravity="left|start|center_vertical"
            android:ellipsize="end"
            android:singleLine="true"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="10dp"
            android:visibility="gone"
            android:textSize="10sp"
            android:textColor="@color/recommendation_grey" />

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/old_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/bamilo_regular_font"
            android:gravity="left|start|center_vertical"
            android:ellipsize="end"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:singleLine="true"
            android:textSize="10sp"
            android:visibility="gone"
            android:textColor="@color/recommendation_grey" />


    </LinearLayout>

</android.support.v7.widget.CardView>
