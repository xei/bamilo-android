<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/checkout_payment_button_container"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- PAYMENT METHODS -->

            <include layout="@layout/checkout_payment_methods" />

            <!-- VOUCHER -->

            <include layout="@layout/voucher_insert_layout" />
        </LinearLayout>
    </ScrollView>

    <!-- NEXT BUTTON -->

    <LinearLayout
        android:id="@id/checkout_payment_button_container"
        style="@style/button_container"
        android:layout_alignParentBottom="true" >

        <com.mobile.components.customfontviews.Button
            android:id="@+id/checkout_payment_button_enter"
            style="@style/button_orange_bottom"
            android:layout_width="@dimen/inner_container_width"
            android:text="@string/next_button" />
    </LinearLayout>

</RelativeLayout>