<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/addabletocart_item_container"
    style="@style/list_row_rounded_style"
    android:layoutDirection="locale"
    android:layout_height="@dimen/catalog_list_item_height"
    android:gravity="center" >

    <!-- IMAGE CONTAINER -->

    <include
        android:id="@+id/item_image_container"
        android:layout_width="@dimen/catalog_list_item_image_width"
        android:layout_height="@dimen/catalog_list_item_image_height"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/rounded_margin_mid"
        android:layout_marginStart="@dimen/rounded_margin_mid"
        layout="@layout/addabletocart_item_image" />

    <ImageView
        android:id="@+id/item_image_is_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left|start"
        android:src="@drawable/selector_is_new"/>

    <!-- INFO CONTAINER -->

    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="@dimen/rounded_margin_mid"
        android:layout_marginLeft="@dimen/catalog_list_item_image_padding"
        android:layout_marginRight="@dimen/rounded_margin_mid"
        android:layout_marginStart="@dimen/catalog_list_item_image_padding"
        android:layout_toEndOf="@id/item_image_container"
        android:layout_toRightOf="@id/item_image_container"
        layout="@layout/addabletocart_item_info" />

</RelativeLayout>