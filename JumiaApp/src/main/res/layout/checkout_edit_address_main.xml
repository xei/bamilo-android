<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- CONTENT -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/checkout_my_order_buttons"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <!-- FORM -->

            <include layout="@layout/checkout_edit_address_form" />
        </LinearLayout>
    </ScrollView>

    <!-- BUTTONS -->

        <LinearLayout
            style="@style/button_container"
            android:id="@+id/checkout_my_order_buttons"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true">

            <com.mobile.components.customfontviews.Button
                android:id="@+id/checkout_edit_button_cancel"
                style="@style/button_grey_bottom"
                android:layout_marginRight="@dimen/margin_x_small"
                android:layout_weight="1"
                android:text="@string/cancel_label" />

            <com.mobile.components.customfontviews.Button
                android:id="@+id/checkout_edit_button_enter"
                style="@style/button_orange_bottom"
                android:layout_marginLeft="@dimen/margin_x_small"
                android:layout_weight="1"
                android:text="@string/save_changes_label" />
        </LinearLayout>


</RelativeLayout>