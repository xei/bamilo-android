<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:background="@drawable/modal_dialog_header"
    android:orientation="horizontal"
    android:paddingEnd="@dimen/margin_large"
    android:paddingLeft="@dimen/margin_large"
    android:paddingRight="@dimen/margin_large"
    android:paddingStart="@dimen/margin_large">

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/dialog_filter_header_title"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:drawablePadding="@dimen/margin_mid"
        android:fontFamily="roboto_bold"
        android:gravity="start|left|center"
        android:text="@string/filter_label"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_xl" />

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/dialog_filter_header_clear"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:fontFamily="roboto_regular"
        android:gravity="right|end|center"
        android:text="@string/clear_all_uppercase_label"
        android:textColor="@drawable/selector_clearall"
        android:textSize="@dimen/text_l" />

</RelativeLayout>