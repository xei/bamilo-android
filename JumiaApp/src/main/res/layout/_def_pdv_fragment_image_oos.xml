<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:background="@color/white_70_op"
    android:gravity="center">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/black_700"
        android:gravity="center"
        android:padding="2dp">

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/out_of_stock_text"
            style="@style/TextList_1"
            android:background="@color/white"
            android:padding="15dp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/product_outof_stock"
            android:textAllCaps="true"
            android:textColor="@color/black_900"
            android:textStyle="bold" />
    </RelativeLayout>


</RelativeLayout>