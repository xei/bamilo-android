<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/TeaserWhiteContainerStyle"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimen_mat_148px"
    android:layout_gravity="center">

    <android.support.v4.view.ViewPager
        android:id="@+id/home_teaser_main_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center" />

    <com.viewpagerindicator.CirclePageIndicator
        android:id="@+id/home_teaser_main_indicator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/dimen_mat_8px" />

</RelativeLayout>