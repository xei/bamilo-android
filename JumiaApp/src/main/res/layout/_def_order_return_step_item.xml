<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/list_row_style"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/margin_padding_xxl">

    <!-- IMAGE CONTAINER -->
    <include
        style="@style/ProductImageListStyle"
        layout="@layout/_def_gen_image_loadable"
        android:layout_margin="@dimen/margin_padding_xl"
        tools:layout_height="@dimen/catalog_list_item_image_height"
        tools:layout_width="@dimen/catalog_list_item_image_width" />

    <!-- INFO CONTAINER -->
    <include
        layout="@layout/_def_order_return_step_item_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_padding_xl"
        android:layout_marginStart="@dimen/margin_padding_xl" />
</LinearLayout>
