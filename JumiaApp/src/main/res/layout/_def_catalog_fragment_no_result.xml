                            android:background="@color/transparent"
                            />
                    </RelativeLayout>
                    <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="@dimen/list_h"
                        android:layout_gravity="center_horizontal|center"
                        android:background="@drawable/list_item_border">

                        <!-- icon -->

                        <ImageView
                            android:id="@+id/item_icon4"
                            android:layout_width="@dimen/list_icon_h"
                            android:layout_height="@dimen/list_icon_h"
                            android:src="@drawable/btn_eyeopen"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginLeft="15dp"
                            android:layout_marginStart="15dp" />

                        <TextView
                            android:id="@+id/item_title4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/grey_middledark"
                            android:textSize="@dimen/text_l"
                            android:textAlignment="textEnd"
                            android:layout_marginLeft="13dp"
                            android:layout_marginStart="13dp"
                            android:layout_alignBottom="@+id/item_icon4"
                            android:text="لوازم جانبی الکترونیکی"
                            android:layout_toRightOf="@+id/item_icon4"

                            android:layout_toEndOf="@+id/item_icon4"

                            android:layout_above="@+id/listbutton4"/>

                        <Button
                            android:id="@+id/listbutton4"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:background="@color/transparent"
                            />
                        <!-- title -->

                        <!-- counter -->

                    </RelativeLayout>
                    <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="@dimen/list_h"
                        android:layout_gravity="center_horizontal|center"
                        android:background="@drawable/list_item_border">

                        <!-- icon -->

                        <ImageView
                            android:id="@+id/item_icon5"
                            android:layout_width="@dimen/list_icon_h"
                            android:layout_height="@dimen/list_icon_h"
                            android:src="@drawable/btn_eyeopen"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginLeft="15dp"
                            android:layout_marginStart="15dp" />

                        <TextView
                            android:id="@+id/item_title5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/grey_middledark"
                            android:textSize="@dimen/text_l"
                            android:textAlignment="textEnd"
                            android:layout_marginLeft="13dp"
                            android:text="کامپیوتر و تجیزات اداری"
                            android:layout_marginStart="13dp"
                            android:layout_alignBottom="@+id/item_icon5"
                            android:layout_toRightOf="@+id/item_icon5"
                            android:layout_above="@+id/listbutton5"
                            android:layout_toEndOf="@+id/item_icon5" />

                        <Button
                            android:id="@+id/listbutton5"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:background="@color/transparent"
                            />
                        <!-- title -->

                        <!-- counter -->

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

