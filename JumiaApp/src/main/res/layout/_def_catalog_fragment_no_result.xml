                        android:background="@color/grey_light"
                        android:paddingTop="10dp"
                        android:text="مجموعه های منتخب"
                        android:textStyle="normal|bold" />
                    <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="@dimen/list_h"
                        android:layout_gravity="center_horizontal|center"
                        android:background="@drawable/list_item_border">

                        <!-- icon -->

                        <ImageView
                            android:id="@+id/item_icon"
                            android:layout_width="@dimen/list_icon_h"
                            android:layout_height="@dimen/list_icon_h"
                            android:src="@drawable/btn_eyeopen"
                            android:layout_centerVertical="true"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_marginLeft="15dp"
                            android:layout_marginStart="15dp" />

                        <TextView
                            android:id="@+id/item_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/grey_middledark"
                            android:textSize="@dimen/text_l"
                            android:textAlignment="textEnd"
                            android:layout_marginLeft="13dp"
                            android:text="مد و لباس"
                            android:layout_marginStart="13dp"
                            android:layout_alignBottom="@+id/item_icon"
                            android:layout_toRightOf="@+id/item_icon"
                            android:layout_toEndOf="@+id/item_icon"
                            android:layout_above="@+id/listbutton1"/>

                        <Button
                            android:id="@+id/listbutton1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:background="@color/transparent"
                            />
                    </RelativeLayout>
                    <RelativeLayout android:layout_width="match_parent"
