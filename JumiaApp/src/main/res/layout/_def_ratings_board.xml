<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- TOP PART -->

    <RelativeLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:gravity="center_vertical"
        android:minHeight="26dp"
        android:orientation="horizontal">

        <!-- RATINGS BOARD FOR SPECIFICATIONS -->

        <!-- LEFT SIDE -->
        <LinearLayout
            android:id="@+id/specs_item_key"
            android:layout_width="@dimen/ratings_average_with"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center"
            android:orientation="vertical">

            <com.mobile.components.customfontviews.TextView
                android:id="@+id/averageRating"
                style="@style/TextBase.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/average_rating"
                android:textColor="@color/black" />


            <com.mobile.components.customfontviews.TextView
                android:id="@+id/averageValue"
                style="@style/TextBase.Display_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:text="46/5"
                android:textColor="@color/black_800" />

            <com.mobile.components.customfontviews.TextView
                android:id="@+id/badgeValue"
                style="@style/TextBase.Badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:textColor="@color/black_800" />

        </LinearLayout>

        <View
            android:id="@+id/item_center"
            android:layout_width="1dp"
            android:layout_height="100dp"
            android:layout_toEndOf="@id/specs_item_key"
            android:layout_toRightOf="@id/specs_item_key"
            android:background="@color/black_300"
            android:minHeight="26dp" />


        <!-- RIGHT SIDE -->

        <RelativeLayout
            android:id="@+id/progressBoard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/item_center"
            android:layout_toRightOf="@id/item_center">

            <!-- 5 -->

            <com.mobile.components.customfontviews.TextView
                android:id="@+id/five"
                style="@style/TextBase.Badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:text="5"
                android:textColor="@color/black" />

            <ProgressBar

                android:id="@+id/progressBarFive"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="90dp"
                android:layout_height="3dp"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/five"
                android:layout_toRightOf="@id/five"
                android:progressDrawable="@drawable/ratings_progress" />

            <com.mobile.components.customfontviews.TextView
                android:id="@+id/fiveValue"
                style="@style/TextBase.Badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/progressBarFive"
                android:layout_toRightOf="@id/progressBarFive"
                android:text="(0)"
                android:textColor="@color/black" />

            <!-- 4 -->

            <com.mobile.components.customfontviews.TextView
                android:id="@+id/four"
                style="@style/TextBase.Badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/five"
                android:text="4"
                android:textColor="@color/black" />

            <ProgressBar
                android:id="@+id/progressBarFour"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="90dp"
                android:layout_height="3dp"
                android:layout_below="@id/five"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/four"
                android:layout_toRightOf="@id/four"
                android:progressDrawable="@drawable/ratings_progress"

                />

            <com.mobile.components.customfontviews.TextView
                android:id="@+id/fourValue"
                style="@style/TextBase.Badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fiveValue"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/progressBarFour"
                android:layout_toRightOf="@id/progressBarFour"
                android:text="(0)"
                android:textColor="@color/black" />

            <!-- 3 -->

            <com.mobile.components.customfontviews.TextView
                android:id="@+id/three"
                style="@style/TextBase.Badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/four"
                android:text="3"
                android:textColor="@color/black"

                />

            <ProgressBar

                android:id="@+id/progressBarThree"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="90dp"
                android:layout_height="3dp"
                android:layout_below="@id/four"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/three"
                android:layout_toRightOf="@id/three"
                android:progressDrawable="@drawable/ratings_progress"

                />

            <com.mobile.components.customfontviews.TextView
                android:id="@+id/threeValue"
                style="@style/TextBase.Badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fourValue"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/progressBarThree"
                android:layout_toRightOf="@id/progressBarThree"
                android:text="(0)"
                android:textColor="@color/black"

                />

            <!-- 2 -->

            <com.mobile.components.customfontviews.TextView
                android:id="@+id/two"
                style="@style/TextBase.Badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/three"
                android:text="2"
                android:textColor="@color/black"

                />

            <ProgressBar

                android:id="@+id/progressBarTwo"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="90dp"
                android:layout_height="3dp"
                android:layout_below="@id/three"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/two"
                android:layout_toRightOf="@id/two"
                android:progressDrawable="@drawable/ratings_progress"

                />

            <com.mobile.components.customfontviews.TextView
                android:id="@+id/twoValue"
                style="@style/TextBase.Badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/threeValue"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/progressBarTwo"
                android:layout_toRightOf="@id/progressBarTwo"
                android:text="(0)"
                android:textColor="@color/black"

                />

            <!-- 1 -->

            <com.mobile.components.customfontviews.TextView
                android:id="@+id/one"
                style="@style/TextBase.Badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/two"
                android:text="1"
                android:textColor="@color/black"

                />

            <ProgressBar

                android:id="@+id/progressBarOne"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="90dp"
                android:layout_height="3dp"
                android:layout_below="@id/two"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/one"
                android:layout_toRightOf="@id/one"
                android:progressDrawable="@drawable/ratings_progress"

                />

            <com.mobile.components.customfontviews.TextView
                android:id="@+id/oneValue"
                style="@style/TextBase.Badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/twoValue"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@id/progressBarOne"
                android:layout_toRightOf="@id/progressBarOne"
                android:text="(0)"
                android:textColor="@color/black"

                />


        </RelativeLayout>


    </RelativeLayout>

    <!-- BOTTOM PART -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top"
        android:paddingBottom="20dp">

        <!-- MIDDLE POINT TO DIVIDE THE SCREEN -->

        <View
            android:id="@+id/center_point"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_centerInParent="true" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/center_point"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@id/center_point"
            android:gravity="center"
            android:orientation="vertical">

            <com.mobile.components.customfontviews.TextView
                android:id="@+id/info"
                style="@style/TextBase.Caption"
                color="@color/black_800"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/average_rating_used_prod" />

            <com.mobile.components.customfontviews.TextView
                android:id="@+id/info2"
                style="@style/TextBase.Caption"
                color="@color/black_800"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/average_rate_now" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/lWriteReview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/center_point"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignStart="@id/center_point"
            android:clickable="true"
            android:gravity="center">

            <!-- buttom write -->
            <com.mobile.components.customfontviews.TextView
                android:id="@+id/btWriteReview"
                style="@style/Button_Link.Blue_1"
                android:text="@string/write_comment" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>








