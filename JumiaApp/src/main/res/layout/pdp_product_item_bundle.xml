<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:id="@+id/item_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"

    >

    <RelativeLayout
        android:layout_width="@dimen/teaser_product_item_width"
        android:layout_height="102dp"
        android:orientation="vertical"
        android:id="@+id/im"
        >
        <include
            android:id="@+id/item_image_loadable"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            layout="@layout/image_loadable" />

        <com.mobile.components.customfontviews.CheckBox
            android:id="@+id/item_check"
            style="@style/form_checkbox_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:checked="true"
            android:layout_marginLeft="6dp"
            android:layout_marginBottom="6dp"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="@dimen/teaser_product_item_width"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"

        >

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/item_brand"
            style="@style/Caption"
            color="@color/black_800"
            android:lines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <com.mobile.components.customfontviews.TextView
            android:id="@+id/item_title"
            style="@style/Header"
            color="@color/black"
            android:lines="1"
            android:text="Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/item_price"
            style="@style/Caption"
            color="@color/black"
            android:text="Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />


        </LinearLayout>




</LinearLayout>