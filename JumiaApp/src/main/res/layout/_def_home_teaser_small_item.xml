<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dimen_mat_128px"
    android:layout_height="match_parent"
    style="@style/JumiaCardViewStyle"
    android:layout_marginLeft="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/home_teaser_small_title"
            style="@style/TextSubHead" />

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/home_teaser_small_sub_title"
            style="@style/TextCaption" />

        <ImageView
            android:id="@+id/home_teaser_small_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/no_image_small"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="@string/home_label"/>

    </LinearLayout>

</android.support.v7.widget.CardView>
