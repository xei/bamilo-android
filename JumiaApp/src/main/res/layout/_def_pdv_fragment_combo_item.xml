<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/comboGlobal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/layout_padding"
    android:background="@color/white"
    android:orientation="vertical">


    <!-- ITEM COMBO CONTENT: 1 BUNDLE = 1 COMBO -->

    <LinearLayout
        android:id="@+id/pdv_bundles_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" />


    <!-- SEPARATOR -->

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/sep1"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@drawable/line_separator" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/combo_item_height"
        android:gravity="center_vertical">

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/txTotalComboPrice"
            style="@style/TextCaption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="@dimen/layout_item_height"
            android:layout_marginRight="@dimen/layout_item_height"
            android:text="RS 524"
            android:textColor="@color/color_accent" />

        <ImageView
            android:id="@+id/imArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="right|end"
            android:src="@drawable/ic_arrow_combo" />

    </RelativeLayout>

</LinearLayout>