<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/rounded_margin_small"
    android:layout_marginLeft="@dimen/teaser_margin"
    android:layout_marginRight="@dimen/teaser_margin"
    android:layout_marginTop="@dimen/rounded_margin_small"
    android:background="@drawable/background_content"
    android:orientation="vertical" >

    <!-- TITLE -->

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/teaser_products_group_title"
        style="@style/rounded_box_title_grey"
        android:text="Product list"
        android:textSize="@dimen/text_form" />

    <View
        android:id="@+id/teaser_products_group_title_divider"
        style="@style/divider_horizontal_orange"
        android:layout_below="@id/teaser_products_group_title" />

    <!-- CONTAINER -->

    <com.mobile.components.recycler.HorizontalListView
        android:id="@+id/teaser_products_horizontal_list_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/teaser_product_item_width"
        android:layout_below="@id/teaser_products_group_title_divider"
        android:layout_marginBottom="@dimen/margin_10px"
        android:layout_marginTop="@dimen/margin_10px"
        android:scrollbars="none" />

</RelativeLayout>