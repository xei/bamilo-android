<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/grid_row_style"
    android:minHeight="@dimen/catalog_list_item_height"
    android:layout_height="wrap_content">

    <include
        android:id="@+id/image_loadable"
        layout="@layout/image_loadable"
        android:layout_width="@dimen/dimen_82dp"
        android:layout_height="@dimen/dimen_103dp"
        android:layout_centerVertical="true"
        android:layout_marginEnd="@dimen/margin_padding_xl"
        android:layout_marginLeft="@dimen/margin_padding_xl"
        android:layout_marginRight="@dimen/margin_padding_xl"
        android:layout_marginStart="@dimen/margin_padding_xl"
        android:background="@color/color_accent" />


    <!-- INFORMATION -->

    <View
        android:id="@+id/center_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/image_loadable"
        android:layout_toRightOf="@id/image_loadable" />

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/item_brand"
        style="@style/TextBase.Body.Black_800"
        android:layout_width="wrap_content"
        android:layout_alignLeft="@id/center_view"
        android:layout_alignStart="@id/center_view"
        android:layout_marginEnd="@dimen/dimen_50dp"
        android:layout_marginRight="@dimen/dimen_50dp"
        android:layout_marginTop="@dimen/margin_padding_l"
        tools:text="BRAND" />

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/item_name"
        style="@style/TextBase.Title.Black"
        android:layout_alignLeft="@id/center_view"
        android:layout_alignStart="@id/center_view"
        android:layout_below="@id/item_brand"
        android:layout_marginEnd="@dimen/margin_padding_xl"
        android:layout_marginRight="@dimen/margin_padding_xl"
        android:maxLines="2"
        android:singleLine="false"
        tools:text="Name"
        android:textColor="@color/black" />

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/item_discount"
        style="@style/TextBase.Body.Black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/center_view"
        android:layout_alignStart="@id/center_view"
        android:layout_below="@id/item_name"
        android:layout_marginEnd="@dimen/dimen_4dp"
        android:layout_marginRight="@dimen/dimen_4dp"
        android:maxLines="2"
        android:singleLine="false"
        tools:text="Discount" />

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/item_regprice"
        style="@style/TextBase.Body.Black_800"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/item_discount"
        android:layout_toEndOf="@id/item_discount"
        android:layout_toRightOf="@id/item_discount"
        tools:text="Price"
        android:textColor="@color/black_800" />

    <ImageView
        style="@style/ShopFirstStyle"
        android:id="@+id/item_shop_first"
        android:layout_below="@id/item_discount"
        android:layout_alignLeft="@id/item_brand"
        android:layout_alignStart="@id/item_brand"
        android:visibility="gone"/>

    <RelativeLayout
        android:id="@+id/rating_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/item_name"
        android:layout_alignStart="@id/item_name"
        android:layout_marginBottom="@dimen/margin_30px"
        android:gravity="start|left|center_vertical"
        android:orientation="horizontal"
        android:layout_below="@id/item_shop_first"
        android:layout_marginTop="@dimen/dimen_6dp">

        <RatingBar
            android:id="@+id/item_rating"
            style="@style/StarBar.Small.Indicator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            tools:rating="3.5" />

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/item_reviews"
            style="@style/TextBase.Caption"
            android:layout_width="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp"
            android:layout_toEndOf="@id/item_rating"
            android:layout_toRightOf="@id/item_rating"
            android:includeFontPadding="false"
            tools:text="(12)"
            android:textColor="@color/black_800" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/image_is_favourite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:padding="@dimen/margin_padding_xl"
        android:src="@drawable/selector_favorite" />

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/discount_percentage"
        style="@style/PdvBadgeStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_name"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/margin_padding_l"
        android:layout_marginEnd="@dimen/margin_padding_xl"
        android:layout_marginRight="@dimen/margin_padding_xl"
        android:gravity="center" />

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/new_arrival_badge"
        style="@style/NewArrivalBadge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/image_loadable"
        android:layout_marginTop="@dimen/margin_padding_s"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="@dimen/margin_padding_xl"
        android:layout_marginRight="@dimen/margin_padding_xl"
        android:gravity="center"
        android:text="@string/new_arrival_badge" />
</RelativeLayout>