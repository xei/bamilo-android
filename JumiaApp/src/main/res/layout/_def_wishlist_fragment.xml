<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--WISH LIST-->

    <GridView
        android:id="@+id/wish_list_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:listSelector="@drawable/selector_list_item_highlight"
        android:numColumns="@integer/favourite_num_columns"
        android:paddingLeft="@dimen/margin_10px"
        android:paddingRight="@dimen/margin_10px" />

    <!--LOADING MORE-->

    <include
        android:id="@+id/wish_list_loading_more"
        layout="@layout/fragment_loading_more"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_90px"
        android:layout_alignBottom="@id/wish_list_grid" />

</RelativeLayout>