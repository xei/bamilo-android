<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- CONTENT -->

    <ScrollView
        android:id="@+id/checkout_address_form_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/checkout_button_container"
        android:layout_alignParentTop="true">

        <!-- FORMS -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- SHIPPING FORM -->

            <include layout="@layout/checkout_create_address_shipping" />

            <!-- BILLING FORM -->

            <include
                android:id="@+id/checkout_address_form_include_billing"
                layout="@layout/checkout_create_address_billing"
                android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

    <!-- NEXT BUTTON -->

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_light"
        android:layout_above="@+id/checkout_button_container"
        android:layout_marginLeft="@dimen/dimen_30px"
        android:layout_marginRight="@dimen/dimen_30px"/>


    <include layout="@layout/_def_checkout_total_layout"/>

    <!-- WARNING -->

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/checkout_address_required_text"
        style="@style/white_text_16sp_normal"
        android:layout_width="match_parent"
        android:layout_height="34dp"
        android:layout_marginLeft="0dp"
        android:background="@drawable/titlebar_noaccess"
        android:gravity="center_horizontal|center_vertical"
        android:shadowColor="@color/black_shadow"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="2"
        android:text="@string/register_required_text"
        android:visibility="gone" />
</RelativeLayout>