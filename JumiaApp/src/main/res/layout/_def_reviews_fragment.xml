<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="locale"
    android:orientation="vertical">

    <com.mobile.components.ScrollViewReachable
        android:id="@+id/reviews_scrollview_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fafafa">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <!-- RATINGS SECTION -->

            <com.mobile.components.customfontviews.TextView
                android:id="@+id/ratingsHeader"
                style="@style/HeaderStyle" />

            <include
                android:id="@+id/ratingsBoard"
                layout="@layout/ratings_board" />

            <!-- USERS SECTION -->

            <com.mobile.components.customfontviews.TextView
                android:id="@+id/usersHeader"
                style="@style/HeaderStyle" />


            <LinearLayout
                android:id="@+id/linear_reviews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/transparent"
                android:orientation="vertical"
                android:visibility="visible" />


        </LinearLayout>


    </com.mobile.components.ScrollViewReachable>

</LinearLayout>
