<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- BUTTONS -->

    <include
        android:id="@+id/product_detail_button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/product_details_fragment_buttons" />

    <!-- SCROLL CONTAINER -->

    <com.mobile.utils.ScrollViewWithHorizontal
        android:id="@+id/product_detail_scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/product_detail_button_container"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- IMAGE CONTAINER -->

            <include layout="@layout/product_details_fragment_image" />

            <!-- VARIATIONS -->

            <include layout="@layout/product_details_fragment_variations" />

            <!-- BASIC INFO -->

            <include layout="@layout/product_details_fragment_info" />

            <!-- BUNDLE PRODUCTS -->

            <include layout="@layout/product_details_fragment_bundle" />

            <!-- RELATED PRODUCTS -->

            <include layout="@layout/product_details_fragment_related" />
        </LinearLayout>
    </com.mobile.utils.ScrollViewWithHorizontal>

    <!-- TIPS -->

    <include
        android:id="@+id/product_detail_tips_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/tips"
        android:visibility="gone" />

</RelativeLayout>