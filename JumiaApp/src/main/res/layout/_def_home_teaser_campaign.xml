<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    style="@style/TeaserWhiteContainerStyle"
    android:paddingLeft="4dp"
    android:paddingRight="4dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_mat_110px"
        style="@style/JumiaCardViewStyle"
        android:layout_gravity="center">

        <RelativeLayout
            android:id="@+id/home_teaser_campaign_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/home_teaser_campaign_image"
                android:layout_width="123dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:src="@drawable/no_image_small"
                android:contentDescription="@string/home_label" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/home_teaser_campaign_image"
                android:gravity="center">

                <com.mobile.components.customfontviews.TextView
                    android:id="@+id/home_teaser_campaign_title"
                    style="@style/TextSubHead"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <com.mobile.components.customfontviews.TextView
                    android:id="@+id/home_teaser_campaign_timer"
                    style="@style/TextTimer"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <com.mobile.components.customfontviews.TextView
                    style="@style/TextCaption"
                    android:id="@+id/home_teaser_campaign_subtitle"
                    android:gravity="center" />

            </LinearLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <com.mobile.components.customfontviews.TextView
        style="@style/ButtonFlat"
        android:id="@+id/home_teaser_campaign_more"
        android:layout_marginTop="4dp"
        android:text="@string/see_more_offers" />

</LinearLayout>



