<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_container"
    android:layout_width="@dimen/combo_bundle_item_with"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!--IMAGE-->

    <include
        android:id="@+id/item_image_loadable"
        layout="@layout/_def_gen_image_loadable"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_100dp" />

    <!--CHECK BOX-->

    <com.mobile.components.customfontviews.CheckBox
        style="@style/FormCheckBox.Central"
        android:id="@+id/item_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|end"
        android:paddingLeft="@dimen/margin_padding_xxs"
        android:paddingRight="@dimen/margin_padding_xxs"
        android:clickable="false" />

    <!--BRAND-->

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/item_brand"
        style="@style/TextBase.Body.Black_800"
        tools:text="Brand" />

    <!--NAME-->

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/item_title"
        style="@style/TextBase.Title.Black"
        tools:text="Title" />

    <!--PRICE-->

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/item_price"
        style="@style/TextBase.Body.Black"
        tools:text="Price" />

</LinearLayout>