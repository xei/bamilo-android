<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/DialogFilterButtonsContainer"
    android:orientation="horizontal">

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/dialog_filter_button_cancel"
        style="@style/DialogFilterButtonCancel"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/dialog_filter_button_done"
        style="@style/DialogFilterButtonSubmit"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1" />

</LinearLayout>