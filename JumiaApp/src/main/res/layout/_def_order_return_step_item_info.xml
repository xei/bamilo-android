<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/grid_row_style"
    tools:layout_height="wrap_content">

    <!-- BRAND -->
    <com.mobile.components.customfontviews.TextView
        android:id="@+id/order_return_item_text_brand"
        style="@style/TextBase.Body.Black_800"
        tools:text="BRAND" />

    <!-- NAME -->
    <com.mobile.components.customfontviews.TextView
        android:id="@+id/order_return_item_text_name"
        style="@style/TextBase.Title.Black"
        android:layout_below="@id/order_return_item_text_brand"
        tools:text="Name" />

    <!-- QUANTITY -->
    <com.mobile.components.customfontviews.TextView
        android:id="@+id/order_return_item_text_quantity"
        style="@style/TextBase.Body.Black_800"
        android:layout_below="@id/order_return_item_text_name"
        tools:text="Quantity: 2" />

    <!-- ORDER -->
    <com.mobile.components.customfontviews.TextView
        android:id="@+id/order_return_item_text_order"
        style="@style/TextBase.Body.Black"
        android:layout_below="@id/order_return_item_text_quantity"
        tools:text="Order NÂº: 123456789" />

    <!-- QUANTITY TO RETURN -->
    <com.mobile.components.customfontviews.TextView
        android:id="@+id/order_return_item_text_return_quantity"
        style="@style/TextBase.Caption.Black"
        android:layout_below="@id/order_return_item_text_order"
        android:text="@string/quantity_to_return" />

</RelativeLayout>