    android:layout_height="@dimen/home_shop_teaser_height"
    android:layout_marginBottom="@dimen/dimen_mat_8px"
    android:layout_marginTop="@dimen/dimen_mat_8px"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/home_margin"
    android:paddingRight="@dimen/home_margin">

    <include
        android:id="@+id/home_teaser_shop_image_left"
        layout="@layout/home_teaser_shop_item" />

    <include
        android:id="@+id/home_teaser_shop_image_middle"
        layout="@layout/home_teaser_shop_item" />

    <include
        android:id="@+id/home_teaser_shop_image_right"
        layout="@layout/home_teaser_shop_item" />

</LinearLayout>