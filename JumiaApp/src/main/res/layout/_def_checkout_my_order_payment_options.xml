<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
    android:orientation="vertical" >

    <!-- TITLE -->

    <com.mobile.components.customfontviews.TextView
        style="@style/HeaderStyle"
        android:text="@string/my_order_payment" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >


        <ImageView
            android:id="@+id/checkout_my_order_payment_options_btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="@dimen/dimen_60px"
            android:layout_marginRight="@dimen/dimen_60px"
            android:layout_marginTop="@dimen/dimen_60px"
            android:src="@drawable/selector_btn_edit"
            android:paddingLeft="10dp"
            android:paddingStart="10dp"/>

        <!-- OPTIONS -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_60px"
            android:layout_marginStart="@dimen/dimen_60px"
            android:orientation="vertical" >

            <com.mobile.components.customfontviews.TextView
                android:id="@+id/checkout_my_order_payment_name"
                style="@style/SubListItemStyle" />

            <com.mobile.components.customfontviews.TextView
                android:id="@+id/checkout_my_order_payment_coupon"
                style="@style/SubListItemStyle"
                android:layout_marginTop="@dimen/margin_60px"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>