<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/my_account_gen_dimen"
        android:layout_marginRight="@dimen/my_account_gen_dimen"
        android:gravity="left|start"
        android:orientation="vertical"
        android:paddingBottom="16dp"
        android:paddingTop="16dp">

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/option_name"
            style="@style/TextBase.Caption"
            android:text="Title"
            android:textColor="@color/black" />

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/option_info"
            style="@style/TextBase.Caption"
            android:text="Info"
            android:textColor="@color/black_800" />
    </LinearLayout>
    <View
        style="@style/divider_horizontal"/>
</LinearLayout>