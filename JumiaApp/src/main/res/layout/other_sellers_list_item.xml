<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <!--SELLER NAME -->
        <com.mobile.components.customfontviews.TextView
            android:id="@+id/txSellerName"
            style="@style/TextBody_1"
            color="@color/black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />

        <!-- INCLUDE SMALL RATING -->

        <!-- DELIVERY TIME SECTION -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"  android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:id="@+id/deliverSection"
            android:layout_marginLeft="@dimen/layout_padding"
            android:layout_marginStart="@dimen/layout_padding"
            >
            <com.mobile.components.customfontviews.TextView
                style="@style/Caption"
                color="@color/black"
                android:layout_centerVertical="true"
                android:text="Delivery time:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txDeliver"
                />

            <com.mobile.components.customfontviews.TextView
                style="@style/Caption"
                color="@color/black"
                android:layout_centerVertical="true"
                android:text="3 - 8 days"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txDeliverTimeContent"

                />

        </LinearLayout>


    </LinearLayout>
