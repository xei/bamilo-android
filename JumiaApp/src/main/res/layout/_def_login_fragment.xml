<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <!--INFO-->

        <TextView
            style="@style/TextCaption"
            android:drawablePadding="8dp"
            android:drawableTop="@drawable/ic_overseas"
            android:text="Login in ..."
            android:layout_marginTop="46dp"
            android:layout_marginBottom="30dp"/>

        <!-- FACEBOOK -->

        <com.mobile.components.customfontviews.FacebookTextView
            android:id="@+id/login_button_facebook"
            style="@style/AigButton.Facebook" />

        <!-- DIVIDER -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/rounded_margin_mid">

            <View
                style="@style/divider_horizontal"
                android:layout_height="0.75dp"
                android:layout_centerInParent="true"
                android:background="@color/grey_divider_light_text" />

            <com.mobile.components.customfontviews.TextView
                style="@style/text_header"
                android:layout_centerInParent="true"
                android:background="@android:color/white"
                android:paddingEnd="@dimen/login_margin_small"
                android:paddingLeft="@dimen/login_margin_small"
                android:paddingRight="@dimen/login_margin_small"
                android:paddingStart="@dimen/login_margin_small"
                android:text="@string/or_text"
                android:textColor="@color/grey_divider_light_text" />
        </RelativeLayout>

        <!-- EMAIL -->

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Email address" />

        <!-- BUTTON -->

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/pdv_button_buy"
            style="@style/AigButton.Active"
            android:text="@string/continue_label" />

    </LinearLayout>

</ScrollView>