<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_item_height"
   >
    <!-- SEPARATOR -->

    <View style="@style/divider_horizontal"
        android:id="@+id/divider"/>

        <ImageView
            android:id="@+id/pdv_brand_image"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/pdv_brand_height"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/layout_padding"
            android:layout_marginStart="@dimen/layout_padding"
            />

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/pdv_brand_text"
            style="@style/TextList_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/pdv_brand_image"
            android:layout_toEndOf="@id/pdv_brand_image"
            android:layout_marginLeft="@dimen/margin_mid"
            android:layout_marginStart="@dimen/margin_mid"
            android:layout_centerVertical="true" />


</RelativeLayout>
