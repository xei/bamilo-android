<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/CardViewFlatStyle"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/home_teaser_shop_title"
            style="@style/TextBase.Body" />

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/home_teaser_shop_sub_title"
            style="@style/TextBase.Caption" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/margin_padding_xs">

            <include layout="@layout/home_teaser_image_loadable" />

        </FrameLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
