<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:orientation="vertical">

    <!-- DIVIDER -->

    <View
        android:id="@+id/radio_divider"
        style="@style/divider_horizontal" />

    <!-- RADIO BUTTON -->

    <include
        android:id="@+id/form_shipping_radio_button"
        layout="@layout/_def_form_radiobutton_shipping" />

    <!-- INFO -->

    <LinearLayout
        android:id="@+id/form_shipping_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/shipping_time_fee_min_height"
        android:orientation="vertical"
        android:paddingLeft="@dimen/form_radiobutton_shipping_margin"
        android:paddingStart="@dimen/form_radiobutton_shipping_margin"
        android:paddingRight="@dimen/form_radiobutton_shipping_margin"
        android:paddingEnd="@dimen/form_radiobutton_shipping_margin"
        android:visibility="gone">

        <com.mobile.components.absspinner.IcsSpinner
            android:id="@android:id/custom"
            style="@style/form_style"
            android:layout_height="@dimen/checkout_shipping_item_height"
            android:background="@drawable/spinner_background_holo_orange"
            android:clickable="true"
            android:spinnerMode="dropdown" />

        <com.mobile.utils.PickUpStationListView
            android:id="@+id/pickup_stations_list_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@color/grey_light"
            android:dividerHeight="0.75dp"
            android:paddingLeft="@dimen/dimen_50px"
            android:paddingRight="@dimen/dimen_50px" />

    </LinearLayout>

</LinearLayout>