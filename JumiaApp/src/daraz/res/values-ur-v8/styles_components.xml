<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- ################# GENERIC COMPONENTS STYLES ################# -->

    <!-- Sub list item -->
    <style name="SubListItemStyle" parent="@style/TextBase.Caption">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <!-- Multi line -->
    <style name="MultiLineStyle" parent="@style/TextBase.Body.Black_800">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/margin_padding_xl</item>
        <item name="android:singleLine">false</item>
        <item name="android:gravity">right</item>
    </style>

    <!-- PDV -->

    <style name="PdvWishListButtonStyle" parent="WishListButtonStyle">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_marginLeft">@dimen/margin_padding_l</item>
    </style>

    <!-- PRODUCT FREE SHIPPING -->
    <style name="TextFreeShippingRtl" parent="@style/TextBase.Caption.Italic">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawableRight">@drawable/ic_free_shipping</item>
        <item name="android:drawablePadding">@dimen/margin_padding_xs</item>
        <item name="android:text">@string/free_shipping</item>
        <item name="android:visibility">visible</item>
        <item name="android:layout_gravity">right</item>
    </style>

    <!-- TODO : ADD HERE GENERIC COMPONENTS STYLES ↑ ↑ ↑ ↑ ↑ ↑ ↑ ↑ ↑ -->


</resources>