<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mobile.framework.test" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="21" />

    <instrumentation
        android:name="android.test.InstrumentationTestRunner"
        android:functionalTest="false"
        android:handleProfiling="false"
        android:label="Tests for com.mobile.framework.test"
        android:targetPackage="com.mobile.framework.test" />
    <!-- [A4S-SDK[ -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application>
        <uses-library android:name="android.test.runner" />

        <activity
            android:name="android.support.v7.widget.TestActivity"
            android:label="RecyclerViewTestActivity" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" /> <!-- [A4S-SDK[ -->
        <receiver
            android:name="com.ad4screen.sdk.ReferrerHandler"
            android:exported="true" >
            <intent-filter>
                <action android:name="com.android.vending.INSTALL_REFERRER" />
            </intent-filter>
        </receiver>

        <activity
            android:name="com.ad4screen.sdk.A4SPopup"
            android:taskAffinity=""
            android:theme="@style/com_ad4screen_sdk_theme_popup" />
        <activity
            android:name="com.ad4screen.sdk.A4SInterstitial"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize"
            android:documentLaunchMode="always"
            android:maxRecents="1"
            android:theme="@style/com_ad4screen_sdk_theme_interstitial" />

        <receiver
            android:name="com.ad4screen.sdk.A4SIDFVHandler"
            android:exported="true" >
            <intent-filter>
                <action android:name="com.ad4screen.sdk.intent.action.QUERY" />

                <category android:name="com.ad4screen.sdk.intent.category.ANONYM_ID" />
            </intent-filter>
        </receiver>
    </application>

</manifest>