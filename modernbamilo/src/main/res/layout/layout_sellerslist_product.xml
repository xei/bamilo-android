<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/layoutSellerslistProduct_imageView_thumbnail"
        android:layout_width="56dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintDimensionRatio="h,3:4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.bamilo.modernbamilo.customview.XeiTextView
        android:id="@+id/layoutSellerslistProduct_xeiTextView_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:gravity="start|center_vertical"
        android:textColor="@color/sellersList_productTitle"
        app:locale="auto"
        app:style="bold"
        tools:text="پولوشرت کلاسیک اصل کدل آخر ۲۰۱۲"
        app:layout_constraintBottom_toTopOf="@+id/layoutSellerslistProduct_xeiTextView_variant"
        app:layout_constraintStart_toEndOf="@+id/layoutSellerslistProduct_imageView_thumbnail"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.bamilo.modernbamilo.customview.XeiTextView
        android:id="@+id/layoutSellerslistProduct_xeiTextView_variant"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:gravity="start|center_vertical"
        android:textColor="@color/sellersList_productTitle"
        app:locale="auto"
        tools:text="زنگ شبز"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/layoutSellerslistProduct_imageView_thumbnail"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutSellerslistProduct_xeiTextView_title" />

</android.support.constraint.ConstraintLayout>