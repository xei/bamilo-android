<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".product.descspec.DescSpecFragment">

    <android.support.design.widget.TabLayout
        android:id="@+id/fragmentDescSpec_tabLayout_tabs"
        android:layout_width="0dp"
        android:layout_height="56dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layoutDirection="ltr"
        android:background="@color/colorPrimary"
        android:elevation="4dp"
        app:tabGravity="center"
        app:tabMode="fixed"
        app:tabIndicatorColor="#fff" />

    <android.support.v4.view.ViewPager
        android:id="@+id/fragmentDescSpec_viewPager_pager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="56dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragmentDescSpec_tabLayout_tabs" />

</android.support.constraint.ConstraintLayout>