<?xml version="1.0" encoding="utf-8"?>

<resources>

    <declare-styleable name="XeiLocaledView">
        <attr name="locale" format="enum">
            <enum name="auto" value="0" />
            <enum name="en_US" value="1" />
            <enum name="fa_IR" value="2" />
            <enum name="hybrid" value="3" />
        </attr>
        <attr name="style">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
        </attr>
    </declare-styleable>

    <declare-styleable name="PriceView">
        <attr name="strike" format="boolean" />
    </declare-styleable>

    <declare-styleable name="RateBarView">
        <attr name="rating" format="integer" />
        <attr name="percentage" format="float" />
    </declare-styleable>

    <declare-styleable name="ExpandableTextView">
        <attr name="maxCollapsedLines" format="integer"/>
        <attr name="animDuration" format="integer"/>
        <attr name="animAlphaStart" format="float"/>
        <attr name="expandIndicator" format="reference"/>
        <attr name="collapseIndicator" format="reference"/>
        <attr name="expandToggleType" format="enum">
            <enum name="ImageButton" value="0"/>
            <enum name="TextView" value="1"/>
        </attr>
        <attr name="expandableTextId" format="reference"/>
        <attr name="expandCollapseToggleId" format="reference"/>
        <attr name="expandToggleOnTextClick" format="boolean"/>
    </declare-styleable>

</resources>
