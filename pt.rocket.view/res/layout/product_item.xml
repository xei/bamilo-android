<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/general_container"
    style="@style/list_row_style" >

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <include
                android:id="@+id/image_loadable"
                android:layout_width="132dp"
                android:layout_height="99dp"
                android:layout_marginBottom="13.2dp"
                android:layout_marginLeft="13.2dp"
                android:layout_marginRight="13.2dp"
                android:layout_marginTop="13.2dp"
                layout="@layout/image_loadable" />

            <ImageView
                android:id="@+id/item_promotion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/image_loadable"
                android:layout_alignTop="@id/image_loadable"
                android:src="@drawable/ic_reduced" />

            <TextView
                android:id="@+id/discount_percentage"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/item_promotion"
                android:layout_alignTop="@id/item_promotion"
                android:layout_marginTop="4dp"
                android:gravity="center_horizontal"
                android:text="99%"
                android:textColor="@android:color/white"
                android:textSize="14sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" 
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/item_name"
                style="@style/product_name_list_text"
                android:layout_width="match_parent"
                android:layout_marginRight="16dp"
                android:layout_marginTop="6dp"
                android:maxLines="1"
                android:singleLine="true"
                android:layout_toRightOf="@+id/image_loadable"
                android:text="Name" />

            <TextView
                android:id="@+id/item_discount"
                style="@style/product_price_current_list_text"
                android:layout_alignLeft="@id/item_name"
                android:layout_below="@id/item_name"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                android:maxLines="1"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:layout_toRightOf="@+id/image_loadable"
                android:text="Discount" />

            <TextView
                android:id="@+id/item_regprice"
                style="@style/product_price_current_list_text"
                android:layout_alignTop="@id/item_discount"
                android:layout_below="@id/item_name"
                android:maxLines="1"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:layout_toRightOf="@id/item_discount"
                android:text="Price" />

            <RatingBar
                android:id="@+id/item_rating"
                style="@style/starRatingBarSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/item_name"
                android:layout_below="@id/item_regprice"
                android:layout_marginTop="6dp"
                android:numStars="5"
                android:rating="3.5" />

            <TextView
                android:id="@+id/item_reviews"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_alignBottom="@+id/item_rating"
                android:layout_alignTop="@+id/item_rating"
                android:layout_marginLeft="4dp"
                android:layout_toRightOf="@+id/item_rating"
                android:gravity="center_vertical"
                android:includeFontPadding="false"
                android:text="Reviews"
                android:textColor="@color/grey_light"
                android:textSize="12sp" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/divider"
        style="@style/divider_horizontal"
        android:layout_below="@+id/container"
        android:layout_marginTop="5dp" />

</RelativeLayout>