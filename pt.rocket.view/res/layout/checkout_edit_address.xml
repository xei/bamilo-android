<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- TITLE -->

        <org.holoeverywhere.widget.TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="@dimen/margin_mid"
            android:background="@drawable/searchfield"
            android:fontFamily="roboto_regular"
            android:gravity="center_vertical"
            android:padding="@dimen/margin_mid"
            android:text="Edit Address"
            android:textColor="@color/orange_basic"
            android:textSize="@dimen/text_xl" />

        <!-- FORM -->

        <LinearLayout
            android:id="@+id/checkout_edit_form_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_midhuge"
            android:layout_marginTop="@dimen/margin_midhuge"
            android:orientation="vertical" >
        </LinearLayout>

        <!-- BUTTONS -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <org.holoeverywhere.widget.Button
                android:id="@+id/checkout_edit_button_cancel"
                style="@style/button_grey_style"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:fontFamily="roboto_regular"
                android:text="Cancel" />

            <org.holoeverywhere.widget.Button
                android:id="@+id/checkout_edit_button_enter"
                style="@style/button_orange_style"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:fontFamily="roboto_regular"
                android:text="Save Changes" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>