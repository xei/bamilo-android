<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/rounded_box"
    android:orientation="vertical" >

    <!-- TITLE -->

    <org.holoeverywhere.widget.TextView
        android:id="@+id/checkout_address_form_shipping_title"
        style="@style/rounded_box_title_grey"
        android:text="@string/action_label_add_address" />

    <View style="@style/divider_horizontal_orange" />

    <!-- CONTENT -->

    <RelativeLayout
        android:layout_width="@dimen/inner_container_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical" >

        <!-- FORM -->

        <LinearLayout
            android:id="@+id/checkout_address_form_shipping_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_20px"
            android:orientation="vertical"
            android:paddingLeft="@dimen/rounded_margin_mid"
            android:paddingRight="@dimen/rounded_margin_mid" >
        </LinearLayout>

        <!-- BILLING CHECK BOX -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/checkout_address_form_shipping_container" >

            <include layout="@layout/checkout_sameaddress_checkbox" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>