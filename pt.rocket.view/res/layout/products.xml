<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/products_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/rounded_vertical_margin"
    android:background="@color/grey_background"
    android:paddingBottom="0dp" >

    <include
        android:id="@+id/loadmore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        layout="@layout/loading_more" />

    <GridView
        android:id="@+id/middle_productslist_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/loadmore"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/rounded_vertical_margin"
        android:listSelector="@drawable/selector_listitem_highlight"
        android:numColumns="3" />

    <org.holoeverywhere.widget.Button
        android:id="@+id/btn_toplist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/selector_btn_toplist"
        android:visibility="visible" />

</RelativeLayout>