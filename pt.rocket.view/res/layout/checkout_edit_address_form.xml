<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/rounded_box"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <!-- TITLE -->

    <org.holoeverywhere.widget.TextView
        style="@style/rounded_box_title_grey"
        android:text="@string/edit_address" />

    <View style="@style/divider_horizontal_orange" />

    <!-- FORM -->

    <RelativeLayout
        android:id="@+id/checkout_edit_form_container"
        android:layout_width="@dimen/inner_container_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/margin_20px"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/rounded_margin_mid"
        android:paddingRight="@dimen/rounded_margin_mid" />

</LinearLayout>