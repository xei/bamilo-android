<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_large"
    android:layout_marginRight="@dimen/margin_large"
    android:orientation="vertical" >

    <!-- TITLE -->

    <org.holoeverywhere.widget.TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_large"
        android:layout_marginTop="@dimen/margin_huge"
        android:fontFamily="roboto_regular"
        android:gravity="left"
        android:text="@string/edit_address"
        android:textColor="@color/orange_basic"
        android:textSize="@dimen/text_l" />

    <View
        style="@style/divider_horizontal"
        android:layout_width="wrap_content" />

    <!-- FORM -->

    <LinearLayout
        android:id="@+id/checkout_edit_form_container"
        android:layout_width="@dimen/inner_container_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/margin_midhuge"
        android:layout_marginLeft="@dimen/margin_mid"
        android:layout_marginRight="@dimen/margin_mid"
        android:layout_marginTop="@dimen/margin_small"
        android:orientation="vertical" >
    </LinearLayout>

    <!-- BUTTONS -->

    <LinearLayout
        android:layout_width="@dimen/inner_container_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin_mid"
        android:layout_marginRight="@dimen/margin_mid"
        android:orientation="horizontal" >

        <org.holoeverywhere.widget.Button
            android:id="@+id/checkout_edit_button_cancel"
            style="@style/button_grey_style"
            android:layout_width="0dp"
            android:layout_marginRight="@dimen/margin_small"
            android:layout_weight="1"
            android:fontFamily="roboto_regular"
            android:text="@string/cancel_label" />

        <org.holoeverywhere.widget.Button
            android:id="@+id/checkout_edit_button_enter"
            style="@style/button_orange_style"
            android:layout_width="0dp"
            android:layout_marginLeft="@dimen/margin_small"
            android:layout_weight="1"
            android:fontFamily="roboto_regular"
            android:text="@string/save_changes_label" />
    </LinearLayout>

</LinearLayout>