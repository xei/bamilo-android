<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/action_cart_image"
        style="?attr/actionButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:clickable="true"
        android:src="@drawable/selector_shop" />

    <pt.rocket.components.customfontviews.TextView
        android:id="@+id/action_cart_count"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_alignEnd="@id/action_cart_image"
        android:layout_alignLeft="@id/action_cart_image"
        android:layout_alignRight="@id/action_cart_image"
        android:layout_alignStart="@id/action_cart_image"
        android:layout_centerInParent="true"
        android:contentDescription="Go to Cart"
        android:gravity="top|center_horizontal"
        android:paddingLeft="4dp"
        android:textColor="@color/orange_basic"
        android:textSize="11sp"
        android:textStyle="bold" />

</RelativeLayout>