<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/rounded_margin_small"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
		android:layoutDirection="locale"
        android:background="@drawable/selector_listitem_rounded_margin_highlight"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/item_img"
            android:layout_width="30dp"
            android:layout_height="@dimen/item_height_normal"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_large"
            android:paddingStart="@dimen/margin_large"
            android:src="@drawable/ic_recentsearch" />

        <pt.rocket.components.customfontviews.TextView
            android:id="@+id/item_text_suggestion"
            style="@style/text_header"
            android:layout_width="0dp"
            android:layout_height="@dimen/item_height_normal"
            android:layout_marginRight="@dimen/margin_mid"
            android:layout_marginEnd="@dimen/margin_mid"
            android:layout_weight="1"
            android:gravity="center_vertical|left|start"
            android:paddingLeft="@dimen/margin_large"
            android:paddingStart="@dimen/margin_large"
            android:text="Search suggestion"
            android:textColor="@color/grey_dark"
            tools:ignore="HardcodedText" />
    </LinearLayout>

</LinearLayout>