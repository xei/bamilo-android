<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/recentsearch_list_margin"
    android:paddingRight="@dimen/recentsearch_list_margin" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/item_img"
            android:layout_width="30dp"
            android:layout_height="@dimen/item_height_normal"
            android:contentDescription="@string/app_name"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/margin_large"
            android:src="@drawable/ic_recentsearch" />

        <org.holoeverywhere.widget.TextView
            android:id="@+id/item_text_suggestion"
            android:layout_width="0dp"
            android:layout_height="@dimen/item_height_normal"
            android:layout_marginRight="@dimen/margin_mid"
            android:layout_weight="1"
            android:ellipsize="end"
            android:fontFamily="roboto_regular"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingLeft="@dimen/margin_large"
            android:singleLine="true"
            android:text="Search suggestion"
            android:textColor="@color/grey_dark"
            android:textSize="@dimen/text_mid"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <View
        android:id="@+id/divider"
        style="@style/divider_horizontal" />

</LinearLayout>