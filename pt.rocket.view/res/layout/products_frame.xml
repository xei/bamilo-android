<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp" >

    <RelativeLayout
        android:id="@+id/catalog_viewpager_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:duplicateParentState="true" >

        <pt.rocket.utils.JumiaCatalogViewPager
            android:id="@+id/viewpager_products_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:duplicateParentState="true" >

            <android.support.v4.view.PagerTabStrip
                android:id="@+id/products_list_titles"
                android:layout_width="match_parent"
                android:layout_height="31.72dp"
                android:layout_gravity="top"
                android:background="@color/strip_title_background"
                android:textColor="@color/strip_title"
                android:textSize="12.54sp" />
        </pt.rocket.utils.JumiaCatalogViewPager>
        <!-- android:paddingRight="80dp" -->

        <LinearLayout
            android:id="@+id/products_buttons_container"
            android:layout_width="wrap_content"
            android:layout_height="30.72dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/white"
            android:gravity="center"
            android:visibility="gone" >

            <ImageView
                android:id="@+id/products_list_filter_button"
                android:layout_width="33.75dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="false"
                android:background="@android:color/white"
                android:src="@drawable/selector_catalog_filter" />

            <View
                android:id="@+id/teaser_group_title_divider"
                android:layout_width="1dp"
                android:layout_height="20dp"
                android:layout_marginBottom="0dp"
                android:background="@color/grey_dark" />

            <ImageView
                android:id="@+id/products_switch_layout_button"
                android:layout_width="33.75dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="false"
                android:background="@android:color/white"
                android:src="@drawable/selector_catalog_gridview" />
        </LinearLayout>

        <View
            android:id="@+id/products_list_filter_header"
            android:layout_width="match_parent"
            android:layout_height="31.72dp"
            android:layout_toLeftOf="@id/products_buttons_container"
            android:background="@drawable/filter_header" />
    </RelativeLayout>

    <!-- NO RESULTS CONTAINER -->

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/catalog_viewpager_container"
        layout="@layout/products_no_results" />

</RelativeLayout>