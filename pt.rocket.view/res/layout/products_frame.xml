<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingBottom="0dp" >

    <RelativeLayout
        android:id="@+id/catalog_viewpager_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:duplicateParentState="true" >

        <!-- TABS -->

        <pt.rocket.framework.components.androidslidingtabstrip.SlidingTabLayout
            android:id="@+id/catalog_pager_tag"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sliding_tab_height"
            android:background="@drawable/background_tabs"
            android:paddingRight="@dimen/catalog_button_filter_width"
            app:stsBottomBorderThickness="0dp"
            app:stsIndicatorColor="@color/orange_tab_bar"
            app:stsIndicatorThickness="@dimen/sliding_tab_inidicator_thickness" />

        <!-- PAGER -->

        <pt.rocket.utils.JumiaCatalogViewPager
            android:id="@+id/viewpager_products_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/catalog_pager_tag"
            android:duplicateParentState="true" />

        <!-- BUTTONS CONTAINER -->

        <LinearLayout
            android:id="@+id/products_buttons_container"
            android:layout_width="@dimen/catalog_button_filter_width"
            android:layout_height="@dimen/catalog_buttons_container_height"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/white"
            android:gravity="center|left"
            android:visibility="visible" >

            <!-- FILTER -->

            <View
                style="@style/divider_vertical"
                android:background="@color/grey_middlelight" />

            <ImageView
                android:id="@+id/products_list_filter_button"
                android:layout_width="37dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="false"
                android:scaleType="centerInside"
                android:src="@drawable/selector_catalog_filter" />

            <!-- FILTER -->

            <View
                android:id="@+id/teaser_group_title_divider"
                android:layout_width="1dp"
                android:layout_height="25dp"
                android:layout_marginBottom="0dp"
                android:background="@color/grey_middlelight" />

            <ImageView
                android:id="@+id/products_switch_layout_button"
                android:layout_width="37dp"
                android:layout_height="match_parent"
                android:layout_centerInParent="false"
                android:scaleType="centerInside"
                android:src="@drawable/selector_catalog_gridview" />
        </LinearLayout>

        <View
            style="@style/divider_horizontal"
            android:layout_width="@dimen/catalog_button_filter_width"
            android:layout_below="@id/products_buttons_container"
            android:background="@color/grey_middlelight" />

        <!--
             <View
            android:id="@+id/products_list_filter_header"
            android:layout_width="match_parent"
            android:layout_height="31.72dp"
            android:layout_toLeftOf="@id/products_buttons_container"
            android:background="@drawable/filter_header" />
        -->
    </RelativeLayout>

    <!-- NO RESULTS CONTAINER -->

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/catalog_viewpager_container"
        layout="@layout/products_no_results" />

    <!-- WIZARD CONTAINER -->

    <include
        android:id="@+id/tips_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/tips"
        android:duplicateParentState="false"
        android:visibility="gone" />

</RelativeLayout>