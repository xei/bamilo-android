<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/options_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/my_account_medium_margin"
    android:layout_marginRight="@dimen/my_account_medium_margin"
    android:orientation="vertical" >

    <View style="@style/divider_horizontal" />

    <org.holoeverywhere.widget.TextView
        android:id="@+id/option_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/my_account_medium_margin"
        android:text="Title"
        android:textColor="@color/grey_middledark"
        android:textSize="@dimen/product_item_brand_text_size" />

    <org.holoeverywhere.widget.TextView
        android:id="@+id/option_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/option_name"
        android:paddingBottom="@dimen/my_account_medium_margin"
        android:text="Info"
        android:textColor="@color/grey_middle"
        android:textSize="@dimen/product_item_text_size" />

</LinearLayout>