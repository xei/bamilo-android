<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/options_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <View
        style="@style/divider_horizontal"
        android:layout_marginLeft="@dimen/rounded_margin_mid"
        android:layout_marginRight="@dimen/rounded_margin_mid" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rounded_margin_mid"
        android:layout_marginRight="@dimen/rounded_margin_mid"
        android:orientation="vertical"
        android:paddingBottom="@dimen/rounded_margin_mid"
        android:paddingTop="@dimen/rounded_margin_mid" >

        <org.holoeverywhere.widget.TextView
            android:id="@+id/option_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="@color/grey_middledark"
            android:textSize="@dimen/text_title" />

        <org.holoeverywhere.widget.TextView
            android:id="@+id/option_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/option_name"
            android:text="Info"
            android:textColor="@color/grey_middle"
            android:textSize="@dimen/text_subtitle" />
    </LinearLayout>

</LinearLayout>