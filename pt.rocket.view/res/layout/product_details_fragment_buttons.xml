<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/product_detail_shop_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center" >

    <!-- CALL -->

    <org.holoeverywhere.widget.Button
        android:id="@+id/product_detail_call_to_order"
        style="@style/button_grey_bottom"
        android:layout_marginRight="@dimen/margin_x_small"
        android:layout_weight="1"
        android:contentDescription="@string/productdetail_order_button_description"
        android:text="@string/call_to_order" />

    <!-- ADD TO CART -->

    <org.holoeverywhere.widget.Button
        android:id="@+id/product_detail_shop"
        style="@style/button_orange_bottom"
        android:layout_marginLeft="@dimen/margin_x_small"
        android:layout_weight="1"
        android:contentDescription="@string/productdetail_addcart_description"
        android:text="@string/add_to_shopping_cart" />

</LinearLayout>