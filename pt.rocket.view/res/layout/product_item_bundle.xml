<?xml version="1.0" encoding="utf-8"?>

<!-- NOTE: The "teaser_product_item_width" is not used, is calculated from Window width. -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_container"
    android:layout_width="@dimen/teaser_product_item_width"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_listitem_highlight"
    android:orientation="vertical"
    
        android:paddingStart="@dimen/margin_mid"
    android:paddingEnd="@dimen/margin_mid"
    android:paddingLeft="@dimen/margin_mid"
    android:paddingRight="@dimen/margin_mid" >

    <include
        android:id="@+id/item_image_loadable"
        android:layout_width="match_parent"
        android:layout_height="@dimen/teaser_banners_brands_list_height"
        android:layout_centerHorizontal="true"
        layout="@layout/image_loadable"
        android:background="@color/red_basic" />

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/item_brand"
        style="@style/text_normal"
        android:layout_below="@id/item_image_loadable"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:lines="1" />

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/item_title"
        style="@style/text_normal"
        android:layout_below="@id/item_brand"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:lines="1"
        android:text="Title"
        android:textColor="@color/grey_light" />

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/item_price"
        style="@style/text_price"
        android:layout_below="@id/item_title"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:text="Price" />

    <com.mobile.components.customfontviews.CheckBox
        android:id="@+id/item_check"
        style="@style/form_checkbox_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:checked="true"
        android:gravity="right|end" />

<!--             android:layout_gravity="left|start|top"
        android:layout_marginEnd="@dimen/form_check_padding"
        android:layout_marginLeft="@dimen/form_check_padding"
        android:layout_marginRight="@dimen/form_check_padding"
        android:layout_marginStart="@dimen/form_check_padding" -->
    
    <RelativeLayout
        android:id="@+id/bundle_size_container"
        android:layout_width="match_parent"
        android:layout_height="@dimen/product_detail_item_title_height"
        android:layout_below="@+id/item_price"
        android:gravity="start|left|center_vertical"
        android:orientation="horizontal" >

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/bundle_size_text"
            style="@style/text_normal"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:text="@string/size_label" />

        <!-- SIZE SPINNER -->

        <com.mobile.components.absspinner.IcsSpinner
            android:id="@+id/bundle_simple_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toEndOf="@id/bundle_size_text"
            android:layout_toRightOf="@id/bundle_size_text"
            android:background="@drawable/spinner_background_holo_orange"
            android:clickable="true"
            android:minWidth="@dimen/campaign_size_spinner_width"
            android:textColor="@color/grey_middle"
            android:textSize="@dimen/text_s" />

        <!--
             <com.mobile.components.customfontviews.Button
            android:id="@+id/bundle_simple_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_mid"
            android:layout_marginStart="@dimen/margin_mid"
            android:layout_toEndOf="@+id/bundle_size_text"
            android:layout_toRightOf="@+id/bundle_size_text"
            android:background="@drawable/spinnerbutton_background_holo_light"
            android:ellipsize="end"
            android:minWidth="66dp"
            android:singleLine="true"
            android:text="@string/product_variant_placeholder"
            android:textColor="@color/grey_middle"
            android:textSize="@dimen/text_title" />
        -->
    </RelativeLayout>

</RelativeLayout>