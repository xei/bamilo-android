<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_huge"
    android:layout_marginRight="@dimen/margin_huge"
    android:layout_marginTop="@dimen/margin_midhuge" >

    <org.holoeverywhere.widget.TextView
        android:id="@+id/newsletter_subscription"
        style="@style/activity_sectionheader_text"
        android:layout_marginBottom="@dimen/margin_mid"
        android:layout_marginLeft="0dp"
        android:text="@string/newsletter_subscription" />

    <RelativeLayout
        android:id="@+id/newsletter_form_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/newsletter_subscription" >

        <org.holoeverywhere.widget.EditText
            android:id="@+id/newsletter_subscription_value"
            style="@style/form_edittext_style"
            android:layout_marginTop="13.2dp"
            android:cursorVisible="true"
            android:drawableRight="@drawable/ic_star_formular"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:hint="@string/newsletter_subscription_hint"
            android:inputType="textAutoComplete"
            android:textCursorDrawable="@null" />

        <RelativeLayout
            android:id="@+id/buttons_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/newsletter_subscription_value"
            android:paddingBottom="13.2dp" >

            <View
                android:id="@+id/reference_view"
                android:layout_width="@dimen/margin_huge"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true" />

            <org.holoeverywhere.widget.Button
                android:id="@+id/newsletter_first_btn"
                style="@style/button_grey_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/reference_view"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textSize="@dimen/text_m" />

            <org.holoeverywhere.widget.Button
                android:id="@+id/newsletter_second_btn"
                style="@style/button_grey_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/reference_view"
                android:ellipsize="marquee"
                android:singleLine="true"
                android:textSize="@dimen/text_m" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/loading_newsletter"
        android:layout_width="match_parent"
        android:layout_height="@dimen/teaser_banners_group_height"
        android:layout_centerInParent="true"
        android:visibility="gone" >

        <include layout="@layout/loading_bar_simple" />
    </RelativeLayout>

    <View
        android:id="@+id/newsletter_spacer"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_huge"
        android:layout_below="@id/newsletter_form_container" />

    <View
        android:id="@+id/teaser_group_title_divider"
        style="@style/line_grey_style"
        android:layout_below="@id/newsletter_spacer"
        android:layout_marginBottom="0dp" />

</RelativeLayout>