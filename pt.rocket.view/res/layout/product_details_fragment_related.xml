<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/product_detail_product_related_container"
    style="@style/rounded_box"
    android:layout_marginBottom="0dp"
    android:visibility="gone" >

    <org.holoeverywhere.widget.TextView
        android:id="@+id/related_label"
        style="@style/rounded_box_title_grey"
        android:text="@string/related_items" />

    <View
        android:id="@+id/divider"
        style="@style/divider_horizontal_orange"
        android:layout_below="@id/related_label" />

    <android.support.v4.view.ViewPager
        android:id="@+id/last_viewed_viewpager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/teaser_banners_group_height"
        android:layout_below="@id/divider"
        android:layout_marginTop="@dimen/margin_mid"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/loading_related"
        android:layout_width="match_parent"
        android:layout_height="@dimen/teaser_banners_group_height"
        android:layout_centerInParent="true" >

        <include layout="@layout/loading_bar_simple" />
    </RelativeLayout>

</RelativeLayout>