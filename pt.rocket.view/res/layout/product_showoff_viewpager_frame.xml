<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/product_showoff_viewpager_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <pt.rocket.utils.JumiaViewPagerWithZoom
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/images_list"
        android:layout_alignWithParentIfMissing="true"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="@dimen/margin_large"
        android:layout_marginTop="@dimen/margin_large" />

    <pt.rocket.utils.HorizontalListView
        android:id="@+id/images_list"
        android:layout_width="wrap_content"
        android:layout_height="63dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/margin_huge"
        android:layout_marginRight="@dimen/margin_huge" />

    <RelativeLayout
        android:id="@+id/loading_gallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" >

        <include layout="@layout/loading_bar_simple" />
    </RelativeLayout>

</RelativeLayout>