<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_dividerlight" >

    <ImageView
        android:id="@+id/jumiaMap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:src="@drawable/img_splashmap" />

    <ImageView
        android:id="@+id/imgView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="32dp"
        android:scaleType="centerInside"
        android:src="@drawable/logo_splash" />

    <org.holoeverywhere.widget.TextView
        android:id="@+id/slogan_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="@string/splash_slogan"
        android:textColor="@color/grey_middledark"
        android:textSize="12sp" />

    <org.holoeverywhere.widget.TextView
        android:id="@+id/dev_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center_horizontal"
        android:textColor="@color/grey_middle" />

    <RelativeLayout
        android:id="@+id/fallback_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bckgrndfallback"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/fallback_title_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19.8dp"
            android:orientation="vertical" >

            <org.holoeverywhere.widget.TextView
                android:id="@+id/fallback_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="@string/fallback_maintenance"
                android:textColor="#ffffff"
                android:textSize="18.48sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="6.6dp"
                android:background="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fallback_coutry_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fallback_title_container"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13.2dp"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo_jumiafallback" />

            <org.holoeverywhere.widget.TextView
                android:id="@+id/fallback_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13.2dp"
                android:layout_marginTop="-3dp"
                android:fontFamily="roboto_bold"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="29.04sp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/fallback_country_double"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="13.2dp"
                android:gravity="center|left"
                android:orientation="vertical"
                android:visibility="gone" >

                <org.holoeverywhere.widget.TextView
                    android:id="@+id/fallback_country_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="roboto_bold"
                    android:gravity="left"
                    android:textColor="#000000"
                    android:textSize="17.14sp" />

                <org.holoeverywhere.widget.TextView
                    android:id="@+id/fallback_country_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-10dp"
                    android:fontFamily="roboto_bold"
                    android:gravity="left"
                    android:textColor="#000000"
                    android:textSize="17.14sp" />
            </LinearLayout>
        </LinearLayout>

        <org.holoeverywhere.widget.TextView
            android:id="@+id/fallback_best"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fallback_coutry_container"
            android:layout_marginTop="10.56dp"
            android:ellipsize="marquee"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="@string/fallback_best"
            android:textColor="#000000"
            android:textSize="15.84sp" />

        <LinearLayout
            android:id="@+id/fallback_choice_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fallback_best"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <org.holoeverywhere.widget.TextView
                android:id="@+id/fallback_choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="roboto_bold"
                android:text="@string/fallback_choice"
                android:textColor="#ffffff"
                android:textSize="9.9sp" />

            <org.holoeverywhere.widget.TextView
                android:id="@+id/fallback_doorstep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/fallback_doorstep"
                android:textColor="#000000"
                android:textSize="9.9sp" />
        </LinearLayout>

        <org.holoeverywhere.widget.Button
            android:id="@+id/fallback_retry"
            style="@style/button_orange_landscape"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/try_again"
            android:text="@string/try_again" />

        <LinearLayout
            android:id="@+id/fallback_options_bottom_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/fallback_retry"
            android:layout_marginBottom="26.4dp"
            android:layout_marginLeft="26.4dp"
            android:orientation="horizontal" >

            <org.holoeverywhere.widget.TextView
                android:id="@+id/fallback_country_bottom_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6.6dp"
                android:text="@string/fallback_maintenance_text_bottom"
                android:textColor="#000000"
                android:textSize="@dimen/text_s" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fallback_options_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/fallback_options_bottom_container"
            android:layout_marginLeft="26.4dp"
            android:orientation="horizontal"
            android:weightSum="2" >

            <org.holoeverywhere.widget.TextView
                android:id="@+id/fallback_options_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6.6dp"
                android:fontFamily="roboto_bold"
                android:text="@string/fallback_fashion"
                android:textColor="#000000"
                android:textSize="@dimen/text_s" />

            <org.holoeverywhere.widget.TextView
                android:id="@+id/fallback_country_bottom_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6.6dp"
                android:text="@string/fallback_maintenance_text"
                android:textColor="#000000"
                android:textSize="13.2sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/fallback_country_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/fallback_options_container"
            android:layout_below="@id/fallback_choice_container"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</FrameLayout>