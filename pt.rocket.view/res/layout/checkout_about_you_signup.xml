<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_background" >

    <LinearLayout
        style="@style/rounded_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <org.holoeverywhere.widget.TextView
            android:id="@+id/checkout_signup_toogle"
            style="@style/rounded_box_title_grey"
            android:layout_height="40dp"
            android:drawableRight="@drawable/selector_dropdown_indicator"
            android:text="@string/signup_label" />

        <LinearLayout
            android:id="@+id/checkout_signup_form_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:visibility="gone" >

            <View style="@style/divider_horizontal_orange" />

            <!-- CONTENT -->

            <LinearLayout
                android:layout_width="@dimen/login_container_width"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical" >

                <!-- FORM -->

                <LinearLayout
                    android:id="@+id/checkout_signup_form_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/login_margin_medium"
                    android:layout_marginLeft="@dimen/rounded_margin_mid"
                    android:layout_marginRight="@dimen/rounded_margin_mid"
                    android:layout_marginTop="@dimen/login_margin_medium"
                    android:orientation="vertical" >
                </LinearLayout>

                <!-- SIGNUP -->

                <org.holoeverywhere.widget.Button
                    android:id="@+id/checkout_signup_form_button_enter"
                    style="@style/button_orange_bottom"
                    android:contentDescription="@string/login_button_description"
                    android:text="@string/signup_label" />

                <!-- DIVIDER -->

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/rounded_margin_mid" >

                    <View
                        style="@style/divider_horizontal"
                        android:layout_height="0.75dp"
                        android:layout_centerInParent="true"
                        android:background="@color/grey_divider_light_text" />

                    <org.holoeverywhere.widget.TextView
                        style="@style/text_header"
                        android:layout_centerInParent="true"
                        android:background="@android:color/white"
                        android:paddingLeft="@dimen/login_margin_small"
                        android:paddingRight="@dimen/login_margin_small"
                        android:text="@string/or_text"
                        android:textColor="@color/grey_divider_light_text" />
                </RelativeLayout>

                <!-- FACEBOOK -->

                <com.facebook.widget.LoginButton
                    xmlns:fb="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/checkout_signup_form_button_facebook"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/button_height"
                    android:layout_margin="@dimen/rounded_margin_mid"
                    android:text="@string/facebook_signup_button_text"
                    fb:login_text="@string/facebook_signup_button_text" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>