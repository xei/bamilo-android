<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/margin_huge"
    android:layout_marginRight="@dimen/margin_huge"
    android:layout_marginTop="10dp" >

    <pt.rocket.components.customfontviews.TextView
        android:id="@+id/price_rules_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@+id/price_rules_value"
        android:ellipsize="end"
        android:fontFamily="roboto_regular"
        android:singleLine="true"
        android:text="@string/vat_string"
        android:textColor="@color/grey_divider_light_text"
        android:textSize="@dimen/text_m" />

    <pt.rocket.components.customfontviews.TextView
        android:id="@+id/price_rules_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:fontFamily="roboto_regular"
        android:textColor="@color/grey_divider_light_text"
        android:textSize="@dimen/text_m" />

</RelativeLayout>