<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/product_detail_image_container"
    style="@style/rounded_box"
    android:layout_marginBottom="0dp"
    android:paddingTop="@dimen/margin_mid" >

    <!-- IMAGE -->

    <FrameLayout
        android:id="@+id/product_detail_image_gallery_container"
        android:layout_width="match_parent"
        android:layout_height="283.33dp" />

    <!-- DISCOUNT -->

    <org.holoeverywhere.widget.TextView
        android:id="@+id/product_detail_discount_percentage"
        android:layout_width="@dimen/product_detail_item_discount_percentage_width"
        android:layout_height="@dimen/product_detail_item_discount_percentage_height"
        android:layout_alignBottom="@id/product_detail_image_gallery_container"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_mid"
        android:layout_marginTop="@dimen/margin_large"
        android:background="@drawable/discount_badge"
        android:fontFamily="roboto_bold"
        android:gravity="center"
        android:maxLines="1"
        android:paddingBottom="@dimen/margin_small"
        android:singleLine="true"
        android:text="-99%"
        android:textColor="@android:color/white"
        android:textSize="@dimen/text_title" />

    <!-- SHARE -->

    <ImageView
        android:id="@+id/product_detail_product_image_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/product_list_item_image_side_margin"
        android:layout_marginTop="@dimen/product_list_item_image_margin"
        android:src="@drawable/selector_productdetails_share" />

    <!-- FAVOURITE -->

    <ImageView
        android:id="@+id/product_detail_image_is_favourite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/product_list_item_image_side_margin"
        android:layout_marginTop="@dimen/product_list_item_image_margin"
        android:src="@drawable/selector_favorite" />

    <!-- DIVIDER -->

    <View
        android:id="@+id/product_detail_div_title"
        style="@style/divider_horizontal"
        android:layout_below="@id/product_detail_image_gallery_container"
        android:layout_marginTop="@dimen/margin_mid" />

    <!-- TITLE -->

    <org.holoeverywhere.widget.TextView
        android:id="@+id/product_detail_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/product_detail_item_title_height"
        android:layout_below="@id/product_detail_div_title"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/margin_mid"
        android:background="@drawable/selector_listitem_highlight"
        android:ellipsize="end"
        android:gravity="left|center"
        android:maxLines="2"
        android:textColor="@color/grey_middle"
        android:textSize="@dimen/text_header" />

</RelativeLayout>