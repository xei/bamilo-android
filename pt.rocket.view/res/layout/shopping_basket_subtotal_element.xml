<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/rounded_box"
    android:layout_marginBottom="0dp"
    android:layout_marginTop="@dimen/rounded_margin_small"
    android:orientation="vertical"
    android:paddingBottom="@dimen/rounded_margin_mid" >

    <pt.rocket.components.customfontviews.TextView
        style="@style/rounded_box_title_grey"
        android:text="@string/sub_total_title" />

    <View style="@style/divider_horizontal_orange" />

    <!-- PRODUCTS -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rounded_margin_mid"
        android:layout_marginRight="@dimen/rounded_margin_mid"
        android:layout_marginTop="@dimen/margin_large" >

        <pt.rocket.components.customfontviews.TextView
            android:id="@+id/articles_count"
            style="@style/text_normal"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/price_unreduced" />

        <pt.rocket.components.customfontviews.TextView
            android:id="@+id/price_unreduced"
            style="@style/text_normal"
            android:layout_marginRight="@dimen/rounded_margin_mid"
            android:layout_toLeftOf="@+id/price_total"
            android:textColor="@color/grey_light" />

        <pt.rocket.components.customfontviews.TextView
            android:id="@+id/price_total"
            style="@style/text_title"
            android:layout_alignParentRight="true"
            android:textColor="@color/red_basic" />
    </RelativeLayout>

    <!-- Price Rules -->

    <LinearLayout
        android:id="@+id/price_rules_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rounded_margin_mid"
        android:layout_marginRight="@dimen/rounded_margin_mid"
        android:layout_marginTop="@dimen/margin_mid"
        android:orientation="vertical"
        android:visibility="gone" />

    <!-- VAT -->

    <RelativeLayout
        android:id="@+id/vat_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rounded_margin_mid"
        android:layout_marginRight="@dimen/rounded_margin_mid"
        android:layout_marginTop="@dimen/margin_mid"
        android:visibility="visible" >

        <pt.rocket.components.customfontviews.TextView
            style="@style/text_normal"
            android:text="@string/vat_string" />

        <pt.rocket.components.customfontviews.TextView
            android:id="@+id/vat_value"
            style="@style/text_normal"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <!-- SHIPPING -->

    <RelativeLayout
        android:id="@+id/shipping_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rounded_margin_mid"
        android:layout_marginRight="@dimen/rounded_margin_mid"
        android:visibility="gone" >

        <pt.rocket.components.customfontviews.TextView
            style="@style/text_normal"
            android:text="@string/shipping" />

        <pt.rocket.components.customfontviews.TextView
            android:id="@+id/shipping_value"
            style="@style/text_normal"
            android:layout_alignParentRight="true"
            android:text="@string/free_label" />
    </RelativeLayout>

    <!-- EXTRA COSTS -->

    <RelativeLayout
        android:id="@+id/extra_costs_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rounded_margin_mid"
        android:layout_marginRight="@dimen/rounded_margin_mid"
        android:visibility="gone" >

        <pt.rocket.components.customfontviews.TextView
            style="@style/text_normal"
            android:text="@string/extra_costs_label" />

        <pt.rocket.components.customfontviews.TextView
            android:id="@+id/extra_costs_value"
            style="@style/text_normal"
            android:layout_alignParentRight="true" />
    </RelativeLayout>

    <!-- VOUCHER -->

    <RelativeLayout
        android:id="@+id/voucher_info_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rounded_margin_mid"
        android:layout_marginRight="@dimen/rounded_margin_mid"
        android:visibility="visible" >

        <pt.rocket.components.customfontviews.TextView
            style="@style/text_normal"
            android:text="@string/my_order_voucher_label"
            android:textColor="@color/green_basic" />

        <pt.rocket.components.customfontviews.TextView
            android:id="@+id/text_voucher"
            style="@style/text_normal"
            android:layout_alignParentRight="true"
            android:textColor="@color/green_basic" />
    </RelativeLayout>

    <!-- TOTAL -->

    <RelativeLayout
        android:id="@+id/total_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rounded_margin_mid"
        android:layout_marginRight="@dimen/rounded_margin_mid"
        android:layout_marginTop="@dimen/margin_mid"
        android:visibility="visible" >

        <pt.rocket.components.customfontviews.TextView
            style="@style/text_normal"
            android:text="@string/my_order_total_label" />

        <pt.rocket.components.customfontviews.TextView
            android:id="@+id/total_value"
            style="@style/text_title"
            android:layout_alignParentRight="true"
            android:textColor="@color/red_basic" />
    </RelativeLayout>

</LinearLayout>