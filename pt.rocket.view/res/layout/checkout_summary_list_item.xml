<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/margin_mid" >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <org.holoeverywhere.widget.TextView
            android:id="@+id/order_summary_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="roboto_regular"
            android:gravity="left"
            android:textColor="@color/grey_divider_light_text"
            android:textSize="@dimen/text_m" />

        <org.holoeverywhere.widget.TextView
            android:id="@+id/order_summary_item_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="roboto_regular"
            android:gravity="left"
            android:textColor="@color/grey_divider_light_text"
            android:textSize="@dimen/text_m" />
    </LinearLayout>

    <ImageView
        android:id="@+id/order_summary_item_btn_remove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin_small"
        android:src="@drawable/btn_remove" />

</LinearLayout>