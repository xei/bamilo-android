<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_background"
    android:clickable="true"
    android:gravity="top" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/root_empty_container_height"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/rounded_vertical_margin"
        android:layout_marginLeft="@dimen/rounded_horizontal_margin"
        android:layout_marginRight="@dimen/rounded_horizontal_margin"
        android:layout_marginTop="@dimen/rounded_vertical_margin"
        android:background="@drawable/background_content"
        android:gravity="center"
        android:orientation="vertical" >

        <pt.rocket.framework.utils.LoadingBarView
            android:id="@+id/fragment_root_loading_gif"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:gifResource="@drawable/loading_bar_big" />

        <org.holoeverywhere.widget.TextView
            android:id="@+id/fragment_root_loading_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:text="@string/loading_message"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/grey_light" />
    </LinearLayout>

</LinearLayout>