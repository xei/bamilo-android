<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/button_container_height"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                style="@style/rounded_box"
                android:layout_marginBottom="0dp"
                android:orientation="vertical" >

                <!-- TITLE -->

                <org.holoeverywhere.widget.TextView
                    style="@style/rounded_box_title_grey"
                    android:text="@string/payment" />

                <View style="@style/divider_horizontal_orange" />

                <LinearLayout
                    android:id="@+id/checkout_payment_methods_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/rounded_margin_mid"
                    android:layout_marginRight="@dimen/rounded_margin_mid"
                    android:orientation="vertical" >
                </LinearLayout>
            </LinearLayout>

            <!-- VOUCHER -->

            <include layout="@layout/voucher_insert_layout" />
        </LinearLayout>
    </ScrollView>

    <!-- NEXT BUTTON -->

    <LinearLayout
        style="@style/button_container"
        android:layout_alignParentBottom="true" >

        <org.holoeverywhere.widget.Button
            android:id="@+id/checkout_payment_button_enter"
            style="@style/button_orange_bottom"
            android:layout_width="@dimen/inner_container_width"
            android:text="@string/next_button" />
    </LinearLayout>

</RelativeLayout>