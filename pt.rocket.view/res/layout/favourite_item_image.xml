<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center" >

    <ImageView
        android:id="@+id/favourite_item_image"
        android:layout_width="99dp"
        android:layout_height="99dp"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginRight="13.2dp"
        android:layout_marginTop="@dimen/margin_small"
        android:scaleType="fitCenter"
        android:src="@drawable/no_image_small" />

    <ImageView
        android:id="@+id/favourite_item_image_is_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="false"
        android:layout_marginLeft="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_small"
        android:src="@drawable/img_newarrival_en" />

    <org.holoeverywhere.widget.TextView
        android:id="@+id/favourite_item_percentage"
        android:layout_width="@dimen/product_list_item_discount_percentage_image_width"
        android:layout_height="@dimen/product_list_item_discount_percentage_image_height"
        android:layout_alignRight="@id/favourite_item_image"
        android:layout_below="@id/favourite_item_image"
        android:layout_marginBottom="@dimen/product_list_item_image_margin"
        android:background="@drawable/discount_badge"
        android:fontFamily="roboto_bold"
        android:gravity="center"
        android:maxLines="1"
        android:singleLine="true"
        android:text="99%"
        android:textColor="@android:color/white"
        android:textSize="@dimen/product_list_item_discount_percentage_text_size" />

</RelativeLayout>

