<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/teaser_margin_bottom"
    android:layout_marginLeft="@dimen/teaser_margin_left"
    android:layout_marginRight="6.5dp"
    android:layout_marginTop="3dp"
    android:background="@drawable/background_content"
    android:orientation="vertical" >

    <org.holoeverywhere.widget.TextView
        android:id="@+id/teaser_group_title"
        style="@style/rounded_box_title_grey"
        android:text="@string/brands_label" />

    <RelativeLayout
        android:id="@+id/teaser_group_title_clickable"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_normal"
        android:layout_below="@id/teaser_group_title"
        android:background="@drawable/selector_listitem_highlight"
        android:visibility="gone" >

        <org.holoeverywhere.widget.TextView
            android:id="@+id/teaser_group_title_clickable_title"
            style="@style/text_header"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_huge"
            android:layout_marginTop="@dimen/margin_large"
            android:gravity="center_vertical"
            android:text="@string/categories_label"
            android:textColor="@color/orange_basic" />
    </RelativeLayout>

    <View
        android:id="@+id/teaser_group_title_divider"
        style="@style/divider_horizontal_orange"
        android:layout_below="@id/teaser_group_title_clickable" />

    <LinearLayout
        android:id="@+id/teaser_group_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/teaser_group_title_divider"
        android:orientation="vertical" />

</RelativeLayout>