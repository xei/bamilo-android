<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="3dp"
    android:layout_marginLeft="@dimen/teaser_margin_left"
    android:layout_marginRight="6.5dp"
    android:layout_marginBottom="@dimen/teaser_margin_bottom"
    android:background="@drawable/background_content"    
    android:orientation="vertical" >

    <org.holoeverywhere.widget.TextView
        android:id="@+id/teaser_group_title"
        style="@style/activity_sectionheader_text"
        android:textColor="@color/grey_middledark"
        android:layout_marginLeft="@dimen/margin_huge"
        android:ellipsize="end"
        android:maxLines="1"
        android:singleLine="true"
        android:text="@string/brands" />

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/teaser_group_title_clickable"
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_normal"
        android:layout_below="@id/teaser_group_title"
        android:background="@drawable/selector_listitem_highlight"
        android:visibility="gone" >

        <org.holoeverywhere.widget.TextView
            android:id="@+id/teaser_group_title_clickable_title"
            style="@style/activity_sectionheader_clickable"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_huge"
            android:gravity="center_vertical"
            android:text="@string/categories" />
    </RelativeLayout>

    <View
        android:id="@+id/teaser_group_title_divider"
        style="@style/line_grey_style"
        android:background="@color/orange_basic"
        android:layout_below="@id/teaser_group_title_clickable"
        android:layout_marginBottom="0dp" />

    <LinearLayout
        android:id="@+id/teaser_group_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/teaser_group_title_divider"
        android:orientation="vertical" />

    <View
        style="@style/divider_vertical"
        android:layout_below="@id/teaser_group_title_divider"
        android:background="@color/grey_highlight" />

</RelativeLayout>