<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/campaign_image_height"
    android:orientation="vertical" >

    <!-- IMAGE -->

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:adjustViewBounds="false"
        android:scaleType="fitCenter"
        android:src="@drawable/no_image_small" />

    <!-- SIZE CONTAINER -->

    <RelativeLayout
        android:id="@+id/campaign_item_size_container"
        android:layout_width="match_parent"
        android:layout_height="33.33dp"
        android:orientation="vertical"
        android:visibility="gone" >

        <!-- DIVIDER -->

        <View
            android:id="@+id/campaign_item_size_divider"
            style="@style/divider_horizontal_campaign"
            android:layout_alignParentTop="true" />

        <!-- SIZE TEXT -->

        <org.holoeverywhere.widget.TextView
            android:id="@+id/campaign_item_size_label"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_below="@id/campaign_item_size_divider"
            android:layout_marginRight="4dp"
            android:layout_marginTop="4dp"
            android:fontFamily="roboto_regular"
            android:gravity="center"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Choose your Size"
            android:textSize="@dimen/text_xs" />

        <!-- SIZE SPINNER -->

        <com.actionbarsherlock.internal.widget.IcsSpinner
            android:id="@+id/campaign_item_size_spinner"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignTop="@id/campaign_item_size_label"
            android:layout_toRightOf="@id/campaign_item_size_label"
            android:background="@drawable/spinner_background_holo_light"
            android:clickable="true"
            android:fontFamily="roboto_bold"
            android:spinnerMode="dropdown"
            android:textSize="@dimen/text_xs" />
    </RelativeLayout>

</LinearLayout>