<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_clickableitem_highlight"
    android:paddingBottom="@dimen/margin_mid"
    android:paddingEnd="@dimen/margin_large"
    android:paddingLeft="@dimen/margin_large"
    android:paddingRight="@dimen/margin_large"
    android:paddingStart="@dimen/margin_large"
    android:layoutDirection="locale"
    android:paddingTop="@dimen/margin_mid" >

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/dialog_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="roboto_regular"
        android:gravity="left|center_vertical"
        android:text="Title"
        android:textColor="@color/grey_dark"
        android:textSize="@dimen/text_xl" />

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/dialog_item_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dialog_item_title"
        android:ellipsize="marquee"
        android:gravity="left|center_vertical"
        android:fontFamily="roboto_regular"
        android:maxLines="1"
        android:singleLine="true"
        android:text="subtitle"
        android:textColor="@color/grey_divider_light_text"
        android:textSize="@dimen/text_xl" />

    <!--
         <com.mobile.components.holo_font_views.CheckBox
        android:id="@+id/dialog_item_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:button="@drawable/btn_check_orange" />
    -->

</RelativeLayout>