<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/rounded_box"
    android:layout_marginBottom="0dp"
    android:orientation="vertical" >

    <!-- PRICE -->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/margin_mid"
        android:gravity="left|center"
        android:orientation="horizontal" >

        <org.holoeverywhere.widget.TextView
            android:id="@+id/product_detail_price_special"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_mid"
            android:fontFamily="roboto_bold"
            android:textColor="@color/red_basic"
            android:textSize="@dimen/text_header" />

        <org.holoeverywhere.widget.TextView
            android:id="@+id/product_detail_price_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="roboto_regular"
            android:textColor="@color/grey_middlelight"
            android:textSize="@dimen/text_s" />
    </LinearLayout>

    <View style="@style/divider_horizontal" />

    <!-- VARIATION CHOOSE -->

    <LinearLayout
        android:id="@+id/product_detail_product_variant_container"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_margin="@dimen/margin_mid"
        android:gravity="left|center"
        android:orientation="horizontal" >

        <org.holoeverywhere.widget.TextView
            android:id="@+id/product_detail_product_variant_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/size_label"
            android:textColor="@color/grey_middle"
            android:textSize="@dimen/text_header" />

        <org.holoeverywhere.widget.Button
            android:id="@+id/product_detail_product_variant_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_mid"
            android:background="@drawable/spinnerbutton_background_holo_light"
            android:ellipsize="end"
            android:minWidth="66dp"
            android:singleLine="true"
            android:text="@string/product_variant_placeholder"
            android:textColor="@color/grey_middle"
            android:textSize="@dimen/text_header" />
    </LinearLayout>

    <View style="@style/divider_horizontal" />

    <!-- RATING -->

    <RelativeLayout
        android:id="@+id/product_detail_product_rating_container"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_margin="@dimen/margin_mid"
        android:background="@drawable/selector_clickableitem_highlight"
        android:paddingBottom="@dimen/margin_mid"
        android:paddingTop="@dimen/margin_mid" >

        <RatingBar
            android:id="@+id/product_detail_product_rating"
            style="@style/starRatingBarBig"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:isIndicator="true" />

        <org.holoeverywhere.widget.TextView
            android:id="@+id/product_detail_product_rating_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_mid"
            android:layout_toRightOf="@+id/product_detail_product_rating"
            android:textColor="@color/grey_light"
            android:textSize="@dimen/text_header" />

        <RelativeLayout
            android:id="@+id/product_detail_loading_rating"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:visibility="gone" >

            <include layout="@layout/loading_bar_simple" />
        </RelativeLayout>
    </RelativeLayout>

    <View style="@style/divider_horizontal" />

    <!-- SPECICATIONS -->

    <org.holoeverywhere.widget.TextView
        android:id="@+id/product_detail_specifications"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/product_detail_div_title"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/margin_mid"
        android:background="@drawable/selector_listitem_highlight"
        android:ellipsize="end"
        android:gravity="left|center"
        android:maxLines="2"
        android:text="Specifications"
        android:textColor="@color/grey_light"
        android:textSize="@dimen/text_header" />

</LinearLayout>