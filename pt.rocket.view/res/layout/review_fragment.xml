<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        style="@style/rounded_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_large" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_huge"
            android:layout_marginRight="@dimen/margin_huge"
            android:layout_marginTop="@dimen/margin_huge"
            android:orientation="vertical" >

            <RatingBar
                android:id="@+id/review_rating"
                style="@style/starRatingBarBig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true" />

            <org.holoeverywhere.widget.TextView
                android:id="@+id/review_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_mid"
                android:text="This is a review title"
                android:textColor="@color/grey_middle"
                android:textSize="@dimen/text_mid"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_mid" >

                <org.holoeverywhere.widget.TextView
                    android:id="@+id/posted_by"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/posted_by"
                    android:textColor="@color/grey_middle"
                    android:textSize="@dimen/text_small" />

                <org.holoeverywhere.widget.TextView
                    android:id="@+id/review_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="User"
                    android:textColor="@color/grey_middle"
                    android:textSize="@dimen/text_small" />

                <org.holoeverywhere.widget.TextView
                    android:id="@+id/review_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:text="Date"
                    android:textColor="@color/grey_middle"
                    android:textSize="@dimen/text_small" />
            </LinearLayout>
        </LinearLayout>

        <View
            style="@style/divider_horizontal"
            android:layout_marginTop="@dimen/margin_huge" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_huge"
            android:layout_marginRight="@dimen/margin_huge"
            android:layout_marginTop="@dimen/margin_huge"
            android:orientation="vertical" >

            <org.holoeverywhere.widget.TextView
                android:id="@+id/review_comment"
                style="@style/body_text_feature_add"
                android:text="This is a really interesting comment."
                android:textColor="@color/grey_middle"
                android:textSize="@dimen/text_mid" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>