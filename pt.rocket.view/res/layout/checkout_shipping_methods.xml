<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                style="@style/rounded_box"
                android:orientation="vertical" >

                <!-- TITLE -->

                <org.holoeverywhere.widget.TextView
                    style="@style/rounded_box_title_grey"
                    android:text="@string/shipping" />

                <View style="@style/divider_horizontal_orange" />

                <!-- FORM -->

                <LinearLayout
                    android:id="@+id/checkout_shipping_methods_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/rounded_margin_mid"
                    android:layout_marginRight="@dimen/rounded_margin_mid"
                    android:orientation="vertical" >
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- NEXT BUTTON -->

    <LinearLayout
        style="@style/button_container"
        android:layout_alignParentBottom="true" >

        <org.holoeverywhere.widget.Button
            android:id="@+id/checkout_shipping_button_enter"
            style="@style/button_orange_bottom"
            android:layout_width="@dimen/inner_container_width"
            android:text="@string/next_button" />
    </LinearLayout>

</RelativeLayout>