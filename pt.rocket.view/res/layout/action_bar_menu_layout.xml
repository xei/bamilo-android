<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="@dimen/action_bar_icon_size"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/action_bar_margin" >

        <ImageView
            android:id="@+id/image_myprofile"
            android:layout_width="@dimen/action_bar_icon_size"
            android:layout_height="@dimen/action_bar_icon_size"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:src="@drawable/selector_navigation_overflow" />

        <pt.rocket.utils.DismissibleSpinner
            android:id="@+id/spinner_myprofile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:popupBackground="@drawable/menu_dropdown_panel_without_margin"
            android:spinnerMode="dropdown"
            android:visibility="invisible" />
    </RelativeLayout>

</LinearLayout>