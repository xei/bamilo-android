<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <!-- TITLE -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="@dimen/margin_huge"
        android:orientation="horizontal" >

        <org.holoeverywhere.widget.TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="roboto_regular"
            android:gravity="left"
            android:text="Order Summary"
            android:textColor="@color/grey_divider_light_text"
            android:textSize="@dimen/text_l" />

        <ImageView
            android:id="@+id/checkout_summary_products_btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_edit" />
    </LinearLayout>

    <View
        style="@style/divider_horizontal"
        android:background="@color/orange_basic" />

    <!-- PRODUCTS -->

    <org.holoeverywhere.widget.TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_huge"
        android:fontFamily="roboto_regular"
        android:gravity="left"
        android:text="Products:"
        android:textColor="@color/grey_divider_light_text"
        android:textSize="@dimen/text_l" />

    <LinearLayout
        android:id="@+id/checkout_summary_products_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_huge" />

    <!-- SHIPPING FEE -->

    <LinearLayout
        android:id="@+id/checkout_summary_products_shippingfee_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_huge"
        android:orientation="horizontal" >

        <org.holoeverywhere.widget.TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="roboto_regular"
            android:gravity="left"
            android:text="Shipping Fee:"
            android:textColor="@color/grey_divider_light_text"
            android:textSize="@dimen/text_l" />

        <org.holoeverywhere.widget.TextView
            android:id="@+id/checkout_summary_products_text_shippingfee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="roboto_regular"
            android:gravity="left"
            android:text="€25"
            android:textColor="@color/grey_divider_light_text"
            android:textSize="@dimen/text_l" />
    </LinearLayout>

    <!-- SUB TOTAL -->

    <LinearLayout
        android:id="@+id/checkout_summary_products_subtotal_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="@dimen/margin_huge"
        android:orientation="horizontal" >

        <org.holoeverywhere.widget.TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="roboto_regular"
            android:gravity="left"
            android:text="Subtotal:"
            android:textColor="@color/grey_divider_light_text"
            android:textSize="@dimen/text_l" />

        <org.holoeverywhere.widget.TextView
            android:id="@+id/checkout_summary_products_text_subtotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="roboto_regular"
            android:gravity="left"
            android:text="€100"
            android:textColor="@color/grey_divider_light_text"
            android:textSize="@dimen/text_l" />
    </LinearLayout>

</LinearLayout>