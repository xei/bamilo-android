<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- CONTENT -->

    <ScrollView
        android:id="@+id/checkout_my_order_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/checkout_my_order_button_enter"
        android:layout_alignParentTop="true"
        android:paddingBottom="@dimen/button_container_height" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/rounded_margin_mid"
                android:orientation="vertical" >

                <!-- PRODUCTS -->

                <include
                    android:id="@+id/checkout_my_order_include_cart"
                    layout="@layout/checkout_my_order_products" />

                <!-- SUB TOTAL -->

                <include
                    android:id="@+id/checkout_my_order_include_subtotal"
                    layout="@layout/shopping_basket_subtotal_element" />
            </LinearLayout>

            <!-- SHIPPING ADDRESS -->

            <include
                android:id="@+id/checkout_my_order_include_shipping_address"
                layout="@layout/checkout_my_order_shipping_address"
                android:visibility="visible" />

            <!-- BILLING ADDRESS -->

            <include
                android:id="@+id/checkout_my_order_include_billing_address"
                layout="@layout/checkout_my_order_billing_address"
                android:visibility="visible" />

            <!-- SHIPPING METHOD -->

            <include
                android:id="@+id/checkout_my_order_include_shipping_method"
                layout="@layout/checkout_my_order_shipping_method"
                android:visibility="visible" />

            <!-- PAYMENT OPTIONS -->

            <include
                android:id="@+id/checkout_my_order_include_payment_options"
                layout="@layout/checkout_my_order_payment_options"
                android:visibility="visible" />
        </LinearLayout>
    </ScrollView>

    <!-- NEXT STEP BUTTON -->

    <LinearLayout
        style="@style/button_container"
        android:layout_height="@dimen/button_container_height"
        android:layout_alignBottom="@id/checkout_my_order_container" >

        <org.holoeverywhere.widget.Button
            android:id="@+id/checkout_my_order_button_enter"
            style="@style/button_orange_bottom"
            android:text="@string/my_order_confirm_button" />
    </LinearLayout>

</RelativeLayout>