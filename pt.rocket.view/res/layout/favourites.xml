<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/favourites_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_background" >

    <GridView
        android:id="@+id/favourites_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/rounded_margin_small"
        android:listSelector="@drawable/selector_listitem_highlight"
        android:numColumns="@integer/favourite_num_columns"
        android:paddingBottom="@dimen/button_container_height" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_container_height"
        android:layout_alignBottom="@id/favourites_grid"
        android:background="@color/grey_background"
        android:gravity="center" >

        <org.holoeverywhere.widget.Button
            android:id="@+id/button_shop_all"
            style="@style/button_orange_landscape"
            android:text="@string/favourite_addalltocart" />
    </LinearLayout>

</RelativeLayout>