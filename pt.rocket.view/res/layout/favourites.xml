<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- NOT FOUND VIEW -->

    <org.holoeverywhere.widget.TextView
        android:id="@+id/favourites_empty"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/margin_mid"
        android:layout_marginRight="@dimen/margin_mid"
        android:layout_marginTop="@dimen/myprofile_lists_top_margin"
        android:drawablePadding="@dimen/myprofile_lists_drawable_padding"
        android:drawableTop="@drawable/img_nofavourites"
        android:gravity="center"
        android:text="@string/favourite_no_favourites"
        android:textColor="@color/strip_title"
        android:textSize="@dimen/text_xxl"
        android:visibility="gone" />

    <!-- CONTENT -->

    <RelativeLayout
        android:id="@+id/favourites_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" >

        <GridView
            android:id="@+id/favourites_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:listSelector="@drawable/selector_listitem_highlight"
            android:numColumns="@integer/favourite_num_columns"
            android:paddingBottom="73dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/favourites_grid"
            android:layout_centerHorizontal="true"
            android:background="@android:color/white"
            android:gravity="center" >

            <org.holoeverywhere.widget.Button
                android:id="@+id/favourite_button_shop_all"
                style="@style/button_orange_style"
                android:layout_width="wrap_content"
                android:contentDescription="@string/productdetail_addcart_description"
                android:gravity="center"
                android:paddingLeft="@dimen/margin_veryhuge"
                android:paddingRight="@dimen/margin_veryhuge"
                android:singleLine="true"
                android:text="@string/favourite_addalltocart"
                android:textColor="#333"
                android:textSize="@dimen/text_s" />
        </LinearLayout>
    </RelativeLayout>

    <!-- LOADING -->

    <include
        android:id="@+id/loading_view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/loading_bar"
        android:visibility="visible" />

</RelativeLayout>