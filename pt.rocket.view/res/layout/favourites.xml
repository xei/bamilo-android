<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <GridView
        android:id="@+id/favourites_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/rounded_margin_mid"
        android:layout_marginRight="@dimen/rounded_margin_mid"
        android:layout_marginTop="@dimen/rounded_margin_small"
        android:listSelector="@drawable/selector_listitem_highlight"
        android:numColumns="@integer/favourite_num_columns"
        android:paddingBottom="@dimen/button_container_height" />

    <LinearLayout
        style="@style/button_container"
        android:layout_alignBottom="@id/favourites_grid" >

        <org.holoeverywhere.widget.Button
            android:id="@+id/button_shop_all"
            style="@style/button_orange_landscape"
            android:text="@string/favourite_addalltocart" />
    </LinearLayout>

</RelativeLayout>