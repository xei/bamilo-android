<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- HOME -->

    <LinearLayout
        android:id="@+id/home_pager_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone" >

        <!-- TABS -->

        <pt.rocket.framework.components.androidslidingtabstrip.SlidingTabLayout
            android:id="@+id/home_pager_tab"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sliding_tab_height"
            android:background="@color/grey_tab_background"
            app:stsIndicatorColor="@color/orange_tab_bar"
            app:stsIndicatorThickness="@dimen/sliding_tab_inidicator_thickness" />

        <!-- CONTENT -->

        <android.support.v4.view.ViewPager
            android:id="@+id/home_pager"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1"
            android:background="@color/grey_highlight" />
    </LinearLayout>

    <!-- WIZARD -->

    <include
        android:id="@+id/home_tip"
        layout="@layout/wizard_home_page"
        android:visibility="gone" />

</RelativeLayout>