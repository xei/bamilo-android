<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- TABS -->

    <pt.rocket.framework.components.androidslidingtabstrip.SlidingTabLayout
        android:id="@+id/home_pager_tab"
        android:layout_width="match_parent"
        android:layout_height="@dimen/sliding_tab_height"
        android:background="@color/grey_tab_background"
        app:stsIndicatorColor="@color/orange_tab_bar"
        app:stsIndicatorThickness="@dimen/sliding_tab_inidicator_thickness" />

    <!-- CONTENT -->

    <android.support.v4.view.ViewPager
        android:id="@+id/home_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/home_pager_tab"
        android:background="@color/background_color" />

    <!-- WIZARD -->

    <include
        android:id="@+id/home_tip"
        layout="@layout/wizard_home_page"
        android:visibility="gone" />

</RelativeLayout>