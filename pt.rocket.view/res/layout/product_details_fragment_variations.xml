<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/variations_container"
    style="@style/rounded_box"
    android:layout_marginBottom="0dp"
    android:layout_marginTop="@dimen/rounded_margin_small" >

    <org.holoeverywhere.widget.TextView
        android:id="@+id/color_label"
        style="@style/rounded_box_title_grey"
        android:text="@string/color_label" />

    <View
        android:id="@+id/divider"
        style="@style/divider_horizontal_orange"
        android:layout_below="@id/color_label" />

    <pt.rocket.utils.HorizontalListView
        android:id="@+id/variations_list"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_below="@id/divider"
        android:layout_marginLeft="@dimen/margin_huge"
        android:layout_marginRight="@dimen/margin_huge" />

</RelativeLayout>