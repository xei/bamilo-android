<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_mid"
    android:background="@color/grey_dividerlight"
    android:orientation="horizontal"
    android:paddingBottom="1dp" >

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:adjustViewBounds="false"
        android:background="@android:color/white"
        android:paddingRight="@dimen/margin_large"
        android:scaleType="fitCenter"
        android:src="@drawable/no_image_small" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_mid" >

        <org.holoeverywhere.widget.TextView
            android:id="@+id/my_order_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_mid"
            android:fontFamily="roboto_regular"
            android:gravity="left"
            android:textColor="@color/grey_divider_light_text"
            android:textSize="@dimen/text_m" />

        <org.holoeverywhere.widget.TextView
            android:id="@+id/my_order_item_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="roboto_regular"
            android:gravity="left"
            android:textColor="@color/grey_divider_light_text"
            android:textSize="@dimen/text_m" />

        <org.holoeverywhere.widget.TextView
            android:id="@+id/my_order_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="roboto_regular"
            android:gravity="left"
            android:textColor="@color/grey_divider_light_text"
            android:textSize="@dimen/text_m" />
        
		<org.holoeverywhere.widget.TextView
            android:id="@+id/my_order_item_variation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="roboto_regular"
            android:gravity="left"
            android:textColor="@color/grey_divider_light_text"
            android:textSize="@dimen/text_m"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>