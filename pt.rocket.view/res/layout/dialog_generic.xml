<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/title_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/modal_dialog_header"
        android:paddingBottom="@dimen/margin_large"
        android:paddingEnd="@dimen/margin_veryhuge"
        android:paddingLeft="@dimen/margin_veryhuge"
        android:paddingRight="@dimen/margin_veryhuge"
        android:paddingStart="@dimen/margin_veryhuge"
        android:paddingTop="@dimen/margin_large" >

        <pt.rocket.components.customfontviews.TextView
            android:id="@+id/dialog_title"
            style="@style/dialog_title"
            android:gravity="center_horizontal"
            android:text="Title" />
    </LinearLayout>

    <RelativeLayout style="@style/dialog_container_content" >

        <pt.rocket.components.customfontviews.TextView
            android:id="@+id/dialog_text"
            style="@style/dialog_text"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="This is a very very very long dialog text spanning multiple lines that obviously needs to be made longer as the original one did now show the condensed look of a really long text" />

        <pt.rocket.components.customfontviews.TextView
            android:id="@+id/items_count"
            style="@style/dialog_text"
            android:layout_width="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/item_height_normal" >

        <View
            android:id="@+id/grey_line"
            style="@style/line_dialog"
            android:layout_alignParentTop="true" />

        <LinearLayout
            android:id="@id/button_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/grey_line"
            android:layoutDirection="locale"
            android:orientation="horizontal" >

            <pt.rocket.components.customfontviews.Button
                android:id="@+id/button1"
                style="@style/dialog_button_style"
                android:contentDescription="@string/productdetail_gotocart_description"
                android:text="@string/cancel_label" />

            <View
                android:id="@+id/grey_line_vertical"
                style="@style/line_dialog_vertical" />

            <pt.rocket.components.customfontviews.Button
                android:id="@+id/button2"
                style="@style/dialog_button_style"
                android:contentDescription="@string/yes_label"
                android:text="@string/ok_label" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>