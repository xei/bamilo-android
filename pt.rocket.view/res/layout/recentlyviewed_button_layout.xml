<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/button_recently_viewed_extra_height"
    android:layout_alignBottom="@id/recentlyviewed_grid"
    android:background="@color/grey_background"
    android:gravity="center"
    android:orientation="vertical" >

    <Button
        android:id="@+id/recentlyviewed_button_grey"
        style="@style/button_grey_style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_orange_height"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/rounded_margin_mid"
        android:layout_marginTop="@dimen/button_orange_top_margin"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/recentlyview_clear_viewed"
        android:textColor="@color/grey_dark"
        android:textSize="@dimen/button_orange_text_size" />

    <include
        android:id="@+id/favourite_button_shop_all"
        layout="@layout/orange_button_layout" />

</LinearLayout>