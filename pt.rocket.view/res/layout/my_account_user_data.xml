<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <RelativeLayout
        android:id="@+id/top_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible" >

        <RelativeLayout
            android:id="@+id/myDataContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp" >

            <LinearLayout
                android:id="@+id/name_title_container"
                style="@style/activity_sectionheader_container"
                android:orientation="vertical" >

                <TextView
                    style="@style/activity_sectionheader_text"
                    android:text="@string/personal_data_label" />

                <View style="@style/activity_sectionheader_divider" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_title_container"
                android:layout_marginLeft="@dimen/margin_huge"
                android:layout_marginRight="@dimen/margin_huge"
                android:layout_marginTop="@dimen/margin_mid" >

                <LinearLayout
                    android:id="@+id/name_wrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal" >

                    <EditText
                        android:id="@+id/clientLastName"
                        style="@style/form_edittext_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:focusable="false" />

                    <EditText
                        android:id="@+id/clientFirstName"
                        style="@style/form_edittext_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:focusable="false" />
                </LinearLayout>

                <EditText
                    android:id="@+id/clientEmail"
                    style="@style/form_edittext_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name_wrapper"
                    android:focusable="false" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/passwordContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/myDataContainer"
            android:layout_marginTop="@dimen/margin_mid" >

            <LinearLayout
                android:id="@+id/password_title_container"
                style="@style/activity_sectionheader_container"
                android:orientation="vertical" >

                <TextView
                    style="@style/activity_sectionheader_text"
                    android:text="@string/new_password_label" />

                <View style="@style/activity_sectionheader_divider" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/passwordEditContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/password_title_container"
                android:layout_marginLeft="@dimen/margin_huge"
                android:layout_marginRight="@dimen/margin_huge"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/passwordErrorHint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_mid"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:textColor="@color/red_basic"
                    android:textSize="@dimen/text_smid"
                    android:visibility="gone" />

                <EditText
                    android:id="@+id/typeNewPassword"
                    style="@style/form_edittext_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_mid"
                    android:hint="@string/new_password_hint"
                    android:inputType="textPassword" />

                <EditText
                    android:id="@+id/retypeNewPassword"
                    style="@style/form_edittext_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_mid"
                    android:hint="@string/retype_new_password_hint"
                    android:inputType="textPassword" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/passwordContainer"
            android:layout_marginLeft="@dimen/margin_huge"
            android:layout_marginRight="@dimen/margin_huge">

            <Button
                android:id="@+id/button_save"
                style="@style/button_orange_style"
                android:layout_width="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_weight="1"
                android:text="@string/save_label" />

            <Button
                android:id="@+id/button_cancel"
                style="@style/button_grey_style"
                android:layout_width="0dp"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="0dp"
                android:layout_weight="1"
                android:text="@string/cancel_label" />
        </LinearLayout>
    </RelativeLayout>

</ScrollView>