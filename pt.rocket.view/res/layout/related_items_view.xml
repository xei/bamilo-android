<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <org.holoeverywhere.widget.TextView
        android:id="@+id/related"
        style="@style/activity_sectionheader_text"
        android:layout_marginBottom="@dimen/margin_mid"
        android:layout_marginLeft="@dimen/margin_mid"
        android:text="@string/related_items" />

    <android.support.v4.view.ViewPager
        android:id="@+id/last_viewed_viewpager"
        android:layout_width="match_parent"
        android:layout_height="@dimen/teaser_banners_group_height"
        android:layout_below="@id/related" />

</RelativeLayout>