<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/favourite_item_height" >

    <!-- CONTAINER -->

    <LinearLayout
        android:id="@+id/favourite_item_container"
        style="@style/list_row_style"
        android:layout_height="match_parent"
        android:gravity="center" >

        <!-- IMAGE CONTAINER -->

        <include
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/favourite_item_image" />

        <!-- INFO CONTAINER -->

        <include
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_mid"
            android:layout_marginRight="@dimen/margin_mid"
            android:layout_weight="1"
            layout="@layout/favourite_item_info" />
    </LinearLayout>

    <!-- DIV -->

    <View
        style="@style/divider_horizontal"
        android:layout_alignParentBottom="true" />

    <!-- DIV -->

    <View
        style="@style/divider_vertical_favourite"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true" />

</RelativeLayout>