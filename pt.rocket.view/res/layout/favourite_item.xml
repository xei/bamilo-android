<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/general_container"
    style="@style/list_row_style" >

    <View
        android:id="@+id/divider"
        style="@style/divider_horizontal"
        android:layout_below="@+id/container" />

    <View
        android:id="@+id/dividerLeft"
        style="@style/divider_vertical_favourite"
        android:layout_alignParentLeft="true" />

    <View
        android:id="@+id/dividerRight"
        style="@style/divider_vertical_favourite"
        android:layout_alignParentRight="true" />

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/dividerRight"
        android:layout_toRightOf="@id/dividerLeft" >

        <RelativeLayout
            android:id="@+id/image_container"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/favourite_item_height" >

            <include
                android:id="@+id/image_loadable"
                android:layout_width="99dp"
                android:layout_height="99dp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="13.2dp"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="13.2dp"
                android:layout_marginTop="@dimen/margin_small"
                layout="@layout/catalog_image_item"
                android:background="@color/orange_basic" />

            <ImageView
                android:id="@+id/image_is_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="false"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginTop="@dimen/margin_small"
                android:src="@drawable/img_newarrival_en" />

            <org.holoeverywhere.widget.TextView
                android:id="@+id/discount_percentage"
                android:layout_width="@dimen/product_list_item_discount_percentage_image_width"
                android:layout_height="@dimen/product_list_item_discount_percentage_image_height"
                android:layout_alignParentBottom="true"
                android:layout_alignRight="@+id/image_loadable"
                android:layout_marginBottom="@dimen/product_list_item_image_margin"
                android:background="@drawable/discount_badge"
                android:fontFamily="roboto_bold"
                android:gravity="center"
                android:maxLines="1"
                android:singleLine="true"
                android:text="99%"
                android:textColor="@android:color/white"
                android:textSize="@dimen/product_list_item_discount_percentage_text_size" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="@dimen/favourite_item_height"
            android:layout_centerInParent="true"
            android:layout_toRightOf="@id/image_container" >

            <org.holoeverywhere.widget.TextView
                android:id="@+id/item_brand"
                style="@style/product_name_list_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_huge"
                android:layout_marginTop="@dimen/favourite_item_top_margin"
                android:layout_toRightOf="@+id/image_loadable"
                android:ellipsize="end"
                android:fontFamily="roboto_bold"
                android:maxLines="1"
                android:paddingRight="80dp"
                android:singleLine="true"
                android:text="BRAND" />

            <org.holoeverywhere.widget.TextView
                android:id="@+id/item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_brand"
                android:layout_marginRight="@dimen/margin_huge"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/image_loadable"
                android:ellipsize="end"
                android:gravity="left"
                android:maxLines="1"
                android:paddingRight="80dp"
                android:singleLine="true"
                android:text="Name"
                android:textColor="@color/grey_middle"
                android:textSize="@dimen/text_xs" />

            <org.holoeverywhere.widget.TextView
                android:id="@+id/item_discount"
                style="@style/product_price_current_list_text"
                android:layout_alignLeft="@id/item_name"
                android:layout_below="@id/item_name"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/image_loadable"
                android:ellipsize="marquee"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Discount" />

            <org.holoeverywhere.widget.TextView
                android:id="@+id/item_regprice"
                style="@style/product_price_current_list_text"
                android:layout_alignTop="@id/item_discount"
                android:layout_below="@id/item_name"
                android:layout_toRightOf="@id/item_discount"
                android:ellipsize="marquee"
                android:maxLines="1"
                android:singleLine="true"
                android:text="Price" />

            <LinearLayout
                android:id="@+id/product_variant_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/item_regprice"
                android:layout_marginBottom="@dimen/margin_huge"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/margin_mid" >

                    <org.holoeverywhere.widget.TextView
                        android:id="@+id/product_variant_choose_error"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/product_variance_choose_error"
                        android:textColor="@color/red_basic"
                        android:textSize="@dimen/text_s" />

                    <LinearLayout
                        android:id="@+id/product_variant_choose"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignWithParentIfMissing="true"
                        android:layout_below="@+id/product_variant_choose_error"
                        android:orientation="horizontal" >

                        <org.holoeverywhere.widget.TextView
                            android:id="@+id/product_variant_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/product_variance_choose"
                            android:textColor="@color/grey_middle"
                            android:textSize="@dimen/text_s" />

                        <org.holoeverywhere.widget.Button
                            android:id="@+id/product_variant_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/margin_mid"
                            android:background="@drawable/spinnerbutton_background_holo_light"
                            android:ellipsize="end"
                            android:minWidth="66dp"
                            android:singleLine="true"
                            android:text="@string/product_variant_placeholder"
                            android:textColor="@color/grey_middle"
                            android:textSize="@dimen/text_s" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/product_variant_price_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/product_variant_choose"
                        android:layout_marginTop="@dimen/margin_mid"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/margin_mid"
                        android:visibility="gone" >

                        <org.holoeverywhere.widget.TextView
                            android:id="@+id/product_variant_specprice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margin_mid"
                            android:textColor="@color/red_basic"
                            android:textSize="@dimen/text_s" />

                        <org.holoeverywhere.widget.TextView
                            android:id="@+id/product_variant_normprice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_s" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <org.holoeverywhere.widget.Button
                android:id="@+id/delete_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="@dimen/favourite_list_item_image_margin"
                android:layout_marginTop="@dimen/favourite_item_top_margin"
                android:background="@android:color/transparent"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingBottom="4dp"
                android:paddingLeft="12dp"
                android:paddingRight="4dp"
                android:paddingTop="4dp"
                android:singleLine="true"
                android:text="@string/shoppingcart_item_btn_delete"
                android:textColor="@color/blue_basic"
                android:textSize="@dimen/text_small" />

            <org.holoeverywhere.widget.Button
                android:id="@+id/shop"
                style="@style/button_orange_style"
                android:layout_width="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="@dimen/product_list_item_image_margin"
                android:layout_marginRight="@dimen/favourite_list_item_image_margin"
                android:contentDescription="@string/productdetail_addcart_description"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingLeft="@dimen/margin_mid"
                android:paddingRight="@dimen/margin_mid"
                android:singleLine="true"
                android:text="@string/add_to_shopping_cart"
                android:textColor="#333"
                android:textSize="@dimen/product_list_item_discount_percentage_text_size" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>