<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rocket_app_forgotpass"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/forgotpass_introtext"
            style="@style/forgot_password_introtext.bold"
            android:layout_marginTop="18dp"
            android:text="@string/forgotten_password"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/forgotpass_introtext_subtext"
            style="@style/forgot_password_introtext"
            android:layout_below="@+id/forgotpass_introtext"
            android:text="@string/forgotten_password_sub_text" />

        <LinearLayout
            android:id="@+id/title_container"
            style="@style/activity_sectionheader_container"
            android:layout_below="@+id/forgotpass_introtext_subtext"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/middle_login_text"
                style="@style/activity_sectionheader_text"
                android:text="@string/forgotpass_title" />

            <View style="@style/activity_sectionheader_divider" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/title_container"
            android:layout_marginLeft="@dimen/margin_huge"
            android:layout_marginRight="@dimen/margin_huge"
            android:layout_marginTop="@dimen/margin_huge"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/form_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            </LinearLayout>

            <LinearLayout
                android:id="@+id/submitContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_huge" >

                <Button
                    android:id="@+id/submit_button"
                    style="@style/button_orange_style"
                    android:text="@string/submit_label" />
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>

</ScrollView>