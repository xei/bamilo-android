<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <!-- TITLE -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="@dimen/margin_huge"
        android:orientation="horizontal" >

        <org.holoeverywhere.widget.TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="roboto_regular"
            android:gravity="left"
            android:text="Billing Address"
            android:textColor="@color/orange_basic"
            android:textSize="@dimen/text_l" />

        <ImageView
            android:id="@+id/checkout_my_order_billing_address_btn_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_edit" />
    </LinearLayout>

    <View
        style="@style/divider_horizontal"
        android:background="@color/grey_divider_light_text" />

    <!-- ADDRESS -->

    <LinearLayout
        android:id="@+id/checkout_my_order_billing_address_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_huge"
        android:orientation="vertical" />

    <!-- SAME ADDRESS -->

    <org.holoeverywhere.widget.TextView
        android:id="@+id/checkout_my_order_billing_address_is_same"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="roboto_regular"
        android:gravity="left"
        android:text="Billing to same address"
        android:textColor="@color/grey_divider_light_text"
        android:textSize="@dimen/text_m" />

</LinearLayout>