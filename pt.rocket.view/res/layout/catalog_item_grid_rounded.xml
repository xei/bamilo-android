<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/list_row_rounded_style"
    android:layout_height="@dimen/catalog_grid_item_height" >

    <include
        android:id="@+id/image_loadable"
        android:layout_width="@dimen/catalog_grid_item_image_width"
        android:layout_height="@dimen/catalog_grid_item_image_height"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/rounded_margin_mid"
        layout="@layout/image_loadable" />

    <ImageView
        android:id="@+id/image_is_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/selector_is_new" />

    <ImageView
        android:id="@+id/image_is_favourite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="false"
        android:padding="@dimen/rounded_margin_mid"
        android:paddingTop="@dimen/catalog_item_vertical_padding"
        android:src="@drawable/selector_favorite" />

    <pt.rocket.components.customfontviews.TextView
        android:id="@+id/discount_percentage"
        style="@style/discount_percentage"
        android:layout_above="@+id/item_brand"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/rounded_margin_mid"
        android:gravity="center" />

    <pt.rocket.components.customfontviews.TextView
        android:id="@+id/item_brand"
        style="@style/text_title"
        android:layout_width="match_parent"
        android:layout_below="@id/image_loadable"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="@dimen/rounded_margin_mid"
        android:text="BRAND" />

    <pt.rocket.components.customfontviews.TextView
        android:id="@+id/item_name"
        style="@style/text_subtitle"
        android:layout_width="match_parent"
        android:layout_below="@id/item_brand"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:text="Name" />

    <pt.rocket.components.customfontviews.TextView
        android:id="@+id/item_discount"
        style="@style/text_price"
        android:layout_alignLeft="@+id/item_brand"
        android:layout_below="@id/item_name"
        android:layout_marginRight="4dp"
        android:text="Discount" />

    <pt.rocket.components.customfontviews.TextView
        android:id="@+id/item_regprice"
        style="@style/text_price"
        android:layout_below="@id/item_name"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@id/item_discount"
        android:text="Price"
        android:textColor="@color/grey_light" />

</RelativeLayout>