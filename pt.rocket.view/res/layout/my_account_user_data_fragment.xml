<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            style="@style/rounded_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:orientation="vertical"
            android:paddingBottom="@dimen/rounded_margin_mid" >

            <pt.rocket.components.customfontviews.TextView
                style="@style/rounded_box_title_grey"
                android:paddingLeft="@dimen/rounded_margin_small"
                android:paddingRight="@dimen/rounded_margin_small"
                android:text="@string/personal_data_label" />

            <View style="@style/divider_horizontal_orange" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/rounded_margin_mid"
                android:layout_marginRight="@dimen/rounded_margin_mid"
                android:layout_marginTop="@dimen/margin_mid" >

                <LinearLayout
                    android:id="@+id/name_wrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="@dimen/rounded_margin_small"
                    android:orientation="horizontal" >

                    <pt.rocket.components.customfontviews.TextView
                        android:id="@+id/clientLastName"
                        style="@style/text_normal"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:focusable="false"
                        android:text="first" />

                    <pt.rocket.components.customfontviews.TextView
                        android:id="@+id/clientFirstName"
                        style="@style/text_normal"
                        android:layout_width="match_parent"
                        android:layout_weight="1"
                        android:focusable="false"
                        android:text="last" />
                </LinearLayout>

                <pt.rocket.components.customfontviews.TextView
                    android:id="@+id/clientEmail"
                    style="@style/text_normal"
                    android:layout_width="match_parent"
                    android:layout_below="@id/name_wrapper"
                    android:layout_marginLeft="@dimen/rounded_margin_small"
                    android:focusable="false"
                    android:text="email" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/rounded_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:orientation="vertical" >

            <pt.rocket.components.customfontviews.TextView
                style="@style/rounded_box_title_grey"
                android:paddingLeft="@dimen/rounded_margin_small"
                android:paddingRight="@dimen/rounded_margin_small"
                android:text="@string/new_password_label" />

            <View style="@style/divider_horizontal_orange" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/rounded_margin_mid"
                android:layout_marginRight="@dimen/rounded_margin_mid"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >

                <pt.rocket.components.customfontviews.TextView
                    android:id="@+id/passwordErrorHint"
                    style="@style/text_normal"
                    android:singleLine="false"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="@dimen/margin_mid"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:textColor="@color/red_basic"
                    android:visibility="gone" />

                <pt.rocket.components.customfontviews.EditText
                    android:id="@+id/typeNewPassword"
                    style="@style/form_edittext_style"
                    android:layout_marginBottom="@dimen/margin_mid"
                    android:contentDescription="@string/myaccount_newpass_description"
                    android:hint="@string/new_password_hint"
                    android:inputType="textPassword" />

                <pt.rocket.components.customfontviews.EditText
                    android:id="@+id/retypeNewPassword"
                    style="@style/form_edittext_style"
                    android:layout_marginBottom="@dimen/margin_mid"
                    android:contentDescription="@string/myaccount_repeatpass_description"
                    android:hint="@string/retype_new_password_hint"
                    android:inputType="textPassword" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout style="@style/button_container" >

            <pt.rocket.components.customfontviews.Button
                android:id="@+id/button_cancel"
                style="@style/button_grey_bottom"
                android:layout_marginRight="@dimen/margin_x_small"
                android:layout_weight="1"
                android:text="@string/cancel_label" />

            <pt.rocket.components.customfontviews.Button
                android:id="@+id/button_save"
                style="@style/button_orange_bottom"
                android:layout_marginLeft="@dimen/margin_x_small"
                android:layout_weight="1"
                android:contentDescription="@string/myaccount_save_description"
                android:text="@string/save_label" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>