<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:background="@color/grey_background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            style="@style/rounded_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:orientation="vertical"
            android:paddingBottom="@dimen/my_account_medium_margin"
            android:paddingTop="@dimen/my_account_medium_margin" >

            <org.holoeverywhere.widget.TextView
                style="@style/rounded_box_title_grey"
                android:paddingLeft="@dimen/my_account_small_margin"
                android:paddingRight="@dimen/my_account_small_margin"
                android:text="@string/personal_data_label" />

            <View style="@style/divider_horizontal_orange" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/my_account_medium_margin"
                android:layout_marginRight="@dimen/my_account_medium_margin"
                android:layout_marginTop="@dimen/margin_mid" >

                <LinearLayout
                    android:id="@+id/name_wrapper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="@dimen/my_account_small_margin"
                    android:orientation="horizontal" >

                    <org.holoeverywhere.widget.TextView
                        android:id="@+id/clientLastName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:focusable="false"
                        android:text="first"
                        android:textColor="@color/grey_middle"
                        android:textSize="@dimen/product_item_brand_text_size" />

                    <org.holoeverywhere.widget.TextView
                        android:id="@+id/clientFirstName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight=".5"
                        android:focusable="false"
                        android:text="last"
                        android:textColor="@color/grey_middle"
                        android:textSize="@dimen/product_item_brand_text_size" />
                </LinearLayout>

                <org.holoeverywhere.widget.TextView
                    android:id="@+id/clientEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name_wrapper"
                    android:layout_marginLeft="@dimen/my_account_small_margin"
                    android:focusable="false"
                    android:text="email"
                    android:textColor="@color/grey_middle"
                    android:textSize="@dimen/product_item_brand_text_size" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            style="@style/rounded_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:layout_marginTop="0dp"
            android:orientation="vertical"
            android:paddingBottom="@dimen/my_account_medium_margin"
            android:paddingTop="@dimen/my_account_medium_margin" >

            <org.holoeverywhere.widget.TextView
                style="@style/rounded_box_title_grey"
                android:paddingLeft="@dimen/my_account_small_margin"
                android:paddingRight="@dimen/my_account_small_margin"
                android:text="@string/new_password_label" />

            <View style="@style/divider_horizontal_orange" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/my_account_medium_margin"
                android:layout_marginRight="@dimen/my_account_medium_margin"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >

                <org.holoeverywhere.widget.TextView
                    android:id="@+id/passwordErrorHint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_mid"
                    android:layout_marginLeft="@dimen/margin_small"
                    android:textColor="@color/red_basic"
                    android:textSize="@dimen/text_s"
                    android:visibility="gone" />

                <org.holoeverywhere.widget.EditText
                    android:id="@+id/typeNewPassword"
                    style="@style/form_edittext_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_mid"
                    android:contentDescription="@string/myaccount_newpass_description"
                    android:hint="@string/new_password_hint"
                    android:inputType="textPassword"
                    android:textColor="@color/grey_middlelight"
                    android:textSize="@dimen/product_item_brand_text_size" />

                <org.holoeverywhere.widget.EditText
                    android:id="@+id/retypeNewPassword"
                    style="@style/form_edittext_style"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/margin_mid"
                    android:contentDescription="@string/myaccount_repeatpass_description"
                    android:hint="@string/retype_new_password_hint"
                    android:inputType="textPassword"
                    android:textColor="@color/grey_middlelight"
                    android:textSize="@dimen/product_item_brand_text_size" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_mid"
            android:layout_marginRight="@dimen/margin_mid"
            android:paddingTop="@dimen/rounded_margin_mid" >

            <org.holoeverywhere.widget.Button
                android:id="@+id/button_save"
                style="@style/button_orange_style"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_orange_height"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="@dimen/margin_small"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:contentDescription="@string/myaccount_save_description"
                android:text="@string/save_label"
                android:textColor="@color/grey_dark"
                android:textSize="@dimen/button_orange_text_size" />

            <org.holoeverywhere.widget.Button
                android:id="@+id/button_cancel"
                style="@style/button_grey_bottom"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_orange_height"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="0dp"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:text="@string/cancel_label"
                android:textColor="@color/grey_dark"
                android:textSize="@dimen/button_orange_text_size" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>