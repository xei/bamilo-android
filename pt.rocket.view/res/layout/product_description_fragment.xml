<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/product_description_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- TITLE -->

    <RelativeLayout
        android:id="@+id/product_basicinfo_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="@dimen/margin_huge" >

        <org.holoeverywhere.widget.TextView
            android:id="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_huge"
            android:ellipsize="end"
            android:fontFamily="roboto_regular"
            android:maxLines="2"
            android:textColor="@color/grey_middle"
            android:textSize="@dimen/text_header"
            android:textStyle="bold" />

        <org.holoeverywhere.widget.TextView
            android:id="@+id/product_price_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_name"
            android:layout_marginTop="@dimen/margin_small"
            android:fontFamily="roboto_bold"
            android:textColor="@color/red_middle"
            android:textSize="@dimen/text_header" />

        <org.holoeverywhere.widget.TextView
            android:id="@+id/product_price_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/product_price_result"
            android:layout_marginLeft="@dimen/margin_mid"
            android:layout_toRightOf="@+id/product_price_result"
            android:fontFamily="roboto_regular"
            android:textColor="@color/grey_middlelight"
            android:textSize="@dimen/text_header" />
    </RelativeLayout>

    <!-- SHADOW -->

    <View
        android:id="@+id/shadow"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@id/product_basicinfo_container"
        android:background="@drawable/shadow_white_2_grey_horizontal" />

    <!-- SCROLLABLE -->

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/product_description_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/shadow" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- FEATURES -->

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/variations_container"
                style="@style/rounded_box"
                android:layout_marginBottom="0dp" >

                <org.holoeverywhere.widget.TextView
                    android:id="@+id/color_label"
                    style="@style/rounded_box_title_grey"
                    android:text="@string/product_features_title" />

                <View
                    android:id="@+id/divider"
                    style="@style/divider_horizontal_orange"
                    android:layout_below="@id/color_label" />

                <org.holoeverywhere.widget.TextView
                    android:id="@+id/product_features_text"
                    style="@style/product_description_text"
                    android:layout_below="@id/divider"
                    android:lineSpacingMultiplier="1.3" />
            </RelativeLayout>

            <!-- DESCRIPTION -->

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/variations_container"
                style="@style/rounded_box"
                android:layout_marginBottom="0dp" >

                <org.holoeverywhere.widget.TextView
                    android:id="@+id/color_label"
                    style="@style/rounded_box_title_grey"
                    android:text="@string/product_description_title" />

                <View
                    android:id="@+id/divider"
                    style="@style/divider_horizontal_orange"
                    android:layout_below="@id/color_label" />

                <org.holoeverywhere.widget.TextView
                    android:id="@+id/product_description_text"
                    style="@style/product_description_text"
                    android:layout_below="@id/divider"
                    android:lineSpacingMultiplier="1.3" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>