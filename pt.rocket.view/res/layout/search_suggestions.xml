<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/search_suggestions_list_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="0dp"
    android:background="@android:color/white"
    android:gravity="center"
    android:orientation="vertical" >

    <ListView
        android:id="@+id/search_suggestions_list_content"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:divider="@color/grey_dark_line"
        android:dividerHeight="0.5dp"
        android:listSelector="@android:color/transparent" >
    </ListView>

    <RelativeLayout
        android:id="@+id/searchsuggestions_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/searchsuggestions_empty_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/no_items_icon_2" />

        <org.holoeverywhere.widget.TextView
            android:id="@+id/searchsuggestions_notfound"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/searchsuggestions_empty_image"
            android:gravity="center"
            android:textColor="@color/blue_basic"
            android:textSize="@dimen/text_small" />
    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/grey_dark_line" />
    
</LinearLayout>