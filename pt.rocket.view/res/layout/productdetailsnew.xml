<?xml version="1.0" encoding="utf-8"?>
<pt.rocket.utils.ScrollViewWithHorizontal xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <LinearLayout
        android:id="@+id/details_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_mid"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/variations_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_small" >

            <pt.rocket.utils.HorizontalListView
                android:id="@+id/variations_list"
                android:layout_width="match_parent"
                android:layout_height="63dp"
                android:layout_marginLeft="@dimen/margin_huge"
                android:layout_marginRight="@dimen/margin_huge" />

            <View
                style="@style/divider_horizontal"
                android:layout_below="@+id/variations_list" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/product_showoff_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/margin_large"
            android:paddingTop="@dimen/margin_large"
            android:background="@drawable/selector_clickableitem_highlight" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/product_basicinfo_next" >

                <RelativeLayout
                    android:id="@+id/product_image_container"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_centerHorizontal="true" >

                    <ImageView
                        android:id="@+id/product_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        android:src="@drawable/no_image_large" />

                    <!--  
                    <ImageView
                        android:id="@+id/product_image_animation"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        android:visibility="gone" />
					-->
                    <RelativeLayout
                        android:id="@+id/product_discount_container"
                        android:layout_width="65dp"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginRight="12dp" >

                        <ImageView
                            android:id="@+id/item_promotion"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_reduced"
                            android:visibility="visible" />

                        <org.holoeverywhere.widget.TextView
                            android:id="@+id/product_discount_percentage"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/item_promotion"
                            android:layout_alignRight="@+id/item_promotion"
                            android:layout_alignTop="@+id/item_promotion"
                            android:layout_marginTop="4.5dp"
                            android:gravity="center_horizontal"
                            android:text="-8%"
                            android:textColor="@android:color/white"
                            android:textSize="18dp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                    <include layout="@layout/loading_bar_simple" />
                </RelativeLayout>
            </RelativeLayout>
        </RelativeLayout>

        <View
            style="@style/divider_horizontal"
            android:layout_marginTop="@dimen/margin_mid" />

        <RelativeLayout
            android:id="@+id/product_basicinfo_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/margin_large"
            android:paddingLeft="@dimen/margin_huge"
            android:paddingTop="@dimen/margin_large"
            android:background="@drawable/selector_clickableitem_highlight" >

            <org.holoeverywhere.widget.TextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_huge"
                android:layout_toLeftOf="@+id/product_basicinfo_next"
                android:maxLines="2"
                android:textColor="@color/grey_middle"
                android:textSize="@dimen/text_l"
                android:textStyle="bold" />

            <org.holoeverywhere.widget.TextView
                android:id="@+id/product_price_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_name"
                android:layout_marginTop="@dimen/margin_small"
                android:textSize="@dimen/text_s"
                android:textStyle="bold" />

            <org.holoeverywhere.widget.TextView
                android:id="@+id/product_price_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/product_price_result"
                android:layout_marginLeft="@dimen/margin_mid"
                android:layout_toRightOf="@+id/product_price_result"
                android:textColor="@color/grey_light"
                android:textSize="@dimen/text_s"
                android:textStyle="bold" />

<!--             <org.holoeverywhere.widget.TextView -->
<!--                 android:id="@+id/product_instock" -->
<!--                 android:layout_width="wrap_content" -->
<!--                 android:layout_height="wrap_content" -->
<!--                 android:layout_below="@+id/product_price_result" -->
<!--                 android:layout_marginTop="@dimen/margin_small" -->
<!--                 android:textSize="@dimen/text_s" -->
<!--                 android:textStyle="bold" /> -->
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/product_variant_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_huge"
            android:orientation="vertical" >

            <View style="@style/divider_horizontal" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin_huge"
                android:paddingRight="@dimen/margin_huge"
                android:paddingTop="@dimen/margin_mid" >

                <org.holoeverywhere.widget.TextView
                    android:id="@+id/product_variant_choose_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_mid"
                    android:text="@string/product_variance_choose_error"
                    android:textColor="@color/red_basic"
                    android:textSize="@dimen/text_s" />

                <LinearLayout
                    android:id="@+id/product_variant_choose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignWithParentIfMissing="true"
                    android:layout_below="@+id/product_variant_choose_error"
                    android:layout_marginTop="@dimen/margin_mid"
                    android:orientation="horizontal" >

                    <org.holoeverywhere.widget.TextView
                        android:id="@+id/product_variant_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/product_variance_choose"
                        android:textColor="@color/grey_middle"
                        android:textSize="@dimen/text_s" />

                    <org.holoeverywhere.widget.Button
                        android:id="@+id/product_variant_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_mid"
                        android:background="@drawable/spinnerbutton_background_holo_light"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="@string/product_variant_placeholder"
                        android:textColor="@color/grey_middle"
                        android:textSize="@dimen/text_s" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/product_variant_price_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/product_variant_choose"
                    android:layout_marginTop="@dimen/margin_mid"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/margin_mid" >

                    <org.holoeverywhere.widget.TextView
                        android:id="@+id/product_variant_specprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_mid"
                        android:textColor="@color/red_basic"
                        android:textSize="@dimen/text_s" />

                    <org.holoeverywhere.widget.TextView
                        android:id="@+id/product_variant_normprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_s" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <View style="@style/divider_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_huge"
            android:layout_marginRight="@dimen/margin_huge" >

            <org.holoeverywhere.widget.Button
                android:id="@+id/shop"
                style="@style/button_orange_style"
                android:layout_width="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_weight="1"
                android:text="@string/add_to_shopping_cart" />

            <org.holoeverywhere.widget.Button
                android:id="@+id/call_to_order"
                style="@style/button_grey_style"
                android:layout_width="0dp"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="0dp"
                android:layout_weight="1"
                android:text="@string/call_to_order"
                android:visibility="gone" />

            <org.holoeverywhere.widget.Button
                android:id="@+id/buy_now"
                style="@style/button_orange_style"
                android:text="@string/buy_now"
                android:visibility="gone" />
        </LinearLayout>

        <View style="@style/divider_horizontal" />

        <RelativeLayout
            android:id="@+id/product_rating_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/margin_mid"
            android:paddingTop="@dimen/margin_mid"
            android:background="@drawable/selector_clickableitem_highlight" >

            <RatingBar
                android:id="@+id/product_rating"
                style="@style/starRatingBarBig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_huge"
                android:numStars="5" />

            <org.holoeverywhere.widget.TextView
                android:id="@+id/product_rating_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_mid"
                android:layout_toRightOf="@+id/product_rating"
                android:textColor="@color/grey_light"
                android:textSize="@dimen/text_small" />
        </RelativeLayout>

        <View style="@style/divider_horizontal" />

        <RelativeLayout
            android:id="@+id/product_specifications_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/margin_mid"
            android:paddingTop="@dimen/margin_mid"
            android:background="@drawable/selector_clickableitem_highlight" >

            <org.holoeverywhere.widget.TextView
                android:id="@+id/product_specifications_title"
                style="@style/activity_sectionheader_text"
                android:layout_marginBottom="@dimen/margin_mid"
                android:text="@string/product_specifications" />
            
            <org.holoeverywhere.widget.TextView
                android:id="@+id/product_sku_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_specifications_title"
                android:layout_marginLeft="@dimen/margin_huge"
                android:textColor="@color/grey_middle"
                android:textSize="@dimen/text_s" />

            <org.holoeverywhere.widget.TextView
                android:id="@+id/product_specifications_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_sku_text"
                android:layout_marginTop="@dimen/margin_huge"
                android:layout_marginLeft="@dimen/margin_huge"
                android:layout_toLeftOf="@+id/product_spec_next"
                android:textColor="@color/grey_middle"
                android:textSize="@dimen/text_s" />
        </RelativeLayout>
    </LinearLayout>

</pt.rocket.utils.ScrollViewWithHorizontal>