<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_root_empty_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="top"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/root_empty_container_height"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/rounded_vertical_margin"
        android:layout_marginLeft="@dimen/rounded_horizontal_margin"
        android:layout_marginRight="@dimen/rounded_horizontal_margin"
        android:layout_marginTop="@dimen/rounded_vertical_margin"
        android:background="@drawable/background_content"
        android:gravity="center"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/fragment_root_empty_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:src="@drawable/no_image_small" />

        <org.holoeverywhere.widget.TextView
            android:id="@+id/fragment_root_empty_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/root_empty_drawable_padding"
            android:gravity="center"
            android:text="You have no items at the moment."
            android:textColor="@color/grey_middlelight"
            android:textSize="@dimen/button_orange_text_size" />
    </LinearLayout>

    <org.holoeverywhere.widget.Button
        android:id="@+id/fragment_root_empty_continue_button"
        style="@style/button_orange_style"
        android:layout_height="@dimen/button_orange_height"
        android:layout_margin="@dimen/rounded_horizontal_margin"
        android:text="@string/catalog_edit_filters"
        android:textColor="@color/grey_dark"
        android:textSize="@dimen/button_orange_text_size"
        android:visibility="gone" />

</LinearLayout>