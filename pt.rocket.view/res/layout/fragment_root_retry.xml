<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_root_retry_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/grey_background"
    android:gravity="top"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/root_empty_container_height"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/rounded_vertical_margin"
        android:layout_marginLeft="@dimen/rounded_horizontal_margin"
        android:layout_marginRight="@dimen/rounded_horizontal_margin"
        android:layout_marginTop="@dimen/rounded_vertical_margin"
        android:background="@drawable/background_content"
        android:gravity="center"
        android:orientation="vertical" >

        <org.holoeverywhere.widget.TextView
            android:id="@+id/fragment_root_retry_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:gravity="center"
            android:padding="@dimen/rounded_horizontal_margin"
            android:text="@string/error_please_try_again"
            android:textColor="@color/grey_middlelight"
            android:textSize="@dimen/button_orange_text_size" />
    </LinearLayout>

    <org.holoeverywhere.widget.Button
        android:id="@+id/fragment_root_retry_button"
        style="@style/button_grey_style"
        android:layout_height="@dimen/button_orange_height"
        android:layout_margin="@dimen/rounded_horizontal_margin"
        android:clickable="false"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:text="@string/try_again"
        android:textColor="@color/grey_dark"
        android:textSize="@dimen/button_orange_text_size" />

</LinearLayout>