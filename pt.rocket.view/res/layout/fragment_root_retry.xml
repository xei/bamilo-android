<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_color"
    android:gravity="top" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            style="@style/rounded_box"
            android:layout_width="match_parent"
            android:layout_height="@dimen/root_empty_container_height"
            android:layout_gravity="center"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:orientation="vertical" >

            <pt.rocket.components.customfontviews.TextView
                android:id="@+id/fragment_root_retry_message"
                style="@style/text_root"
                android:layout_marginBottom="12dp"
                android:layout_marginLeft="@dimen/rounded_margin_mid"
                android:layout_marginRight="@dimen/rounded_margin_mid"
                android:padding="@dimen/rounded_margin_mid"
                android:text="@string/error_please_try_again" />
        </LinearLayout>

        <LinearLayout style="@style/button_container" >

            <pt.rocket.components.customfontviews.Button
                android:id="@+id/fragment_root_retry_button"
                style="@style/button_grey_bottom"
                android:clickable="false"
                android:text="@string/try_again" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>