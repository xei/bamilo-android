<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/titlebar"
        android:gravity="center_vertical"
        android:visibility="visible" >

		<!-- The right padding is calculated by code -->

        <org.holoeverywhere.widget.TextView
            android:id="@+id/title"
            style="@style/headline_title"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:ellipsize="end"
            android:fontFamily="roboto_bold"
            android:maxLines="1"
            android:paddingRight="100dp"
            android:singleLine="true" />

        <org.holoeverywhere.widget.TextView
            android:id="@+id/totalProducts"
            style="@style/headline_totalItems"
            android:layout_width="wrap_content"
            android:layout_alignRight="@id/title"
            android:fontFamily="roboto_regular"
            android:gravity="left"
            android:textColor="@color/orange_basic" />
    </RelativeLayout>
    <!-- Main Content Layout -->

    <RelativeLayout
        android:id="@+id/warning_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_title" >

        <include
            android:id="@+id/warning"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            layout="@layout/warning"
            android:visibility="gone" />

        <include
            android:id="@+id/warning_variations"
            android:layout_width="match_parent"
            android:layout_height="34dp"
            layout="@layout/warning_variations"
            android:visibility="gone" />
    </RelativeLayout>

    <ViewStub
        android:id="@+id/stub_app_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@id/warning_container"
        android:inflatedId="@+id/rocket_app_content" />

    <include
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        layout="@layout/loading_bar"
        android:visibility="gone" />

    <include
        layout="@layout/alert_view"
        android:visibility="gone" />

    <include
        layout="@layout/promotion_layout"
        android:visibility="gone" />
        
      <RelativeLayout
        android:id="@+id/fallback_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bckgrndfallback" 
        android:visibility="gone">

        <LinearLayout
            android:id="@+id/fallback_title_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="19.8dp"
            android:orientation="vertical" >

            <org.holoeverywhere.widget.TextView
                android:id="@+id/fallback_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="@string/fallback_maintenance"
                android:textColor="#ffffff"
                android:textSize="18.48sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="6.6dp"
                android:background="#ffffff" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fallback_coutry_container"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/fallback_title_container"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13.2dp"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/logo_jumiafallback" />

            <org.holoeverywhere.widget.TextView
                android:id="@+id/fallback_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13.2dp"
                android:layout_marginTop="-3dp"
                android:fontFamily="roboto-bold"
                android:gravity="center"
                android:textColor="#000000"
                android:textSize="29.04sp"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/fallback_country_double"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="13.2dp"
                android:gravity="center|left"
                android:orientation="vertical"
                android:visibility="gone" >

                <org.holoeverywhere.widget.TextView
                    android:id="@+id/fallback_country_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="roboto-bold"
                    android:gravity="left"
                    android:textColor="#000000"
                    android:textSize="17.14sp" />

                <org.holoeverywhere.widget.TextView
                    android:id="@+id/fallback_country_bottom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-10dp"
                    android:fontFamily="roboto-bold"
                    android:gravity="left"
                    android:textColor="#000000"
                    android:textSize="17.14sp" />
            </LinearLayout>
        </LinearLayout>

        <org.holoeverywhere.widget.TextView
            android:id="@+id/fallback_best"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fallback_coutry_container"
            android:layout_marginTop="10.56dp"
            android:ellipsize="marquee"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="@string/fallback_best"
            android:textColor="#000000"
            android:textSize="15.84sp" />

        <LinearLayout
            android:id="@+id/fallback_choice_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/fallback_best"
            android:gravity="center_horizontal"
            android:orientation="horizontal" >

            <org.holoeverywhere.widget.TextView
                android:id="@+id/fallback_choice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="roboto-bold"
                android:text="@string/fallback_choice"
                android:textColor="#ffffff"
                android:textSize="9.9sp" />

            <org.holoeverywhere.widget.TextView
                android:id="@+id/fallback_doorstep"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="@string/fallback_doorstep"
                android:textColor="#000000"
                android:textSize="9.9sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/home_fallback_country_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/fallback_options_container"
            android:layout_below="@id/fallback_choice_container"
            android:layout_centerHorizontal="true" />

        <org.holoeverywhere.widget.Button
            android:id="@+id/fallback_retry"
            style="@style/button_orange_style"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/margin_huge"
            android:layout_marginRight="@dimen/margin_huge"
            android:contentDescription="@string/try_again"
            android:text="@string/try_again" />

       
        <LinearLayout
            android:id="@+id/fallback_options_bottom_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/fallback_retry"
            android:layout_marginBottom="26.4dp"
            android:layout_marginLeft="26.4dp"
            android:orientation="horizontal"
            android:weightSum="2" >


            <org.holoeverywhere.widget.TextView
                android:id="@+id/fallback_country_bottom_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6.6dp"
                android:text="@string/fallback_maintenance_text_bottom"
                android:textColor="#000000"
                android:textSize="13.2sp" />

        </LinearLayout>
         <LinearLayout
            android:id="@+id/fallback_options_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/fallback_options_bottom_container"
            android:layout_marginLeft="26.4dp"
            android:orientation="horizontal"
            android:weightSum="2" >

            <org.holoeverywhere.widget.TextView
                android:id="@+id/fallback_options_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6.6dp"
                android:text="@string/fallback_fashion"
                android:fontFamily="roboto-bold"
                android:textColor="#000000"
                android:textSize="13.2sp" />

            <org.holoeverywhere.widget.TextView
                android:id="@+id/fallback_country_bottom_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6.6dp"
                android:text="@string/fallback_maintenance_text"
                android:textColor="#000000"
                android:textSize="13.2sp" />

        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>