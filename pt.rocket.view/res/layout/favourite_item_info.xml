<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <!-- DELETE BUTTON -->

        <org.holoeverywhere.widget.TextView
            android:id="@+id/favourite_button_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:fontFamily="roboto_regular"
            android:text="@string/shoppingcart_item_btn_delete"
            android:textColor="@drawable/selector_link_blue"
            android:textSize="@dimen/text_xs" />

        <!-- BRAND -->

        <org.holoeverywhere.widget.TextView
            android:id="@+id/favourite_item_brand"
            style="@style/product_name_list_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:ellipsize="end"
            android:fontFamily="roboto_bold"
            android:maxLines="1"
            android:singleLine="true"
            android:text="BRAND"
            android:textSize="@dimen/text_s" />
    </RelativeLayout>

    <!-- NAME -->

    <org.holoeverywhere.widget.TextView
        android:id="@+id/favourite_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:fontFamily="roboto_regular"
        android:gravity="left"
        android:maxLines="2"
        android:text="Name"
        android:textColor="@color/grey_middle"
        android:textSize="@dimen/text_s" />

    <!-- PRICE CONTENT -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <!-- DISCOUNT -->

        <org.holoeverywhere.widget.TextView
            android:id="@+id/favourite_item_discount"
            style="@style/product_price_current_list_text"
            android:layout_alignLeft="@id/favourite_item_name"
            android:layout_below="@id/favourite_item_name"
            android:layout_marginRight="4dp"
            android:ellipsize="marquee"
            android:fontFamily="roboto_bold"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Discount" />

        <!-- PRICE -->

        <org.holoeverywhere.widget.TextView
            android:id="@+id/favourite_item_regprice"
            style="@style/product_price_current_list_text"
            android:layout_alignTop="@id/favourite_item_discount"
            android:layout_below="@id/favourite_item_name"
            android:layout_toRightOf="@id/favourite_item_discount"
            android:ellipsize="marquee"
            android:fontFamily="roboto_bold"
            android:maxLines="1"
            android:singleLine="true"
            android:text="Price" />
    </RelativeLayout>

    <!-- WARNINGS -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <!-- DUMMY -->

        <org.holoeverywhere.widget.TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/product_outof_stock"
            android:textColor="@color/transparent"
            android:textSize="@dimen/text_s"
            android:visibility="invisible" />

        <!-- STOCK WARNING -->

        <org.holoeverywhere.widget.TextView
            android:id="@+id/favourite_error_stock"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/product_outof_stock"
            android:textColor="@color/blue_basic"
            android:textSize="@dimen/text_s"
            android:visibility="gone" />

        <!-- CHOOSE WARNING -->

        <org.holoeverywhere.widget.TextView
            android:id="@+id/favourite_error_variant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/product_variance_choose_error"
            android:textColor="@color/red_basic"
            android:textSize="@dimen/text_s"
            android:visibility="gone" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="35dp" >

        <!-- VARIATION BUTTON -->

        <org.holoeverywhere.widget.Button
            android:id="@+id/favourite_button_variant"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="@drawable/spinnerbutton_background_holo_light"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/product_variant_placeholder"
            android:textColor="@color/grey_middle"
            android:textSize="14sp"
            android:visibility="visible" />

        <!-- ADD BUTTON -->

        <org.holoeverywhere.widget.Button
            android:id="@+id/favourite_button_shop"
            style="@style/button_orange_style"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/margin_x_small"
            android:layout_marginTop="@dimen/margin_x_small"
            android:contentDescription="@string/productdetail_addcart_description"
            android:paddingLeft="@dimen/margin_mid"
            android:paddingRight="@dimen/margin_mid"
            android:singleLine="true"
            android:text="@string/add_to_shopping_cart"
            android:textColor="#333"
            android:textSize="@dimen/product_list_item_discount_percentage_text_size" />
    </RelativeLayout>

</LinearLayout>