<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/margin_mid"
    android:layout_marginTop="@dimen/margin_huge"
    android:orientation="vertical" >

    <!-- TOTAL -->

    <LinearLayout
        android:id="@+id/checkout_summary_total_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_mid"
        android:orientation="horizontal" >

        <org.holoeverywhere.widget.TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="roboto_regular"
            android:gravity="left"
            android:text="@string/order_summary_total_label"
            android:textColor="@color/grey_divider_light_text"
            android:textSize="@dimen/text_l" />

        <org.holoeverywhere.widget.TextView
            android:id="@+id/checkout_summary_total_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="roboto_regular"
            android:gravity="left"
            android:textColor="@color/grey_divider_light_text"
            android:textSize="@dimen/text_xl" />
    </LinearLayout>

    <View
        style="@style/divider_horizontal"
        android:background="@color/orange_basic" />

</LinearLayout>