<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/margin_mid"
    android:layout_marginRight="@dimen/margin_mid"
    android:background="@android:color/white" >

    <!-- CONTENT -->

    <ScrollView
        android:id="@+id/checkout_addresses_one_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/checkout_addresses_button_enter"
        android:layout_alignParentTop="true"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <!-- TOP ADDRESSES -->

            <include layout="@layout/checkout_my_addresses_top" />

            <!-- BOTTOM ADDRESSES -->

            <include layout="@layout/checkout_my_addresses_bottom" />
        </LinearLayout>
    </ScrollView>

    <!-- NEXT BUTTON -->

    <org.holoeverywhere.widget.Button
        android:id="@+id/checkout_addresses_button_enter"
        style="@style/button_orange_style"
        android:layout_alignParentBottom="true"
        android:fontFamily="roboto_regular"
        android:text="@string/next_button"
        android:width="@dimen/inner_container_width" />

</RelativeLayout>