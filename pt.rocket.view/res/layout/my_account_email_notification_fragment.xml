<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:background="@color/grey_background"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            style="@style/rounded_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:orientation="vertical" >

            <!-- TITLE -->

            <org.holoeverywhere.widget.TextView
                android:id="@+id/text"
                style="@style/rounded_box_title_grey"
                android:text="@string/newsletters_label" />

            <!-- NEWSLETTERS -->

            <LinearLayout
                android:id="@+id/myaccount_newsletter_list"
                android:layout_width="@dimen/inner_container_width"
                android:layout_height="wrap_content"
                android:layout_below="@id/text"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/my_account_small_margin" />

            <!-- DIVIDER -->

            <View
                style="@style/divider_horizontal_orange"
                android:layout_below="@id/text" />
        </RelativeLayout>

        <!-- BUTTONS -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/margin_mid"
            android:layout_marginRight="@dimen/margin_mid"
            android:paddingTop="@dimen/rounded_margin_mid" >

            <org.holoeverywhere.widget.Button
                android:id="@+id/myaccount_newsletter_save"
                style="@style/button_orange_style"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_orange_height"
                android:layout_marginBottom="0dp"
                android:layout_marginRight="@dimen/margin_x_small"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:text="@string/save_label"
                android:textColor="@color/grey_dark"
                android:textSize="@dimen/button_orange_text_size" />

            <org.holoeverywhere.widget.Button
                android:id="@+id/myaccount_newsletter_cancel"
                style="@style/button_grey_style"
                android:layout_width="0dp"
                android:layout_height="@dimen/button_orange_height"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="@dimen/margin_x_small"
                android:layout_marginTop="0dp"
                android:layout_weight="1"
                android:text="@string/cancel_label"
                android:textColor="@color/grey_dark"
                android:textSize="@dimen/button_orange_text_size" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>