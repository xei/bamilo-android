<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <!-- PRODUCTS -->

        <include
            android:id="@+id/checkout_summary_include_products"
            layout="@layout/checkout_summary_products" />

        <!-- SHIPPING ADDRESS -->

        <include
            android:id="@+id/checkout_summary_include_shipping_address"
            layout="@layout/checkout_summary_shipping_address"
            android:visibility="visible" />

        <!-- SHIPPING METHOD -->

        <include
            android:id="@+id/checkout_summary_include_shipping_method"
            layout="@layout/checkout_summary_shipping_method"
            android:visibility="visible" />

        <!-- TOTAL -->

        <include
            android:id="@+id/checkout_summary_include_total"
            layout="@layout/checkout_summary_total"
            android:visibility="visible" />
    </LinearLayout>

</ScrollView>