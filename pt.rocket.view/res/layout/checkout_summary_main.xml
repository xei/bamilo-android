<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- android:background="@color/grey_background" -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            style="@style/rounded_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/title_box_height"
                android:layout_margin="@dimen/rounded_margin_mid"
                android:gravity="left|center"
                android:orientation="horizontal" >

                <org.holoeverywhere.widget.TextView
                    android:id="@+id/title_options"
                    style="@style/rounded_box_title_grey"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:text="@string/order_summary_label" />

                <ImageView
                    android:id="@+id/checkout_summary_products_btn_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignBaseline="@+id/title"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/rounded_margin_mid"
                    android:src="@drawable/selector_btn_edit" />
            </RelativeLayout>

            <View
                android:id="@+id/title_divider"
                style="@style/divider_horizontal_orange" />

            <LinearLayout
                android:id="@+id/login_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="@dimen/rounded_margin_mid"
                android:orientation="vertical" >

                <!-- PRODUCTS -->

                <include
                    android:id="@+id/checkout_summary_include_products"
                    layout="@layout/checkout_summary_products" />

                <!-- SHIPPING ADDRESS -->

                <include
                    android:id="@+id/checkout_summary_include_shipping_address"
                    layout="@layout/checkout_summary_shipping_address"
                    android:visibility="gone" />

                <!-- SHIPPING METHOD -->

                <include
                    android:id="@+id/checkout_summary_include_shipping_method"
                    layout="@layout/checkout_summary_shipping_method"
                    android:visibility="gone" />

                <!-- TOTAL -->

                <include
                    android:id="@+id/checkout_summary_include_total"
                    layout="@layout/checkout_summary_total"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>