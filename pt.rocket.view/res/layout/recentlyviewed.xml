<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recentlyviewed_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <GridView
        android:id="@+id/recentlyviewed_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:listSelector="@drawable/selector_listitem_highlight"
        android:numColumns="@integer/favourite_num_columns"
        android:paddingBottom="85dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:layout_alignBottom="@id/recentlyviewed_grid"
        android:layout_centerHorizontal="true"
        android:background="@android:color/white"
        android:gravity="center_horizontal" >

        <include layout="@layout/recentlyviewed_button_layout" />
    </LinearLayout>

</RelativeLayout>