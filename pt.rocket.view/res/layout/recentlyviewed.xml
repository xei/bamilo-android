<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/recentlyviewed_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_background" >

    <GridView
        android:id="@+id/recentlyviewed_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/rounded_vertical_margin"
        android:listSelector="@drawable/selector_listitem_highlight"
        android:numColumns="@integer/favourite_num_columns"
        android:paddingBottom="@dimen/button_recently_viewed_extra_height" />

    <include
        android:layout_alignBottom="@id/recentlyviewed_grid"
        layout="@layout/recentlyviewed_button_layout" />

</RelativeLayout>