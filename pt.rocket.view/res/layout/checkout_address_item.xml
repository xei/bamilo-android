<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/checkout_address_master"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <!-- ITEM -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_large"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_marginTop="@dimen/margin_large"
        android:orientation="horizontal" >

        <!-- VALUES -->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical" >

            <org.holoeverywhere.widget.TextView
                android:id="@+id/checkout_address_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="roboto_regular"
                android:textColor="@color/grey_divider_light_text"
                android:textSize="@dimen/text_l" />

            <org.holoeverywhere.widget.TextView
                android:id="@+id/checkout_address_item_street"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="roboto_regular"
                android:textColor="@color/grey_divider_light_text"
                android:textSize="@dimen/text_l" />

            <org.holoeverywhere.widget.TextView
                android:id="@+id/checkout_address_item_region"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="roboto_regular"
                android:textColor="@color/grey_divider_light_text"
                android:textSize="@dimen/text_l" />

            <org.holoeverywhere.widget.TextView
                android:id="@+id/checkout_address_item_postcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="roboto_regular"
                android:textColor="@color/grey_divider_light_text"
                android:textSize="@dimen/text_l" />

            <org.holoeverywhere.widget.TextView
                android:id="@+id/checkout_address_item_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="roboto_regular"
                android:textColor="@color/grey_divider_light_text"
                android:textSize="@dimen/text_l" />
        </LinearLayout>

        <!-- BUTTONS -->

        <ImageView
            android:id="@+id/checkout_address_item_btn_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:paddingLeft="@dimen/margin_mid"
            android:paddingRight="@dimen/margin_mid"
            android:src="@drawable/btn_remove"
            android:visibility="invisible" />

        <LinearLayout
            android:id="@+id/checkout_address_item_btn_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical" >

            <RadioButton
                android:id="@+id/checkout_address_item_btn_radio"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:button="@drawable/selector_address_radio" />

            <ImageView
                android:id="@+id/checkout_address_item_btn_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:paddingLeft="@dimen/margin_mid"
                android:paddingRight="@dimen/margin_mid"
                android:src="@drawable/btn_edit" />
        </LinearLayout>
    </LinearLayout>

    <!-- DIVIDER -->

    <View style="@style/divider_horizontal" />

</LinearLayout>