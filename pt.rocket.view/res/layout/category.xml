<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height_normal"
    android:background="@drawable/selector_listitem_highlight"
    android:paddingTop="6dp" >

    <org.holoeverywhere.widget.TextView
        android:id="@+id/category_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_huge"
        android:ellipsize="end"
        android:fontFamily="roboto_regular"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/grey_middle"
        android:textSize="@dimen/text_smid" />

    <View
        android:id="@+id/divider"
        style="@style/divider_horizontal"
        android:layout_alignParentBottom="true" />

</RelativeLayout>