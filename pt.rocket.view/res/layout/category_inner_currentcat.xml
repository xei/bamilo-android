<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_height_normal"
    android:layoutDirection="locale"
    android:background="@drawable/selector_listitem_highlight" >

    <pt.rocket.components.customfontviews.TextView
        android:id="@+id/text"
        style="@style/text_normal"
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/rounded_margin_mid"
        android:layout_marginStart="@dimen/rounded_margin_mid"
        android:gravity="center_vertical"
        android:text="Inner category"
        android:textSize="@dimen/text_form" />

    <View
        android:id="@+id/divider"
        style="@style/divider_horizontal"
        android:layout_alignParentBottom="true" />

</RelativeLayout>