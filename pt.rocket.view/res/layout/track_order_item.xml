<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1" >

        <org.holoeverywhere.widget.TextView
            android:id="@+id/order_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="@string/creation_date"
            android:textColor="@color/grey_middle"
            android:textSize="11.22sp" />

        <org.holoeverywhere.widget.TextView
            android:id="@+id/order_item_quantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.84dp"
            android:layout_weight="0.2"
            android:fontFamily="roboto-bold"
            android:singleLine="true"
            android:text="@string/creation_date"
            android:textColor="@color/grey_middle"
            android:textSize="11.22sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/order_status_title_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <org.holoeverywhere.widget.TextView
            android:id="@+id/order_last_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/track_your_order"
            android:textColor="@color/grey_middle"
            android:textSize="11.22sp" />

        <org.holoeverywhere.widget.TextView
            android:id="@+id/order_status_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15.84dp"
            android:fontFamily="roboto-bold"
            android:text="@string/track_your_order"
            android:textColor="@color/grey_middle"
            android:textSize="11.22sp" />
    </LinearLayout>

</LinearLayout>