<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <!--
             <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/titlebar"
            android:scaleType="center"
            android:src="@drawable/checkout_state04" />
        -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26.4dp"
            android:gravity="center_horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_success" />
        </RelativeLayout>

        <org.holoeverywhere.widget.TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="26.4dp"
            android:gravity="center"
            android:text="@string/thank_you_order_title"
            android:textColor="@color/grey_dark"
            android:textSize="36.96sp" />

        <org.holoeverywhere.widget.TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="19.8dp"
            android:gravity="center"
            android:text="@string/order_success"
            android:textColor="@color/grey_middle"
            android:textSize="@dimen/text_s" />

        <org.holoeverywhere.widget.TextView
            android:id="@+id/order_number_id"
            android:layout_width="118.8dp"
            android:layout_height="34.98dp"
            android:layout_gravity="center"
            android:layout_marginTop="13.2dp"
            android:background="@drawable/field_coupon"
            android:fontFamily="roboto-bold"
            android:gravity="center"
            android:text="@string/go_shop_text"
            android:textColor="@color/grey_dark"
            android:textSize="13.2sp" />

        <org.holoeverywhere.widget.TextView
            android:id="@+id/order_status_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="19.8dp"
            android:gravity="center"
            android:text="@string/order_track_success"
            android:textColor="@color/grey_middle"
            android:textSize="@dimen/text_s" />

        <org.holoeverywhere.widget.Button
            android:id="@+id/btn_checkout_continue"
            style="@style/button_orange_style"
            android:layout_marginLeft="@dimen/margin_huge"
            android:layout_marginRight="@dimen/margin_huge"
            android:layout_marginTop="@dimen/margin_veryhuge"
            android:contentDescription="@string/checkout_continue_button_description"
            android:text="@string/continue_shopping" />
    </LinearLayout>

</ScrollView>