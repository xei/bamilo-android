<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:layout_marginLeft="6.5dp"               
    android:layout_marginRight="6.5dp"    
    android:background="@drawable/background_content" >

    <org.holoeverywhere.widget.TextView
        android:id="@+id/teaser_group_title"
        style="@style/activity_sectionheader_text"
        android:textColor="@color/grey_middledark"
        android:layout_marginBottom="@dimen/margin_large"
        android:layout_marginLeft="@dimen/margin_mid"
        android:text="Product list" />

    <View
        style="@style/divider_horizontal"
        android:background="@color/orange_basic" />

    <LinearLayout
        android:id="@+id/teaser_group_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_mid"
        android:paddingBottom="@dimen/margin_large" >
    </LinearLayout>

</LinearLayout>