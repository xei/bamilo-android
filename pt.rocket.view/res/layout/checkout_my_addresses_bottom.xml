<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <!-- BOTTOM ADDRESSES -->

    <org.holoeverywhere.widget.TextView
        android:id="@+id/checkout_addresses_other_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_large"
        android:layout_marginTop="@dimen/margin_huge"
        android:fontFamily="roboto_regular"
        android:gravity="left"
        android:textColor="@color/orange_basic"
        android:textSize="@dimen/text_l" />

    <View style="@style/divider_horizontal" />

    <pt.rocket.utils.GenericRadioGroup
        android:id="@+id/checkout_addresses_other_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_mid"
        android:layout_marginTop="@dimen/margin_small"
        android:orientation="vertical" />

    <!-- ADD NEW ADDRESS -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_mid"
        android:layout_marginTop="@dimen/margin_mid"
        android:orientation="vertical"
        android:visibility="visible" >

        <org.holoeverywhere.widget.Button
            android:id="@+id/checkout_addresses_other_button_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_mid"
            android:background="@android:color/transparent"
            android:drawableRight="@drawable/selector_btn_addaddress"
            android:fontFamily="roboto_regular"
            android:gravity="left|center"
            android:paddingRight="7dp"
            android:text="@string/billing_add_label"
            android:textColor="@color/grey_divider_light_text"
            android:textSize="@dimen/text_m" />

        <View style="@style/divider_horizontal" />
    </LinearLayout>

</LinearLayout>