<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/rounded_box"
    android:layout_marginBottom="0dp"
    android:layout_marginTop="@dimen/rounded_margin_small"
    android:orientation="vertical" >

    <!-- TITLE -->

    <pt.rocket.components.customfontviews.TextView
        android:id="@+id/checkout_addresses_other_title"
        style="@style/rounded_box_title_grey"
        android:text="@string/billing_others_label" />

    <View style="@style/divider_horizontal_orange" />

    <pt.rocket.utils.GenericRadioGroup
        android:id="@+id/checkout_addresses_other_container"
        android:layout_width="@dimen/inner_container_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical" />

    <!-- ADD NEW ADDRESS -->

    <LinearLayout
        android:layout_width="@dimen/inner_container_width"
        android:layout_height="@dimen/margin_150px"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="@dimen/rounded_margin_mid"
        android:layout_marginRight="@dimen/rounded_margin_mid"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/checkout_addresses_other_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/margin_30px" >

            <TextView
                style="@style/text_form"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="bottom"
                android:paddingBottom="@dimen/margin_20px"
                android:text="@string/billing_add_label"
                android:textColor="@color/grey_middlelight" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/margin_30px"
                android:paddingLeft="@dimen/form_btn_address_padding_fix"
                android:paddingRight="@dimen/form_btn_address_padding_fix"
                android:paddingTop="@dimen/margin_30px"
                android:src="@drawable/selector_btn_addaddress" />
        </LinearLayout>

        <View
            style="@style/divider_horizontal"
            android:layout_marginBottom="@dimen/margin_30px" />
    </LinearLayout>

</LinearLayout>