<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="0dp"
    android:background="@color/promotion_dialog_bkg"
    android:padding="0dp" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="13.2dp"
        android:background="@drawable/rounded_bkg"
        android:orientation="vertical"
        android:padding="13.2dp" >

        <org.holoeverywhere.widget.TextView
            android:id="@+id/promotion_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="13.2dp"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:text="title"
            android:textColor="@color/grey_dark"
            android:textSize="11.88sp" />

        <org.holoeverywhere.widget.TextView
            android:id="@+id/promotion_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="13.2dp"
            android:gravity="center"
            android:text="description"
            android:textColor="@color/grey_dark"
            android:textSize="17.16sp" />

        <org.holoeverywhere.widget.TextView
            android:id="@+id/promotion_coupon_code"
            android:layout_width="118.8dp"
            android:layout_height="34.98dp"
            android:layout_gravity="center"
            android:layout_marginBottom="13.2dp"
            android:background="@drawable/field_coupon"
            android:fontFamily="roboto_bold"
            android:gravity="center"
            android:text="@string/go_shop_text"
            android:textColor="@color/grey_dark"
            android:textSize="13.2sp" />

        <org.holoeverywhere.widget.TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="13.2dp"
            android:gravity="center"
            android:text="@string/promotion_tip_tap_text"
            android:textColor="@color/grey_dark"
            android:textSize="11.88sp" />

        <org.holoeverywhere.widget.TextView
            android:id="@+id/promotion_go_shop"
            style="@style/button_orange_style"
            android:layout_width="118.8dp"
            android:layout_height="34.98dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/go_shop_text" />

        <org.holoeverywhere.widget.TextView
            android:id="@+id/promotion_terms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="terms and conditions"
            android:textColor="@color/grey_dark"
            android:textSize="10.56sp" />
    </LinearLayout>

</RelativeLayout>