<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/product_showoff_fragment"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_clickableitem_highlight"
    android:orientation="vertical"
    android:paddingBottom="@dimen/margin_large"
    android:paddingTop="@dimen/margin_large" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/product_basicinfo_next" >

        <RelativeLayout
            android:id="@+id/product_image_container"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_centerHorizontal="true" >

            <ImageView
                android:id="@+id/product_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitCenter"
                android:src="@drawable/no_image_large" />

            <!--
                    <ImageView
                        android:id="@+id/product_image_animation"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitCenter"
                        android:visibility="gone" />
            -->

            <RelativeLayout
                android:id="@+id/product_discount_container"
                android:layout_width="65dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="12dp" >

                <ImageView
                    android:id="@+id/item_promotion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_reduced"
                    android:visibility="visible" />

                <org.holoeverywhere.widget.TextView
                    android:id="@+id/product_discount_percentage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/item_promotion"
                    android:layout_alignRight="@+id/item_promotion"
                    android:layout_alignTop="@+id/item_promotion"
                    android:layout_marginTop="4.5dp"
                    android:gravity="center_horizontal"
                    android:text="-8%"
                    android:textColor="@android:color/white"
                    android:textSize="18dp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <include layout="@layout/loading_bar_simple" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>