<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:paddingBottom="@dimen/margin_mid"
    android:paddingLeft="@dimen/dialog_list_margin_horizontal"
    android:paddingRight="@dimen/dialog_list_margin_horizontal"
    android:paddingTop="@dimen/margin_mid" >

    <org.holoeverywhere.widget.TextView
        android:id="@+id/item_text"
        android:text="ListItem text"
        style="@style/dialog_list_itemtext" />
    <org.holoeverywhere.widget.TextView
        android:id="@+id/item_text_unavailable"
        android:text="ListItem text"
        style="@style/dialog_list_itemtext" 
        android:textColor="@color/grey_light"
        android:visibility="gone"/>
    <CheckBox
        android:id="@+id/item_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:button="@drawable/btn_check_orange"
        android:clickable="false"
        android:focusable="false" >
    </CheckBox>

</RelativeLayout>