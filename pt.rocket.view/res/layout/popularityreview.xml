<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="10dp"
    android:background="@drawable/selector_clickableitem_highlight" >

    <View
        android:id="@+id/top_review_line"
        style="@style/divider_horizontal"
        android:layout_marginBottom="10dp" />

    <RatingBar
        android:id="@+id/user_rating"
        style="@style/starRatingBarSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_review_line"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="@dimen/margin_huge" />

    <TextView
        android:id="@+id/title_review"
        style="@style/product_name_list_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/user_rating"
        android:layout_marginLeft="@dimen/margin_huge"
        android:layout_marginRight="32dp"
        android:ellipsize="end"
        android:lines="1"
        android:text="Title"
        android:textSize="14dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textreview"
        style="@style/body_text_feature_add"
        android:layout_width="match_parent"
        android:layout_below="@id/title_review"
        android:layout_gravity="left"
        android:layout_marginLeft="@dimen/margin_huge"
        android:layout_marginRight="32dp"
        android:ellipsize="end"
        android:maxLines="5"
        android:text="Review"
        android:textColor="@color/grey_middle"
        android:textSize="14dp" />

    <TextView
        android:id="@+id/posted_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textreview"
        android:layout_marginLeft="@dimen/margin_huge"
        android:text="@string/posted_by"
        android:textColor="@color/grey_middle"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/user_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textreview"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@id/posted_by"
        android:text="User"
        android:textColor="@color/grey_middle"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/date_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textreview"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@id/user_review"
        android:text="Date"
        android:textColor="@color/grey_middle"
        android:textSize="12dp" />

    <ImageView
        android:id="@+id/arrow_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@id/user_rating"
        android:layout_alignBottom="@id/posted_by"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_next" />

</RelativeLayout>