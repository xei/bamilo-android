<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey_background"
    android:orientation="horizontal" >

    <!-- SHOPPPING CART ITEMS -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/rounded_margin_mid"
        android:layout_weight="1" >

        <RelativeLayout style="@style/rounded_box" >

            <org.holoeverywhere.widget.TextView
                android:id="@+id/title"
                style="@style/rounded_box_title_grey"
                android:text="@string/shoppingcart_items" />

            <org.holoeverywhere.widget.TextView
                style="@style/text_normal"
                android:layout_alignBaseline="@+id/title"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/rounded_margin_mid"
                android:text="@string/shoppingcart_quantity"
                android:textColor="@color/grey_middlelight" />

            <LinearLayout
                android:id="@+id/shoppingcart_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/title"
                android:orientation="vertical" >
            </LinearLayout>

            <View
                style="@style/divider_horizontal_orange"
                android:layout_below="@id/title" />
        </RelativeLayout>
    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <include layout="@layout/voucher_insert_layout" />

            <include layout="@layout/shopping_basket_subtotal_element" />

            <LinearLayout
                style="@style/button_container"
                android:layout_height="@dimen/button_double_container_height"
                android:orientation="vertical" >

                <org.holoeverywhere.widget.Button
                    android:id="@+id/checkout_button"
                    style="@style/button_orange_bottom"
                    android:text="@string/checkout_button_text" />

                <org.holoeverywhere.widget.Button
                    android:id="@+id/checkout_call_to_order"
                    style="@style/button_grey_bottom"
                    android:layout_marginTop="0dp"
                    android:text="@string/call_to_order"
                    android:visibility="gone" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>