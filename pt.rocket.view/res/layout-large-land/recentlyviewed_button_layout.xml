<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignBottom="@id/recentlyviewed_grid"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/rounded_margin_mid"
    android:layout_marginRight="@dimen/rounded_margin_mid"
    android:paddingTop="@dimen/rounded_margin_mid" >

    <org.holoeverywhere.widget.Button
        android:id="@+id/recentlyviewed_button_grey"
        style="@style/button_grey_style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_orange_height"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="@dimen/margin_x_small"
        android:layout_marginTop="@dimen/button_orange_top_margin"
        android:layout_weight="1"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/recentlyview_clear_viewed"
        android:textColor="@color/grey_dark"
        android:textSize="@dimen/button_orange_text_size" />

    <Button
        android:id="@+id/favourite_button_shop_all"
        style="@style/button_orange_style"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_orange_height"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="@dimen/margin_x_small"
        android:layout_marginTop="@dimen/button_orange_top_margin"
        android:layout_weight="1"
        android:contentDescription="@string/productdetail_addcart_description"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/favourite_addalltocart"
        android:textColor="@color/grey_dark"
        android:textSize="@dimen/button_orange_text_size" />

</LinearLayout>