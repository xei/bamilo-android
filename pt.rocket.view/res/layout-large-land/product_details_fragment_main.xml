<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >

    <!-- MIDDLE POINT TO DIVIDE THE SCREEN -->

    <View
        android:id="@+id/center_point"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerInParent="true" />

    <!-- Left Container -->

    <pt.rocket.utils.ScrollViewWithHorizontal
        android:id="@+id/left_scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignEnd="@id/center_point"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@id/center_point"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:scrollbars="none" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <RelativeLayout
                android:id="@+id/pdv_left_container"
                style="@style/rounded_box"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="0dp"
                android:layout_marginRight="0dp" >

                <RelativeLayout
                    android:id="@+id/product_basicinfo_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:minHeight="50dp"
                    android:paddingBottom="5dp"
                    android:paddingEnd="10dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingStart="10dp"
                    android:paddingTop="5dp" >

                    <pt.rocket.components.customfontviews.TextView
                        android:id="@+id/product_detail_name"
                        style="@style/text_header"
                        android:layout_width="match_parent"
                        android:layout_marginEnd="@dimen/margin_x_small"
                        android:layout_marginRight="@dimen/margin_x_small"
                        android:ellipsize="end"
                        android:gravity="left|center_horizontal|start"
                        android:maxLines="2"
                        android:singleLine="false"
                        android:text="Product" />

                    <pt.rocket.components.customfontviews.TextView
                        android:id="@+id/product_price_special"
                        style="@style/text_header"
                        android:layout_below="@+id/product_detail_name"
                        android:layout_marginEnd="@dimen/margin_mid"
                        android:layout_marginRight="@dimen/margin_mid"
                        android:fontFamily="roboto_bold"
                        android:text="Discount Price"
                        android:textColor="@color/red_middle" />

                    <pt.rocket.components.customfontviews.TextView
                        android:id="@+id/product_price_normal"
                        style="@style/text_header"
                        android:layout_alignBaseline="@+id/product_price_special"
                        android:layout_below="@+id/product_detail_name"
                        android:layout_toEndOf="@+id/product_price_special"
                        android:layout_toRightOf="@+id/product_price_special"
                        android:text="Normal Price"
                        android:textColor="@color/grey_middlelight" />

                    <include
                        android:id="@+id/seller_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/product_price_special"
                        android:layout_marginEnd="0dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="0dp"
                        android:layout_marginStart="0dp"
                        layout="@layout/product_details_fragment_seller_info"
                        android:visibility="gone" />
                </RelativeLayout>

                <!-- IMAGE CONTAINER -->
                <!-- <include layout="@layout/product_details_fragment_image" /> -->

               <RelativeLayout
                    android:id="@+id/image_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/product_basicinfo_container"
                    android:layout_marginBottom="5dp"
                    android:background="@android:color/transparent"
                    android:minHeight="@dimen/pdv_image_with_var" >

                    <View
                        android:id="@+id/gallery_line"
                        style="@style/divider_horizontal"
                        android:layout_alignParentTop="true" />

                    <LinearLayout
                        android:id="@+id/product_image_layout"
                        android:layout_width="match_parent"
                        android:layout_height="283.33dp"
                        android:gravity="center" 
                        android:layout_below="@id/gallery_line">

                        <FrameLayout
                            android:id="@+id/product_detail_image_gallery_container"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone" 
                            android:background="@android:color/transparent"/>

                        <ProgressBar
                            android:id="@+id/image_loading_progress"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_gravity="center"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/image_place_holder"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/no_image_large"
                            android:visibility="gone" />
                    </LinearLayout>


                    <ImageView
                        android:id="@+id/product_detail_product_image_share"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="@dimen/product_list_item_image_side_margin"
                        android:layout_marginStart="@dimen/product_list_item_image_side_margin"
                        android:layout_marginTop="@dimen/product_list_item_image_margin"
                        android:src="@drawable/selector_productdetails_share" />

                    <ImageView
                        android:id="@+id/product_detail_image_is_favourite"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_centerInParent="false"
                        android:layout_marginEnd="@dimen/product_list_item_image_side_margin"
                        android:layout_marginRight="@dimen/product_list_item_image_side_margin"
                        android:layout_marginTop="@dimen/product_list_item_image_margin"
                        android:src="@drawable/selector_favorite" />

                    <pt.rocket.components.customfontviews.TextView
                        android:id="@+id/product_detail_discount_percentage"
                        style="@style/discount_percentage"
                        android:layout_alignBottom="@id/product_image_layout"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_marginBottom="@dimen/margin_mid"
                        android:layout_marginEnd="@dimen/margin_mid"
                        android:layout_marginRight="@dimen/margin_mid"
                        android:layout_marginTop="@dimen/margin_large" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/product_detail_product_variant_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignWithParentIfMissing="true"
                    android:layout_below="@+id/image_container"
                    android:background="@android:color/transparent" >

                    <View
                        android:id="@+id/variation_top_line"
                        style="@style/divider_horizontal" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/variation_top_line"
                        android:paddingEnd="@dimen/margin_huge"
                        android:paddingLeft="@dimen/margin_huge"
                        android:paddingRight="@dimen/margin_huge"
                        android:paddingStart="@dimen/margin_huge"
                        android:paddingTop="@dimen/margin_mid" >

                        <pt.rocket.components.customfontviews.TextView
                            android:id="@+id/product_detail_product_variant_text"
                            style="@style/text_header"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:text="@string/size_label" />

                        <pt.rocket.components.customfontviews.Button
                            android:id="@+id/product_detail_product_variant_button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="@dimen/margin_mid"
                            android:layout_marginStart="@dimen/margin_mid"
                            android:layout_toEndOf="@+id/product_detail_product_variant_text"
                            android:layout_toRightOf="@+id/product_detail_product_variant_text"
                            android:background="@drawable/spinnerbutton_background_holo_light"
                            android:ellipsize="end"
                            android:minWidth="66dp"
                            android:singleLine="true"
                            android:text="@string/product_variant_placeholder"
                            android:textColor="@color/grey_middle"
                            android:textSize="@dimen/text_s" />
                    </RelativeLayout>
                </RelativeLayout>

                <!-- VARIATIONS -->

                <include
                    android:id="@+id/variations_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/product_detail_product_variant_container"
                    layout="@layout/product_details_fragment_variations" />

                <!--
                     <View
                    android:id="@+id/variation_bottom_line"
                    style="@style/divider_horizontal"
                    android:layout_below="@+id/product_detail_product_variant_container" />

                <FrameLayout
                    android:id="@+id/product_detail_variations_container"
                    android:layout_width="match_parent"
                    android:layout_height="63dp"
                    android:layout_below="@+id/variation_bottom_line" />
                -->
            </RelativeLayout>

            <!-- OFFERS -->

            <include
                android:id="@+id/product_detail_product_offers_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pdv_left_container"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="@dimen/rounded_margin_mid"
                android:layout_marginStart="@dimen/rounded_margin_mid"
                layout="@layout/product_details_fragment_offers"
                android:visibility="gone" />

            <!-- BUNDLE PRODUCTS -->

            <include
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_detail_product_offers_container"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="@dimen/rounded_margin_mid"
                android:layout_marginStart="@dimen/rounded_margin_mid"
                android:layout_marginTop="0dp"
                layout="@layout/product_details_fragment_bundle"
                android:visibility="gone" />
        </RelativeLayout>
    </pt.rocket.utils.ScrollViewWithHorizontal>

    <!-- TIPS -->

    <include
        android:id="@+id/product_detail_tips_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignEnd="@+id/center_point"
        android:layout_alignRight="@+id/center_point"
        android:layout_marginEnd="@dimen/rounded_margin_mid"
        android:layout_marginLeft="@dimen/rounded_margin_mid"
        android:layout_marginRight="@dimen/rounded_margin_mid"
        android:layout_marginStart="@dimen/rounded_margin_mid"
        android:layout_marginTop="@dimen/rounded_margin_mid"
        layout="@layout/tips"
        android:visibility="visible" />
    <!-- Right Container -->

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_alignLeft="@id/center_point"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignStart="@id/center_point"
        android:layout_marginEnd="9dp"
        android:layout_marginRight="9dp" >

        <!-- <include android:id="@+id/shop_buttons" layout="@layout/product_details_fragment_buttons"/> -->

        <LinearLayout
            android:id="@+id/shop_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="7dp"
            android:layout_marginEnd="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginStart="0dp" >

            <pt.rocket.components.customfontviews.Button
                android:id="@+id/product_detail_call_to_order"
                style="@style/button_grey_bottom"
                android:layout_width="match_parent"
                android:layout_marginBottom="0dp"
                android:layout_marginEnd="@dimen/margin_x_small"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="@dimen/margin_x_small"
                android:layout_marginStart="0dp"
                android:layout_weight="1"
                android:contentDescription="@string/productdetail_order_button_description"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="@string/call_to_order"
                android:visibility="visible" />

            <pt.rocket.components.customfontviews.Button
                android:id="@+id/product_detail_shop"
                style="@style/button_orange_bottom"
                android:layout_width="match_parent"
                android:layout_marginBottom="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginLeft="@dimen/margin_x_small"
                android:layout_marginRight="0dp"
                android:layout_marginStart="@dimen/margin_x_small"
                android:layout_weight="1"
                android:contentDescription="@string/productdetail_addcart_description"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="@string/add_to_shopping_cart" />
        </LinearLayout>

        <pt.rocket.utils.ScrollViewWithHorizontal
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/shop_buttons"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/product_detail_product_rating_container"
                    style="@style/rounded_box"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_margin="0dp"
                    android:background="@drawable/selector_item_box" >

                    <RatingBar
                        android:id="@+id/product_detail_product_rating"
                        style="@style/starRatingBarBig"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_large"
                        android:layout_marginStart="@dimen/margin_large"
                        android:isIndicator="true"
                        android:numStars="5" />

                    <pt.rocket.components.customfontviews.TextView
                        android:id="@+id/product_detail_product_rating_count"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_mid"
                        android:layout_marginStart="@dimen/margin_mid"
                        android:layout_toEndOf="@+id/product_detail_product_rating"
                        android:layout_toLeftOf="@+id/review_arrow"
                        android:layout_toRightOf="@+id/product_detail_product_rating"
                        android:layout_toStartOf="@+id/review_arrow"
                        android:gravity="center_vertical|left|start"
                        android:textColor="@color/grey_light"
                        android:textSize="@dimen/text_s" />

                    <RelativeLayout
                        android:id="@+id/product_detail_loading_rating"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:visibility="gone" >

                        <include layout="@layout/loading_bar_simple" />
                    </RelativeLayout>

                    <ImageView
                        android:id="@+id/review_arrow"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="10dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/arrow_side"
                        android:visibility="gone" />
                </RelativeLayout>

                <!-- FEATURES -->

                <RelativeLayout
                    android:id="@+id/features_container"
                    style="@style/rounded_box"
                    android:layout_height="170dp"
                    android:layout_marginBottom="0dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="9dp"
                    android:visibility="visible" >

                    <pt.rocket.components.customfontviews.TextView
                        android:id="@+id/features_label"
                        style="@style/rounded_box_title_grey"
                        android:text="@string/product_features_title" />

                    <View
                        android:id="@+id/features_divider"
                        style="@style/divider_horizontal_orange"
                        android:layout_below="@id/features_label" />

                    <pt.rocket.components.customfontviews.TextView
                        android:id="@+id/product_features_text"
                        style="@style/text_normal"
                        android:layout_width="match_parent"
                        android:layout_below="@id/features_divider"
                        android:ellipsize="none"
                        android:lineSpacingMultiplier="1.3"
                        android:paddingBottom="@dimen/margin_huge"
                        android:paddingEnd="@dimen/margin_large"
                        android:paddingLeft="@dimen/margin_large"
                        android:paddingRight="@dimen/margin_large"
                        android:paddingStart="@dimen/margin_large"
                        android:paddingTop="@dimen/margin_huge"
                        android:singleLine="false" />

                    <LinearLayout
                        android:id="@+id/features_more_container"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_alignParentBottom="true"
                        android:clickable="true"
                        android:orientation="vertical" >

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:background="@drawable/selector_more_button_50"
                            android:duplicateParentState="true" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/selector_item_bottom"
                            android:duplicateParentState="true" >

                            <pt.rocket.components.customfontviews.TextView
                                style="@style/text_normal"
                                android:layout_width="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="10dp"
                                android:layout_marginRight="10dp"
                                android:text="@string/show_more"
                                android:textColor="@color/orange_basic" />
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>

                <!-- DESCRIPTION -->

                <RelativeLayout
                    android:id="@+id/description_container"
                    style="@style/rounded_box"
                    android:layout_height="170dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginEnd="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginStart="0dp"
                    android:layout_marginTop="9dp" >

                    <pt.rocket.components.customfontviews.TextView
                        android:id="@+id/description_label"
                        style="@style/rounded_box_title_grey"
                        android:text="@string/product_description_title" />

                    <View
                        android:id="@+id/description_divider"
                        style="@style/divider_horizontal_orange"
                        android:layout_below="@id/description_label" />

                    <pt.rocket.components.customfontviews.TextView
                        android:id="@+id/product_description_text"
                        style="@style/text_normal"
                        android:layout_width="match_parent"
                        android:layout_below="@id/description_divider"
                        android:ellipsize="none"
                        android:lineSpacingMultiplier="1.3"
                        android:paddingBottom="@dimen/margin_huge"
                        android:paddingEnd="@dimen/margin_large"
                        android:paddingLeft="@dimen/margin_large"
                        android:paddingRight="@dimen/margin_large"
                        android:paddingStart="@dimen/margin_large"
                        android:paddingTop="@dimen/margin_huge"
                        android:singleLine="false" />

                    <LinearLayout
                        android:id="@+id/description_more_container"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_alignParentBottom="true"
                        android:clickable="true"
                        android:orientation="vertical" >

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="5dp"
                            android:background="@drawable/selector_more_button_50"
                            android:duplicateParentState="true" />

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/selector_item_bottom"
                            android:duplicateParentState="true" >

                            <pt.rocket.components.customfontviews.TextView
                                style="@style/text_normal"
                                android:layout_width="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:layout_alignParentRight="true"
                                android:layout_centerVertical="true"
                                android:layout_marginEnd="10dp"
                                android:layout_marginRight="10dp"
                                android:text="@string/show_more"
                                android:textColor="@color/orange_basic" />
                        </RelativeLayout>
                    </LinearLayout>
                </RelativeLayout>

                <!-- RELATED PRODUCTS -->

                <include
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="0dp"
                    android:layout_marginTop="0dp"
                    layout="@layout/product_details_fragment_related" />
            </LinearLayout>
        </pt.rocket.utils.ScrollViewWithHorizontal>
    </RelativeLayout>

</RelativeLayout>