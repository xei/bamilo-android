<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rocket_app_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/title_container"
            style="@style/activity_sectionheader_container"
            android:orientation="vertical" >

            <org.holoeverywhere.widget.TextView
                android:id="@+id/middle_login_text"
                style="@style/activity_sectionheader_text"
                android:text="@string/login_sectiontitle" />

            <View style="@style/activity_sectionheader_divider" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/content_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/title_container"
            android:layout_marginBottom="@dimen/margin_huge"
            android:layout_marginLeft="@dimen/margin_huge"
            android:layout_marginRight="@dimen/margin_huge"
            android:layout_marginTop="@dimen/margin_huge"
            android:orientation="vertical" >
            <com.facebook.widget.LoginButton
                android:id="@+id/authButton"
                android:layout_width="@dimen/button_xlarge"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:text="@string/facebook_login_button_text"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp" />
            <LinearLayout
                android:id="@+id/form_container"
                android:layout_width="@dimen/button_xlarge"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:orientation="vertical" >
            </LinearLayout>

            <RelativeLayout
                android:id="@+id/middleLoginContainer"
                android:layout_width="@dimen/button_xlarge"
                android:layout_gravity="center_horizontal"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_huge" >

                <org.holoeverywhere.widget.Button
                    android:id="@+id/middle_login_button_signin"
                    style="@style/button_orange_style"
                    android:contentDescription="@string/login_button_description"
                    android:text="@string/login_label" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/forgottenPasswordContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" >

                <org.holoeverywhere.widget.TextView
                    android:id="@+id/middle_login_link_fgtpassword"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:paddingLeft="3dp"
                    android:text="@string/fgt_pass"
                    android:textColor="@color/blue_basic"
                    android:textSize="@dimen/text_small" />
            </RelativeLayout>

            <org.holoeverywhere.widget.Button
                android:id="@+id/middle_login_link_register"
                android:layout_width="@dimen/button_xlarge"
                android:layout_gravity="center_horizontal"
                style="@style/button_grey_style"
                android:layout_marginTop="@dimen/distance_item_mid"
                android:contentDescription="@string/register_button_description"
                android:text="@string/register_button" />

        </LinearLayout>
    </RelativeLayout>

</ScrollView>