<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- ALL CONTAINER -->

    <LinearLayout
        android:id="@+id/home_page_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" >

        <!-- LEFT CONTAINER -->

        <pt.rocket.utils.ScrollViewWithHorizontal
            android:id="@+id/home_page_single_scrollview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/margin_x_small"
            android:layout_weight="1"
            android:scrollbars="none" >

            <!-- MAIN_ONE_SLIDE, STATIC_BANNER AND CAMPAIGNS_LIST -->

            <LinearLayout
                android:id="@+id/home_page_left_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </pt.rocket.utils.ScrollViewWithHorizontal>

        <!-- RIGHT SCROLABLE CONTAINER -->

        <pt.rocket.utils.ScrollViewWithHorizontal
            android:id="@+id/home_page_right_scrollview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_x_small"
            android:layout_weight="1"
            android:scrollbars="none" >

            <LinearLayout
                android:id="@+id/home_page_right_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <!-- POPULAR CATEGORIES AND BRAND LIST -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/grey_highlight"
                    android:orientation="horizontal"
                    android:paddingBottom="1dp"
                    android:paddingLeft="1dp" >

                    <LinearLayout
                        android:id="@+id/home_page_right_container_categpries"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:visibility="gone" />

                    <LinearLayout
                        android:id="@+id/home_page_right_container_brands"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:visibility="gone" />
                </LinearLayout>

                <!-- OTHERS: TOP SELLERS AND TOP BRANDS -->

            </LinearLayout>
        </pt.rocket.utils.ScrollViewWithHorizontal>
    </LinearLayout>

    <!-- RETRY VIEW -->

    <include
        android:id="@+id/fragment_retry"
        layout="@layout/fragment_retry"
        android:visibility="gone" />

</RelativeLayout>