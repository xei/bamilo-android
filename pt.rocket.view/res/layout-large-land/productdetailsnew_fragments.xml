<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="2" >

    <!-- Left Container -->

    <RelativeLayout
        android:id="@+id/details_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.95" >

        <FrameLayout
            android:id="@+id/variations_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:id="@+id/product_variantion_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical" >

            <View
                style="@style/divider_horizontal"
                android:layout_marginTop="@dimen/margin_mid" />

            <FrameLayout
                android:id="@+id/product_basicinfo_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <View style="@style/divider_horizontal" />

            <RelativeLayout
                android:id="@+id/product_variant_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/margin_huge"
                android:paddingRight="@dimen/margin_huge"
                android:paddingTop="@dimen/margin_mid" >

                <org.holoeverywhere.widget.TextView
                    android:id="@+id/product_variant_choose_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_mid"
                    android:text="@string/product_variance_choose_error"
                    android:textColor="@color/red_basic"
                    android:textSize="@dimen/text_s" />

                <LinearLayout
                    android:id="@+id/product_variant_choose"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignWithParentIfMissing="true"
                    android:layout_below="@+id/product_variant_choose_error"
                    android:layout_marginTop="@dimen/margin_mid"
                    android:orientation="horizontal" >

                    <org.holoeverywhere.widget.TextView
                        android:id="@+id/product_variant_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/product_variance_choose"
                        android:textColor="@color/grey_middle"
                        android:textSize="@dimen/text_s" />

                    <org.holoeverywhere.widget.Button
                        android:id="@+id/product_variant_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/margin_mid"
                        android:background="@drawable/spinnerbutton_background_holo_light"
                        android:ellipsize="end"
                        android:minWidth="66dp"
                        android:singleLine="true"
                        android:text="@string/product_variant_placeholder"
                        android:textColor="@color/grey_middle"
                        android:textSize="@dimen/text_s" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/product_variant_price_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/product_variant_choose"
                    android:layout_marginTop="@dimen/margin_mid"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/margin_mid" >

                    <org.holoeverywhere.widget.TextView
                        android:id="@+id/product_variant_specprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_mid"
                        android:textColor="@color/red_basic"
                        android:textSize="@dimen/text_s" />

                    <org.holoeverywhere.widget.TextView
                        android:id="@+id/product_variant_normprice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_s" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/image_container"
            style="@style/list_row_style"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/product_variantion_container"
            android:layout_below="@+id/variations_container" >

            <FrameLayout
                android:id="@+id/image_gallery_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <ImageView
                android:id="@+id/image_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="@dimen/product_list_item_image_side_margin"
                android:layout_marginTop="@dimen/product_list_item_image_margin"
                android:src="@drawable/selector_productdetails_share" />

            <ImageView
                android:id="@+id/image_is_favourite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="false"
                android:layout_marginRight="@dimen/product_list_item_image_side_margin"
                android:layout_marginTop="@dimen/product_list_item_image_margin"
                android:src="@drawable/btn_fav" />
        </RelativeLayout>

        <include
            android:id="@+id/tips_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            layout="@layout/tips" />
    </RelativeLayout>
    <!-- Left Container -->

    <View
        android:id="@+id/shop_separator"
        style="@style/divider_horizontal"
        android:layout_width="0dp"
        android:layout_above="@id/shop_container"
        android:layout_weight="0.1" />
    <!-- Right Container -->

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginRight="@dimen/margin_small"
        android:layout_weight="0.95" >

        <LinearLayout
            android:id="@+id/shop_buttons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <org.holoeverywhere.widget.Button
                android:id="@+id/shop"
                style="@style/button_orange_style"
                android:layout_width="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_weight="1"
                android:contentDescription="@string/productdetail_addcart_description"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="@string/add_to_shopping_cart" />

            <org.holoeverywhere.widget.Button
                android:id="@+id/call_to_order"
                style="@style/button_grey_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_small"
                android:layout_marginRight="0dp"
                android:layout_weight="1"
                android:contentDescription="@string/productdetail_order_button_description"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:text="@string/call_to_order"
                android:visibility="visible" />

            <org.holoeverywhere.widget.Button
                android:id="@+id/buy_now"
                style="@style/button_orange_style"
                android:text="@string/buy_now"
                android:visibility="gone" />
        </LinearLayout>

        <pt.rocket.utils.ScrollViewWithHorizontal
            android:id="@+id/scrollview_right"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/shop_buttons" >

            <LinearLayout
                android:id="@+id/shop_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/margin_huge"
                android:layout_marginRight="@dimen/margin_huge"
                android:orientation="vertical" >

                <RelativeLayout
                    android:id="@+id/product_rating_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/selector_clickableitem_highlight"
                    android:paddingBottom="@dimen/margin_mid"
                    android:paddingTop="@dimen/margin_mid" >

                    <RatingBar
                        android:id="@+id/product_rating"
                        style="@style/starRatingBarBig"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_huge"
                        android:isIndicator="true"
                        android:numStars="5" />

                    <org.holoeverywhere.widget.TextView
                        android:id="@+id/product_rating_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_mid"
                        android:layout_toRightOf="@+id/product_rating"
                        android:textColor="@color/grey_light"
                        android:textSize="@dimen/text_small" />

                    <RelativeLayout
                        android:id="@+id/loading_rating"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:visibility="gone" >

                        <include layout="@layout/loading_bar_simple" />
                    </RelativeLayout>
                </RelativeLayout>

                <View style="@style/divider_horizontal" />

                <FrameLayout
                    android:id="@+id/product_specifications_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <FrameLayout
                    android:id="@+id/product_related_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </pt.rocket.utils.ScrollViewWithHorizontal>
    </RelativeLayout>
    <!-- TIPS -->

</LinearLayout>