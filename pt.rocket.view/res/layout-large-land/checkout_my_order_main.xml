<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- CONTENT -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/checkout_my_order_button_enter"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="@dimen/button_container_height"
        android:orientation="horizontal" >

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <!-- PRODUCTS -->

                <include
                    android:id="@+id/checkout_my_order_include_cart"
                    layout="@layout/checkout_my_order_products" />

                <!-- SUB TOTAL -->

                <include
                    android:id="@+id/checkout_my_order_include_subtotal"
                    layout="@layout/shopping_basket_subtotal_element" />
            </LinearLayout>
        </ScrollView>

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/rounded_margin_small"
                android:orientation="vertical" >

                <!-- SHIPPING ADDRESS -->

                <include
                    android:id="@+id/checkout_my_order_include_shipping_address"
                    layout="@layout/checkout_my_order_shipping_address"
                    android:visibility="visible" />

                <!-- BILLING ADDRESS -->

                <include
                    android:id="@+id/checkout_my_order_include_billing_address"
                    layout="@layout/checkout_my_order_billing_address"
                    android:visibility="visible" />

                <!-- SHIPPING METHOD -->

                <include
                    android:id="@+id/checkout_my_order_include_shipping_method"
                    layout="@layout/checkout_my_order_shipping_method"
                    android:visibility="visible" />

                <!-- PAYMENT OPTIONS -->

                <include
                    android:id="@+id/checkout_my_order_include_payment_options"
                    layout="@layout/checkout_my_order_payment_options"
                    android:visibility="visible" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <!-- NEXT STEP BUTTON -->

    <LinearLayout
        style="@style/button_container"
        android:layout_alignParentBottom="true" >

        <org.holoeverywhere.widget.Button
            android:id="@+id/checkout_my_order_button_enter"
            style="@style/button_orange_landscape"
            android:layout_width="@dimen/inner_container_width"
            android:contentDescription="@string/login_button_description"
            android:text="@string/my_order_confirm_button" />
    </LinearLayout>

</RelativeLayout>