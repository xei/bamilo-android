<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="2" >

    <!-- TITLE -->

    <RelativeLayout
        android:id="@+id/product_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="@dimen/margin_huge" >

        <org.holoeverywhere.widget.TextView
            android:id="@+id/product_info_name_p"
            style="@style/text_header"
            android:layout_width="match_parent"
            android:layout_marginRight="@dimen/margin_huge"
            android:maxLines="2" />

        <org.holoeverywhere.widget.TextView
            android:id="@+id/price_w_discount_p"
            style="@style/text_header"
            android:layout_below="@+id/product_info_name_p"
            android:layout_marginTop="@dimen/margin_small"
            android:fontFamily="roboto_bold"
            android:textColor="@color/red_middle" />

        <org.holoeverywhere.widget.TextView
            android:id="@+id/price_normal_p"
            style="@style/text_header"
            android:layout_alignBaseline="@+id/price_w_discount_p"
            android:layout_marginLeft="@dimen/margin_mid"
            android:layout_toRightOf="@+id/price_w_discount_p"
            android:textColor="@color/grey_middlelight" />

        <!-- RATING -->

        <RelativeLayout
            android:id="@+id/rating_stripe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/price_w_discount_p"
            android:layout_marginTop="@dimen/margin_mid" >

            <RatingBar
                android:id="@+id/rating"
                style="@style/starRatingBarBig"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:isIndicator="true" />

            <org.holoeverywhere.widget.TextView
                android:id="@+id/reviews"
                style="@style/text_header"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_mid"
                android:layout_toRightOf="@+id/rating"
                android:textColor="@color/grey_light" />
        </RelativeLayout>
    </RelativeLayout>

    <!-- SHADOW -->

    <View
        android:id="@+id/shadow"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@id/product_info"
        android:background="@drawable/shadow_white_2_grey_horizontal" />

    <!-- MIDDLE POINT TO DIVIDE THE SCREEN -->

    <View
        android:id="@+id/center_point"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_below="@id/shadow"
        android:layout_centerInParent="true" />

    <!-- REVIEWS -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/center_point"
        android:layout_below="@id/shadow" >

        <pt.rocket.framework.components.ScrollViewEx
            android:id="@+id/reviews_scroller"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:paddingBottom="@dimen/rounded_margin_small"
            android:paddingLeft="@dimen/rounded_margin_mid"
            android:paddingRight="@dimen/rounded_margin_mid"
            android:paddingTop="@dimen/rounded_margin_small"
            android:scrollbars="none" >

            <LinearLayout
                android:id="@+id/linear_reviews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_content"
                android:orientation="vertical"
                android:padding="@dimen/rounded_margin_mid" />
        </pt.rocket.framework.components.ScrollViewEx>

        <include layout="@layout/loading_more" />
    </RelativeLayout>

    <!-- WRITE -->

    <FrameLayout
        android:id="@+id/fragment_writereview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignLeft="@+id/center_point"
        android:layout_alignParentRight="true"
        android:layout_below="@id/shadow" />

</RelativeLayout>