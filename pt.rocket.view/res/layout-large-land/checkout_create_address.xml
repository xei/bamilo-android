<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <!-- CREATE ADDRESS -->

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_mid"
        android:layout_marginRight="@dimen/margin_mid"
        android:layout_weight="0.75" >

        <!-- CONTENT -->

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/checkout_address_button_enter"
            android:layout_alignParentTop="true" >

            <!-- FORMS -->
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <!-- SHIPPING FORM -->

                <include
                    android:id="@+id/checkout_address_form_include_shipping"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    layout="@layout/checkout_create_address_shipping" />

                <!-- BILLING FORM -->

                <include
                    android:id="@+id/checkout_address_form_include_billing"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    layout="@layout/checkout_create_address_billing"
                    android:visibility="gone" />
            </LinearLayout>
        </ScrollView>

        <!-- NEXT BUTTON -->

        <org.holoeverywhere.widget.Button
            android:id="@+id/checkout_address_button_enter"
            style="@style/button_orange_style"
            android:layout_alignParentBottom="true"
            android:contentDescription="@string/login_button_description"
            android:text="Next" />
    </RelativeLayout>

    <!-- DIVIDER -->

    <View
        style="@style/divider_vertical"
        android:layout_marginBottom="@dimen/margin_mid"
        android:layout_marginTop="@dimen/margin_mid"
        android:background="@color/orange_basic" />

    <!-- ORDER SUMMARY -->

    <fragment
        android:name="pt.rocket.view.fragments.CheckoutSummaryFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_mid"
        android:layout_marginRight="@dimen/margin_mid"
        android:layout_weight="0.25" />

</LinearLayout>