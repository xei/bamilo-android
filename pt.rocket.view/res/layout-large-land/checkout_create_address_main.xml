<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="horizontal" >

    <!-- CREATE ADDRESS -->

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_mid"
        android:layout_marginRight="@dimen/margin_mid"
        android:layout_weight="@dimen/checkout_main_container" >

        <!-- CONTENT -->

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/checkout_address_button_container"
            android:layout_alignParentTop="true" >

            <!-- FORMS -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <!-- SHIPPING FORM -->

                <include
                    android:id="@+id/checkout_address_form_include_shipping"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_mid"
                    android:layout_marginRight="@dimen/margin_mid"
                    android:layout_weight="1"
                    layout="@layout/checkout_create_address_shipping" />

                <!-- BILLING FORM -->

                <include
                    android:id="@+id/checkout_address_form_include_billing"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_mid"
                    android:layout_marginRight="@dimen/margin_mid"
                    android:layout_weight="1"
                    layout="@layout/checkout_create_address_billing"
                    android:visibility="gone" />
            </LinearLayout>
        </ScrollView>

        <!-- NEXT BUTTON -->

        <LinearLayout
            android:id="@+id/checkout_address_button_container"
            android:layout_width="@dimen/inner_container_width"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:orientation="vertical" >

            <org.holoeverywhere.widget.TextView
                android:id="@+id/checkout_address_required_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_mid"
                android:layout_marginRight="@dimen/margin_mid"
                android:layout_marginTop="@dimen/margin_mid"
                android:ellipsize="end"
                android:fontFamily="roboto_regular"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@string/register_required_text"
                android:textColor="@color/red_basic"
                android:textSize="@dimen/text_m"
                android:visibility="gone" />

            <org.holoeverywhere.widget.Button
                android:layout_width="match_parent"
                android:id="@+id/checkout_address_button_enter"
                style="@style/button_orange_style"
                android:background="@drawable/btn_orange"
                android:fontFamily="roboto_regular"
                android:text="@string/next_button" />
        </LinearLayout>
    </RelativeLayout>

    <!-- DIVIDER -->

    <View
        style="@style/divider_vertical"
        android:layout_marginBottom="@dimen/margin_mid"
        android:layout_marginTop="@dimen/margin_mid"
        android:background="@color/orange_basic" />

    <!-- ORDER SUMMARY -->

    <FrameLayout
        android:id="@+id/order_summary_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/margin_mid"
        android:layout_marginRight="@dimen/margin_mid"
        android:layout_weight="@dimen/checkout_order_summary" />

</LinearLayout>