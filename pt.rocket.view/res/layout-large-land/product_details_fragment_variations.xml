<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/variations_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <View
        android:id="@+id/divider"
        style="@style/divider_horizontal" />

    <pt.rocket.components.HorizontalListView
        android:id="@id/variations_list"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginEnd="@dimen/margin_20px"
        android:layout_marginLeft="@dimen/margin_20px"
        android:layout_marginRight="@dimen/margin_20px"
        android:layout_marginStart="@dimen/margin_20px"
        android:scrollbars="none" />

</LinearLayout>