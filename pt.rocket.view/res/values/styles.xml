    <!-- BUTTON CONTAINER HAS ALWAYS A BOTTOM PADDING -->
    <style name="button_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_container_height</item>
        <item name="android:background">@color/background_color</item>
        <item name="android:gravity">top|center</item>
        <item name="android:paddingBottom">@dimen/rounded_margin_mid</item>
    </style>

    <style name="discount_percentage">
        <item name="android:layout_width">@dimen/product_list_item_discount_percentage_image_width</item>
        <item name="android:layout_height">@dimen/product_list_item_discount_percentage_image_height</item>
        <item name="android:background">@drawable/discount_badge</item>
        <item name="android:fontFamily">roboto_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:text">-99%</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/product_list_item_discount_percentage_text_size</item>
    </style>

    <!-- TEXT STYLES -->

    <style name="text_regular">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">roboto_regular</item>
        <item name="android:textColor">@color/grey_middle</item>
    </style>

    <style name="text_bold" parent="text_regular">
        <item name="android:fontFamily">roboto_bold</item>
    </style>

    <style name="_base_text" parent="text_regular">
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:gravity">left|center_vertical</item>
    </style>

    <style name="text_subtitle" parent="_base_text">
        <item name="android:textSize">@dimen/text_subtitle</item>
    </style>

    <style name="text_normal" parent="_base_text">
        <item name="android:textSize">@dimen/text_title</item>
    </style>

    <style name="text_title" parent="_base_text">
        <item name="android:fontFamily">roboto_bold</item>
        <item name="android:textSize">@dimen/text_title</item>
    </style>

    <style name="text_form" parent="_base_text">
        <item name="android:textSize">@dimen/text_form</item>
    </style>

    <style name="text_header" parent="_base_text">
        <item name="android:textSize">@dimen/text_header</item>
    </style>

    <style name="text_price" parent="_base_text">
        <item name="android:textSize">@dimen/text_title</item>
        <item name="android:fontFamily">roboto_bold</item>
        <item name="android:textColor">@color/red_basic</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <style name="text_actionbar_title" parent="_base_text">
        <item name="android:textSize">@dimen/text_actionbar_title</item>
        <item name="android:textColor">@color/grey_middledark</item>
    </style>

    <style name="text_actionbar_search">
        <item name="android:textSize">@dimen/text_actionbar_search</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/grey_middle</item>
    </style>

    <style name="text_root" parent="_base_text">
        <item name="android:textSize">@dimen/text_root</item>
        <item name="android:textColor">@color/text_root</item>
        <item name="android:singleLine">false</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="action_button" parent="Widget.Sherlock.ActionButton">
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:layout_marginRight">@dimen/action_bar_margin</item>
        <item name="android:minHeight">@dimen/action_bar_icon_size</item>
        <item name="android:minWidth">@dimen/action_bar_icon_size</item>
    </style>

    <style name="Widget"></style>

    <!-- CUSTOM SPINNER STYLE -->
    <style name="Widget.Jumia.Spinner.Style" parent="Widget">
        <item name="android:background">@drawable/custom_spinner_light</item>
        <item name="android:dropDownSelector">@drawable/custom_list_selector_holo_dark</item>
        <item name="android:popupBackground">@drawable/custom_menu_dropdown_panel_holo_light</item>
        <item name="android:dropDownVerticalOffset">0dip</item>
        <item name="android:dropDownHorizontalOffset">0dip</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:clickable">true</item>
    </style>

</resources>