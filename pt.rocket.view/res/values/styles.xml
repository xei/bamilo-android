<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <style name="button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_orange</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_mid</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/margin_huge</item>
        <item name="android:layout_marginBottom">@dimen/margin_huge</item>
    </style>

    <style name="button_orange_style" parent="button">
        <item name="android:background">@drawable/btn_orange</item>
    </style>

    <style name="button_grey_style" parent="button">
        <item name="android:background">@drawable/btn_grey</item>
    </style>

    <!-- TEXT STYLES -->


    <!-- If needed to change text appearence from normal to bold and vice versa use these styles -->

    <style name="text_normal">
        <item name="android:textStyle">normal</item>
    </style>

    <style name="text_bold">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- These styles bellow are used for the text in the forgotten password layout -->

    <style name="forgot_password_introtext">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">18dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">@color/grey_middle</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="forgot_password_introtext.bold">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- new title styles for redesign 2013/03 -->
    <style name="activity_sectionheader_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
        <item name="android:layout_marginTop">@dimen/margin_huge</item>
    </style>

    <style name="activity_sectionheader_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/orange_basic</item>
        <item name="android:textSize">@dimen/text_mid</item>
        <item name="android:layout_marginLeft">@dimen/margin_huge</item>
        <item name="android:layout_marginRight">@dimen/margin_huge</item>
        <item name="android:layout_marginTop">@dimen/margin_large</item>
    </style>

    <style name="activity_sectionheader_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:background">@color/grey_highlight</item>
        <item name="android:layout_marginTop">@dimen/margin_large</item>
        <item name="android:layout_marginLeft">6dp</item>
        <item name="android:layout_marginRight">6dp</item>
    </style>

    <!-- This style is used in all activities that require a small subtitle such as "Product Description" and "Your Choice" subtitles in the product details activity -->

    <style name="activity_subtitle_small">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/orange_basic</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
    </style>

    <!-- This style is used for the tax string present in the shopping cart and checkout activities -->

    <style name="white_text_12sp_normal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">12dp</item>
    </style>
    
    <!-- This style is used for the white text with 16sp -->
    
     <style name="white_text_16sp_normal">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- This style is used for the product name in all listings -->

    <style name="product_name_list_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left</item>
        <item name="android:lines">2</item>
        <item name="android:textColor">@color/grey_middle</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="product_description_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey_middle</item>
        <item name="android:textSize">14dp</item>
        <item name="android:layout_marginLeft">@dimen/margin_huge</item>
        <item name="android:layout_marginRight">@dimen/margin_huge</item>
        <item name="android:layout_marginBottom">@dimen/margin_mid</item>
    </style>

    <!-- These styles are used for the prices in the listings for the product prices - price current is represented in red and price old is represented in black -->

    <style name="product_price_current_list_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/red_basic</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- These styles are used for the product prices in the product details activity and single item list view : current is the actual price and old is the old price -->

    <style name="product_price_current_single_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/red_basic</item>
    </style>

    <style name="product_price_old_single_item">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/grey_highlight</item>
    </style>

    <!-- BODY TEXT STYLES -->


    <!-- This style is used for texts in body like Add address or add payment method -->
    <style name="body_text_feature_add">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- LINES STYLES -->


    <!-- This style is applied to all the blue lines in the application -->

    <style name="line_grey_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:layout_marginTop">11dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@color/grey_highlight</item>
    </style>

    <!-- This style is applied to all the dialogs in the application -->

    <style name="line_dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/grey_dark_line</item>
    </style>

    <style name="line_dialog_vertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/grey_dark_line</item>
    </style>

    <!-- This style is applied to all the grids in the application -->

    <style name="divider_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:background">@color/grey_dividerlight</item>
    </style>

    <style name="divider_vertical">
        <item name="android:layout_width">@dimen/divider_height</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/grey_dividerlight</item>
    </style>

    <!-- //////// Layouts Defenitions //////// -->

    <style name="ShoppingCartCount">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">11dp</item>
        <item name="android:textColor">@color/orange_basic</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:background">@drawable/selector_shop</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <!-- white blue lists // -->

    <style name="lists_sel_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">left|center</item>
        <item name="android:padding">2dp</item>
        <item name="android:textSize">16dp</item>
    </style>

    <!-- To refactor after the decision regarding brands layout -->

    <style name="brand_list_text">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:padding">2dp</item>
        <item name="android:duplicateParentState">true</item>
        <item name="android:textColor">#bababa</item>
        <item name="android:textSize">16dp</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="lists_sel_arrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:padding">3dp</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!-- LIST SELECTORS -->


    <!-- Products List -->

    <style name="list_row_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_listitem_highlight</item>
    </style>

    <style name="navigation_cart_titletext">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey_middle</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="navigation_cartnum_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/orange_basic</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:singleLine">true</item>
        <item name="android:paddingBottom">19.5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="navigation_cart_price">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey_middle</item>
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/grey_middle</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <style name="navigation_cart_vattext">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey_middle</item>
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:text">@string/vat_string</item>
    </style>

    <style name="navigation_cart_emptytext">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey_middle</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:textSize">@dimen/text_mid</item>
    </style>

    <style name="navigation_generic_component_text">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:singleLine">true</item>
        <item name="android:text">Component</item>
        <item name="android:textColor">@color/grey_middle</item>
        <item name="android:textSize">@dimen/text_mid</item>
        <item name="android:layout_marginRight">@dimen/margin_huge</item>
    </style>

    <!-- This style is used in the inner categories layout for the categories sub_list -->

    <style name="category_inner_current_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_marginLeft">@dimen/margin_huge</item>
        <item name="android:textColor">@color/grey_dark</item>
        <item name="android:textSize">@dimen/text_mid</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="category_inner_child_text" parent="category_inner_current_text">
        <item name="android:layout_marginLeft">@dimen/margin_veryhuge</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/text_smid</item>
    </style>

    <!-- CATEGORY, PRODUCT AND SEARCH LIST -->


    <!-- TODO: product_sort_button style can be removed if sort button layout looks okay -->
    <style name="product_sort_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <!-- item name="android:background">@drawable/selector_productlist_sorter</item -->
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/grey_dark</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="product_sort_button_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/grey_dark</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/product_sort_button</item>
    </style>

    <style name="product_sort_shadow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/btn_sort_shadow</item>
    </style>

    <style name="product_sort_divider">
        <item name="android:layout_width">@dimen/divider_height</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/grey_highlight</item>
    </style>

    <style name="product_sort_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">3dp</item>
        <item name="android:background">@color/blue_basic</item>
    </style>

    <style name="search_suggestion_list_itemtext">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/text_mid</item>
        <item name="android:textStyle">bold</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:layout_margin">@dimen/text_small</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>
    <!-- DIALOGS -->

    <style name="dialog_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/text_mid</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="dialog_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey_middle</item>
        <item name="android:textSize">@dimen/text_mid</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="dialog_container_content">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@android:color/white</item>
        <item name="android:paddingBottom">@dimen/distance_item_small</item>
        <item name="android:paddingTop">@dimen/distance_item_small</item>
        <item name="android:paddingLeft">@dimen/margin_veryhuge</item>
        <item name="android:paddingRight">@dimen/margin_veryhuge</item>
    </style>

    <style name="dialog_list_itemtext">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey_middle</item>
        <item name="android:textSize">@dimen/text_mid</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="dialog_button_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">49</item>
        <item name="android:background">@drawable/button_dialog_background_selector</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/grey_middle</item>
    </style>

    <!-- FORM EDITTEXT STYLE -->
    <style name="form_edittext_style">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/selector_edittext_bottomline</item>
        <item name="android:textColor">@color/form_text</item>
        <item name="android:textColorHint">@color/form_text_hint</item>
    </style>

    <style name="starRatingBarSmall">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:thumb">@null</item>
        <item name="android:isIndicator">true</item>
        <item name="android:progressDrawable">@drawable/star_ratingbar_small</item>
        <item name="android:minHeight">11dp</item>
        <item name="android:maxHeight">11dp</item>
    </style>

    <style name="starRatingBarBig" parent="@android:style/Widget.RatingBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/star_ratingbar_big</item>
        <item name="android:indeterminateDrawable">@drawable/star_ratingbar_big</item>
        <item name="android:minHeight">17dp</item>
        <item name="android:maxHeight">17dp</item>
        <item name="android:thumb">@null</item>
    </style>

    <style name="starRatingBarVeryBig" parent="@android:style/Widget.RatingBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/star_ratingbar_verybig</item>
        <item name="android:indeterminateDrawable">@drawable/star_ratingbar_verybig</item>
        <item name="android:minHeight">22dp</item>
        <item name="android:maxHeight">22dp</item>
        <item name="android:thumb">@null</item>
    </style>

    <style name="headline" parent="@style/white_text_12sp_normal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:background">@drawable/titlebar</item>
        <item name="android:ellipsize">end</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.TeaserIconPageIndicator" parent="Widget">
        <item name="android:paddingLeft">3dp</item>
        <item name="android:paddingRight">3dp</item>
    </style>

</resources>