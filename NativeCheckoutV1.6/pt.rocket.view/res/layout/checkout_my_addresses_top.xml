<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <!-- TOP ADDRESSES -->

    <org.holoeverywhere.widget.TextView
        android:id="@+id/checkout_addresses_default_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_large"
        android:layout_marginTop="@dimen/margin_huge"
        android:fontFamily="roboto_regular"
        android:gravity="left"
        android:textColor="@color/orange_basic"
        android:textSize="@dimen/text_l" />

    <View
        style="@style/divider_horizontal"
        android:layout_width="wrap_content" />

    <!-- GROUP CONTAINER -->

    <pt.rocket.utils.GenericRadioGroup
        android:id="@+id/checkout_addresses_default_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_midhuge"
        android:layout_marginTop="@dimen/margin_small"
        android:orientation="vertical" />

    <!-- BILLING CHECK BOX -->

    <org.holoeverywhere.widget.CheckBox
        android:id="@+id/checkout_address_billing_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_mid"
        android:layout_marginLeft="@dimen/margin_mid"
        android:button="@drawable/selector_checkbox_orange"
        android:drawablePadding="@dimen/margin_mid"
        android:fontFamily="roboto_regular"
        android:text="@string/billing_same_label"
        android:textColor="@color/grey_middle"
        android:textSize="@dimen/text_m" />

    <!-- ADD NEW ADDRESS -->

    <LinearLayout
        android:id="@+id/checkout_addresses_default_button_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_mid"
        android:orientation="vertical"
        android:visibility="gone" >

        <org.holoeverywhere.widget.Button
            android:id="@+id/checkout_addresses_default_button_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/margin_mid"
            android:background="@android:color/transparent"
            android:drawableEnd="@drawable/ico_addaddress_grey"
            android:fontFamily="roboto_regular"
            android:gravity="left|center"
            android:text="@string/billing_add_label"
            android:textColor="@color/grey_divider_light_text"
            android:textSize="@dimen/text_m" />

        <View style="@style/divider_horizontal" />
    </LinearLayout>

</LinearLayout>