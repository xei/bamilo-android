<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/variations_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_small" >

    <pt.rocket.utils.HorizontalListView
        android:id="@+id/variations_list"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:layout_marginLeft="@dimen/margin_huge"
        android:layout_marginRight="@dimen/margin_huge" />

    <View
        style="@style/divider_horizontal"
        android:layout_below="@+id/variations_list" />

</RelativeLayout>