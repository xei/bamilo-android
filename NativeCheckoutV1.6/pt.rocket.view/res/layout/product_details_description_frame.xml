<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/product_details_description_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/product_basicinfo_container"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_mid"
            android:layout_marginLeft="@dimen/margin_huge"
            android:layout_marginTop="@dimen/margin_large" >

            <org.holoeverywhere.widget.TextView
                android:id="@+id/product_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/margin_huge"
                android:maxLines="2"
                android:textColor="@color/grey_middle"
                android:textSize="@dimen/text_mid"
                android:textStyle="bold" />

            <org.holoeverywhere.widget.TextView
                android:id="@+id/product_price_result"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/product_name"
                android:layout_marginTop="@dimen/margin_small"
                android:textSize="14dp"
                android:textStyle="bold" />

            <org.holoeverywhere.widget.TextView
                android:id="@+id/product_price_normal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/product_price_result"
                android:layout_marginLeft="@dimen/margin_mid"
                android:layout_toRightOf="@+id/product_price_result"
                android:textColor="@color/grey_light"
                android:textSize="14dp"
                android:textStyle="bold" />

            <RelativeLayout
                android:id="@+id/loading_specifications"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_centerInParent="true"
                android:visibility="gone" >

                <include layout="@layout/loading_bar_simple" />
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/product_features_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <View
                    style="@style/divider_horizontal"
                    android:layout_marginTop="@dimen/margin_mid" />

                <org.holoeverywhere.widget.TextView
                    android:id="@+id/product_features_title"
                    style="@style/activity_sectionheader_text"
                    android:text="@string/product_features_title" />

                <org.holoeverywhere.widget.TextView
                    android:id="@+id/product_features_text"
                    style="@style/product_description_text"
                    android:layout_marginTop="6dp"
                    android:lineSpacingMultiplier="1.3" />
            </LinearLayout>

            <View
                style="@style/divider_horizontal"
                android:layout_marginTop="@dimen/margin_mid" />

            <org.holoeverywhere.widget.TextView
                android:id="@+id/product_description_title"
                style="@style/activity_sectionheader_text"
                android:text="@string/product_description_title" />

            <org.holoeverywhere.widget.TextView
                android:id="@+id/product_description_text"
                style="@style/product_description_text"
                android:layout_marginTop="6dp"
                android:lineSpacingMultiplier="1.3" />

            <LinearLayout
                android:id="@+id/product_details_container"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <View
                    style="@style/divider_horizontal"
                    android:layout_marginTop="@dimen/margin_mid" />

                <org.holoeverywhere.widget.TextView
                    android:id="@+id/product_details_title"
                    style="@style/activity_sectionheader_text"
                    android:text="@string/product_details_title" />

                <org.holoeverywhere.widget.TextView
                    android:id="@+id/product_details_text"
                    style="@style/product_description_text"
                    android:layout_marginTop="6dp"
                    android:ellipsize="end"
                    android:lineSpacingMultiplier="1.3" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>