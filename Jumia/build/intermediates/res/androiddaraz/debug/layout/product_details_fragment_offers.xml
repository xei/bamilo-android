<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/rounded_box"
    android:layout_marginBottom="0dp"
    android:visibility="visible" >

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/offers_label_title"
        style="@style/rounded_box_title_grey"
        android:text="@string/same_product_from_other_sellers" />

    <View
        android:id="@+id/divider"
        style="@style/divider_horizontal_orange"
        android:layout_below="@id/offers_label_title" />

    <!-- CONTAINER -->

    <RelativeLayout
        android:id="@+id/offers_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/divider"
        android:background="@drawable/selector_listitem_highlight"
        android:paddingBottom="@dimen/rounded_margin_mid"
        android:paddingTop="@dimen/rounded_margin_mid" >

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/offers_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="7dp"
            android:layout_marginStart="7dp"
            android:text="@string/other_sellers"
            android:textColor="@color/grey_middle"
            android:textSize="@dimen/text_title" />

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/offers_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/offers_label"
            android:layout_toRightOf="@+id/offers_label"
            android:text=" (0)"
            android:textColor="@color/grey_middle"
            android:textSize="@dimen/text_title" />

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/from_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/offers_label"
            android:layout_marginLeft="7dp"
            android:layout_marginStart="7dp"
            android:gravity="center_vertical"
            android:text="@string/from"
            android:textColor="@color/grey_middlelight"
            android:textSize="@dimen/text_subtitle" />

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/from_value"
            style="@style/text_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/offers_label"
            android:layout_marginEnd="40dp"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="40dp"
            android:layout_marginStart="7dp"
            android:layout_toEndOf="@+id/from_label"
            android:layout_toRightOf="@+id/from_label"
            android:ellipsize="end"
            android:gravity="left|start"
            android:text="RM 0"
            android:textColor="@color/red_middle"
            android:textSize="@dimen/text_subtitle" />
    </RelativeLayout>

</RelativeLayout><!-- From: file:/home/pcarvalho/Android/AndroidStudioProjects/JumiaApp/Jumia/src/main/res/layout/product_details_fragment_offers.xml -->