<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/header_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/titlebar"
    android:paddingBottom="4dp"
    android:paddingLeft="8dp"
    android:paddingStart="8dp"
    android:paddingTop="4dp"
    android:visibility="visible" >

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/titleProducts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="8dp"
        android:ellipsize="end"
        android:fontFamily="roboto_bold"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:maxWidth="200dp"
        android:singleLine="true"
        android:textColor="@android:color/white"
        android:textSize="12sp" />

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/totalProducts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/titleProducts"
        android:ellipsize="end"
        android:fontFamily="roboto_regular"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:singleLine="true"
        android:textColor="@color/orange_basic"
        android:textSize="12sp" />

</RelativeLayout><!-- From: file:/home/pcarvalho/Android/AndroidStudioProjects/JumiaApp/Jumia/src/main/res/layout/header_title.xml -->