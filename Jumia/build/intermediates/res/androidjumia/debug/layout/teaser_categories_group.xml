<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/teaser_margin_bottom"
    android:layout_marginLeft="@dimen/teaser_margin_left"
    android:layout_marginRight="@dimen/teaser_margin"
    android:layout_marginTop="@dimen/rounded_margin_small"
    android:background="@drawable/background_content" >

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/teaser_categories_group_title"
        style="@style/rounded_box_title_grey"
        android:text="@string/categories_label"
        android:textSize="@dimen/text_form" />

    <View
        android:id="@+id/teaser_categories_group_title_divider"
        style="@style/divider_horizontal_orange"
        android:layout_below="@id/teaser_categories_group_title" />

    <LinearLayout
        android:id="@+id/teaser_categories_group_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/teaser_categories_group_title_divider"
        android:orientation="vertical" />

