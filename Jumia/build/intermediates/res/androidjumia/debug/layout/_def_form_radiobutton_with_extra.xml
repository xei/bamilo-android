<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <!-- DIVIDER -->

    <View
        android:id="@+id/radio_divider"
        style="@style/divider_horizontal" />

    <LinearLayout
        android:id="@+id/radio_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/extras"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/form_radiobutton_shipping_margin"
        android:paddingStart="@dimen/form_radiobutton_shipping_margin"
        android:paddingRight="@dimen/form_radiobutton_shipping_margin"
        android:paddingEnd="@dimen/form_radiobutton_shipping_margin"
        android:visibility="gone" >

        <ImageView
            android:id="@+id/payment_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:visibility="gone" />

        <com.mobile.components.customfontviews.TextView
            android:id="@+id/payment_text"
            style="@style/text_normal"
            android:layout_height="wrap_content"
            android:ellipsize="none"
            android:fontFamily="roboto_light"
            android:paddingBottom="@dimen/margin_20px"
            android:paddingTop="@dimen/margin_20px"
            android:singleLine="false"
            android:visibility="gone" />
        <!--
            https://code.google.com/p/android/issues/detail?id=2254
            FIXED only showing 2 lines
            by setting android:ellipsize="none" after being set up as end by style="@style/text_normal"
        -->
    </LinearLayout>

</LinearLayout><!-- From: file:/home/pcarvalho/Android/AndroidStudioProjects/JumiaApp/Jumia/src/main/res/layout/_def_form_radiobutton_with_extra.xml -->