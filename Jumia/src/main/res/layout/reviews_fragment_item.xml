<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/review_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="@drawable/selector_clickableitem_highlight" >

    <View
        android:id="@+id/top_review_line"
        style="@style/divider_horizontal"
        android:layout_alignParentBottom="true" />

    <LinearLayout
        android:id="@+id/ratings_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/margin_huge"
        android:layout_marginStart="@dimen/margin_huge"
        android:layout_marginTop="10dp"
        android:orientation="vertical" >
    </LinearLayout>

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/title_review"
        style="@style/text_title"
        android:layout_width="match_parent"
        android:layout_below="@id/ratings_container"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="@dimen/margin_huge"
        android:layout_marginRight="32dp"
        android:layout_marginStart="@dimen/margin_huge"
        android:gravity="left|start"
        android:text="" />

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/textreview"
        style="@style/text_normal"
        android:layout_width="match_parent"
        android:layout_below="@id/title_review"
        android:layout_marginEnd="32dp"
        android:layout_marginLeft="@dimen/margin_huge"
        android:layout_marginRight="32dp"
        android:layout_marginStart="@dimen/margin_huge"
        android:gravity="left|start"
        android:maxLines="5"
        android:singleLine="false"
        android:text="" />

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/posted_by"
        style="@style/text_subtitle"
        android:layout_below="@id/textreview"
        android:layout_marginLeft="@dimen/margin_huge"
        android:layout_marginStart="@dimen/margin_huge"
        android:gravity="left|start"
        android:paddingBottom="@dimen/margin_mid"
        android:text="@string/posted_by" />

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/user_review"
        style="@style/text_subtitle"
        android:layout_below="@id/textreview"
        android:layout_marginLeft="@dimen/rounded_margin_small"
        android:layout_marginStart="@dimen/rounded_margin_small"
        android:layout_toEndOf="@id/posted_by"
        android:layout_toRightOf="@id/posted_by"
        android:text="" />

    <com.mobile.components.customfontviews.TextView
        android:id="@+id/date_review"
        style="@style/text_subtitle"
        android:layout_below="@id/textreview"
        android:layout_marginLeft="@dimen/rounded_margin_small"
        android:layout_marginStart="@dimen/rounded_margin_small"
        android:layout_toEndOf="@id/user_review"
        android:layout_toRightOf="@id/user_review"
        android:text="" />

    <View
        android:id="@+id/horizintal_review_line"
        style="@style/divider_vertical"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:visibility="visible" />

</RelativeLayout>